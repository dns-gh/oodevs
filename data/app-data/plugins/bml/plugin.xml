<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<plugin name="bml" version="1.0"
	library="bml_plugin"  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="..\..\resources\schemas\4.3.1\plugins\plugin.xsd">
	<descriptions>
		<description lang="en" name="OpenBML"><![CDATA[OpenBML communication plugin]]></description>
		<description lang="fr" name="OpenBML"><![CDATA[Plugin de communication OpenBML]]></description>
	</descriptions>
	<settings>
	    <setting attribute="@process" type="string" default="Sword.BMLService.Application.exe" display="false"/>
		<group>
			<descriptions>
				<description lang="en" name="Web Server"><![CDATA[OpenBML Web Server]]></description>
				<description lang="fr" name="Serveur Web"><![CDATA[Serveur Web OpenBML]]></description>
			</descriptions>
			<settings>
				<setting attribute="server/@url" type="string" default="">
					<descriptions>
						<description lang="en" name="URL"><![CDATA[Web Server URL]]></description>
						<description lang="fr" name="URL"><![CDATA[URL Serveur Web]]></description>
					</descriptions>
				</setting>
				<setting attribute="server/@ssl" type="boolean" default="false">
					<descriptions>
						<description lang="en" name="SSL"><![CDATA[Use SSL connection]]></description>
						<description lang="fr" name="SSL"><![CDATA[Se connecter avec SSL]]></description>
					</descriptions>
				</setting>
				<setting attribute="server/@log" type="boolean" default="true">
					<descriptions>
						<description lang="en" name="Log"><![CDATA[Activate log generation]]></description>
						<description lang="fr" name="Journal"><![CDATA[Activer le journal]]></description>
					</descriptions>
				</setting>
				<group>
					<descriptions>
						<description lang="en" name="Proxy"><![CDATA[Proxy Parameters]]></description>
						<description lang="fr" name="Proxy"><![CDATA[Paramètres Proxy]]></description>
					</descriptions>
					<settings>
						<setting attribute="server/proxy/@user" type="string" default="">
							<descriptions>
								<description lang="en" name="Proxy Username"></description>
								<description lang="fr" name="Nom d'utilisateur Proxy"></description>
							</descriptions>
						</setting>
						<setting attribute="server/proxy/@pass" type="string" default="">
							<descriptions>
								<description lang="en" name="Proxy Password"></description>
								<description lang="fr" name="Mot de passe Proxy"></description>
							</descriptions>
						</setting>
					</settings>
				</group>
			</settings>
		</group>

		<!-- reports !-->
		<group>
			<descriptions>
				<description lang="en" name="Reports"><![CDATA[OpenBML Reports]]></description>
				<description lang="fr" name="Rapports"><![CDATA[Rapports OpenBML]]></description>
			</descriptions>
			<settings>
				<setting attribute="reports/@activate" type="boolean" default="true">
					<descriptions>
						<description lang="en" name="Reports"><![CDATA[Activate Reports]]></description>
						<description lang="fr" name="Rapports"><![CDATA[Activer les rapports]]></description>
					</descriptions>
				</setting>
				<setting attribute="reports/@frequency" type="integer" default="30">
					<descriptions>
						<description lang="en" name="Frequency"><![CDATA[Report generation frequency]]></description>
						<description lang="fr" name="Fréquence"><![CDATA[Rapporte la fréquence de génération]]></description>
					</descriptions>
				</setting>
			</settings>
		</group>
	</settings>
</plugin>
