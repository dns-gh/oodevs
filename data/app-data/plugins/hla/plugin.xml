<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<plugin name="hla" version="1.0" library="hla_plugin" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="..\..\resources\schemas\4.3.1\plugins\plugin.xsd">
    <descriptions>
        <description lang="en" name="HLA"><![CDATA[HLA communication plugin]]></description>
    </descriptions>
    <settings>
        <group>
            <descriptions>
                <description lang="en" name="Federation"/>
                <description lang="fr" name="Fédération"/>
            </descriptions>
            <settings>
                <setting attribute="@federation" type="string" default="MyFederation">
                    <descriptions>
                        <description lang="en" name="Federation Name"/>
                        <description lang="fr" name="Nom de la fédération"/>
                    </descriptions>
                </setting>
                <setting attribute="@name" type="string" default="SWORD">
                    <descriptions>
                        <description lang="en" name="Federate Name"/>
                        <description lang="fr" name="Nom du fédéré"/>
                    </descriptions>
                </setting>
                <setting attribute="@dis-site" type="integer" default="1">
                    <descriptions>
                        <description lang="en" name="DIS Site ID"/>
                        <description lang="fr" name="DIS Site ID"/>
                    </descriptions>
                </setting>
                <setting attribute="@dis-application" type="integer" default="1">
                    <descriptions>
                        <description lang="en" name="DIS Application ID"/>
                        <description lang="fr" name="DIS Application ID"/>
                    </descriptions>
                </setting>
                <setting attribute="@lrcSettings" type="string" default="crcHost=localhost;crcPort=8989">
                    <descriptions>
                        <description lang="en" name="LRC settings"><![CDATA[RTI CRC host name]]></description>
                        <description lang="fr" name="Configuration LRC"><![CDATA[Nom de l'hôte RTI CRC]]></description>
                    </descriptions>
                </setting>
                <setting attribute="@creation" type="boolean" default="false">
                    <descriptions>
                        <description lang="en" name="Creation"><![CDATA[Attempt to create the federation when joining]]></description>
                        <description lang="fr" name="Création"><![CDATA[Tente de créer la fédération en rejoignant]]></description>
                    </descriptions>
                </setting>
                <setting attribute="@destruction" type="boolean" default="false">
                    <descriptions>
                        <description lang="en" name="Destruction"><![CDATA[Attempt to destroy the federation when leaving]]></description>
                        <description lang="fr" name="Destruction"><![CDATA[Tente de détruire la fédération en quittant]]></description>
                    </descriptions>
                </setting>
                <setting attribute="@fom" type="file_list" default="ASI_FOM_v2.0.8_2010.xml">
                    <descriptions>
                        <description lang="en" name="FOM"><![CDATA[Federation Object Model]]></description>
                        <description lang="fr" name="FOM"><![CDATA[Federation Object Model]]></description>
                    </descriptions>
                </setting>
            </settings>
        </group>
        <group>
            <descriptions>
                <description lang="en" name="Time"/>
                <description lang="fr" name="Temps"/>
            </descriptions>
            <settings>
                <setting attribute="@time-constrained" type="boolean" default="false">
                    <descriptions>
                        <description lang="en" name="Time constrained"/>
                        <description lang="fr" name="Temps contraint"/>
                    </descriptions>
                </setting>
                <setting attribute="@time-regulating" type="boolean" default="false">
                    <descriptions>
                        <description lang="en" name="Time regulating"/>
                        <description lang="fr" name="Regulateur de temps"/>
                    </descriptions>
                </setting>
                <setting attribute="@lookahead" type="integer" default="10" min="0" max="60">
                    <descriptions>
                        <description lang="en" name="Lookahead"/>
                        <description lang="fr" name="Anticipation"/>
                    </descriptions>
                </setting>
            </settings>
        </group>
        <group>
            <descriptions>
                <description lang="en" name="Advanced"/>
                <description lang="fr" name="Avancé"/>
            </descriptions>
            <settings>
                <setting attribute="@protocol" type="enumeration" default="hla-1516e;hla-1516">
                    <descriptions>
                        <description lang="en" name="Protocol"><![CDATA[Select HLA protocol]]></description>
                        <description lang="fr" name="Protocole"><![CDATA[Sélectionne le protocole HLA]]></description>
                    </descriptions>
                </setting>
                <setting attribute="@configuration" type="string" default="configuration.xml">
                    <descriptions>
                        <description lang="en" name="Configuration"><![CDATA[Mapping definitions]]></description>
                        <description lang="fr" name="Configuration"><![CDATA[Définition des mapping]]></description>
                    </descriptions>
                </setting>
                <setting attribute="@debug" type="boolean" default="false">
                    <descriptions>
                        <description lang="en" name="Debug"><![CDATA[Enable debug informations]]></description>
                        <description lang="fr" name="Debug"><![CDATA[Active les informations de debug]]></description>
                    </descriptions>
                </setting>
                <setting attribute="@netn" type="boolean" default="false">
                    <descriptions>
                        <description lang="en" name="Use NETN modules"><![CDATA[Enable NETN subscriptions and publications]]></description>
                        <description lang="fr" name="Utiliser les modules NETN"><![CDATA[Active la souscription et la publication NETN]]></description>
                    </descriptions>
                </setting>
                <setting attribute="@netn-version" type="enumeration" default="1;2">
                    <descriptions>
                        <description lang="en" name="NETN version"><![CDATA[NETN FOM version]]></description>
                        <description lang="fr" name="Version NETN"><![CDATA[Version FOM NETN]]></description>
                    </descriptions>
                </setting>
                <setting attribute="@netn-subscribe-rpr" type="boolean" default="false">
                    <descriptions>
                        <description lang="en" name="Subscribe RPR in NETN "><![CDATA[Enable subscription to RPR classes in NETN mode]]></description>
                        <description lang="fr" name="Souscrire au RPR en NETN"><![CDATA[Active la souscription aux classes RPR en mode NETN]]></description>
                    </descriptions>
                </setting>
                <setting attribute="@marking-with-identifier" type="boolean" default="true">
                    <descriptions>
                        <description lang="en" name="Unique Marking"><![CDATA[Append an identifier to make Marking and AggregateMarking attributes to make them unique]]></description>
                        <description lang="fr" name="Marking unique"><![CDATA[Ajoute un identifiant aux attributs Marking et AggregateMarking pour les rendre uniques]]></description>
                    </descriptions>
                </setting>
                <setting attribute="@extent" type="boolean" default="false">
                    <descriptions>
                        <description lang="en" name="Use extent"><![CDATA[Use extent to avoid outside units creation]]></description>
                        <description lang="fr" name="Utiliser l'empreinte terrain"><![CDATA[Utiliser l'empreinte terrain pour éviter la création des unités en dehors]]></description>
                    </descriptions>
                </setting>
                <setting attribute="@transfer-sender" type="enumeration" default="rpr;null">
                    <descriptions>
                        <description lang="en" name="Transfer sender"><![CDATA[Select how ownership transfer is initiated]]></description>
                        <description lang="fr" name="Requete transfert"><![CDATA[Détermine comment démarre le transfert de controle]]></description>
                    </descriptions>
                </setting>
                <setting attribute="@accept-external-transfer" type="enumeration" default="negotiated;always;never">
                    <descriptions>
                        <description lang="en" name="Accept Transfer"><![CDATA[Specify whether external transfer request should be accepted]]></description>
                        <description lang="fr" name="Accepter les tansfert"><![CDATA[Détermine s'il faut accepter les demandes de transfert externes]]></description>
                    </descriptions>
                </setting>
                <setting attribute="@attribute-ownership-negotiation" type="boolean" default="false">
                    <descriptions>
                        <description lang="en" name="Use HLA ownership negotiation"><![CDATA[Specify whether RTI attribute negotiation should be used]]></description>
                        <description lang="fr" name="Negotiation ownership HLA"><![CDATA[Détermine s'il faut utiliser la négotiation de transfert HLA]]></description>
                    </descriptions>
                </setting>
                <setting attribute="@send-full-orbat" type="boolean" default="false">
                    <descriptions>
                        <description lang="en" name="Publish complete ORBAT on HLA"><![CDATA[Specify whether all orbat shall be published]]></description>
                        <description lang="fr" name="Publier l'ODB complet"><![CDATA[Détermine s'il faut publier l'ODB complet]]></description>
                    </descriptions>
                </setting>
                <setting attribute="@handle-objects" type="boolean" default="true">
                    <descriptions>
                        <description lang="en" name="Publish objects"><![CDATA[Specify whether objects are published]]></description>
                        <description lang="fr" name="Publier les objets"><![CDATA[Détermine s'il faut publier les objets]]></description>
                    </descriptions>
                </setting>
            </settings>
        </group>
    </settings>
</plugin>
