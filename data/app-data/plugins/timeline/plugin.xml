<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<plugin name="timeline" version="1.0" library="timeline_plugin" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="..\..\resources\schemas\4.3.1\plugins\plugin.xsd">
    <descriptions>
        <description lang="en" name="Timeline"><![CDATA[Timeline communication plugin]]></description>
    </descriptions>
    <settings>
        <group>
            <descriptions>
                <description lang="en" name="Connection"><![CDATA[]]></description>
                <description lang="fr" name="Connexion"><![CDATA[]]></description>
            </descriptions>
            <settings>
                <setting attribute="@host" type="string" default="localhost:8088">
                    <descriptions>
                        <description lang="en" name="Host"><![CDATA[]]></description>
                        <description lang="fr" name="Nom du server"><![CDATA[]]></description>
                    </descriptions>
                </setting>
                <setting attribute="@ssl" type="boolean" default="false">
                    <descriptions>
                        <description lang="en" name="SSL"><![CDATA[Use SSL]]></description>
                        <description lang="fr" name="SSL"><![CDATA[Activer SSL]]></description>
                    </descriptions>
                </setting>
                <setting attribute="@log" type="boolean" default="false">
                    <descriptions>
                        <description lang="en" name="Log"><![CDATA[Activate log output]]></description>
                        <description lang="fr" name="Journal"><![CDATA[Active le journal]]></description>
                    </descriptions>
                </setting>
            </settings>
        </group>
        <group>
            <descriptions>
                <description lang="en" name="Scenario"><![CDATA[]]></description>
                <description lang="fr" name="Scénario"><![CDATA[]]></description>
            </descriptions>
            <settings>
                <setting attribute="orders/@file" type="file">
                    <descriptions>
                        <description lang="en" name="Recorded orders"><![CDATA[]]></description>
                        <description lang="fr" name="Ordres pré-enregistrés"><![CDATA[]]></description>
                    </descriptions>
                </setting>
                <setting attribute="scenario/@id" type="integer" default="1">
                    <descriptions>
                        <description lang="en" name="Scenario ID"><![CDATA[]]></description>
                        <description lang="fr" name="ID du scénario"><![CDATA[]]></description>
                    </descriptions>
                </setting>
                <setting attribute="scenario/@restart" type="boolean" default="false">
                    <descriptions>
                        <description lang="en" name="Restart scenario"><![CDATA[Select an order file...]]></description>
                        <description lang="fr" name="Redémarre le scénario"><![CDATA[Sélectionner un fichier d'ordres...]]></description>
                    </descriptions>
                </setting>
            </settings>
        </group>
        <group>
            <descriptions>
                <description lang="en" name="Actor"><![CDATA[]]></description>
                <description lang="fr" name="Acteur"><![CDATA[]]></description>
            </descriptions>
            <settings>
                <setting attribute="scenario/actor/@id" type="integer">
                    <descriptions>
                        <description lang="en" name="Actor ID"><![CDATA[]]></description>
                        <description lang="fr" name="ID de l'Acteur"><![CDATA[]]></description>
                    </descriptions>
                </setting>
                <setting attribute="scenario/actor/@name" type="string">
                    <descriptions>
                        <description lang="en" name="Actor Name"><![CDATA[]]></description>
                        <description lang="fr" name="Nom de l'Acteur"><![CDATA[]]></description>
                    </descriptions>
                </setting>
            </settings>
        </group>
    </settings>
</plugin>
