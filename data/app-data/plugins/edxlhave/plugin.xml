<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<plugin name="edxlhave" version="1.0"
	library="edxlhave_plugin"  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="..\..\resources\schemas\4.3.1\plugins\plugin.xsd">
	<descriptions>
		<description lang="en" name="EDXL-HAVE"><![CDATA[EDXL-HAVE communication plugin]]></description>
		<description lang="fr" name="EDXL-HAVE"><![CDATA[Plugin de communication EDXL-HAVE]]></description>
	</descriptions>
	<settings>
        <setting attribute="services/@host" type="string" default="www.ewaphoenix.com">
            <descriptions>
                <description lang="en" name="URL"><![CDATA[]]></description>
                <description lang="fr" name="URL"><![CDATA[]]></description>
            </descriptions>
        </setting>
        <setting attribute="services/@ssl" type="boolean" default="false">
            <descriptions>
                <description lang="en" name="SSL"><![CDATA[Use SSL connection]]></description>
                <description lang="fr" name="SSL"><![CDATA[Utiliser une connection SSL]]></description>
            </descriptions>
        </setting>
        <setting attribute="services/@log" type="boolean" default="true">
            <descriptions>
                <description lang="en" name="Log"><![CDATA[Log]]></description>
                <description lang="fr" name="Journal"><![CDATA[Journal]]></description>
            </descriptions>
        </setting>
		<group>
			<descriptions>
				<description lang="en" name="Services"><![CDATA[Service configuration]]></description>
				<description lang="fr" name="Services"><![CDATA[Configuration des services]]></description>
			</descriptions>
			<settings>
                <setting attribute="services/initialization/@serviceURI" type="string" default="/EWAPhoenix-BedTracking/XMLReceive.php?message=initialize">
                    <descriptions>
                        <description lang="en" name="Initialization"><![CDATA[Initialization service]]></description>
                        <description lang="fr" name="Initialisation"><![CDATA[Service d'initialisation]]></description>
                    </descriptions>
                </setting>
                <setting attribute="services/update/@serviceURI" type="string" default="/EWAPhoenix-BedTracking/XMLReceive.php?message=update">
                    <descriptions>
                        <description lang="en" name="Update"><![CDATA[Update service]]></description>
                        <description lang="fr" name="Mise à jour"><![CDATA[Service de mise à jour]]></description>
                    </descriptions>
                </setting>
                <setting attribute="services/update/@frequency" type="time" default="120">
                    <descriptions>
                        <description lang="en" name="Frequency"><![CDATA[Update Frequency]]></description>
                        <description lang="fr" name="Fréquence"><![CDATA[Fréquence des mises à jour]]></description>
                    </descriptions>
                </setting>
			</settings>
		</group>
	</settings>
</plugin>
