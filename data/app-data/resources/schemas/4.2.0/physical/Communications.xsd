<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified" attributeFormDefault="unqualified">
	<xs:include schemaLocation="tools.xsd"/>
	<xs:element name="communications">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="communication-breakdown" minOccurs="0" maxOccurs="unbounded">
					<xs:complexType>
						<xs:attribute name="speed-modifier" type="T_NonNegativeDouble" use="required"/>
						<xs:attribute name="reloading-time-modifier" type="T_NonNegativeDouble" use="required"/>
					</xs:complexType>
				</xs:element>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
</xs:schema>
