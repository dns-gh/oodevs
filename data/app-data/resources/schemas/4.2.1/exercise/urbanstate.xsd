<?xml version="1.0" encoding="utf-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified" attributeFormDefault="unqualified" version="4.2.7">
	<xs:include schemaLocation="../exercise/common.xsd"/>
	<xs:element name="urban-state">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="urban-objects" type="UrbanObjects"/>
			</xs:sequence>
			<xs:attribute name="model-version" type="T_Version"/>
		</xs:complexType>
		<xs:unique name="urbanIdUnicity">
			<xs:annotation>
				<xs:documentation xml:lang="en">Checks unicity of urban object identifiers over whole terrain.</xs:documentation>
				<xs:documentation xml:lang="fr"> Vérifie l'unicité de l'identifiant d'objet urbain au sein du terrain.</xs:documentation>
			</xs:annotation>
			<xs:selector xpath=".//urban-objects/urban-object"/>
			<xs:field xpath="@id"/>
		</xs:unique>
	</xs:element>
	<xs:complexType name="UrbanObjects">
		<xs:sequence>
			<xs:element name="urban-object" minOccurs="0" maxOccurs="unbounded">
				<xs:complexType>
					<xs:sequence>
						<xs:element name="structural-state" type="xs:nonNegativeInteger" minOccurs="0"/>
						<xs:element name="infrastructures" type="Infrastructures" minOccurs="0"/>
						<xs:element name="resources" type="Resources" minOccurs="0"/>
					</xs:sequence>
					<xs:attribute name="id" type="xs:positiveInteger"/>
				</xs:complexType>
			</xs:element>
		</xs:sequence>
	</xs:complexType>
	<xs:complexType name="Infrastructures">
		<xs:sequence>
			<xs:element name="infrastructure" minOccurs="0">
				<xs:complexType>
					<xs:attribute name="name" type="xs:string"/>
					<xs:attribute name="enabled" type="xs:boolean"/>
				</xs:complexType>
			</xs:element>
		</xs:sequence>
	</xs:complexType>
	<xs:complexType name="Resources">
		<xs:sequence>
			<xs:element name="node" minOccurs="0" maxOccurs="unbounded">
				<xs:complexType>
					<xs:sequence>
						<xs:element name="link" minOccurs="0" maxOccurs="unbounded">
							<xs:complexType>
								<xs:attribute name="kind" type="TargetType"/>
								<xs:attribute name="target" type="xs:positiveInteger"/>
								<xs:attribute name="capacity" type="xs:integer"/>
							</xs:complexType>
						</xs:element>
					</xs:sequence>
					<xs:attribute name="resource-type" type="xs:string"/>
					<xs:attribute name="enabled" type="xs:boolean"/>
					<xs:attribute name="production" type="xs:nonNegativeInteger"/>
					<xs:attribute name="consumption" type="xs:nonNegativeInteger"/>
					<xs:attribute name="stock" type="xs:nonNegativeInteger"/>
					<xs:attribute name="initial-stock" type="xs:nonNegativeInteger"/>
					<xs:attribute name="critical-consumption" type="xs:boolean"/>
				</xs:complexType>
			</xs:element>
		</xs:sequence>
	</xs:complexType>
	<xs:simpleType name="TargetType">
		<xs:restriction base="xs:string">
			<xs:enumeration value="urban-object"/>
			<xs:enumeration value="terrain-object"/>
		</xs:restriction>
	</xs:simpleType>
</xs:schema>
