<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified" attributeFormDefault="unqualified" version="4.4.0">
	<xs:include schemaLocation="tools.xsd"/>
	<xs:element name="nbc">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="propagation">
					<xs:complexType>
						<xs:attribute name="contamination-distance" type="T_NonNegativeDouble" use="required"/>
						<xs:attribute name="contamination-quantity-given" type="T_NonNegativeDouble" use="required"/>
						<xs:attribute name="wind-speed-limit" type="xs:integer" use="required"/>
					</xs:complexType>
				</xs:element>
				<xs:element name="nbc-suit">
					<xs:complexType>
						<xs:attribute name="max-speed-modifier" type="T_NonNegativeDouble" use="required"/>
						<xs:attribute name="reloading-time-modifier" type="T_NonNegativeDouble" use="required"/>
					</xs:complexType>
				</xs:element>
				<xs:element name="agents">
					<xs:complexType>
						<xs:sequence>
							<xs:element name="agent" minOccurs="0" maxOccurs="unbounded">
								<xs:complexType>
									<xs:sequence>
										<xs:element name="effects" minOccurs="0" maxOccurs="unbounded">
											<xs:complexType>
												<xs:sequence>
													<xs:element name="effect" minOccurs="0" maxOccurs="unbounded">
														<xs:complexType>
															<xs:attribute name="percentage" type="T_NonNegativeDouble" use="required"/>
															<xs:attribute name="wound" type="T_WoundType" use="required"/>
														</xs:complexType>
													</xs:element>
												</xs:sequence>
												<xs:attribute name="propagation" type="xs:integer" use="optional"/>
												<xs:attribute name="life-time" type="T_Time" use="optional"/>
												<xs:attribute name="contamination" type="xs:boolean" use="optional"/>
												<xs:attribute name="affliction" type="xs:string"/>
												<xs:attribute name="type" type="T_NRBCeffectType" use="required"/>
											</xs:complexType>
										</xs:element>
									</xs:sequence>
									<xs:attribute name="id" type="xs:integer" use="required"/>
									<xs:attribute name="name" type="xs:string" use="required"/>
									<xs:attribute name="category" type="T_NRBCcategory" use="required"/>
								</xs:complexType>
							</xs:element>
						</xs:sequence>
					</xs:complexType>
				</xs:element>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
</xs:schema>
