<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<Rules>
    <AgentRules>
        <!-- =========== -->
        <!-- Melee rules -->
        <!-- =========== -->
        <Rule type="base" flying="false" autonomous="false">
            <GoStraight>false</GoStraight>
            <PreferTerrain strength="2"/>
            <AvoidTerrain strength="7"/>
            <AvoidObjects>true</AvoidObjects>
            <AltitudePreference>0</AltitudePreference>
            <Fuseau>
                <ToleratedDistanceOutside costPerMeter="1">
                    <WithoutAutomata>1000</WithoutAutomata>
                    <WithAutomata>10000</WithAutomata>
                </ToleratedDistanceOutside>
                <ComfortDistanceInside costPerMeter="0.002">500</ComfortDistanceInside>
            </Fuseau>
            <AutomataFuseau>
                <ToleratedDistanceOutside costPerMeter="1">0</ToleratedDistanceOutside>
            </AutomataFuseau>
            <DangerDirection>
                <BaseCostBeyond>1</BaseCostBeyond>
                <CostPerMeterBeyond>0.001</CostPerMeterBeyond>
            </DangerDirection>
            <Enemies>
                <CostOnContact>0</CostOnContact>
                <CostAtSecurityRange>0</CostAtSecurityRange>
                <MaximumCost>100</MaximumCost>
            </Enemies>
            <Populations>
                <SecurityRange>50</SecurityRange>
                <MaximumCost>100</MaximumCost>
                <CostOutsideOfPopulation>10</CostOutsideOfPopulation><!-- ASY should like populations -->
                <CostsOnContact>
                    <CostOnContact attitude="calme">5</CostOnContact>
                    <CostOnContact attitude="agitee">10</CostOnContact>
                    <CostOnContact attitude="excitee">25</CostOnContact>
                    <CostOnContact attitude="agressive">50</CostOnContact>
                </CostsOnContact>
            </Populations>
        </Rule>
        
        <Rule type="movement" flying="false" autonomous="false" inherits="base">
            <PreferTerrain>
                <Terrain type="chemin"/>
                <Terrain type="departementale"/>
                <Terrain type="nationale"/>
                <Terrain type="autoroute"/>
            </PreferTerrain>
        </Rule>
        
        <Rule type="recon" flying="false" autonomous="false" inherits="base">
            <PreferTerrain>
                <Terrain type="lisiere"/>
                <Terrain type="chemin"/>
                <Terrain type="departementale"/>
                <Terrain type="nationale"/>
                <Terrain type="autoroute"/>
            </PreferTerrain>
            <AltitudePreference>0.001</AltitudePreference>
        </Rule>
        
        <Rule type="infiltration" flying="false" autonomous="false" inherits="base">
            <PreferTerrain>
                <Terrain type="foret"/>
            </PreferTerrain>
            <AvoidTerrain>
                <Terrain type="urbain"/>
            </AvoidTerrain>
            <AltitudePreference>-0.001</AltitudePreference>
            <Enemies>
                <CostOnContact>100</CostOnContact>
                <CostAtSecurityRange>10</CostAtSecurityRange>
                <MaximumCost>100</MaximumCost>
            </Enemies>
        </Rule>
        
        <Rule type="assault" flying="false" autonomous="false" inherits="base">
             <AvoidTerrain>
                <Terrain type="chemin"/>
                <Terrain type="departementale"/>
                <Terrain type="nationale"/>
                <Terrain type="autoroute"/>
            </AvoidTerrain>
        </Rule>
        
        <Rule type="retreat" flying="false" autonomous="false" inherits="base">
            <GoStraight>true</GoStraight>
            <Fuseau>
                <ToleratedDistanceOutside>
                    <WithoutAutomata>100000000</WithoutAutomata>
                    <WithAutomata>1000000000</WithAutomata>
                </ToleratedDistanceOutside>
            </Fuseau>
            <DangerDirection>
                <BaseCostBeyond>5</BaseCostBeyond>
                <CostPerMeterBeyond>0.01</CostPerMeterBeyond>
            </DangerDirection>
            <Enemies>
                <CostOnContact>100</CostOnContact>
                <CostAtSecurityRange>10</CostAtSecurityRange>
            </Enemies>
        </Rule>
        
        <Rule type="backup" flying="false" autonomous="false" inherits="base">
            <GoStraight>true</GoStraight>
            <Enemies>
                <CostOnContact>100</CostOnContact>
                <CostAtSecurityRange>10</CostAtSecurityRange>
            </Enemies>
        </Rule>
        
        <Rule type="minesweep" flying="false" autonomous="false" inherits="movement">
            <AvoidObjects>false</AvoidObjects>
        </Rule>
        
        <Rule type="logistic" flying="false" autonomous="false" inherits="movement">
            <AutomataFuseau>
                <ToleratedDistanceOutside costPerMeter="0">1000000</ToleratedDistanceOutside>
            </AutomataFuseau>        
        </Rule>                
        
