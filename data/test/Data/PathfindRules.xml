<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<Rules>
    <!-- Base rule -->
    <Rule type="base" flying="false">
        <GoStraight>false</GoStraight>
        <PreferTerrain strength="2"/>
        <AvoidTerrain strength="7"/>
        <AvoidObjects>true</AvoidObjects>
        <AltitudePreference>0</AltitudePreference>
        <Fuseau>
            <ToleratedDistanceOutside costPerMeter="1">
                <WithoutAutomata>1000</WithoutAutomata>
                <WithAutomata>10000</WithAutomata>
            </ToleratedDistanceOutside>
            <ComfortDistanceInside costPerMeter="0.002">500</ComfortDistanceInside>
        </Fuseau>
        <DangerDirection>
            <BaseCostBeyond>1</BaseCostBeyond>
            <CostPerMeterBeyond>0.001</CostPerMeterBeyond>
        </DangerDirection>
        <Enemies>
            <CostOnContact>0</CostOnContact>
            <CostAtSecurityRange>0</CostAtSecurityRange>
            <MaximumCost>100</MaximumCost>
        </Enemies>
    </Rule>
    
    <Rule type="base" flying="true">
        <GoStraight>false</GoStraight>
        <PreferTerrain strength="2"/>
        <AvoidTerrain strength="7"/>
        <AvoidObjects>true</AvoidObjects>
        <AltitudePreference>0</AltitudePreference>
        <Fuseau>
            <ToleratedDistanceOutside costPerMeter="1">
                <WithoutAutomata>100000000</WithoutAutomata>
                <WithAutomata>1000000000</WithAutomata>
            </ToleratedDistanceOutside>
            <ComfortDistanceInside costPerMeter="0.002">500</ComfortDistanceInside>
        </Fuseau>
        <DangerDirection>
            <BaseCostBeyond>1</BaseCostBeyond>
            <CostPerMeterBeyond>0.001</CostPerMeterBeyond>
        </DangerDirection>
        <Enemies>
            <CostOnContact>0</CostOnContact>
            <CostAtSecurityRange>0</CostAtSecurityRange>
            <MaximumCost>100</MaximumCost>
        </Enemies>
    </Rule>
    
    <!-- Movement rule -->
    <Rule type="movement" flying="false" inherits="base">
        <PreferTerrain>
            <Terrain type="chemin"/>
            <Terrain type="departementale"/>
            <Terrain type="nationale"/>
            <Terrain type="autoroute"/>
        </PreferTerrain>
    </Rule>
    <Rule type="movement" flying="true" inherits="base">
        <AvoidTerrain>
            <Terrain type="lisiere"/>
            <Terrain type="urbain"/>
            <Terrain type="banlieue"/>
            <Terrain type="chemin"/>
            <Terrain type="departementale"/>
            <Terrain type="nationale"/>
            <Terrain type="autoroute"/>
        </AvoidTerrain>
    </Rule>
    
    <!-- Recon rule -->
    <Rule type="recon" flying="false" inherits="base">
        <PreferTerrain>
            <Terrain type="lisiere"/>
            <Terrain type="chemin"/>
            <Terrain type="departementale"/>
            <Terrain type="nationale"/>
            <Terrain type="autoroute"/>
        </PreferTerrain>
        <AltitudePreference>0.001</AltitudePreference>
    </Rule>
    <Rule type="recon" flying="true" inherits="base">
        <AvoidTerrain>
            <Terrain type="urbain"/>
        </AvoidTerrain>
    </Rule>

    <!-- Inflitration rule -->
    <Rule type="infiltration" flying="false" inherits="base">
        <PreferTerrain>
            <Terrain type="foret"/>
        </PreferTerrain>
        <AvoidTerrain>
            <Terrain type="urbain"/>
        </AvoidTerrain>
        <AltitudePreference>-0.001</AltitudePreference>
        <Enemies>
            <CostOnContact>100</CostOnContact>
            <CostAtSecurityRange>10</CostAtSecurityRange>
            <MaximumCost>100</MaximumCost>
        </Enemies>
    </Rule>
    <Rule type="infiltration" flying="true" inherits="movement">
        <AltitudePreference>-0.001</AltitudePreference>
        <Enemies>
            <CostOnContact>100</CostOnContact>
            <CostAtSecurityRange>10</CostAtSecurityRange>
        </Enemies>
    </Rule>
    
    <!-- Assault rule -->
    <Rule type="assault" flying="false" inherits="base">
         <AvoidTerrain>
            <Terrain type="chemin"/>
            <Terrain type="departementale"/>
            <Terrain type="nationale"/>
            <Terrain type="autoroute"/>
        </AvoidTerrain>
    </Rule>
    <Rule type="assault" flying="true" inherits="base"/>
   
    <!-- Retreat rule -->
    <Rule type="retreat" flying="false" inherits="base">
        <GoStraight>true</GoStraight>
        <Fuseau>
            <ToleratedDistanceOutside>
                <WithoutAutomata>100000000</WithoutAutomata>
                <WithAutomata>1000000000</WithAutomata>
            </ToleratedDistanceOutside>
        </Fuseau>
        <DangerDirection>
            <BaseCostBeyond>5</BaseCostBeyond>
            <CostPerMeterBeyond>0.01</CostPerMeterBeyond>
        </DangerDirection>
        <Enemies>
            <CostOnContact>100</CostOnContact>
            <CostAtSecurityRange>10</CostAtSecurityRange>
        </Enemies>
    </Rule>
    <Rule type="retreat" flying="true" inherits="base">
        <GoStraight>true</GoStraight>
        <AvoidTerrain/>
        <Fuseau>
            <ToleratedDistanceOutside>
                <WithoutAutomata>100000000</WithoutAutomata>
                <WithAutomata>1000000000</WithAutomata>
            </ToleratedDistanceOutside>
        </Fuseau>
        <DangerDirection>
            <BaseCostBeyond>5</BaseCostBeyond>
            <CostPerMeterBeyond>0.01</CostPerMeterBeyond>
        </DangerDirection>
        <Enemies>
            <CostOnContact>100</CostOnContact>
            <CostAtSecurityRange>10</CostAtSecurityRange>
        </Enemies>
    </Rule>
    
     <!-- Backup rule -->
    <Rule type="backup" flying="false" inherits="base">
        <GoStraight>true</GoStraight>
        <Enemies>
            <CostOnContact>100</CostOnContact>
            <CostAtSecurityRange>10</CostAtSecurityRange>
        </Enemies>
    </Rule>
    
    <Rule type="backup" flying="true" inherits="base">
        <GoStraight>true</GoStraight>
        <AvoidTerrain/>
        <Enemies>
            <CostOnContact>100</CostOnContact>
            <CostAtSecurityRange>10</CostAtSecurityRange>
        </Enemies>
    </Rule>
    
     <!-- Minesweep rule -->
    <Rule type="minesweep" flying="false" inherits="movement">
        <AvoidObjects>false</AvoidObjects>
    </Rule>
    <Rule type="minesweep" flying="true" inherits="movement">
        <AvoidObjects>false</AvoidObjects>
    </Rule>

</Rules>
