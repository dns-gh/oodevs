<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<scores model-version="4.8.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="schemas/4.3.3/exercise/scores.xsd">
  <score name="Detection">
    <formula><![CDATA[sum( domain( detecting-unit( $unit, $visibility ), $units ) )]]></formula>
    <gauge type="Default"/>
    <constants>
      <constant id="$unit" type="unit" value="11"/>
      <constant id="$units" type="unit list" value="8"/>
      <constant id="$visibility" type="perception levels" value="detected,identified,recognized"/>
    </constants>
    <indicators>
      <indicator>
        <extract detected="11" function="detecting-unit" id="1" visibility="detected,identified,recognized"/>
        <transform function="domain" id="2" input="1" select="8" type="unsigned long"/>
        <reduce function="sum" id="3" input="2" type="unsigned long"/>
        <result function="indicator" input="3" name="Detection" type="unsigned long"/>
      </indicator>
    </indicators>
  </score>
  <score name="Dismounted">
    <formula><![CDATA[select( mounted(), $unit )]]></formula>
    <gauge type="Default"/>
    <constants>
      <constant id="$unit" type="unit" value="11"/>
    </constants>
    <indicators>
      <indicator>
        <extract function="mounted" id="1"/>
        <reduce function="select" id="2" input="1" key="11" type="float"/>
        <result function="indicator" input="2" name="Dismounted" type="float"/>
      </indicator>
    </indicators>
  </score>
  <score name="OpState">
    <formula><![CDATA[select( operational-state(), $unit )]]></formula>
    <gauge type="Default"/>
    <constants>
      <constant id="$unit" type="unit" value="8"/>
    </constants>
    <indicators>
      <indicator>
        <extract function="operational-state" id="1"/>
        <reduce function="select" id="2" input="1" key="8" type="float"/>
        <result function="indicator" input="2" name="OpState" type="float"/>
      </indicator>
    </indicators>
  </score>
  <score name="Time between detection and destruction">
    <formula><![CDATA[Integrate( Product( Select( detecting-unit( $unitDetected, $visibility ), $unitDetecting ), Threshold( '0', '0,1', Select( operational-state(), $unitDetected ) ) ) )]]></formula>
    <gauge type="Default"/>
    <constants>
      <constant id="$unitDetected" type="unit" value="11"/>
      <constant id="$unitDetecting" type="unit" value="8"/>
      <constant id="$visibility" type="perception levels" value="detected,identified,recognized"/>
    </constants>
    <indicators>
      <indicator>
        <extract detected="11" function="detecting-unit" id="1" visibility="detected,identified,recognized"/>
        <reduce function="select" id="2" input="1" key="8" type="unsigned long"/>
        <extract function="operational-state" id="3"/>
        <reduce function="select" id="4" input="3" key="11" type="float"/>
        <reduce function="threshold" id="5" input="4" thresholds="0" type="float" values="0,1"/>
        <reduce function="product" id="6" input="2,5" type="unsigned long"/>
        <transform function="integrate" id="7" input="6" type="unsigned long"/>
        <result function="indicator" input="7" name="Time between detection and destruction" type="unsigned long"/>
      </indicator>
    </indicators>
  </score>
</scores>
