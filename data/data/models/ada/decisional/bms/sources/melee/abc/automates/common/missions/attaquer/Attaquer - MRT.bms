--[[// *****************************************************************************
]]--[[// BEH_Medo_Automate_ABC_AssignerMissionAttaquerA
]]--[[//
]]--[[// Commentaires: assignation des missions pour le premier echelon
]]--[[//
]]--[[// *****************************************************************************
]]node "BEH_Medo_Automate_ABC_AssignerMissionAttaquerA"
{
    activations =
    {
        { "BEH_Mission_Automate_ABC_AssignerAttaquerA", { "onHalt" } },
    },

    onHalt = OnHalt,

    feedbacks = { { { "onHalt" }, "BEH_Medo_Automate_ABC_AssignerMissionAttaquerA" } },

    create = function( self )
        self._namedParams = {}
        self._namedParams.selABC = self.params[1]
        self._namedParams.eEtatEchelon = self.params[2]
    end,

    activate = function( self )
        --[[//-------------------------------------------------------------------------
]]--[[// Le fuseau de l'escadron est coupé proportionnellement
]]--[[//-------------------------------------------------------------------------
]]if( ModuleBegins() ) then
            DEC_MRT_AffecteFuseaux( self._namedParams.selABC )
        end

        for _,pion in pairs( --[[//-----------------------------------------------------------------------------
]]--[[// Affectation des missions du premier echelon
]]--[[//-----------------------------------------------------------------------------
]]self._namedParams.selABC ) do
        local _continue = true
            Activate( self.activations.BEH_Mission_Automate_ABC_AssignerAttaquerA, 1, { ePhase_MRT, pion, self._namedParams.eEtatEchelon, } )

        end

    end,

}

