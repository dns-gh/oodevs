]]node "BEH_Conduite_Automate_ABC_DonnerUnCoupDArret"
{
    activations =
    {
        { "BEH_Dispositif_Automate_ABC_GererLesAppuis_", { "onHalt" } },
        { "BEH_Dispositif_Automate_ABC_GererLeDispositifStatiqueSurLima_", { "onHalt" } },
        { "BEH_Conduite_Automate_ABC_DonnerCoupArret_FaireDecrocherLesPions", { "onHalt" } },
        { "BEH_RC_Automate_GererConditionOperationnelle", { "onHalt" } },
    },

    onHalt = OnHalt,

    feedbacks = { { { "onHalt" }, "BEH_Conduite_Automate_ABC_DonnerUnCoupDArret" } },

    create = function( self )
        self._namedParams = {}
        self._namedParams.zoneRegroupement = self.params[1]
    end,

    activate = ActivateWithStart,

    internalactivate = function( self )
        self.bPriseDeContact = self.bPriseDeContact or false
        self.LCAR = self.LCAR or DEC_GetLima( eTypeLima_LCAR )
        --[[//---------------------------------------------------------------------
]]--[[// Init 
]]--[[//---------------------------------------------------------------------
]]if( ModuleBegins() ) then
            do
                StartInstance( self, self.activations.BEH_Dispositif_Automate_ABC_GererLesAppuis_, 1, {} )
                StartInstance( self, self.activations.BEH_Dispositif_Automate_ABC_GererLeDispositifStatiqueSurLima_, 1, { true, self.LCAR, } )
            end
--[[//-----------------------------------------------------------------------------
]]--[[// Decrocher qd on a ouvert le feu
]]--[[//-----------------------------------------------------------------------------
]]        end

        if( S_EstAuContact() ) then
            self.bPriseDeContact = true
        end

        if( self.bPriseDeContact and S_Automate_EstEnDifficulte() ) then
            do
                StopInstance( self, self.activations.BEH_Dispositif_Automate_ABC_GererLesAppuis_, {} )
                StopInstance( self, self.activations.BEH_Dispositif_Automate_ABC_GererLeDispositifStatiqueSurLima_, { true, self.LCAR, } )
                Activate( self.activations.BEH_Conduite_Automate_ABC_DonnerCoupArret_FaireDecrocherLesPions, 1, {} )--[[// Decrocher
]]
            end
--[[//-----------------------------------------------------------------------------
]]--[[// Condition opérationnelle
]]--[[//-----------------------------------------------------------------------------
]]        end

        Activate( self.activations.BEH_RC_Automate_GererConditionOperationnelle, 1, { eEtatEchelon_Eclairage, } )
    end,

--[[// *****************************************************************************
]]--[[// BEH_Conduite_Automate_ABC_DonnerCoupArret_FaireDecrocherLesPions
]]--[[//
]]--[[// Commentaires:ici on fait décrocher les premiers echelons (PEcl et PE).
]]--[[//  Le second suit, c'est à dire qu'il va potentiellment rester devant
]]--[[//  et garder le contact visuel
]]--[[//
]]--[[// *****************************************************************************
]]}

node "BEH_Conduite_Automate_ABC_DonnerCoupArret_FaireDecrocherLesPions"
{
    activations =
    {
        { "ACT_Info_Trace", { "onHalt" } },
        { "BEH_Mission_Automate_AssignerDecrocherA", { "onHalt" } },
    },

