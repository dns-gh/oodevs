node "BEH_Ordre_Pion_Mortier_AppliquerLesFeux"
{
    feedbacks = { { { "done_BEH_Ordre_Pion_Mortier_AppliquerLesFeux" }, "BEH_Ordre_Pion_Mortier_AppliquerLesFeux" } },
    SendFeedback = function( self, value ) Feedback( self.feedbacks.done_BEH_Ordre_Pion_Mortier_AppliquerLesFeux, {value} ) end,
    activations =
    {
        { "ACT_RC", { "done_ACT_RC" } },
        { "BEH_MOT_Pion_INF_Debarquer", { "done_BEH_MOT_Pion_INF_Debarquer" } },
        { "BEH_Tir_Pion_Mortier_AppliquerFeux", { "done_BEH_Tir_Pion_Mortier_AppliquerFeux" } },
    },

    create = function( self )
        self._namedParams = {}
        self._namedParams.ptCible = self.params[1]
        self._namedParams.rIT = self.params[2]
        self._namedParams.dotation = self.params[3]
    end,

    activate = function( self )
        local Activate = Activate
        self.eAction = self.eAction or eActionEnCours
        if( ModuleBegins() ) then
            Activate( self.activations.ACT_RC, 1, { eRC_ReceptionOrdreDeFeu, } )
        end

        if( self.eAction ~= eActionEnCours ) then
            self:SendFeedback( eActionEffectuee )
            Halt( self )
            do return end
        end

        Activate( self.activations.BEH_MOT_Pion_INF_Debarquer, 2, emptyTable )
        if( not DEC_Agent_EstEmbarque() ) then
            Activate( self.activations.BEH_Tir_Pion_Mortier_AppliquerFeux, 1, { self._namedParams.ptCible, self._namedParams.rIT, self._namedParams.dotation, } )
self.done_BEH_Tir_Pion_Mortier_AppliquerFeux = function( self, _, v ) self.eAction = v[1] end
        end

    end,

--[[// ============================================================================
]]--[[// BEH_Tir_Pion_Mortier_AppliquerFeux:
]]--[[// 		Appliquer les feux sur une position
]]--[[// ============================================================================
]]}

node "BEH_Tir_Pion_Mortier_AppliquerFeux"
{
    feedbacks = { { { "done_BEH_Tir_Pion_Mortier_AppliquerFeux" }, "BEH_Tir_Pion_Mortier_AppliquerFeux" } },
    SendFeedback = function( self, value ) Feedback( self.feedbacks.done_BEH_Tir_Pion_Mortier_AppliquerFeux, {value} ) end,
    activations =
    {
        { "ACT_Dep_SePosterFaceADir", { "done_ACT_Dep_SePosterFaceADir" } },
        { "BEH_Tir_Pion_Mortier_PreparerTirSur", { "done_BEH_Tir_Pion_Mortier_PreparerTirSur" } },
        { "ACT_Tir_Pion_Mortier_SurPosition", { "done_ACT_Tir_Pion_Mortier_SurPosition" } },
    },

    create = function( self )
        self._namedParams = {}
        self._namedParams.ptCible = self.params[1]
        self._namedParams.rIT = self.params[2]
        self._namedParams.dotation = self.params[3]
    end,

    activate = function( self )
        local Activate = Activate
        self.eAction = self.eAction or eActionEnCours
        self.dirCible = self.dirCible or DEC_Geometrie_CreerDirection( DEC_Agent_Position(), self._namedParams.ptCible )
        if( ModuleBegins() ) then
            do
                if( not S_Tir_MunitionIndirect_EstValide( self._namedParams.dotation ) ) then
                    do
                                                do
                            --[[// Tir Impossible plus de munition
]]if( not DEC_Agent_AutomateEstEmbraye() ) then
                                DEC_RC( eRC_TirImpossiblePlusDeMunitions )
                            else
                                DEC_Message( eRC_TirImpossiblePlusDeMunitions )
                            end

                        end

                                                self:SendFeedback( eActionImpossible )
                        Halt( self )
                        do return end

                    end
                end

                if( not S_Tir_DistancePorteeIndirect_EstValide( self._namedParams.dotation, self._namedParams.ptCible ) ) then
                    do
                                                do
                            --[[// Tir Impossible
]]if( not DEC_Agent_AutomateEstEmbraye() ) then
                                DEC_RC( eRC_TirHorsDePortee )
                            else
                                DEC_Message( eRC_TirHorsDePortee )
                            end

                        end

                                                self:SendFeedback( eActionImpossible )
                        Halt( self )
                        do return end

                    end
                end

            end
        end

        if( self.eAction ~= eActionEnCours ) then
            do
                Activate( self.activations.ACT_Dep_SePosterFaceADir, 1, { self.dirCible, } )
                self.eAction = eActionEnCours
                                self:SendFeedback( eActionEffectuee )
                do return end

            end
        end

        Activate( self.activations.BEH_Tir_Pion_Mortier_PreparerTirSur, 2, { self._namedParams.ptCible, M_DELAI_PREPARATION_TIR(), } )
        Activate( self.activations.ACT_Tir_Pion_Mortier_SurPosition, 1, { self._namedParams.ptCible, self._namedParams.rIT, self._namedParams.dotation, } )
self.done_ACT_Tir_Pion_Mortier_SurPosition = function( self, _, v ) self.eAction = v[1] end
    end,

--[[// ============================================================================
]]--[[// BEH_Tir_Pion_ASS_PreparerTirSur:
]]--[[//		Prepare un tir sur la position @ptCible pendant @rDelai
]]--[[// ============================================================================
]]}

node "BEH_Tir_Pion_Mortier_PreparerTirSur"
{
    feedbacks = { { { "done_BEH_Tir_Pion_Mortier_PreparerTirSur" }, "BEH_Tir_Pion_Mortier_PreparerTirSur" } },
    SendFeedback = function( self, value ) Feedback( self.feedbacks.done_BEH_Tir_Pion_Mortier_PreparerTirSur, {value} ) end,
    activations =
    {
        { "ACT_Tir_Pion_Mortier_PreparerTirSur", { "done_ACT_Tir_Pion_Mortier_PreparerTirSur" } },
        { "ACT_Misc_Delai", { "done_ACT_Misc_Delai" } },
    },

    create = function( self )
        self._namedParams = {}
        self._namedParams.ptCible = self.params[1]
        self._namedParams.rDelai = self.params[2]
    end,

    activate = function( self )
        local Activate = Activate
        self.eAction = self.eAction or eActionEnCours
        if( self.eAction == eActionEnCours ) then
            do
                Activate( self.activations.ACT_Tir_Pion_Mortier_PreparerTirSur, 1, { self._namedParams.ptCible, } )
                Activate( self.activations.ACT_Misc_Delai, 1, { 1, self._namedParams.rDelai, } )
self.done_ACT_Misc_Delai = function( self, _, v ) self.eAction = v[1] end
            end
        end

    end,

