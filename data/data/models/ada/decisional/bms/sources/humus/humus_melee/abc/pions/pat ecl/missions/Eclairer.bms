]]--[[// 
]]--[[// Commentaires: 
]]--[[//
]]--[[// *****************************************************************************
]]node "MIS_Pion_ABC_Eclairer"
{
    activations =
    {
        { "BEH_MAJ_Pion_ABC_EnvieDeSInfiltrer", {} },
        { "BEH_MOT_DesactiveSauvegarde", {} },
        { "BEH_MOT_EtrePrudent", {} },
        { "ACT_Maj_Pions_ObjectifEsquive", {} },
        { "ACT_Dep_PasserEnModeFurtif", {} },
        { "BEH_Mission_Pion_ABC_Eclairer", {} },
    },

    create = function( self )
        self._namedParams = {}
        self._namedParams.mission = self.params.mission
    end,

    activate = function( self )
        self.eEtat = self.eEtat or nil
        Activate( self.activations.BEH_MAJ_Pion_ABC_EnvieDeSInfiltrer, 1, {} )--[[//-----------------------------------------------------------------------------
]]--[[//  /===========> ///////////// SPE MISSION EI /////////////<============
]]--[[//-----------------------------------------------------------------------------
]]
        Activate( self.activations.BEH_MOT_DesactiveSauvegarde, 1, {} )--[[// désactive l'esquive normal sur PAP mais l'envie (Etat esquive MAJ)
]]
        Activate( self.activations.BEH_MOT_EtrePrudent, GetMotivation( "MOT_EtrePrudent" ), {} )
        Activate( self.activations.ACT_Maj_Pions_ObjectifEsquive, 1, { DEC_ListePoints_GetAt( self._namedParams.mission.itineraire_, DEC_ListePoints_Size( self._namedParams.mission.itineraire_ ) - 1 ), } )
        Activate( self.activations.ACT_Dep_PasserEnModeFurtif, 1, {} )--[[// Furtivité
]]
        --[[//-----------------------------------------------------------------------------
]]--[[//  /===========> ///////////// FIN SPE MISSION EI /////////////<============
]]--[[//-----------------------------------------------------------------------------
]]--[[//-----------------------------------------------------------------------------
]]--[[// Terminaison
]]--[[//-----------------------------------------------------------------------------
]]if( self.eEtat == eActionImpossible or self.eEtat == eActionEffectuee ) then
            Halt( self )
            do return end
        end

        --[[//-----------------------------------------------------------------------------
]]--[[// Comportement de la mission
]]--[[//-----------------------------------------------------------------------------
]]Activate( self.activations.BEH_Mission_Pion_ABC_Eclairer, 1, setmetatable( { self._namedParams.mission.itineraire_, M_MODELE_PION_ABC_ECLAIRER_PH(), M_MODELE_PION_ABC_ECLAIRER_ID(), }, { __newindex = function( t, k, v ) if k == "__returnValue" then self.eEtat = v else rawset( t, k, v ) end end } ) )
    end,

}

