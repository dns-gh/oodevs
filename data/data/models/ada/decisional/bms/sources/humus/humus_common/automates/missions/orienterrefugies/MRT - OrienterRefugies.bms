connections[ #connections + 1 ] = { nodes.MIS_Automate_MRT_OrienterRefugies, "BEH_Mission_Automate_AssignerOrienterRefugiesA", nodes.BEH_Mission_Automate_AssignerOrienterRefugiesA }
