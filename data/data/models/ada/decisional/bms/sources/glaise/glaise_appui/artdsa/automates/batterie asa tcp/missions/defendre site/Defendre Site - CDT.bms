eventmanager_plugin.MIS_Automate_CDT_ASA_MISTRAL_DefendreSite = { "mission" }
connections = connections or {}
connections[ #connections + 1 ] = { nodes.MIS_Automate_CDT_ASA_MISTRAL_DefendreSite, "ACT_Info_Trace", nodes.ACT_Info_Trace }
