function S_Liste_Pion_ALAT_UnitesADetruire( listInput )
    local _returnValue = {}
    _returnValue = {}
    for _,x in pairs( listInput or emptyTable ) do
    local _continue = true
do
            if( not DEC_ConnaissanceAgent_EstValide( x ) ) then
                _continue = false
            end

                if _continue then
                if( DEC_ConnaissanceAgent_EstMort( x ) ) then
                    _continue = false
                end

                    if _continue then
                    DEC_UserTypeList_PushBack( _returnValue, x )
                end
            end
        end

    end

    do return _returnValue end
end

