node "ACT_Pion_ABC_AnimerSite"
{
    feedbacks = { { { "done_ACT_Pion_ABC_AnimerSite" }, "ACT_Pion_ABC_AnimerSite" } },
    SendFeedback = function( self, value ) Feedback( self.feedbacks.done_ACT_Pion_ABC_AnimerSite, {value} ) end,
    actuators =
    {
        deplacement = 1,
    },

    create = function( self )
        self._namedParams = {}
        self._namedParams.pointControle = self.params[1]
    end,

    select = function( self )
                self.actionAnimer = self.actionAnimer or 0
        --[[//-----------------------------------------------------------------------------
]]--[[// Init
]]--[[//-----------------------------------------------------------------------------
]]if( ModuleBegins() ) then
            do
                DEC_Trace( "Animation du site" )
                self.actionAnimer = DEC_StartAnimerObjet(  )
                actionCallbacks[ self.actionAnimer ] = function( arg ) self._namedParams.pointControle = arg end

            end
        end

    end,

    deselect = function( self )
                DEC_Trace( "Site non anime" )
        DEC_StopAction( self.actionAnimer )
                Halt( self )
        do return end

    end,

    destroy = function( self )
                DEC_Trace( "Site non anime" )
        DEC_StopAction( self.actionAnimer )
    end,

}

