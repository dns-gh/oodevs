--[[// *****************************************************************************
]]--[[// BEH_Medo_Automate_ABC_AssignerMissionEclairerA
]]--[[//
]]--[[// Commentaires: assignation des missions pour un éventuel échelon d'éclairage
]]--[[//
]]--[[// *****************************************************************************
]]node "BEH_Medo_Automate_ABC_AssignerMissionEclairerA"
{
    activations =
    {
        { "BEH_Mission_Automate_ABC_AssignerEclairerA", {} },
    },

    create = function( self )
        self._namedParams = {}
        self._namedParams.selABC_Ecl = self.params[1]
        self._namedParams.eEtatEchelon = self.params[2]
    end,

    activate = function( self )
        --[[//-------------------------------------------------------------------------
]]--[[// Le fuseau de l'escadron est coupé proportionnellement
]]--[[//-------------------------------------------------------------------------
]]if( ModuleBegins() ) then
            DEC_MRT_AffecteFuseaux( self._namedParams.selABC_Ecl )
        end

        for _,pion in pairs( --[[//-----------------------------------------------------------------------------
]]--[[// Affectation des missions à l'echelon
]]--[[//-----------------------------------------------------------------------------
]]self._namedParams.selABC_Ecl or {} ) do
        local _continue = true
            Activate( self.activations.BEH_Mission_Automate_ABC_AssignerEclairerA, 1, { ePhase_MRT, pion, self._namedParams.eEtatEchelon, } )

        end

    end,

}

