node "BEH_Conduite_Automate_INF_MenerDefenseUsure"
{
    feedbacks = { { { "done_BEH_Conduite_Automate_INF_MenerDefenseUsure" }, "BEH_Conduite_Automate_INF_MenerDefenseUsure" } },
    SendFeedback = function( self, value ) Feedback( self.feedbacks.done_BEH_Conduite_Automate_INF_MenerDefenseUsure, {value} ) end,
    activations =
    {
        { "BEH_CoordDep_Automate_INF_Retrograde", { "done_BEH_CoordDep_Automate_INF_Retrograde" } },
        { "BEH_Conduite_Automate_INF_MenerDefenseUsure_AffecterAppuis", { "done_BEH_Conduite_Automate_INF_MenerDefenseUsure_AffecterAppuis" } },
    },

    create = function( self )
    end,

    activate = function( self )
        local Activate = Activate
        Activate( self.activations.BEH_CoordDep_Automate_INF_Retrograde, 1, emptyTable )--[[//-----------------------------------------------------------------------------
]]--[[// Coordination du front
]]--[[//-----------------------------------------------------------------------------
]]
        local lstSection = S_ObtenirPionsDe( eEtatEchelon_Premier, eEtatDestruction_None )
        for _,x_pe in pairs( lstSection or emptyTable ) do
        local _continue = true
do
                local pionPE = x_pe
                local mission = DEC_GetMission( pionPE )
                if( ( mission ~= nil and mission:GetType() == "T_Mission_Pion_INF_Interdire" ) and F_Pion_GeteEtatSituationEnnemi( pionPE ) == eEtatSituationEnnemi_PriseContact ) then
                    StartActivateOverride( self, self.activations.BEH_Conduite_Automate_INF_MenerDefenseUsure_AffecterAppuis, 1, { pionPE, } )
                end

            end

        end

    end,

}

node "BEH_Conduite_Automate_INF_MenerDefenseUsure_AffecterAppuis"
{
    feedbacks = { { { "done_BEH_Conduite_Automate_INF_MenerDefenseUsure_AffecterAppuis" }, "BEH_Conduite_Automate_INF_MenerDefenseUsure_AffecterAppuis" } },
    SendFeedback = function( self, value ) Feedback( self.feedbacks.done_BEH_Conduite_Automate_INF_MenerDefenseUsure_AffecterAppuis, {value} ) end,
    activations =
    {
        { "BEH_Conduite_Automate_INF_AppuyerCompromis", { "done_BEH_Conduite_Automate_INF_AppuyerCompromis" } },
        { "ACT_Misc_Automate_INF_Defini_PionAppuiMobile", { "done_ACT_Misc_Automate_INF_Defini_PionAppuiMobile" } },
    },

    create = function( self )
        self._namedParams = {}
        self._namedParams.pionEnTete = self.params[1]
    end,

    activate = function( self )
        local Activate = Activate
        local lstSectionSE = S_ObtenirPionsDe( eEtatEchelon_Premier, eEtatDestruction_None )
        if( ModuleBegins() ) then
            do
                DEC_Trace( "Cherche appui : " .. DEC_GetSzName( self._namedParams.pionEnTete ) )
                for _,x_pion in pairs( lstSectionSE or emptyTable ) do
                local _continue = true
                    do
                        local pionSE = x_pion
                        local mission = DEC_GetMission( pionSE )
                        if( mission ~= nil and ( mission:GetType() == "T_Mission_Pion_INF_SurveillerSecteur" or mission:GetType() == "T_Mission_Pion_INF_Barrer" ) ) then
                            do
                                local rForceAppuyer = ( 1 / ( 1 + #( F_Pion_GetselUnitesEnAppui( self._namedParams.pionEnTete ) ) ) )
                                local rForceAppui = rForceAppuyer * S_ForceSoutien( pionSE, self._namedParams.pionEnTete )
                                Activate( self.activations.BEH_Conduite_Automate_INF_AppuyerCompromis, rForceAppui, { pionSE, self._namedParams.pionEnTete, } )
                            end
                        end

                    end

                end

            end
        end

        for _,x_pion in pairs( lstSectionSE or emptyTable ) do
        local _continue = true
do
                Activate( self.activations.ACT_Misc_Automate_INF_Defini_PionAppuiMobile, 1, { x_pion, } )
            end

        end

    end,

}

