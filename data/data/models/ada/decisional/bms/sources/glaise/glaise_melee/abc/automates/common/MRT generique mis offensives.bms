--[[// *****************************************************************************
]]--[[// BEH_Medo_Automate_ABC_DonnerLesOrdresPourMissionDynamique
]]--[[//
]]--[[// Commentaires:
]]--[[//
]]--[[// *****************************************************************************
]]node "BEH_Medo_Automate_ABC_DonnerLesOrdresPourMissionDynamique"
{
    feedbacks = { { { "done_BEH_Medo_Automate_ABC_DonnerLesOrdresPourMissionDynamique" }, "BEH_Medo_Automate_ABC_DonnerLesOrdresPourMissionDynamique" } },
    SendFeedback = function( self, value ) Feedback( self.feedbacks.done_BEH_Medo_Automate_ABC_DonnerLesOrdresPourMissionDynamique, {value} ) end,
    activations =
    {
        { "ACT_Info_Automate_Trace", { "done_ACT_Info_Automate_Trace" } },
        { "BEH_Medo_Automate_ControleCreationMission", { "done_BEH_Medo_Automate_ControleCreationMission" } },
        { "BEH_Medo_Automate_ABC_AssignerMissionAttaquerA", { "done_BEH_Medo_Automate_ABC_AssignerMissionAttaquerA" } },
        { "BEH_Medo_Automate_ABC_AssignerMissionEclairerA", { "done_BEH_Medo_Automate_ABC_AssignerMissionEclairerA" } },
        { "BEH_Medo_Automate_ABC_AssignerMissionReconnaitreAxeA", { "done_BEH_Medo_Automate_ABC_AssignerMissionReconnaitreAxeA" } },
        { "BEH_Medo_Automate_ABC_AssignerMissionEscorterA", { "done_BEH_Medo_Automate_ABC_AssignerMissionEscorterA" } },
        { "BEH_Medo_Automate_ABC_AssignerMissionEscorterEclA", { "done_BEH_Medo_Automate_ABC_AssignerMissionEscorterEclA" } },
        { "BEH_Medo_Automate_ABC_AssignerMissionEscorterAutomateA", { "done_BEH_Medo_Automate_ABC_AssignerMissionEscorterAutomateA" } },
        { "BEH_Medo_Automate_ABC_AssignerMissionEscorterAutomateEclA", { "done_BEH_Medo_Automate_ABC_AssignerMissionEscorterAutomateEclA" } },
        { "ACT_Warning", { "done_ACT_Warning" } },
    },

    create = function( self )
        self._namedParams = {}
        self._namedParams.eType = self.params[1]
    end,

    activate = function( self )
        local Activate = Activate
        local selPions = {}
        self.ePhase = self.ePhase or eMRT_DeterminerEchelonsGlobals
        self.eEtat = self.eEtat or eActionEnCours
        self.selABC_Ecl = self.selABC_Ecl or {}
        self.selABC_NonPrevu = self.selABC_NonPrevu or {}--[[// suivre le SE
]]
        self.selABC_Blinde = self.selABC_Blinde or {}
        self.selABC_PE = self.selABC_PE or {}--[[// Liste des pions en premier echelon
]]
        self.selABC_SE = self.selABC_SE or {}--[[// Liste des pions en second echelon
]]
        self.selINF = self.selINF or {}--[[// Liste des pions INF en renforcement
]]
        local pionPC = DEC_Automate_PionPC()
        if( pionPC:GetType() == "Patrouille_EI" ) then
            selPions = DEC_Automate_PionsAvecPC()
        else
            selPions = DEC_Automate_PionsSansPC()
        end

         do
            local _continue = true
--[[// =============================================================================
]]--[[// PHASE DU COMPORTEMENT
]]--[[// 1) Vérifier les moyens, des renforts éventuels
]]--[[// 2) Déterminer les échelons
]]--[[// 2) Assigner certaines missions (les missions des unités de premier échelon)
]]--[[// $$$$ MIA 2004-10-01: les missions du deuxieme échelon sont données dans la conduite
]]--[[// $$$$ MIA 2004-10-01: car elles sont en permance évaluées durant la mission.
]]--[[// =============================================================================                                  
]]--[[//---------------------------------------------------------------------
]]--[[// Assignation des grands échelons Ecl / Utile( PE + SE )/ non prevus
]]--[[//---------------------------------------------------------------------
]]--[[// On ne traite pas les pions non opérationnels
]]--[[//---------------------------------------------------------------------
]]--[[// Assignation premier echelon et second echelon utile
]]--[[//---------------------------------------------------------------------
]]--[[// que du premier echelon
]]--[[//-----------------------------------------------------------------------------
]]--[[// Critère de formation
]]--[[// Si l'animateur veut une attaque en ligne, on ne cherche pas
]]--[[// à équilibrer la formation --> tous les pions en premier echeleon
]]--[[// ( sauf ceux qui ne peuvent pas comme le PAD et autre pion non prevu )
]]--[[//-----------------------------------------------------------------------------
]]--[[// Premer echelon
]]--[[// ou ERC
]]--[[//-----------------------------------------------------------------------------
]]--[[// Mission impossible si pas de premier echelon
]]--[[//-----------------------------------------------------------------------------
]]--[[//---------------------------------------------------------------------
]]--[[// Assignation des missions
]]--[[//---------------------------------------------------------------------
]]--[[/* ------------------------------------------------------------- */]]--[[/* -------------  Gestion erreur/ bon deroulement -------------- */]]--[[/* ------------------------------------------------------------- */]]--[[// ePhase = eMRT_MissionImpossible;
]]--[[/* ------------------------------------------------------------- */]]--[[/* ------- Fin Gestion erreur/ bon deroulement ------- */]]--[[/* ------------------------------------------------------------- */]]--[[// Suivant le type de mission...
]]--[[//-----------------------------------------------------------------------------
]]--[[// Attaquer
]]--[[//-----------------------------------------------------------------------------
]]--[[// Pour l'instant
]]--[[//-----------------------------------------------------------------------------
]]--[[// Eclairer / reconnaitre / Prendre le contact
]]--[[//-----------------------------------------------------------------------------
]]--[[//-----------------------------------------------------------------------------
]]--[[// Flanc garder
]]--[[//-----------------------------------------------------------------------------
]]--[[//-----------------------------------------------------------------------------
]]--[[// EscorterUnConvoi 
]]--[[//-----------------------------------------------------------------------------
]]--[[// 1 pions au moins suffit pour l'escorte
]]--[[//-----------------------------------------------------------------------------
]]--[[// EscorterUnConvoi 
]]--[[//-----------------------------------------------------------------------------
]]--[[// 1 pions au moins suffit pour l'escorte
]]--[[//-----------------------------------------------------------------------------
]]--[[// Mission impossible
]]--[[//-----------------------------------------------------------------------------
]]--[[//---------------------------------------------------------------------
]]--[[// Validation
]]--[[//---------------------------------------------------------------------
]]            local switch_1 = self.ePhase
                if switch_1 == eMRT_DeterminerEchelonsGlobals then
                    for _,x in pairs( selPions or emptyTable ) do
                    local _continue = true
do
                            local pion = x
                            if( F_Pion_GeteEtatDestruction( pion ) ~= eEtatDestruction_None ) then
                                do
                                    DEC_Trace( DEC_GetSzName( pion ) .. " non operationnal" )
                                    DIA_PushFront( self.selABC_SE, pion )
                                    _continue = false
                                end
                            end

                                if _continue then
                                 do
                                    local _continue = true
                                    local switch_2 = pion:GetType()
                                        if switch_2 == "Patrouille_EI"
                                        or switch_2 == "Patrouille_EI_Milan" then
                                            DIA_PushFront( self.selABC_Ecl, pion )
                                            _continue = false
                                        elseif switch_2 == "Peloton_XL"
                                        or switch_2 == "Peloton_AMX" then
                                            DIA_PushFront( self.selABC_Blinde, pion )
                                            _continue = false
                                        elseif switch_2 == "Peloton_AD" then
                                            DIA_PushFront( self.selABC_SE, pion )
                                            _continue = false
                                        elseif switch_2 == "SectionInfanterie"
                                        or switch_2 == "SectionInfanterie_HOT"
                                        or switch_2 == "SectionInfanterie_MILAN" then
                                            Activate( self.activations.ACT_Info_Automate_Trace, 1, { "-------$$$ Renforcements INF $$$------", } )
                                            DIA_PushFront( self.selINF, pion )
                                            _continue = false
                                        
                                        else
                                            DIA_PushFront( self.selABC_NonPrevu, pion )
                                            _continue = false
                                                                                end
                                    end

                            end
                        end

                    end

                    self.ePhase = eMRT_DeterminerEchelonsLocals
                    _continue = false
                elseif switch_1 == eMRT_DeterminerEchelonsLocals then
                    local fNbPionsEnPEMax = 0
                    local fNbPionsEnPE = 0
                    if( #( self.selABC_Blinde ) < 3 ) then
                        fNbPionsEnPEMax = #( self.selABC_Blinde )
                    else
                        fNbPionsEnPEMax = #( self.selABC_Blinde ) / 2
                    end

                    for _,x in pairs( self.selABC_Blinde or emptyTable ) do
                    local _continue = true
do
                            local pion = x
                             do
                                local _continue = true
                                local switch_2 = pion:GetType()
                                    if switch_2 == "Peloton_AMX"
                                    or switch_2 == "Peloton_XL" then
                                        if( fNbPionsEnPE < fNbPionsEnPEMax ) then
                                            do
                                                DIA_PushFront( self.selABC_PE, pion )
                                                                                                fNbPionsEnPE = fNbPionsEnPE + 1
                                            end
                                        else
                                            DIA_PushFront( self.selABC_SE, pion )
                                        end

                                        _continue = false
                                                                        end
                                end

                        end

                    end

                    if( DIA_IsListEmpty( self.selABC_PE ) and DIA_IsListEmpty( self.selABC_Ecl ) ) then
                        do
                            DEC_Trace( "No adapted units to perform the mission" )
                            self.ePhase = eMRT_MissionImpossible
                                                        do return end

                        end
                    end

                    self.ePhase = eMRT_AssignerMissions
                    _continue = false
                elseif switch_1 == eMRT_AssignerMissions then
                    if( self.eEtat == eActionImpossible ) then
                        do
                            DEC_Trace( "Warning: some front units did not received mission " )
                            self.ePhase = eMRT_Valider
                                                        do return end

                        end
                    end

                    if( self.eEtat == eActionEffectuee ) then
                        do
                            self.ePhase = eMRT_Valider
                                                        do return end

                        end
                    end

                     do
                        local _continue = true
                        local switch_2 = self._namedParams.eType
                            if switch_2 == "T_Mission_Automate_ABC_ContreAttaquer"
                            or switch_2 == "T_Mission_Automate_ABC_EffectuerRaid"
                            or switch_2 == "T_Mission_Automate_ABC_ReleverEnDepassant"
                            or switch_2 == "T_Mission_Automate_ABC_Attaquer"
                            or switch_2 == "T_Mission_Automate_ABC_Soutenir"
                            or switch_2 == "T_Mission_Automate_ABC_Appuyer" then
                                if( DIA_IsListEmpty( self.selABC_PE ) ) then
                                    self.ePhase = eMRT_MissionImpossible
                                end

                                Activate( self.activations.BEH_Medo_Automate_ControleCreationMission, 1, { #( self.selABC_PE ), } )
self.done_BEH_Medo_Automate_ControleCreationMission = function( self, _, v ) self.eEtat = v[1] end
                                Activate( self.activations.BEH_Medo_Automate_ABC_AssignerMissionAttaquerA, 1, { self.selABC_PE, eEtatEchelon_Premier, } )
                                _continue = false
                            elseif switch_2 == "T_Mission_Automate_ABC_Eclairer"
                            or switch_2 == "T_Mission_Automate_ABC_Reconnaitre"
                            or switch_2 == "T_Mission_Automate_ABC_PrendrePreciserContact"
                            or switch_2 == "T_Mission_Automate_ABC_Fixer" then
                                Activate( self.activations.BEH_Medo_Automate_ControleCreationMission, 1, { #( self.selABC_PE ) + #( self.selABC_Ecl ), } )
self.done_BEH_Medo_Automate_ControleCreationMission = function( self, _, v ) self.eEtat = v[1] end
                                Activate( self.activations.BEH_Medo_Automate_ABC_AssignerMissionEclairerA, 1, { self.selABC_Ecl, eEtatEchelon_Eclairage, } )
                                Activate( self.activations.BEH_Medo_Automate_ABC_AssignerMissionReconnaitreAxeA, 1, { self.selABC_PE, eEtatEchelon_Premier, } )
                                _continue = false
                            elseif switch_2 == "T_Mission_Automate_ABC_FlancGarder" then
                                Activate( self.activations.BEH_Medo_Automate_ControleCreationMission, 1, { #( self.selABC_PE ) + #( self.selABC_Ecl ), } )
self.done_BEH_Medo_Automate_ControleCreationMission = function( self, _, v ) self.eEtat = v[1] end
                                Activate( self.activations.BEH_Medo_Automate_ABC_AssignerMissionEclairerA, 1, { self.selABC_Ecl, eEtatEchelon_Eclairage, } )
                                Activate( self.activations.BEH_Medo_Automate_ABC_AssignerMissionAttaquerA, 1, { self.selABC_PE, eEtatEchelon_Premier, } )
                                _continue = false
                            elseif switch_2 == "T_Mission_Automate_ABC_EscorterUnite" then
                                local mission = DEC_GetMission( myself )
                                Activate( self.activations.BEH_Medo_Automate_ControleCreationMission, 1, { 1, } )
self.done_BEH_Medo_Automate_ControleCreationMission = function( self, _, v ) self.eEtat = v[1] end
                                Activate( self.activations.BEH_Medo_Automate_ABC_AssignerMissionEscorterA, 1, { self.selABC_PE, mission.uniteAEscorter_, eEtatEchelon_Premier, } )
                                Activate( self.activations.BEH_Medo_Automate_ABC_AssignerMissionEscorterEclA, 1, { self.selABC_Ecl, mission.uniteAEscorter_, eEtatEchelon_Eclairage, } )
                                _continue = false
                            elseif switch_2 == "T_Mission_Automate_ABC_EscorterUnites" then
                                local mission = DEC_GetMission( myself )
                                Activate( self.activations.BEH_Medo_Automate_ControleCreationMission, 1, { 1, } )
self.done_BEH_Medo_Automate_ControleCreationMission = function( self, _, v ) self.eEtat = v[1] end
                                Activate( self.activations.BEH_Medo_Automate_ABC_AssignerMissionEscorterAutomateA, 1, { self.selABC_PE, mission.automateAEscorter_, eEtatEchelon_Premier, } )
                                Activate( self.activations.BEH_Medo_Automate_ABC_AssignerMissionEscorterAutomateEclA, 1, { self.selABC_Ecl, mission.automateAEscorter_, eEtatEchelon_Eclairage, } )
                                _continue = false
                                                        end
                        end

                    _continue = false
                elseif switch_1 == eMRT_MissionImpossible then
                    Activate( self.activations.ACT_Warning, 1, { eRC_MissionImpossibleUnitesSubordonneesNonOperationnelles, } )
                    _continue = false
                elseif switch_1 == eMRT_Valider then
                    DEC_MRT_Valide()
                                        self:SendFeedback( eActionEffectuee )
                    Halt( self )
                    do return end

                
                else
                                end
            end

    end,

}

connections = connections or {}
connections[ #connections + 1 ] = { nodes.BEH_Medo_Automate_ABC_DonnerLesOrdresPourMissionDynamique, "ACT_Info_Automate_Trace", nodes.ACT_Info_Automate_Trace }
connections[ #connections + 1 ] = { nodes.BEH_Medo_Automate_ABC_DonnerLesOrdresPourMissionDynamique, "BEH_Medo_Automate_ControleCreationMission", nodes.BEH_Medo_Automate_ControleCreationMission }
connections[ #connections + 1 ] = { nodes.BEH_Medo_Automate_ABC_DonnerLesOrdresPourMissionDynamique, "BEH_Medo_Automate_ABC_AssignerMissionAttaquerA", nodes.BEH_Medo_Automate_ABC_AssignerMissionAttaquerA }
connections[ #connections + 1 ] = { nodes.BEH_Medo_Automate_ABC_DonnerLesOrdresPourMissionDynamique, "BEH_Medo_Automate_ABC_AssignerMissionEclairerA", nodes.BEH_Medo_Automate_ABC_AssignerMissionEclairerA }
connections[ #connections + 1 ] = { nodes.BEH_Medo_Automate_ABC_DonnerLesOrdresPourMissionDynamique, "BEH_Medo_Automate_ABC_AssignerMissionReconnaitreAxeA", nodes.BEH_Medo_Automate_ABC_AssignerMissionReconnaitreAxeA }
connections[ #connections + 1 ] = { nodes.BEH_Medo_Automate_ABC_DonnerLesOrdresPourMissionDynamique, "BEH_Medo_Automate_ABC_AssignerMissionEscorterA", nodes.BEH_Medo_Automate_ABC_AssignerMissionEscorterA }
connections[ #connections + 1 ] = { nodes.BEH_Medo_Automate_ABC_DonnerLesOrdresPourMissionDynamique, "BEH_Medo_Automate_ABC_AssignerMissionEscorterEclA", nodes.BEH_Medo_Automate_ABC_AssignerMissionEscorterEclA }
connections[ #connections + 1 ] = { nodes.BEH_Medo_Automate_ABC_DonnerLesOrdresPourMissionDynamique, "BEH_Medo_Automate_ABC_AssignerMissionEscorterAutomateA", nodes.BEH_Medo_Automate_ABC_AssignerMissionEscorterAutomateA }
connections[ #connections + 1 ] = { nodes.BEH_Medo_Automate_ABC_DonnerLesOrdresPourMissionDynamique, "BEH_Medo_Automate_ABC_AssignerMissionEscorterAutomateEclA", nodes.BEH_Medo_Automate_ABC_AssignerMissionEscorterAutomateEclA }
connections[ #connections + 1 ] = { nodes.BEH_Medo_Automate_ABC_DonnerLesOrdresPourMissionDynamique, "ACT_Warning", nodes.ACT_Warning }
