        if( not DEC_ConnaissanceObjet_EstValide( self._namedParams.objet ) ) then
            self.deselect = function() end
            self.destroy = function() end
            Halt()
        end

        local eValidite = nil
        local listePions = DEC_Automate_PionsSansPC()
        for _,pion in pairs( listePions ) do
        local _continue = true
do
                if( DEC_Automate_PionPeutConstruireContournementObjet( pion, self._namedParams.objet ) ) then
                    return
--[[// au moins un pion est capable
]]                end

            end

        end

        Activate( self.activations.ACT_Info_Automate_GEN_RendreComptePourRenfort, 1, {} )
    end,

