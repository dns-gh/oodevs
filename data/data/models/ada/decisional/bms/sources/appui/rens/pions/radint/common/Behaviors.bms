]]--[[// BEH_Dep_Pion_RENS_MonterA
]]--[[//
]]--[[// Commentaires: ce comportement encapsule l'action pour jouer un delai de monté.
]]--[[// Devrait être une conséquence de l'action physique...
]]--[[//
]]--[[// *****************************************************************************
]]}

node "BEH_Dep_Pion_RENS_MonterA"
{
    feedbacks = { { { "done_BEH_Dep_Pion_RENS_MonterA" }, "BEH_Dep_Pion_RENS_MonterA" } },
    SendFeedback = function( self, value ) Feedback( self.feedbacks.done_BEH_Dep_Pion_RENS_MonterA, {value} ) end,
    activations =
    {
        { "ACT_Dep_Pion_RENS_VolerA", { "done_ACT_Dep_Pion_RENS_VolerA" } },
        { "ACT_Misc_Delai", { "done_ACT_Misc_Delai" } },
    },

    create = function( self )
        self._namedParams = {}
        self._namedParams.rAltitude = self.params[1]
    end,

    activate = function( self )
        local Activate = Activate
        self.eEtatDelai = self.eEtatDelai or eActionEnCours
        if( self.eEtatDelai == eActionEffectuee ) then
            do
                Activate( self.activations.ACT_Dep_Pion_RENS_VolerA, 1, { self._namedParams.rAltitude, } )
                                do return end

            end
        end

        Activate( self.activations.ACT_Misc_Delai, 1, { 1, 15, } )
self.done_ACT_Misc_Delai = function( self, _, v ) self.eEtatDelai = v[1] end
    end,

}

