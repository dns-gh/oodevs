--[[// *****************************************************************************
]]--[[// MIS_Automate_MRT_RENS_ROEM_RenseignerSur
]]--[[// 
]]--[[// Commentaires:
]]--[[//
]]--[[// *****************************************************************************
]]node "MIS_Automate_MRT_RENS_ROEM_RenseignerSur"
{
    activations =
    {
        { "ACT_Info_Trace", {} },
        { "BEH_Medo_Automate_ControleCreationMission", {} },
        { "BEH_Medo_Automate_RENS_ROEM_Linx_AssignerRenseignerA", {} },
        { "BEH_Medo_Automate_RENS_ROEM_Linx_AssignerMettreEnOeuvreA", {} },
    },

    create = function( self )
        self._namedParams = {}
        self._namedParams.mission = self.params.mission
    end,

    activate = function( self )
        self.eValidationMRT = self.eValidationMRT or eActionEnCours
        --[[//-----------------------------------------------------------------------------
]]--[[// Obtention du SMO et Stations
]]--[[//-----------------------------------------------------------------------------
]]--[[// Une seule normalement!
]]self.listeStationsLinx = self.listeStationsLinx or S_Cherche_Automate_Filtre_TypePionOperationnels( DEC_Automate_PionsAvecPC(), "Stations_Lynx" )
        --[[// Une seule normalement!
]]self.listePionsCoge = self.listePionsCoge or S_Cherche_Automate_Filtre_TypePionOperationnels( DEC_Automate_PionsAvecPC(), "Section_Coge" )
        --[[//-----------------------------------------------------------------------------
]]--[[// Init
]]--[[//-----------------------------------------------------------------------------
]]if( ModuleBegins() ) then
            do
                DEC_Trace( "$ MIS_Automate_MRT_RENS_ROEM_RenseignerSur: debut MRT $" )
                DEC_SetMission( myself, self._namedParams.mission )
                                do
                    local listePionsSubordonnes = DEC_Automate_PionsSansPC()
                    for _,x in pairs( listePionsSubordonnes or {} ) do
                    local _continue = true
                        do
                            local pion = x
                            F_Pion_SeteEtatEchelon( pion, eEtatEchelon_Second )
                            F_Pion_SeteEtatSoutien( pion, eEtatSoutien_aucun )
                        end

                    end

                end
--[[// Vérification
]]
                if( DIA_IsListEmpty( self.listeStationsLinx ) or DIA_IsListEmpty( self.listePionsCoge ) ) then
                    do
                        Activate( self.activations.ACT_Info_Trace, 1, { "Unadapted units for the mission", } )
                                                self.params.__returnValue = eActionImpossible
                        Halt( self )
                        do return end

                    end
                end

            end
--[[//-----------------------------------------------------------------------------
]]--[[// Assignation et vérification
]]--[[// Pour l'instant on gére que deux pions
]]--[[//-----------------------------------------------------------------------------
]]        end

        if( self.eValidationMRT == eActionImpossible ) then
            do
                                do
                    DEC_MRT_Valide()
                    DEC_Trace( "!!!!Mind out some first line units didn't receive mission!!!!" )
                end

                                self.params.__returnValue = eActionImpossible
                Halt( self )
                do return end

            end
        end

        if( self.eValidationMRT == eActionEffectuee ) then
            do
                self.eValidationMRT = eActionEnCours
                                do
                    DEC_MRT_Valide()
                                        self.params.__returnValue = eActionEffectuee
                    Halt( self )
                    do return end

                end

            end
        end

        Activate( self.activations.BEH_Medo_Automate_ControleCreationMission, 1, setmetatable( { #( self.listeStationsLinx ) + #( self.listePionsCoge ), }, { __newindex = function( t, k, v ) if k == "__returnValue" then self.eValidationMRT = v else rawset( t, k, v ) end end } ) )
        Activate( self.activations.BEH_Medo_Automate_RENS_ROEM_Linx_AssignerRenseignerA, 1, { self.listeStationsLinx, } )
        Activate( self.activations.BEH_Medo_Automate_RENS_ROEM_Linx_AssignerMettreEnOeuvreA, 1, { self.listePionsCoge, } )
    end,

--[[// *****************************************************************************
]]--[[// BEH_Medo_Automate_RENS_ROEM_Linx_AssignerRenseignerA
]]--[[// 
]]--[[// Commentaires:
]]--[[//
]]--[[// *****************************************************************************
]]}

node "BEH_Medo_Automate_RENS_ROEM_Linx_AssignerRenseignerA"
{
    activations =
    {
        { "BEH_Medo_Automate_RENS_ROEM_AssignerRenseignerA", {} },
    },

    create = function( self )
        self._namedParams = {}
        self._namedParams.listePionsLinx = self.params[1]
    end,

    activate = function( self )
        for _,pion in pairs( self._namedParams.listePionsLinx or {} ) do
        local _continue = true
            Activate( self.activations.BEH_Medo_Automate_RENS_ROEM_AssignerRenseignerA, 1, { pion, } )

        end

    end,

--[[// *****************************************************************************
]]--[[// BEH_Medo_Automate_RENS_ROEM_Linx_AssignerMettreEnOeuvreA
]]--[[// 
]]--[[// Commentaires:
]]--[[//
]]--[[// *****************************************************************************
]]}

node "BEH_Medo_Automate_RENS_ROEM_Linx_AssignerMettreEnOeuvreA"
{
    activations =
    {
        { "BEH_Medo_Automate_RENS_ROEM_AssignerMettreEnOeuvreA", {} },
    },

    create = function( self )
        self._namedParams = {}
        self._namedParams.listePionsCoge = self.params[1]
    end,

    activate = function( self )
        for _,pion in pairs( self._namedParams.listePionsCoge or {} ) do
        local _continue = true
            Activate( self.activations.BEH_Medo_Automate_RENS_ROEM_AssignerMettreEnOeuvreA, 1, { pion, } )

        end

    end,

}

