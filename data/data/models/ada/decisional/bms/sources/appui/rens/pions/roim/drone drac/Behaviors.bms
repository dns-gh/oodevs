]]node "BEH_Defaut"
{
    feedbacks = { { { "done_BEH_Defaut" }, "BEH_Defaut" } },
    SendFeedback = function( self, value ) Feedback( self.feedbacks.done_BEH_Defaut, {value} ) end,
    activations =
    {
        { "BEH_MOT_DesactiveSauvegarde", { "done_BEH_MOT_DesactiveSauvegarde" } },
        { "BEH_Info_Pion_RendreCompte", { "done_BEH_Info_Pion_RendreCompte" } },
        { "BEH_Info_Pion_Rens_Disponibilite", { "done_BEH_Info_Pion_Rens_Disponibilite" } },
        { "ACT_Info_Trace", { "done_ACT_Info_Trace" } },
    },

    create = function( self )
        self._namedParams = {}
        self._namedParams.nDummy = self.params[1]
    end,

    activate = function( self )
        local Activate = Activate
        --[[//---------------------------------------------------------------------
]]--[[// Init
]]--[[//---------------------------------------------------------------------
]]if( ModuleBegins() ) then
            --[[// Tant que pas mise en oeuvre et programmé.
]]DEC_Perception_DesactiverSenseurs()
        end

        Activate( self.activations.BEH_MOT_DesactiveSauvegarde, 1, {} )
        Activate( self.activations.BEH_Info_Pion_RendreCompte, 1, {} )--[[//-----------------------------------------------------------------------------
]]--[[// INFO MOS
]]--[[//-----------------------------------------------------------------------------
]]
        Activate( self.activations.BEH_Info_Pion_Rens_Disponibilite, 1, {} )--[[//---------------------------------------------------------------------
]]--[[// pour MOS ligth temp
]]--[[//---------------------------------------------------------------------
]]
        if( DEC_Agent_EstTransporte() ) then
            Activate( self.activations.ACT_Info_Trace, 1, { "******* DRAC charge sur SMO *******", } )
        end

    end,

