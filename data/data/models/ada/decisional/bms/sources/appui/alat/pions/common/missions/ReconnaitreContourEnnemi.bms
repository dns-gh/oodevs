connections[ #connections + 1 ] = { nodes.BEH_Eni_Pion_ALAT_GererEniRecoContourEni, "BEH_Obs_Pion_ALAT_ReconnaitreUnite", nodes.BEH_Obs_Pion_ALAT_ReconnaitreUnite }
