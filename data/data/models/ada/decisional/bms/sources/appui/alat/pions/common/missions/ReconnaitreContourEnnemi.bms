connections[ #connections + 1 ] = { nodes.MIS_Pion_ALAT_ReconnaitreContourEnnemi, "BEH_Obs_Pion_ALAT_ReconnaitreZone", nodes.BEH_Obs_Pion_ALAT_ReconnaitreZone }
