]]node "MIS_Automate_CDT_GEN_ReconnaitreZone"
{
    feedbacks = { { { "done_MIS_Automate_CDT_GEN_ReconnaitreZone" }, "MIS_Automate_CDT_GEN_ReconnaitreZone" } },
    SendFeedback = function( self, value ) Feedback( self.feedbacks.done_MIS_Automate_CDT_GEN_ReconnaitreZone, {value} ) end,
    activations =
    {
        { "BEH_Ordre_Automate_RecevoirOrdreInopine", { "done_BEH_Ordre_Automate_RecevoirOrdreInopine" } },
        { "ACT_Warning", { "done_ACT_Warning" } },
        { "BEH_Conduite_Automate_GEN_RecoZoneDeploiement_GererSE_", { "done_BEH_Conduite_Automate_GEN_RecoZoneDeploiement_GererSE_" } },
    },

    create = function( self )
        self._namedParams = {}
        self._namedParams.mission = self.params.mission
    end,

    activate = function( self )
        local Activate = Activate
        --[[//---------------------------------------------------------------------
]]--[[// Init
]]--[[//---------------------------------------------------------------------
]]if( ModuleBegins() ) then
            DEC_SetMission( myself, self._namedParams.mission )
        end

        Activate( self.activations.BEH_Ordre_Automate_RecevoirOrdreInopine, 1, emptyTable )--[[//---------------------------------------------------------------------
]]--[[// Ordre conduite
]]--[[//---------------------------------------------------------------------
]]
        --[[//---------------------------------------------------------------------
]]--[[// Vérification des moyens
]]--[[//---------------------------------------------------------------------
]]local listePionsGenie = S_ObtenirPionsDe( eEtatEchelon_Premier, eEtatDestruction_None )
        if( #( listePionsGenie ) == 0 ) then
            do
                Activate( self.activations.ACT_Warning, 1, { eRC_MissionImpossibleUnitesSubordonneesNonOperationnelles, } )
                                do return end

            end
--[[//---------------------------------------------------------------------
]]--[[// Gestion deuxieme échelon
]]--[[//---------------------------------------------------------------------
]]        end

        Activate( self.activations.BEH_Conduite_Automate_GEN_RecoZoneDeploiement_GererSE_, 1, emptyTable )
    end,

--[[// *****************************************************************************
]]--[[// BEH_Conduite_Automate_GEN_RecoZoneDeploiement_GererSE_
