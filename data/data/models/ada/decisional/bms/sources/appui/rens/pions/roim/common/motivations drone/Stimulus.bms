motivation_plugin.stimuli["STIM_PresenceZoneTirInterdit"] = function()
        SetStimulus( "STIM_PresenceZoneTirInterdit", 0 )
        local listeObjet = DEC_Connaissances_CollisionsObjets()
        for _,objet in pairs( listeObjet or emptyTable ) do
        local _continue = true
do
                local eValidite = nil
                if( DEC_ConnaissanceObjet_Type( objet, eValidite ) == eTypeObjectZoneInterditeTir ) then
                    SetStimulus( "STIM_PresenceZoneTirInterdit", 2 )
                end

            end

        end

        end

