]]    end

motivation_plugin.stimuli["STIM_PresenceEnisRendus"] = function()
        --[[// Default
]]SetStimulus( "STIM_PresenceEnisRendus", 0 )
        --[[// Transport circu
]]if( g_bTransportEnCours ) then
            do return end
--[[// Si on est e mission de transport
]]        end

        --[[//-----------------------------------------------------------------------------
]]--[[// PRISONNIERS
]]--[[//-----------------------------------------------------------------------------
]]local listeEniRendus = DEC_Connaissances_UnitesRenduesAProximite( 1000 )
        for _,eniRendu in pairs( listeEniRendus or emptyTable ) do
        local _continue = true
do
                local eValidite = nil
                if( not DEC_ConnaissanceAgent_EstPrisonnier( eniRendu, eValidite ) ) then
                    do
                        SetStimulus( "STIM_PresenceEnisRendus", 1 )
                                                do return end

                    end
                end

            end

        end

