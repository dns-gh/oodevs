function S_PopulationTropAggressive( pop )
    local _returnValue = false
    _returnValue = true
    local attitude = DEC_ConnaissancePopulation_Attitude( pop )
    local roe = DEC_Agent_RoePopulation()
    if( ( roe == eEtatROEPopulation_EmploiForceInterdit ) and ( attitude ~= eAttitudePopulation_Calme ) ) then
        _returnValue = true
    else
if( ( roe == eEtatROEPopulation_MaintienADistanceParMoyensNonLetaux ) and ( attitude == eAttitudePopulation_Excitee ) ) then
            _returnValue = true
        else
if( ( roe == eEtatROEPopulation_MaintienADistanceParMoyensNonLetaux ) and ( attitude == eAttitudePopulation_Agressive ) ) then
                _returnValue = true
            else
                _returnValue = false
            end
        end
    end

    local domination = 0
    domination = DEC_ConnaissancePopulation_Domination( pop )
    pop = domination.second
    domination = domination.first
    if( 0 == domination ) then
        _returnValue = false
    end

    do return _returnValue end
end

function S_AugmenterROEPopulation( eROEPopulationVirtuel )
    local _returnValue = nil
     do
        local _continue = true
        local switch_1 = eROEPopulationVirtuel
        local cases_switch_1 = {}
            if switch_1 == eEtatROEPopulation_None then
                _returnValue = eEtatROEPopulation_EmploiForceInterdit
                _continue = false
                        cases_switch_1[1] = true
elseif switch_1 == eEtatROEPopulation_EmploiForceInterdit then
                _returnValue = eEtatROEPopulation_MaintienADistanceParMoyensNonLetaux
                _continue = false
                        cases_switch_1[2] = true
elseif switch_1 == eEtatROEPopulation_MaintienADistanceParMoyensNonLetaux
            or switch_1 == eEtatROEPopulation_ArmesLetalesAutorisees then
                _returnValue = eEtatROEPopulation_ArmesLetalesAutorisees
                _continue = false
                        cases_switch_1[3] = true
            end
        end

    do return _returnValue end
end

function S_RCROE( eROEPopulationVirtuel )
    local _returnValue = false
     do
        local _continue = true
        local switch_1 = eROEPopulationVirtuel
        local cases_switch_1 = {}
            if switch_1 == eEtatROEPopulation_EmploiForceInterdit then
                _continue = false
                        cases_switch_1[1] = true
elseif switch_1 == eEtatROEPopulation_MaintienADistanceParMoyensNonLetaux then
                do
                    if( not DEC_Agent_AutomateEstEmbraye() ) then
                        DEC_RC( eRC_UtilisationArmesNonLetalesFaceAPopulation )
                    else
                        DEC_Message( eRC_UtilisationArmesNonLetalesFaceAPopulation )
                    end

                end

                _continue = false
                        cases_switch_1[2] = true
elseif switch_1 == eEtatROEPopulation_ArmesLetalesAutorisees then
                do
                    if( not DEC_Agent_AutomateEstEmbraye() ) then
                        DEC_RC( eRC_UtilisationArmementsFaceAPopulation )
                    else
                        DEC_Message( eRC_UtilisationArmementsFaceAPopulation )
                    end

                end

                _continue = false
                        cases_switch_1[3] = true
            end
        end

    _returnValue = true
    do return _returnValue end
end

