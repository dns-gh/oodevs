--[[//-----------------------------------------------------------------------------
]]--[[// FONCTIONS
]]--[[//-----------------------------------------------------------------------------
]]--[[//-----------------------------------------------------------------------------
]]--[[// Renvoie la distance min pour suivre
]]--[[//-----------------------------------------------------------------------------
]]--[[//-----------------------------------------------------------------------------
]]--[[// Renvoie la distance Max pour suivre
]]--[[//-----------------------------------------------------------------------------
]]function S_Dist_MissionSuivre_Min( )
    local _returnValue = 0
    _returnValue = 0
    if( DEC_Pion_PionPC() ~= myself ) then
        do
            _returnValue = M_DISTANCE_MIN()
                        return _returnValue

        end
    end

    for _,x in pairs( DEC_Pion_PionsSansPC() ) do
    local _continue = true
do
            local pion = x
             do
                local switch_1 = pion:GetType()
                local cases_switch_1 = {}
                    if switch_1 == "SectionASS_EO"
                    or switch_1 == "GroupeInfanterie_Commando"
                    or switch_1 == "SectionInfanterie_Appui"
                    or switch_1 == "SectionInfanterie" then
                        if( _returnValue < 300 ) then
                            _returnValue = 300
                        end

                        
                                        cases_switch_1[1] = true
elseif switch_1 == "SectionInfanterie_HOT"
                    or switch_1 == "SectionInfanterie_MILAN" then
                        if( _returnValue < 800 ) then
                            _returnValue = 800
                        end

                        
                                        cases_switch_1[2] = true

                    else
                        if( _returnValue < M_DISTANCE_MIN() ) then
                            _returnValue = M_DISTANCE_MIN()
                        end

                                        end
                end

        end

    end

    return _returnValue
end

function S_Dist_MissionSuivre_Max( )
    local _returnValue = 0
    _returnValue = 0
    if( DEC_Pion_PionPC() ~= myself ) then
        do
            _returnValue = M_DISTANCE_MAX()
                        return _returnValue

        end
    end

    for _,x in pairs( myself:DEC_Pion_PionsSansPC() ) do
    local _continue = true
do
            local pion = x
             do
                local switch_1 = pion:GetType()
                local cases_switch_1 = {}
                    if switch_1 == "GroupeInfanterie_Commando"
                    or switch_1 == "SectionInfanterie_Appui"
                    or switch_1 == "SectionInfanterie" then
                        if( _returnValue < 800 ) then
                            _returnValue = 800
                        end

                        
                                        cases_switch_1[1] = true
elseif switch_1 == "SectionInfanterie_HOT"
                    or switch_1 == "SectionInfanterie_MILAN" then
                        if( _returnValue < 1500 ) then
                            _returnValue = 1500
                        end

                        
                                        cases_switch_1[2] = true

                    else
                        if( _returnValue < M_DISTANCE_MAX() ) then
                            _returnValue = M_DISTANCE_MAX()
                        end

                                        end
                end

        end

    end

    return _returnValue
end

