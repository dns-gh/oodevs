--[[// *****************************************************************************
]]--[[// ACT_Misc_Pion_DelaiInstallation
]]--[[// 
]]--[[// Commentaires: OPT: MIA: spé inf et milice. Pas d'intérêt utilisation dans 
]]--[[//                    phase de mission. Inutile.
]]--[[//
]]--[[// *****************************************************************************
]]node "ACT_Misc_Pion_DelaiInstallation"
{
    create = function( self )
        self._namedParams = {}
        self._namedParams.eNiveau = self.params[1]
    end,

    select = function( self )
        if( DEC_Agent_NiveauInstallation() >= self._namedParams.eNiveau ) then
            self.params.__returnValue = eActionEffectuee
            Halt()
        end

    end,

}

--[[// -----------------------------------------------------------------------------
]]--[[// ACT_Pions_SInstaller et Act_Pions_SeDesinstaller
]]--[[//
]]--[[// Commentaires : installation et desinstallation.
]]--[[//
]]--[[// -----------------------------------------------------------------------------
]]node "ACT_Pions_SInstaller"
{
    actuators =
    {
        installation = 1,
    },

    create = function( self )
    end,

    select = function( self )
        DEC_Agent_SInstaller()
    end,

}

node "ACT_Pions_SeDesinstaller"
{
    actuators =
    {
        installation = 1,
    },

    create = function( self )
    end,

    select = function( self )
    end,

}

