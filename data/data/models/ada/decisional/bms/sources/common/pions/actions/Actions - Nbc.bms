--[[// *****************************************************************************
]]--[[// ACT_Pion_Nbc_DemanderDecontaminationSur
]]--[[//
]]--[[// Commentaires: 
]]--[[//
]]--[[// *****************************************************************************
]]node "ACT_Pion_Nbc_DemanderDecontaminationSur"
{
    feedbacks = { { { "done_ACT_Pion_Nbc_DemanderDecontaminationSur" }, "ACT_Pion_Nbc_DemanderDecontaminationSur" } },
    SendFeedback = function( self, value ) Feedback( self.feedbacks.done_ACT_Pion_Nbc_DemanderDecontaminationSur, {value} ) end,
    actuators =
    {
        deplacement = 1,
    },

    create = function( self )
        self._namedParams = {}
        self._namedParams.siteDecontamination = self.params[1]
    end,

    select = function( self )
        self.eValiditeRequete = self.eValiditeRequete or eRequeteValide
        --[[//-----------------------------------------------------------------------------
]]--[[// Init
]]--[[//-----------------------------------------------------------------------------
]]if( ModuleBegins() ) then
            DEC_RC( eRC_DemandeDecontamination )
        end

        --[[//-----------------------------------------------------------------------------
]]--[[// Demander le decontamination
]]--[[//-----------------------------------------------------------------------------
]]if( self.eValiditeRequete ~= eRequeteInvalide ) then
            self.eValiditeRequete = DEC_ConnaissanceObjet_DemandeDeDecontamination( self._namedParams.siteDecontamination )
        end

    end,

}

