--[[// *****************************************************************************
]]--[[// ACT_Obs_ReconnaitrePoint
]]--[[// 
]]--[[// Commentaires: le cercle de vision s'élargie de plus en plus en fonction des
]]--[[//               paramètres propres à myself :
]]--[[//                          M_POLY_MODELE_PION_CAPACITE_RECO_POINT()
]]--[[//                          M_POLY_MODELE_PION_VITESSE_RECO_POINT()
]]--[[//
]]--[[// *****************************************************************************
]]node "ACT_Obs_ReconnaitrePoint"
{
    feedbacks = { { { "done_ACT_Obs_ReconnaitrePoint" }, "ACT_Obs_ReconnaitrePoint" } },
    SendFeedback = function( self, value ) Feedback( self.feedbacks.done_ACT_Obs_ReconnaitrePoint, {value} ) end,
    actuators =
    {
        reconnaissance = 1,
        deplacement = 1,
    },

    create = function( self )
        self._namedParams = {}
        self._namedParams.pointAReconnaitre = self.params[1]
    end,

    select = function( self )
        --[[// init
]]        self.bInit = self.bInit or false
        self.bRecoMax = self.bRecoMax or false
        self.bRecoMaxObj = self.bRecoMaxObj or false
        self.ptRecoCopie = self.ptRecoCopie or DEC_Geometrie_CreerPoint()
        self.loc = self.loc or DEC_Geometrie_ConvertirPointEnLocalisation( self.ptRecoCopie )
        self.pPt = self.pPt or -1
        self.pPtObj = self.pPtObj or nil

        if( ModuleBegins() ) then
            DEC_Trace( ">> Begin Recon" )
            DEC_Copie_Point( self._namedParams.pointAReconnaitre, self.ptRecoCopie )
        end

        if( not self.bInit ) then
                self.bInit = true
                DEC_Trace( ">> En reconnaissance..." )
            self.pPt = DEC_Perception_ActiverReconnaissancePoint( self.ptRecoCopie, M_POLY_MODELE_PION_CAPACITE_RECO_POINT(), M_POLY_MODELE_PION_VITESSE_RECO_POINT() )
            RegisterPerception_ReconnaissancePoint_Callback( self.pPt, function () self.bRecoMax = true end )
            self.pPtObj = DEC_Perception_ActiverDetectionObjetLocalisation( self.loc, self.ptRecoCopie, M_POLY_MODELE_PION_VITESSE_RECO_POINT() )
            RegisterPerception_ReconnaissancePoint_Callback( self.pPtObj, function () self.bRecoMaxObj = true end )
            end

        F_Pion_SeteEtatDeplacement( myself, eEtatDeplacement_EnReco )
        if( self.bRecoMax ) then
            self.params.__returnValue = eActionEffectuee
            self:SendFeedback( eActionEffectuee )
        end

    end,

    deselect = function( self )
                self.bInit = false
        F_Pion_SeteEtatDeplacement( myself, eEtatDeplacement_aucun )
        RemovePerception_ReconnaissancePoint_Callback ( self.pPt )
        RemovePerception_ReconnaissancePoint_Callback ( self.pPtObj )
        DEC_Perception_DesactiverReconnaissancePoint( self.pPt )
        DEC_Perception_DesactiverDetectionObjetLocalisation( self.pPtObj )
    end,

    destroy = function( self )
                F_Pion_SeteEtatDeplacement( myself, eEtatDeplacement_aucun )
        DEC_Trace( "<< fin reconnaissance" )
        RemovePerception_ReconnaissancePoint_Callback ( self.pPtObj )
        RemovePerception_ReconnaissancePoint_Callback ( self.pPt )
        DEC_Perception_DesactiverReconnaissancePoint( self.pPt )
        DEC_Perception_DesactiverDetectionObjetLocalisation( self.pPtObj )
    end,

}

--[[// *****************************************************************************
]]--[[// ObserverZone
]]--[[// 
]]--[[// Commentaires: OPT: MIA spé INF pourquoi observer secteur alors que l'on 
]]--[[//              passe un point? Mettre ca dans les scripts INF 
]]--[[//              renommer Zone -> Point
]]--[[// *****************************************************************************
]]node "ACT_Obs_ObserverZone"
{
    feedbacks = { { { "done_ACT_Obs_ObserverZone" }, "ACT_Obs_ObserverZone" } },
    SendFeedback = function( self, value ) Feedback( self.feedbacks.done_ACT_Obs_ObserverZone, {value} ) end,
    actuators =
    {
        reconnaissance = 1,
    },

    create = function( self )
        self._namedParams = {}
        self._namedParams.pointAReconnaitre = self.params[1]
        self._namedParams.rCapacite = self.params[2]
    end,

    select = function( self )
                self.bRecoMax = self.bRecoMax or false
        self.bRecoMaxObj = self.bRecoMaxObj or false
        self.ptRecoCopie = self.ptRecoCopie or DEC_Geometrie_CreerPoint()
        self.loc = self.loc or DEC_Geometrie_ConvertirPointEnLocalisation( self.ptRecoCopie )
        self.perceptionPoint = self.perceptionPoint or -1
        self.pPtObj = self.pPtObj or nil
        if( ModuleBegins() ) then
                DEC_Copie_Point( self._namedParams.pointAReconnaitre, self.ptRecoCopie )

                DEC_Trace( ">> En surveillance..." )
            self.perceptionPoint = DEC_Perception_ActiverReconnaissancePoint( self.ptRecoCopie, self._namedParams.rCapacite, M_POLY_MODELE_PION_VITESSE_RECO_POINT() )
            RegisterPerception_ReconnaissancePoint_Callback( self.perceptionPoint, function () self.bRecoMax = true end )
            self.pPtObj = DEC_Perception_ActiverDetectionObjetLocalisation( self.loc, self.ptRecoCopie, M_POLY_MODELE_PION_VITESSE_RECO_POINT() )
            RegisterPerception_ReconnaissancePoint_Callback( self.pPtObj, function () self.bRecoMaxObj = true end )
            if( not DEC_Agent_AutomateEstEmbraye() ) then
                        DEC_RC( eRC_DebutSurveillance )
                    else
                        DEC_Message( eRC_DebutSurveillance )
                    end
                end

        if( self.bRecoMax ) then
            self:SendFeedback( eActionEffectuee )
            do return end
        end

--[[// si perte de l'actuateur, alors, on kill l'instance de cette action
]]--[[// en effet, on ne fait pas deux reconnaissance a la fois quand on n'a
]]--[[// pas les capacites
]]--[[// CR
]]--[[// CR
]]    end,

    deselect = function( self )
                DEC_Trace( " << fin surveillance" )
            RemovePerception_ReconnaissancePoint_Callback ( self.perceptionPoint )
            RemovePerception_ReconnaissancePoint_Callback ( self.pPtObj )
        DEC_Perception_DesactiverReconnaissancePoint( self.perceptionPoint )
        DEC_Perception_DesactiverDetectionObjetLocalisation( self.pPtObj )
        do
            if( not DEC_Agent_AutomateEstEmbraye() ) then
                DEC_RC( eRC_FinSurveillance )
            else
                DEC_Message( eRC_FinSurveillance )
            end

        end

                Halt( self )
            return
    end,

    destroy = function( self )
                DEC_Trace( " << fin surveillance" )
            RemovePerception_ReconnaissancePoint_Callback ( self.perceptionPoint )
            RemovePerception_ReconnaissancePoint_Callback ( self.pPtObj )
        DEC_Perception_DesactiverReconnaissancePoint( self.perceptionPoint )
        DEC_Perception_DesactiverDetectionObjetLocalisation( self.pPtObj )
        do
            if( not DEC_Agent_AutomateEstEmbraye() ) then
                DEC_RC( eRC_FinSurveillance )
            else
                DEC_Message( eRC_FinSurveillance )
            end

        end

    end,

}

