include "bit.lua"


Perception_ReconnaissancePoint_Callbacks = {}
function RegisterPerception_ReconnaissancePoint_Callback( id, callback )
    Perception_ReconnaissancePoint_Callbacks[ id ] = callback
end

function RemovePerception_ReconnaissancePoint_Callback ( id )
    Perception_ReconnaissancePoint_Callbacks[ id ] = nil 
end

function CallbackPerception ( id, value )
    if( Perception_ReconnaissancePoint_Callbacks[ id ] ) then
        Perception_ReconnaissancePoint_Callbacks[ id ]()
    end
end

--[[// ****************************************************************************** 
]]--[[// ACT_Misc_VerouillerConnaissance 
]]--[[// 
]]--[[// Commentaires: verouillage de la connaissance 
]]--[[//               OPT: MIA: Spe ALAT
]]--[[// 
]]--[[// ****************************************************************************** 
]]node "ACT_Misc_VerouillerConnaissance"
{
    feedbacks = { { { "done_ACT_Misc_VerouillerConnaissance" }, "ACT_Misc_VerouillerConnaissance" } },
    SendFeedback = function( self, value ) Feedback( self.feedbacks.done_ACT_Misc_VerouillerConnaissance, {value} ) end,
    create = function( self )
        self._namedParams = {}
        self._namedParams.connaissance = self.params[1]
    end,

    select = function( self )
        --[[// ----------------------------------------------------------------------------- 
]]--[[// Init
]]--[[// ----------------------------------------------------------------------------- 
]]        if( ModuleBegins() ) then
            do
                local eEtatRequete = DEC_ConnaissanceAgent_Verrouiller( self._namedParams.connaissance )
                if( eEtatRequete == eRequeteInvalide ) then
                    self:SendFeedback( eActionImpossible )
                    Halt( self )
                    do return end
                end

            end
        end

--[[// Pas de on focus loss: Pas d'actuateur        
]]    end,

    deselect = function( self )
            end,

    destroy = function( self )
                DEC_ConnaissanceAgent_Deverrouiller( self._namedParams.connaissance )
    end,

}

