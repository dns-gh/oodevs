<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="commander.tasks.CombatSupport" source-version="1.0.0" knowledge-class="commander.tasks.knowledges.CollectInformation">
    <description>For the commander agent, to order subordinates to support a friend company. Forward echelon units receive the main task (they support the forward echelon of the supported company), other units (rear echelon) support the forward echelon of the company. </description>
    <parameters>
        <parameter name="objective">
            <description>The friend company to support.</description>
            <type>
                <class name="world.Company"/>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="moving to support the company">
            <skills>
                <skill name="commander.skills.Lead" main="true">
                    <parameter name="companyTask">
                        <value>
                            <string>commander.tasks.CombatSupport</string>
                        </value>
                    </parameter>
                    <parameter name="mainTasks">
                        <value>
                            <string>agent.tasks.CombatSupport</string>
                        </value>
                    </parameter>
                    <parameter name="supportTasks">
                        <value>
                            <string>agent.tasks.CombatSupport;agent.tasks.MobilitySupport</string>
                        </value>
                    </parameter>
                    <parameter name="taskForSupporting">
                        <value>
                            <string>agent.tasks.CombatSupport</string>
                        </value>
                    </parameter>
                    <parameter name="defaultTask">
                        <value>
                            <string>agent.tasks.Follow</string>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>