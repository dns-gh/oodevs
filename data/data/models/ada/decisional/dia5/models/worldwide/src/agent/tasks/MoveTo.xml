<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.tasks.MoveTo" source-version="1.0.0">
    <description>For the agent, to move toward a given objective. If the position is n ot reachable, the agent tries to find a nearby position.</description>
    <parameters>
        <parameter name="objective">
            <description>The objective to reach.</description>
            <type>
                <class name="properties.Reachable"/>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="moving toward objective" disable-when-done="true">
            <skills>
                <skill name="agent.skills.primitives.MoveToward" main="true">
                    <parameter name="entities">
                        <value>
                            <list>
                                <parameter>objective</parameter>
                            </list>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>