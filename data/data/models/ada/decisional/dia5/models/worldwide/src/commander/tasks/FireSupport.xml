<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="commander.tasks.FireSupport" source-version="1.0.0" knowledge-class="commander.tasks.knowledges.FireSupport">
    <description>For the commander agent, to order subordinates units to face the issued objective, engaging approaching enemies. &#xD;
Forward echelon units will receive the main task (the 'FireSupport' mission), other units (rear echelon) support the forward echelon units.</description>
    <parameters>
        <parameter name="company">
            <description>The friend company to support.</description>
            <type>
                <class name="world.Company"/>
            </type>
        </parameter>
        <parameter name="positions">
            <description>The positions from which the subordinate units face the objective.</description>
            <type>
                <list>
                    <class name="properties.Destroying"/>
                    <class name="properties.Neutralizing"/>
                    <class name="properties.Observing"/>
                </list>
            </type>
        </parameter>
        <parameter name="objective">
            <description>The element to face (a position such as a crossroad, a bridge etc., a zone, a urban block...).</description>
            <type>
                <class name="properties.Observable"/>
            </type>
        </parameter>
    </parameters>
    <goal>
        <description>To face the objective from issued positions, in order to protect the given friend company by engaging approaching enemies.</description>
    </goal>
    <stages>
        <stage label="movement toward deployment positions">
            <skills>
                <skill name="commander.skills.Lead" main="true">
                    <parameter name="companyTask">
                        <value>
                            <string>commander.tasks.FireSupport</string>
                        </value>
                    </parameter>
                    <parameter name="mainTasks">
                        <value>
                            <string>agent.tasks.FireSupport</string>
                        </value>
                    </parameter>
                    <parameter name="supportTasks">
                        <value>
                            <string>agent.tasks.Follow</string>
                        </value>
                    </parameter>
                    <parameter name="defaultTask">
                        <value>
                            <string>agent.tasks.Follow</string>
                        </value>
                    </parameter>
                    <parameter name="taskForSupporting">
                        <value>
                            <string>agent.tasks.CombatSupport</string>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>