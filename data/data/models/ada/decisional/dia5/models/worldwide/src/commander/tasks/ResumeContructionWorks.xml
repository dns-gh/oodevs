<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="commander.tasks.ResumeContructionWorks" source-version="1.0.0" knowledge-class="commander.tasks.knowledges.ResumeConstructionWork">
    <parameters>
        <parameter name="objects">
            <description>The objects to build.</description>
            <type>
                <list>
                    <class name="world.Object"/>
                </list>
            </type>
        </parameter>
        <parameter name="meetingPoint">
            <description>The meeting position reached by subordinate units upon works termination.</description>
            <type>
                <class name="world.Point"/>
            </type>
        </parameter>
        <parameter name="withImprovement">
            <description>Define if thes subordinate units (for engineer units for instance) need to improve objects with mines.</description>
            <type>
                <simple name="boolean"/>
            </type>
            <default>
                <boolean>false</boolean>
            </default>
        </parameter>
        <parameter name="waitForReinforcement">
            <description>Define if the subordinate units need to wait for reinforcement when they are not able to build a work.</description>
            <type>
                <simple name="boolean"/>
            </type>
            <default>
                <boolean>false</boolean>
            </default>
        </parameter>
    </parameters>
    <stages>
        <stage label="moving to works" disable-when-done="true">
            <skills>
                <skill name="commander.skills.LeadGEN" main="true">
                    <parameter name="companyTask">
                        <value>
                            <string>commander.tasks.ResumeContructionWorks</string>
                        </value>
                    </parameter>
                    <parameter name="mainTasks">
                        <value>
                            <string>agent.tasks.ResumeConstructionWorks</string>
                        </value>
                    </parameter>
                    <parameter name="supportTasks">
                        <value>
                            <string>agent.tasks.Reinforce</string>
                        </value>
                    </parameter>
                    <parameter name="taskForSupporting">
                        <value>
                            <string>agent.tasks.Reinforce</string>
                        </value>
                    </parameter>
                    <parameter name="defaultTask">
                        <value>
                            <string>agent.tasks.Follow</string>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>