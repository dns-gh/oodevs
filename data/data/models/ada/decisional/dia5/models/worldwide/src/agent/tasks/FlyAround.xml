<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.tasks.FlyAround" source-version="1.0.0">
    <description>For the agent, to take off, fly along the issued route and land.</description>
    <parameters>
        <parameter name="wayPoints">
            <description>The waypoints to move along.</description>
            <type>
                <list>
                    <class name="properties.Reachable"/>
                </list>
            </type>
        </parameter>
        <parameter name="height">
            <description>The height to reach when the agent takes off (in METERS). Default value is 2000 meters.</description>
            <type>
                <simple name="numeric"/>
            </type>
            <default>
                <number>2000.0</number>
            </default>
        </parameter>
    </parameters>
    <stages>
        <stage label="take off" permanent="false">
            <skills>
                <skill name="agent.skills.actions.TakeOff" main="true">
                    <parameter name="height">
                        <value>
                            <parameter>height</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
        <stage label="flying along the route" permanent="true">
            <skills>
                <skill name="agent.skills.Patrol">
                    <parameter name="entities">
                        <value>
                            <parameter>wayPoints</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>