<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.tasks.FireSupport" source-version="1.0.0" knowledge-class="agent.tasks.knowledges.FireSupport">
    <description>For the agent, to support friend entities from a given position, with DIRECT fires. The agent moves toward the position, faces the objective awaiting for enemies to approach. Once enemies are in range, the agent engages them.</description>
    <parameters>
        <parameter name="position">
            <description>The position from which the agent faces the objective.</description>
            <type>
                <class name="properties.Destroying"/>
                <class name="properties.Neutralizing"/>
                <class name="properties.Observing"/>
            </type>
        </parameter>
        <parameter name="unitsToSupport">
            <description>The friend units to support.</description>
            <type>
                <list>
                    <class name="properties.Supportable"/>
                </list>
            </type>
        </parameter>
        <parameter name="objective">
            <type>
                <class name="properties.Observable"/>
            </type>
        </parameter>
    </parameters>
    <goal>
        <description>To observe the objective and engage approaching enemies in order to protect issued friend units.</description>
    </goal>
    <let name="enemiesInRange">
        <value>
            <call method="queries.getEnemiesInRange">
                <parameter name="probabilityToHit">
                    <value>
                        <number>0.5</number>
                    </value>
                </parameter>
            </call>
        </value>
    </let>
    <stages>
        <stage label="moving to position">
            <skills>
                <skill name="agent.skills.MoveToward" main="true" priority="1.0">
                    <parameter name="entities">
                        <value>
                            <list>
                                <parameter>position</parameter>
                            </list>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
        <stage label="deployment on the supporting position." permanent="true">
            <skills>
                <skill name="agent.skills.Engage" priority="0.1">
                    <parameter name="entities">
                        <value>
                            <parameter>enemiesInRange</parameter>
                        </value>
                    </parameter>
                    <parameter name="positions">
                        <value>
                            <list>
                                <parameter>position</parameter>
                            </list>
                        </value>
                    </parameter>
                </skill>
                <skill name="agent.skills.primitives.ObserveToward" priority="0.9">
                    <parameter name="entities">
                        <value>
                            <list>
                                <parameter>objective</parameter>
                            </list>
                        </value>
                    </parameter>
                    <parameter name="positions">
                        <value>
                            <list>
                                <parameter>position</parameter>
                            </list>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>