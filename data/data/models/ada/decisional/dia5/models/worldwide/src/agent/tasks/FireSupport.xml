<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.tasks.FireSupport" source-version="1.0.0" knowledge-class="agent.tasks.knowledges.FireSupport">
    <description>For the agent, to support friend entities from a given position, with DIRECT fires.</description>
    <parameters>
        <parameter name="position">
            <type>
                <class name="properties.Destroying"/>
                <class name="properties.Neutralizing"/>
                <class name="properties.Observing"/>
            </type>
        </parameter>
        <parameter name="unitsToSupport">
            <type>
                <list>
                    <class name="properties.Supportable"/>
                </list>
            </type>
        </parameter>
        <parameter name="objective">
            <type>
                <class name="properties.Observable"/>
            </type>
        </parameter>
    </parameters>
    <goal>
        <description>To observe the objective and engage approaching enemies in order to protect issued friend units.</description>
    </goal>
    <let name="enemisApproaching">
        <value>
            <call method="queries.getEnemiesInRange">
                <parameter name="probabilityToHit">
                    <value>
                        <number>0.5</number>
                    </value>
                </parameter>
            </call>
        </value>
    </let>
    <stages>
        <stage label="Mouvement">
            <description>Déplacement tactique vers les positions d'appui avec agressivité.</description>
            <goal>
                <description>Atteindre les positions d'appui.</description>
            </goal>
            <skills>
                <skill name="agent.skills.MoveToward" main="true" priority="1.0">
                    <parameter name="entities">
                        <value>
                            <list>
                                <parameter>position</parameter>
                            </list>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
        <stage label="Protection" permanent="true">
            <description>Occupation des positions d'appui.</description>
            <goal>
                <description>Occuper les positions pour détruire les ennemis arrivants.</description>
            </goal>
            <skills>
                <skill name="agent.skills.Engage" priority="0.1">
                    <parameter name="entities">
                        <value>
                            <parameter>enemisApproaching</parameter>
                        </value>
                    </parameter>
                    <parameter name="positions">
                        <value>
                            <list>
                                <parameter>position</parameter>
                            </list>
                        </value>
                    </parameter>
                </skill>
                <skill name="agent.skills.primitives.ObserveToward" priority="0.9">
                    <parameter name="entities">
                        <value>
                            <list>
                                <parameter>objective</parameter>
                            </list>
                        </value>
                    </parameter>
                    <parameter name="positions">
                        <value>
                            <list>
                                <parameter>position</parameter>
                            </list>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>