<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="commander.tasks.Transport" source-version="1.0.0" knowledge-class="commander.tasks.knowledges.Transport">
    <description>For the commander agent, to order subordinates to transport a set of issued units . </description>
    <parameters>
        <parameter name="units">
            <description>The set of units to transport.</description>
            <type>
                <list>
                    <class name="properties.Loadable"/>
                </list>
            </type>
        </parameter>
        <parameter name="loadingPoint">
            <description>The embarkation position.</description>
            <type>
                <class name="properties.Loading"/>
            </type>
        </parameter>
        <parameter name="destination">
            <description>The position into which the units must be transported.</description>
            <type>
                <class name="properties.Loading"/>
            </type>
        </parameter>
        <parameter name="meetingPoint">
            <description>The meeting position to reach when all the units have been transported.</description>
            <type>
                <class name="properties.Reachable"/>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="move to loading position">
            <skills>
                <skill name="commander.skills.Lead" main="true">
                    <parameter name="noCoordination">
                        <value>
                            <boolean>true</boolean>
                        </value>
                    </parameter>
                    <parameter name="companyTask">
                        <value>
                            <string>commander.tasks.Transport</string>
                        </value>
                    </parameter>
                    <parameter name="mainTasks">
                        <value>
                            <string>agent.tasks.Transport</string>
                        </value>
                    </parameter>
                    <parameter name="supportTasks">
                        <value>
                            <string>agent.tasks.MoveAlong</string>
                        </value>
                    </parameter>
                    <parameter name="defaultTask">
                        <value>
                            <string>agent.tasks.MoveAlong</string>
                        </value>
                    </parameter>
                    <parameter name="taskForSupporting">
                        <value>
                            <string>agent.tasks.MoveAlong</string>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>