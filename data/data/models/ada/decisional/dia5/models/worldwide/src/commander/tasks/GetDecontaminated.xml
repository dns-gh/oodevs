<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="commander.tasks.GetDecontaminated" source-version="1.0.0" knowledge-class="commander.tasks.knowledges.GetDecontaminated">
    <description>For the commander agent, to order subordinates to get decontaminated through the issued decontamination site. &#xD;
Each unit receives the &quot;get decontaminated&quot; mission with the given &quot;decontamination site&quot; and the &quot;meeting position&quot; as parameter.</description>
    <parameters>
        <parameter name="decontaminationSite">
            <description>The decontamination site to use. Efficiency (delays) of decontaminatin depends on units that are operating the decontamination site. Note that the decontamination can be instantaneous if the agent reaches the decontamination site while it is not contaminated.</description>
            <type>
                <class name="world.Object"/>
            </type>
        </parameter>
        <parameter name="meetingPoint">
            <description>The position to reach once decontamination is over.</description>
            <type>
                <class name="properties.Positionable"/>
            </type>
        </parameter>
    </parameters>
    <goal>
        <description>To get decontaminated.</description>
    </goal>
    <stages>
        <stage label="moving to decontamination site" disable-when-done="true">
            <skills>
                <skill name="commander.skills.Lead" main="true">
                    <parameter name="noCoordination">
                        <value>
                            <boolean>true</boolean>
                        </value>
                    </parameter>
                    <parameter name="companyTask">
                        <value>
                            <string>commander.tasks.GetDecontaminated</string>
                        </value>
                    </parameter>
                    <parameter name="mainTasks">
                        <value>
                            <string>agent.tasks.GetDecontaminated</string>
                        </value>
                    </parameter>
                    <parameter name="supportTasks">
                        <value>
                            <string>agent.tasks.GetDecontaminated</string>
                        </value>
                    </parameter>
                    <parameter name="taskForSupporting">
                        <value>
                            <string>agent.tasks.CombatSupport</string>
                        </value>
                    </parameter>
                    <parameter name="defaultTask">
                        <value>
                            <string>agent.tasks.Follow</string>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>