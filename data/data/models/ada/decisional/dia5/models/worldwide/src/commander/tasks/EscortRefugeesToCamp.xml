<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="commander.tasks.EscortRefugeesToCamp" source-version="1.0.0" knowledge-class="commander.tasks.knowledges.EscortRefugeesToCamp">
    <description>For the commander agent, to order subordinates to escort refuggees units toward a given camp. </description>
    <parameters>
        <parameter name="camp">
            <description>The refugees camp inside which the agent has to escort the refugees units.</description>
            <type>
                <class name="properties.Loading"/>
            </type>
        </parameter>
        <parameter name="peoples">
            <description>The set of refugees units to be escorted toward the camp.</description>
            <type>
                <list>
                    <class name="properties.Loadable"/>
                </list>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="escort the refugees units toward the camp." disable-when-done="true">
            <skills>
                <skill name="commander.skills.Lead" main="true">
                    <parameter name="companyTask">
                        <value>
                            <string>commander.tasks.EscortRefugeesToCamp</string>
                        </value>
                    </parameter>
                    <parameter name="mainTasks">
                        <value>
                            <string>agent.tasks.EscortRefugeesToCamp</string>
                        </value>
                    </parameter>
                    <parameter name="supportTasks">
                        <value>
                            <string>agent.tasks.Follow</string>
                        </value>
                    </parameter>
                    <parameter name="defaultTask">
                        <value>
                            <string>agent.tasks.Follow</string>
                        </value>
                    </parameter>
                    <parameter name="taskForSupporting">
                        <value>
                            <string>agent.tasks.CombatSupport</string>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>