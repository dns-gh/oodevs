<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.tasks.EscortPrisonersToPosition" source-version="1.0.0" knowledge-class="agent.tasks.knowledges.EscortPrisonersToPosition">
    <description>For the agent, to know how to escort a set of surrendered units toward a given location.&#xD;
&#xD;
The agent decides to move toward each given units, from the nearest to the furthest. Once a unit has been reached, the agent loads it (magic tranportation).&#xD;
&#xD;
Once all units has been loaded, they are tranported to the given location, then they are unload onto the 'position'.</description>
    <parameters>
        <parameter name="position">
            <description>The location into which the agent has to escort the surrendered units.</description>
            <type>
                <class name="properties.Loading"/>
            </type>
        </parameter>
        <parameter name="entities">
            <description>The surrendered units to be unloaded onto the given location.</description>
            <type>
                <list>
                    <class name="world.Platoon"/>
                </list>
            </type>
        </parameter>
    </parameters>
    <goal>
        <description>To transport surrendered units to a given location.</description>
    </goal>
    <stages>
        <stage label="moving toward surrendered units">
            <skills>
                <skill name="agent.skills.TransportPrisoners" main="true">
                    <parameter name="platoons">
                        <value>
                            <parameter>entities</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
        <stage label="moving to location" disable-when-done="true">
            <skills>
                <skill name="agent.skills.primitives.Unload" main="true">
                    <parameter name="entities">
                        <value>
                            <parameter>entities</parameter>
                        </value>
                    </parameter>
                    <parameter name="positions">
                        <value>
                            <list>
                                <parameter>position</parameter>
                            </list>
                        </value>
                    </parameter>
                </skill>
                <skill name="agent.skills.UnloadTransportedUnits">
                    <parameter name="entities">
                        <value>
                            <parameter>entities</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>