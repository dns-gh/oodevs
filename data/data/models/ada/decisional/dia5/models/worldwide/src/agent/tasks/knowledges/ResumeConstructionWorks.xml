<?xml version="1.0" encoding="UTF-8"?>
<class xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.tasks.knowledges.ResumeConstructionWorks" source-version="1.0.0" extends="agent.tasks.knowledges.PlatoonTask">
    <description>The knowledge of the 'ResumeConstructionWork' mission. This knowledge is used by the company commander to perform its own task. </description>
    <methods>
        <method name="fillParameters">
            <argument name="companyTask">
                <description>The string name of the company task.</description>
                <type>
                    <class name="properties.Commandable"/>
                </type>
            </argument>
            <argument name="params">
                <description>The parameters of the company task.</description>
                <type>
                    <list>
                        <class name="directia.core.Object"/>
                    </list>
                </type>
            </argument>
            <return>
                <type>
                    <list>
                        <class name="directia.core.Object"/>
                    </list>
                </type>
            </return>
        </method>
        <method name="getObstaclesParameter">
            <description>Returns the liste of object to build.</description>
            <return name="obstacles">
                <type>
                    <list>
                        <class name="directia.core.Object"/>
                    </list>
                </type>
            </return>
        </method>
        <method name="canDoIt">
            <description>Returns 'True' if the entity (subordinate unit) has the physical capabilities to perform the work on the issued object (obstacle).</description>
            <argument name="entity">
                <type>
                    <class name="directia.core.Object"/>
                </type>
            </argument>
            <argument name="obstacle">
                <type>
                    <class name="directia.core.Object"/>
                </type>
            </argument>
            <return name="hasRessource">
                <type>
                    <simple name="boolean"/>
                </type>
            </return>
        </method>
        <method name="hasDotation">
            <description>Returns 'True' if the entity (subordinate unit) has enough dotation to build the issued object (obstacle).</description>
            <argument name="entity">
                <type>
                    <class name="directia.core.Object"/>
                </type>
            </argument>
            <argument name="obstacle">
                <type>
                    <class name="directia.core.Object"/>
                </type>
            </argument>
            <return name="hasDotation">
                <type>
                    <simple name="boolean"/>
                </type>
            </return>
        </method>
    </methods>
</class>