<?xml version="1.0" encoding="UTF-8"?>
<class xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.tasks.knowledges.Build" source-version="1.0.0" extends="agent.tasks.knowledges.PlatoonTask">
    <description>The knowledge of the 'Build' mission. This knowledge is used by the company commander to perform its own tasks.</description>
    <methods>
        <method name="fillParameters">
            <argument name="companyTask">
                <description>The string name of the company task.</description>
                <type>
                    <class name="properties.Commandable"/>
                </type>
            </argument>
            <argument name="params">
                <description>Les param��tres de la t��che automate</description>
                <type>
                    <list>
                        <class name="directia.core.Object"/>
                    </list>
                </type>
            </argument>
            <return>
                <type>
                    <list>
                        <class name="directia.core.Object"/>
                    </list>
                </type>
            </return>
        </method>
        <method name="getObstaclesParameter">
            <description>Returns the list of obstacles to errect.</description>
            <return name="obstacles">
                <type>
                    <list>
                        <class name="directia.core.Object"/>
                    </list>
                </type>
            </return>
        </method>
        <method name="canDoIt">
            <description>Returns 'true' is the issued subordinate unit can build the obstacle.</description>
            <argument name="obstacle">
                <description>The obstacle to build.</description>
                <type>
                    <class name="world.EngineerObject"/>
                </type>
            </argument>
            <argument name="entity">
                <description>The subordinate unit to build the obstacle.</description>
                <type>
                    <class name="directia.core.Object"/>
                </type>
            </argument>
            <return name="hasRessource">
                <type>
                    <simple name="boolean"/>
                </type>
            </return>
        </method>
        <method name="hasDotation">
            <description>Returns 'true' if the issued subodinate unit ('entity')has enough dotation to perform the 'obstacle' construction.</description>
            <argument name="obstacle">
                <description>The obstacle to build.</description>
                <type>
                    <class name="world.EngineerObject"/>
                </type>
            </argument>
            <argument name="entity">
                <description>The subordinate unit to build the obstacle.</description>
                <type>
                    <class name="directia.core.Object"/>
                </type>
            </argument>
            <return name="hasDotation">
                <type>
                    <simple name="boolean"/>
                </type>
            </return>
        </method>
    </methods>
</class>