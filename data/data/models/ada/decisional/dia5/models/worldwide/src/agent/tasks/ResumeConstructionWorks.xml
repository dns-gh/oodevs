<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.tasks.ResumeConstructionWorks" source-version="1.0.0" knowledge-class="agent.tasks.knowledges.ResumeConstructionWorks">
    <description>To resume the contruction of issued objects.&#xD;
&#xD;
The agent moves toward each object (from the nearest to the furthest) and build it. When all object are 100% built, the agent moves to the meeting position.</description>
    <parameters>
        <parameter name="objects">
            <description>The objects to build.</description>
            <type>
                <list>
                    <class name="world.Object"/>
                </list>
            </type>
        </parameter>
        <parameter name="meetingPoint">
            <description>The meeting position to reach upon works termination.</description>
            <type>
                <class name="properties.Reachable"/>
            </type>
        </parameter>
        <parameter name="withImprovement" nullable="true">
            <description>Define if the agent (for engineer units for instance) needs to improve objects with mines.</description>
            <type>
                <simple name="boolean"/>
            </type>
            <default>
                <boolean>false</boolean>
            </default>
        </parameter>
        <parameter name="waitForReinforcement">
            <description>Define if agent needs to wait for reinforcement when it is not able to build a work.  If it is set to 'true', the agent waits for reinforcement if it cannot perform a work on an object, else the agents goes to the next one.</description>
            <type>
                <simple name="boolean"/>
            </type>
            <default>
                <boolean>false</boolean>
            </default>
        </parameter>
    </parameters>
    <stages>
        <stage label="moving to perform works">
            <skills>
                <skill name="agent.skills.Build" main="true">
                    <parameter name="entities">
                        <value>
                            <parameter>objects</parameter>
                        </value>
                    </parameter>
                    <parameter name="withImprovement">
                        <value>
                            <parameter>withImprovement</parameter>
                        </value>
                    </parameter>
                    <parameter name="waitForReinforcement">
                        <value>
                            <parameter>waitForReinforcement</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
        <stage label="moving to meeting position" disable-when-done="true">
            <skills>
                <skill name="agent.skills.MoveToward" main="true">
                    <parameter name="entities">
                        <value>
                            <list>
                                <parameter>meetingPoint</parameter>
                            </list>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>