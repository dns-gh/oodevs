<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="commander.tasks.DeployAndActivateLogisticChains" source-version="1.0.0" knowledge-class="commander.tasks.knowledges.DeployAndActivateLogisticChains">
    <description>For the commander agent, to order subordinates units to deploy and activate logictic functions onto a given objective (a position). Forward echelon units will receive the main task (the 'DeployAndActivateLogisticChains' mission), other units (rear echelon) follow the forward echelon units.</description>
    <parameters>
        <parameter name="deploymentPosition" nullable="true">
            <description>Objective that will be used to deploy the company</description>
            <type>
                <class name="properties.Positionable"/>
            </type>
            <default>
                <nil/>
            </default>
        </parameter>
    </parameters>
    <stages>
        <stage label="deploying on position" disable-when-done="false">
            <skills>
                <skill name="commander.skills.Lead" main="true">
                    <parameter name="companyTask">
                        <value>
                            <string>commander.tasks.DeployAndActivateLogisticChains</string>
                        </value>
                    </parameter>
                    <parameter name="mainTasks">
                        <value>
                            <string>agent.tasks.DeployAndActivateLogisticChains</string>
                        </value>
                    </parameter>
                    <parameter name="supportTasks">
                        <value>
                            <string>agent.tasks.DeployAndActivateLogisticChains</string>
                        </value>
                    </parameter>
                    <parameter name="defaultTask">
                        <value>
                            <string>agent.tasks.Follow</string>
                        </value>
                    </parameter>
                    <parameter name="taskForSupporting">
                        <value>
                            <string>agent.tasks.CombatSupport</string>
                        </value>
                    </parameter>
                    <parameter name="manageAddedAndDeletedUnits">
                        <value>
                            <boolean>true</boolean>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>