<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="commander.tasks.CollectInformation" source-version="1.0.0" knowledge-class="commander.tasks.knowledges.CollectInformation">
    <description>For the commander agent, to order subordinates units to collect information from the issued entity (a crowd or a unit). In this mission, only one unit receive the mission to get the information from the issued entity. Others units receive the 'follow' mission.</description>
    <parameters>
        <parameter name="entity">
            <description>The unit from which to collect informations.</description>
            <type>
                <class name="properties.Reachable"/>
                <class name="properties.Askable"/>
            </type>
        </parameter>
    </parameters>
    <goal>
        <description>To get information from a unit or a crowd.</description>
    </goal>
    <stages>
        <stage label="moving to entity">
            <skills>
                <skill name="commander.skills.Lead" main="true">
                    <parameter name="noCoordination">
                        <value>
                            <boolean>true</boolean>
                        </value>
                    </parameter>
                    <parameter name="companyTask">
                        <value>
                            <string>commander.tasks.CollectInformation</string>
                        </value>
                    </parameter>
                    <parameter name="mainTasks">
                        <value>
                            <string>agent.tasks.CollectInformation</string>
                        </value>
                    </parameter>
                    <parameter name="supportTasks">
                        <value>
                            <string>agent.tasks.Follow</string>
                        </value>
                    </parameter>
                    <parameter name="taskForSupporting">
                        <value>
                            <string>agent.tasks.CombatSupport</string>
                        </value>
                    </parameter>
                    <parameter name="defaultTask">
                        <value>
                            <string>agent.tasks.Follow</string>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>