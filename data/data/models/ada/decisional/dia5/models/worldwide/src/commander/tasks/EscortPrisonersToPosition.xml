<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="commander.tasks.EscortPrisonersToPosition" source-version="1.0.0" knowledge-class="commander.tasks.knowledges.EscortPrisonersToPosition">
    <description>For the commander agent, to order subordinates to escort surrendered units toward a given location. </description>
    <parameters>
        <parameter name="objective">
            <description>The location into which the surrendered units has to be brought.</description>
            <type>
                <class name="properties.Loading"/>
            </type>
        </parameter>
        <parameter name="prisoners">
            <description>The set of surrendered units to be escorted to the given location.</description>
            <type>
                <list>
                    <class name="properties.Loadable"/>
                </list>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="escort surrendered units toward the objective" disable-when-done="true">
            <skills>
                <skill name="commander.skills.Lead" main="true">
                    <parameter name="companyTask">
                        <value>
                            <string>commander.tasks.EscortPrisonersToPosition</string>
                        </value>
                    </parameter>
                    <parameter name="mainTasks">
                        <value>
                            <string>agent.tasks.EscortPrisonersToPosition</string>
                        </value>
                    </parameter>
                    <parameter name="supportTasks">
                        <value>
                            <string>agent.tasks.Follow</string>
                        </value>
                    </parameter>
                    <parameter name="defaultTask">
                        <value>
                            <string>agent.tasks.Follow</string>
                        </value>
                    </parameter>
                    <parameter name="taskForSupporting">
                        <value>
                            <string>agent.tasks.CombatSupport</string>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>