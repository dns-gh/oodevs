<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.frago.Observe" source-version="1.0.0">
    <description>For the agent to simply look toward the issued target. This mission is used as a fragmentary order.</description>
    <parameters>
        <parameter name="target">
            <description>The target to observe.</description>
            <type>
                <class name="properties.Observable"/>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="observing the target" permanent="true">
            <skills>
                <skill name="agent.skills.actions.Observe" priority="100000.0">
                    <parameter name="entity">
                        <value>
                            <parameter>target</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>