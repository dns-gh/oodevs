<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.tasks.Disengage" source-version="1.0.0" knowledge-class="agent.tasks.knowledges.Disengage">
    <description>For the agent, to move toward the 'objective' position with high priority. If the agent gains contact with strong enemies, this mission allows it to break the contact and reach a given (and safe) position. </description>
    <parameters>
        <parameter name="objective">
            <description>The objective position to reach in order to get safe from enemies.</description>
            <type>
                <class name="properties.Positionable"/>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="moving toward position" disable-when-done="true">
            <skills>
                <skill name="agent.skills.MoveToward" main="true" priority="10000.0">
                    <parameter name="entities">
                        <value>
                            <list>
                                <parameter>objective</parameter>
                            </list>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>