<?xml version="1.0" encoding="UTF-8"?>
<class xmlns="http://www.masagroup.net/directia/schemas/bm" name="commander.tasks.knowledges.Defend" source-version="1.0.0" extends="commander.tasks.knowledges.CompanyTask">
    <description>The knowledge of the 'Defend' mission. This knowledge is used by the commander agent to perform this mission.</description>
    <methods>
        <method name="getMeetingPoint">
            <description>Returns the 'meetingPoint' parameter.</description>
            <return>
                <type>
                    <list>
                        <class name="directia.core.Object"/>
                    </list>
                </type>
            </return>
        </method>
        <method name="getFinalMeetingPoint">
            <description>Returns a random position around the 'meetingPoint' parameter (in a circle with a radius of 100 meters ). This position is reached by engineer units once they have finished their obstacles.</description>
            <return>
                <type>
                    <class name="directia.core.Object"/>
                </type>
            </return>
        </method>
        <method name="getObjectives">
            <description>Returns the objectives to defend.</description>
            <return>
                <type>
                    <list>
                        <class name="directia.core.Object"/>
                    </list>
                </type>
            </return>
        </method>
        <method name="getDirection">
            <description>Returns the main direction of the mission. This direction is used by scouting unit to monitor from the objectives.</description>
            <return>
                <type>
                    <list>
                        <class name="directia.core.Object"/>
                    </list>
                </type>
            </return>
        </method>
        <method name="getScoutObjectives">
            <description>Returns the objectives for the scouting units.</description>
            <return>
                <type>
                    <list>
                        <class name="directia.core.Object"/>
                    </list>
                </type>
            </return>
        </method>
        <method name="getWithImprovement">
            <description>Return the value of the &quot;withImprovement&quot; parameter.</description>
            <return>
                <type>
                    <simple name="boolean"/>
                </type>
            </return>
        </method>
    </methods>
</class>