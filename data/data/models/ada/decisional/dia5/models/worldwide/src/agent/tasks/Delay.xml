<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.tasks.Delay" source-version="1.0.0" knowledge-class="agent.tasks.knowledges.Delay">
    <description>For the agent, to delay encountered enemies, by engaging them from one destroying position to another. The agent occupies the issued positions in the order of the 'positions' list. The agent goes to a next position once the force ratio is weak or if an explicit order is issued.</description>
    <parameters>
        <parameter name="positions">
            <description>The destroying positions to occupy.</description>
            <type>
                <list>
                    <class name="properties.Destroying"/>
                </list>
            </type>
        </parameter>
    </parameters>
    <goal>
        <description>To delay encountered enemies.</description>
    </goal>
    <stages>
        <stage label="moving to destroying positions" disable-when-done="true">
            <skills>
                <skill name="agent.skills.Delay" main="true">
                    <parameter name="positions">
                        <value>
                            <parameter>positions</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>