<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="commander.tasks.Monitor" source-version="1.0.0" knowledge-class="commander.tasks.knowledges.Monitor">
    <description>For the commander agent, to order subordinates units to monitor the issued objective. Forward echelon units will receive the main task (the 'Monitor' mission), other units (rear echelon) support the forward echelon units.&#xD;
Scouting patrol receive the &quot;Reconnoiter&quot; mission with the positions as parameters.</description>
    <parameters>
        <parameter name="objective">
            <description>The objective to observe.</description>
            <type>
                <class name="properties.Observable"/>
            </type>
        </parameter>
        <parameter name="positions">
            <description>The set of observing positions to occupy.</description>
            <type>
                <list>
                    <class name="properties.Observing"/>
                </list>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="moving to observing positions" permanent="true">
            <skills>
                <skill name="commander.skills.Lead">
                    <parameter name="noCoordination">
                        <value>
                            <boolean>true</boolean>
                        </value>
                    </parameter>
                    <parameter name="companyTask">
                        <value>
                            <string>commander.tasks.Monitor</string>
                        </value>
                    </parameter>
                    <parameter name="mainTasks">
                        <value>
                            <string>agent.tasks.Monitor</string>
                        </value>
                    </parameter>
                    <parameter name="supportTasks">
                        <value>
                            <string>agent.tasks.CombatSupport;agent.tasks.MobilitySupport</string>
                        </value>
                    </parameter>
                    <parameter name="peiTasks">
                        <value>
                            <string>agent.tasks.Reconnoiter</string>
                        </value>
                    </parameter>
                    <parameter name="taskForSupporting">
                        <value>
                            <string>agent.tasks.CombatSupport</string>
                        </value>
                    </parameter>
                    <parameter name="defaultTask">
                        <value>
                            <string>agent.tasks.Follow</string>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>