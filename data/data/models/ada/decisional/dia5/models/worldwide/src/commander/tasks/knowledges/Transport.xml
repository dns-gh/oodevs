<?xml version="1.0" encoding="UTF-8"?>
<class xmlns="http://www.masagroup.net/directia/schemas/bm" name="commander.tasks.knowledges.Transport" source-version="1.0.0" extends="commander.tasks.knowledges.CompanyTask">
    <description>The knowledge of the 'Transport' mission. This knowledge is used by the commander agent to perform this mission.</description>
    <methods>
        <method name="getUnitsToTransport">
            <description>Returns the set of units to transport on the destination position.</description>
            <return>
                <type>
                    <list>
                        <class name="properties.Loadable"/>
                    </list>
                </type>
            </return>
        </method>
        <method name="getLoadingPoint">
            <description>Returns the loading position parameter.</description>
            <return>
                <type>
                    <class name="properties.Loading"/>
                </type>
            </return>
        </method>
        <method name="getDestination">
            <description>Returns the destination position parameter.</description>
            <return>
                <type>
                    <class name="properties.Loading"/>
                </type>
            </return>
        </method>
        <method name="getMeetingPoint" abstract="false">
            <description>Returns the meeting position parameter.</description>
            <return>
                <type>
                    <list>
                        <class name="directia.core.Object"/>
                    </list>
                </type>
            </return>
        </method>
        <method name="getNbrFront" abstract="false">
            <description>Returns the number of units to perform the transportation mission. This number  depends on the number of units to transport and the number of subordinates able to perform the 'Transport' mission. Normally, the commander agent uses the same number of subordinates as units to transport.</description>
            <return>
                <type>
                    <simple name="numeric"/>
                </type>
            </return>
        </method>
    </methods>
</class>