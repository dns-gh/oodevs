<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.tasks.Cross" source-version="1.0.0" knowledge-class="agent.tasks.knowledges.Cross">
    <description>To cross a water obstacle using a prepared crossing site.</description>
    <parameters>
        <parameter name="crossingSite">
            <description>The prepared crossing site to use.</description>
            <type>
                <class name="world.Object"/>
            </type>
        </parameter>
        <parameter name="meetingPoint">
            <description>The final destination beyond the water obstacle.</description>
            <type>
                <class name="properties.Reachable"/>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="moving to crossing site">
            <skills>
                <skill name="agent.skills.MoveToward" main="true">
                    <parameter name="entities">
                        <value>
                            <list>
                                <parameter>crossingSite</parameter>
                            </list>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
        <stage label="moving to meeting position" disable-when-done="true">
            <skills>
                <skill name="agent.skills.MoveToward" main="true">
                    <parameter name="entities">
                        <value>
                            <list>
                                <parameter>meetingPoint</parameter>
                            </list>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>