<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="commander.tasks.Remove" source-version="1.0.0" knowledge-class="commander.tasks.knowledges.Remove">
    <description>For the commander agent, to order subordinates units to remove a set of sword objects.</description>
    <parameters>
        <parameter name="entities">
            <description>The set of objects to remove.</description>
            <type>
                <list>
                    <class name="properties.Removable"/>
                </list>
            </type>
        </parameter>
        <parameter name="meetingPoint" nullable="true">
            <description>The meeting position to reach upon works termination.</description>
            <type>
                <class name="properties.Reachable"/>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="starting works" disable-when-done="true">
            <skills>
                <skill name="commander.skills.LeadGEN" main="true">
                    <parameter name="companyTask">
                        <value>
                            <string>commander.tasks.Remove</string>
                        </value>
                    </parameter>
                    <parameter name="mainTasks">
                        <value>
                            <string>agent.tasks.Remove</string>
                        </value>
                    </parameter>
                    <parameter name="supportTasks">
                        <value>
                            <string>agent.tasks.MoveAlong</string>
                        </value>
                    </parameter>
                    <parameter name="defaultTask">
                        <value>
                            <string>agent.tasks.Follow</string>
                        </value>
                    </parameter>
                    <parameter name="taskForSupporting">
                        <value>
                            <string>agent.tasks.Reinforce</string>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>