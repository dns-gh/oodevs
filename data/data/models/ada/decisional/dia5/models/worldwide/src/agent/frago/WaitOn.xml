<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.frago.WaitOn" source-version="1.0.0">
    <description>For the agent, to wait on a specified position. The agent moves to a chosen position and take up position (with a very high priority).</description>
    <parameters>
        <parameter name="objectives">
            <description>The set of possible objectives to wait on.</description>
            <type>
                <list>
                    <class name="properties.Reachable"/>
                </list>
            </type>
        </parameter>
    </parameters>
    <goal>
        <description>To stop awaiting the order to go on.</description>
    </goal>
    <stages>
        <stage permanent="true">
            <skills>
                <skill name="agent.skills.MoveToward" priority="1000.0">
                    <parameter name="entities">
                        <value>
                            <parameter>objectives</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>