<?xml version="1.0" encoding="UTF-8"?>
<class xmlns="http://www.masagroup.net/directia/schemas/bm" name="commander.tasks.knowledges.Bridge" source-version="1.0.0" extends="commander.tasks.knowledges.CompanyTask">
    <description>The knowledge of the 'Bridge' mission. This knowledge is used by the commander agent to perform this mission.</description>
    <methods>
        <method name="getSite">
            <description>Returns the current crossing site.</description>
            <return>
                <type>
                    <class name="directia.core.Object"/>
                </type>
            </return>
        </method>
        <method name="getObjectives">
            <description>Returns the 'crossingSites' list.</description>
            <return>
                <type>
                    <list>
                        <class name="directia.core.Object"/>
                    </list>
                </type>
            </return>
        </method>
        <method name="getBridgeSystem">
            <description>Returns the chosen bridge system (continiously or discontiniously)</description>
            <return>
                <type>
                    <simple name="numeric"/>
                </type>
            </return>
        </method>
        <method name="getPositions">
            <description>Returns the &quot;crossingSites&quot; list parameter.</description>
            <return>
                <type>
                    <list>
                        <class name="directia.core.Object"/>
                    </list>
                </type>
            </return>
        </method>
        <method name="getMeetingPoint">
            <description>Returns the meeting position parameter.</description>
            <return>
                <type>
                    <list>
                        <class name="directia.core.Object"/>
                    </list>
                </type>
            </return>
        </method>
        <method name="init" abstract="false"/>
        <method name="getNbrFront" abstract="false">
            <description>Returns the number of unit to perform the mission. &#xD;
&#xD;
This implementation returns the number of crossing sites to bridge.</description>
            <return>
                <type>
                    <simple name="numeric"/>
                </type>
            </return>
        </method>
    </methods>
</class>