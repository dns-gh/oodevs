<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.tasks.FlyBehind" source-version="1.0.0">
    <description>$$$ TODO</description>
    <parameters>
        <parameter name="aircraft">
            <description>The aircraft to follow.</description>
            <type>
                <class name="properties.Motile"/>
            </type>
        </parameter>
        <parameter name="height">
            <description>The height to reach.</description>
            <type>
                <simple name="numeric"/>
            </type>
            <default>
                <number>2000.0</number>
            </default>
        </parameter>
        <parameter name="distance">
            <description>The minimum distance from the aircraft.</description>
            <type>
                <simple name="numeric"/>
            </type>
            <default>
                <number>500.0</number>
            </default>
        </parameter>
    </parameters>
    <stages>
        <stage label="take off" permanent="false">
            <skills>
                <skill name="agent.skills.actions.TakeOff" main="true">
                    <parameter name="height">
                        <value>
                            <parameter>height</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
        <stage label="flying behind the unit">
            <skills>
                <skill name="agent.skills.Follow" main="true">
                    <parameter name="entities">
                        <value>
                            <list>
                                <parameter>aircraft</parameter>
                            </list>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
        <stage label="landing" disable-when-done="true">
            <skills>
                <skill name="agent.skills.actions.Land" main="true"/>
            </skills>
        </stage>
    </stages>
</task>