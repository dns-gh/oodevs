<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="commander.tasks.Reconnoiter" source-version="1.0.0" knowledge-class="commander.tasks.knowledges.Reconnoiter">
    <description>For the commander agent, to order subordinates to reconnoiter a set of issued objectives. </description>
    <parameters>
        <parameter name="objectives">
            <description>The set of objectives to be reconnoitered.</description>
            <type>
                <list>
                    <class name="properties.Reconnoitrable"/>
                </list>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="moving to reconnoiter the objectives" disable-when-done="true">
            <skills>
                <skill name="commander.skills.Lead" main="true">
                    <parameter name="companyTask">
                        <value>
                            <string>commander.tasks.Reconnoiter</string>
                        </value>
                    </parameter>
                    <parameter name="mainTasks">
                        <value>
                            <string>agent.tasks.Reconnoiter</string>
                        </value>
                    </parameter>
                    <parameter name="supportTasks">
                        <value>
                            <string>agent.tasks.CombatSupport;agent.tasks.MobilitySupport</string>
                        </value>
                    </parameter>
                    <parameter name="taskForSupporting">
                        <value>
                            <string>agent.tasks.CombatSupport</string>
                        </value>
                    </parameter>
                    <parameter name="defaultTask">
                        <value>
                            <string>agent.tasks.Follow</string>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>