<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="commander.tasks.GetTransported" source-version="1.0.0" knowledge-class="commander.tasks.knowledges.GetTransported">
    <description>For the commander agent, to order subordinates to get transported.. &#xD;
Each unit receives the &quot;get transported&quot; mission with the given &quot;position&quot;as parameter.</description>
    <parameters>
        <parameter name="position">
            <description>The position to reach to be transported.</description>
            <type>
                <class name="properties.Reachable"/>
            </type>
        </parameter>
    </parameters>
    <goal>
        <description>To get all subordinates transported.</description>
    </goal>
    <stages>
        <stage label="moving to position" disable-when-done="true">
            <skills>
                <skill name="commander.skills.Lead" main="true">
                    <parameter name="noCoordination">
                        <value>
                            <boolean>true</boolean>
                        </value>
                    </parameter>
                    <parameter name="companyTask">
                        <value>
                            <string>commander.tasks.GetTransported</string>
                        </value>
                    </parameter>
                    <parameter name="mainTasks">
                        <value>
                            <string>agent.tasks.GetTransported</string>
                        </value>
                    </parameter>
                    <parameter name="supportTasks">
                        <value>
                            <string>agent.tasks.Follow</string>
                        </value>
                    </parameter>
                    <parameter name="taskForSupporting">
                        <value>
                            <string>agent.tasks.CombatSupport</string>
                        </value>
                    </parameter>
                    <parameter name="defaultTask">
                        <value>
                            <string>agent.tasks.Follow</string>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>