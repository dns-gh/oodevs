<?xml version="1.0" encoding="UTF-8"?>
<class xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.tasks.knowledges.ReconnoiterDeploymentSites" source-version="1.0.0" extends="agent.tasks.knowledges.PlatoonTask">
    <description>The knowledge of the 'ReconnoiterDeploymentSites' mission. This knowledge is used by the company commander to perform its own tasks.</description>
    <methods>
        <method name="fillParameters">
            <argument name="companyTask">
                <description>The string name of the company task.</description>
                <type>
                    <class name="properties.Commandable"/>
                </type>
            </argument>
            <argument name="params">
                <description>The parameters of the company task.</description>
                <type>
                    <list>
                        <class name="directia.core.Object"/>
                    </list>
                </type>
            </argument>
            <return>
                <type>
                    <list>
                        <class name="directia.core.Object"/>
                    </list>
                </type>
            </return>
        </method>
        <method name="getObstaclesParameter">
            <description>Returns the list of positions to build.</description>
            <return name="obstacles">
                <type>
                    <list>
                        <class name="directia.core.Object"/>
                    </list>
                </type>
            </return>
        </method>
        <method name="canDoIt">
            <description>Returns 'true' is the issued subordinate unit can build the object.</description>
            <argument name="obstacle">
                <description>The obstacle to build.</description>
                <type>
                    <class name="world.EngineerObject"/>
                </type>
            </argument>
            <argument name="entity">
                <description>The subordinate unit to build the obstacle.</description>
                <type>
                    <class name="directia.core.Object"/>
                </type>
            </argument>
            <return name="hasRessource">
                <type>
                    <simple name="boolean"/>
                </type>
            </return>
        </method>
        <method name="hasDotation">
            <description>Returns 'true' if the issued subodinate unit ('entity')has enough dotation to perform the object construction.</description>
            <argument name="obstacle">
                <description>The obstacle to build.</description>
                <type>
                    <class name="world.EngineerObject"/>
                </type>
            </argument>
            <argument name="entity">
                <description>The subordinate unit to build the object.</description>
                <type>
                    <class name="directia.core.Object"/>
                </type>
            </argument>
            <return name="hasDotation">
                <type>
                    <simple name="boolean"/>
                </type>
            </return>
        </method>
    </methods>
</class>