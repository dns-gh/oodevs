<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.tasks.Reinforce" source-version="1.0.0" knowledge-class="agent.tasks.knowledges.Reinforce">
    <description>For an agent to move toward an agent, and reinforce it. &#xD;
The agent moves toward the given position. Once it is reached, the agent waits to reinforce the issued element. If the given element is nearby the &#xD;
The reinforcement is active until another mission is issued.</description>
    <parameters>
        <parameter name="objective">
            <description>The element to reinforce (a friend unit for instance).</description>
            <type>
                <class name="properties.Reinforcable"/>
                <class name="properties.Supportable"/>
            </type>
        </parameter>
        <parameter name="positions" nullable="true">
            <description>The positions from which the agent reinforce the element.</description>
            <type>
                <list>
                    <class name="properties.Reinforcing"/>
                </list>
            </type>
            <default>
                <nil/>
            </default>
        </parameter>
    </parameters>
    <stages>
        <stage label="moving to position" permanent="true">
            <skills>
                <skill name="agent.skills.primitives.Reinforce">
                    <parameter name="entity">
                        <value>
                            <parameter>objective</parameter>
                        </value>
                    </parameter>
                    <parameter name="positions">
                        <value>
                            <parameter>positions</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>