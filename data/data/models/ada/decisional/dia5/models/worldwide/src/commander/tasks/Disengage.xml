<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="commander.tasks.Disengage" source-version="1.0.0" knowledge-class="commander.tasks.knowledges.Disengage">
    <description>For the commander agent, to order subordinates to disengage from threats. &#xD;
Each unit receives the &quot;disengage&quot; mission with the given &quot;meeting position&quot; as parameter.</description>
    <parameters>
        <parameter name="objective">
            <description>The objective position to reach.</description>
            <type>
                <class name="properties.Approachable"/>
                <class name="properties.Positionable"/>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="disengagement" disable-when-done="true">
            <skills>
                <skill name="commander.skills.Lead" main="true">
                    <parameter name="noCoordination">
                        <value>
                            <boolean>true</boolean>
                        </value>
                    </parameter>
                    <parameter name="companyTask">
                        <value>
                            <string>commander.tasks.Disengage</string>
                        </value>
                    </parameter>
                    <parameter name="mainTasks">
                        <value>
                            <string>agent.tasks.Disengage</string>
                        </value>
                    </parameter>
                    <parameter name="supportTasks">
                        <value>
                            <string>agent.tasks.Disengage</string>
                        </value>
                    </parameter>
                    <parameter name="taskForSupporting">
                        <value>
                            <string>agent.tasks.CombatSupport</string>
                        </value>
                    </parameter>
                    <parameter name="defaultTask">
                        <value>
                            <string>agent.tasks.Follow</string>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>