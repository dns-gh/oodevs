<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.frago.GoTo" source-version="1.0.0">
    <description>For the agent, to reach a position at all cost. This mission terminates once the objective is reached.</description>
    <parameters>
        <parameter name="objective">
            <description>The objective to reach.</description>
            <type>
                <class name="properties.Reachable"/>
            </type>
        </parameter>
    </parameters>
    <goal>
        <description>To reach a given objective at all cost.</description>
    </goal>
    <stages>
        <stage>
            <skills>
                <skill name="agent.skills.MoveToward" main="true" priority="100000.0">
                    <parameter name="entities">
                        <value>
                            <list>
                                <parameter>objective</parameter>
                            </list>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>