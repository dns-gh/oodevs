<?xml version="1.0" encoding="UTF-8"?>
<class xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.tasks.knowledges.Bridge" source-version="1.0.0" extends="agent.tasks.knowledges.PlatoonTask">
    <description>The knowledge of the 'Bridge' mission. This knowledge is used by the company commander to perform its own tasks.</description>
    <methods>
        <method name="fillParameters">
            <argument name="companyTask">
                <description>The string name of the company task.</description>
                <type>
                    <class name="properties.Commandable"/>
                </type>
            </argument>
            <argument name="params">
                <description>The parameters list of the company task.</description>
                <type>
                    <list>
                        <class name="directia.core.Object"/>
                    </list>
                </type>
            </argument>
            <return>
                <type>
                    <list>
                        <class name="directia.core.Object"/>
                    </list>
                </type>
            </return>
        </method>
        <method name="getObstaclesParameter">
            <description>Returns the list of crossing sites.</description>
            <return name="obstacles">
                <type>
                    <list>
                        <class name="directia.core.Object"/>
                    </list>
                </type>
            </return>
        </method>
        <method name="canDoIt">
            <description>Returns 'true' if the agent is able to perform the mission.</description>
            <return name="hasRessource">
                <type>
                    <simple name="boolean"/>
                </type>
            </return>
        </method>
        <method name="hasDotation">
            <description>Returns 'true' if the agent has enough dodation to perform the mission.</description>
            <return name="hasDotation">
                <type>
                    <simple name="boolean"/>
                </type>
            </return>
        </method>
    </methods>
</class>