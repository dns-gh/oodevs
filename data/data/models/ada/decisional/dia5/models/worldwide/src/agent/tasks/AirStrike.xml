<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.tasks.AirStrike" source-version="1.0.0">
    <description>For the agent, to take off, fly along the issued route, launch projectiles on targets found within the area and land. </description>
    <parameters>
        <parameter name="wayPoints">
            <description>The waypoints to move along.</description>
            <type>
                <list>
                    <class name="properties.Reachable"/>
                </list>
            </type>
        </parameter>
        <parameter name="area">
            <description>The area inside which the targets must be found.</description>
            <type>
                <class name="world.Area"/>
            </type>
        </parameter>
        <parameter name="munitionType">
            <description>The type of projectile to use.</description>
            <type>
                <any/>
            </type>
        </parameter>
        <parameter name="height">
            <description>The height to reach when the agent takes off (in METERS). Default value is 2000 meters.</description>
            <type>
                <simple name="numeric"/>
            </type>
            <default>
                <number>2000.0</number>
            </default>
        </parameter>
        <parameter name="quantity">
            <description>The quantity of shoots per tick. The quantity of projectiles depends on the number of the component parts within the agent.</description>
            <type>
                <simple name="numeric"/>
            </type>
            <default>
                <number>1.0</number>
            </default>
        </parameter>
    </parameters>
    <stages>
        <stage label="take off">
            <skills>
                <skill name="agent.skills.actions.TakeOff" main="true">
                    <parameter name="height">
                        <value>
                            <parameter>height</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
        <stage label="moving to area">
            <skills>
                <skill name="agent.skills.MoveAlongItinerary" main="true">
                    <parameter name="objectives">
                        <value>
                            <parameter>wayPoints</parameter>
                        </value>
                    </parameter>
                </skill>
                <skill name="agent.skills.ApplyIndirectFire">
                    <parameter name="entities">
                        <value>
                            <call method="queries.getEnemiesInArea">
                                <parameter name="areas">
                                    <value>
                                        <list>
                                            <parameter>area</parameter>
                                        </list>
                                    </value>
                                </parameter>
                            </call>
                        </value>
                    </parameter>
                    <parameter name="quantity">
                        <value>
                            <parameter>quantity</parameter>
                        </value>
                    </parameter>
                    <parameter name="dotationType">
                        <value>
                            <parameter>munitionType</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
        <stage label="land" disable-when-done="true">
            <skills>
                <skill name="agent.skills.actions.Land" main="true"/>
            </skills>
        </stage>
    </stages>
</task>