<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="commander.tasks.Cross" source-version="1.0.0" knowledge-class="commander.tasks.knowledges.Cross">
    <description>For the commander agent, to order subordinates units to cross a water obstacle with a &quot;crossingSite&quot; object  as parameter.</description>
    <parameters>
        <parameter name="crossingSite">
            <description>The crossing site (object) to get through. The site should be prepared by engineer units.</description>
            <type>
                <class name="world.Object"/>
            </type>
        </parameter>
        <parameter name="objective">
            <description>The final objective to reach beyond the crossing site.</description>
            <type>
                <class name="properties.Reachable"/>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="moving to crossing site" disable-when-done="true">
            <skills>
                <skill name="commander.skills.Lead" main="true">
                    <parameter name="noCoordination">
                        <value>
                            <boolean>true</boolean>
                        </value>
                    </parameter>
                    <parameter name="companyTask">
                        <value>
                            <string>commander.tasks.Cross</string>
                        </value>
                    </parameter>
                    <parameter name="mainTasks">
                        <value>
                            <string>agent.tasks.Cross</string>
                        </value>
                    </parameter>
                    <parameter name="supportTasks">
                        <value>
                            <string>agent.tasks.Cross</string>
                        </value>
                    </parameter>
                    <parameter name="taskForSupporting">
                        <value>
                            <string>agent.tasks.CombatSupport</string>
                        </value>
                    </parameter>
                    <parameter name="defaultTask">
                        <value>
                            <string>agent.tasks.Follow</string>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>