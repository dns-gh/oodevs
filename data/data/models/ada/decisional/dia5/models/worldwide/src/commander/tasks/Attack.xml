<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="commander.tasks.Attack" source-version="1.0.0" knowledge-class="commander.tasks.knowledges.Attack">
    <description>For the commander agent, to order subordinates units to attack the issued objective. Forward echelon units will receive the main task (the 'attack' mission), other units (rear echelon) support the forward echelon units.</description>
    <parameters>
        <parameter name="objective" nullable="true">
            <type>
                <class name="properties.Positionable"/>
            </type>
            <default>
                <nil/>
            </default>
        </parameter>
    </parameters>
    <stages>
        <stage label="advancing toward the objective" disable-when-done="true">
            <skills>
                <skill name="commander.skills.Lead" main="true">
                    <parameter name="companyTask">
                        <value>
                            <string>commander.tasks.Attack</string>
                        </value>
                    </parameter>
                    <parameter name="mainTasks">
                        <value>
                            <string>agent.tasks.Attack</string>
                        </value>
                    </parameter>
                    <parameter name="supportTasks">
                        <value>
                            <string>agent.tasks.CombatSupport;agent.tasks.MobilitySupport</string>
                        </value>
                    </parameter>
                    <parameter name="taskForSupporting">
                        <value>
                            <string>agent.tasks.CombatSupport</string>
                        </value>
                    </parameter>
                    <parameter name="defaultTask">
                        <value>
                            <string>agent.tasks.Follow</string>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>