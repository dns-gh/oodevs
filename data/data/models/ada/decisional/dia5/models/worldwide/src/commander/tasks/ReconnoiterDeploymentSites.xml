<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="commander.tasks.ReconnoiterDeploymentSites" source-version="1.0.0" knowledge-class="commander.tasks.knowledges.ReconnoiterDeploymentSites">
    <description>For the commander agent, to order subordinates units to build a set of issued planned work. Engineer units will receive the main task (the 'Build' mission). Other units are ordered to reach the meeting position.&#xD;
&#xD;
&#xD;
.</description>
    <parameters>
        <parameter name="deploymentPositions">
            <description>The entities to construct.</description>
            <type>
                <list>
                    <class name="world.Object"/>
                </list>
            </type>
        </parameter>
        <parameter name="meetingPosition">
            <description>The meeting position to reach upon works completion.</description>
            <type>
                <class name="properties.Reachable"/>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="moving toward works location">
            <skills>
                <skill name="commander.skills.LeadGEN" main="true">
                    <parameter name="companyTask">
                        <value>
                            <string>commander.tasks.ReconnoiterDeploymentSites</string>
                        </value>
                    </parameter>
                    <parameter name="mainTasks">
                        <value>
                            <string>agent.tasks.ReconnoiterDeploymentSites</string>
                        </value>
                    </parameter>
                    <parameter name="supportTasks">
                        <value>
                            <string>agent.tasks.Follow</string>
                        </value>
                    </parameter>
                    <parameter name="taskForSupporting">
                        <value>
                            <string>agent.tasks.CombatSupport</string>
                        </value>
                    </parameter>
                    <parameter name="defaultTask">
                        <value>
                            <string>agent.tasks.Follow</string>
                        </value>
                    </parameter>
                    <parameter name="disableWhenDone">
                        <value>
                            <boolean>true</boolean>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
        <stage label="moving toward meeting position" disable-when-done="true">
            <skills>
                <skill name="commander.skills.Lead" main="true">
                    <parameter name="companyTask">
                        <value>
                            <string>commander.tasks.ReconnoiterDeploymentSites</string>
                        </value>
                    </parameter>
                    <parameter name="mainTasks">
                        <value>
                            <string>agent.tasks.MoveAlong</string>
                        </value>
                    </parameter>
                    <parameter name="supportTasks">
                        <value>
                            <string>agent.tasks.MoveAlong</string>
                        </value>
                    </parameter>
                    <parameter name="taskForSupporting">
                        <value>
                            <string>agent.tasks.CombatSupport</string>
                        </value>
                    </parameter>
                    <parameter name="defaultTask">
                        <value>
                            <string>agent.tasks.Follow</string>
                        </value>
                    </parameter>
                    <parameter name="allInFront">
                        <value>
                            <boolean>true</boolean>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>