-- **************************************************************************** 
-- Equip NBC outfits
-- Simple action that command the agent to put its nbc protection on.
-- ****************************************************************************
rootnode
{
    acquire = { [ skill.resources.NBCProtectionCapability ] = 1 },

    done = function( self ) end,

    select = function( self )
        meKnowledge:equipNBCOutfit()
    end
}