	</skills>
	<resources/>
	<default-task label="Deploiement automatique">
		<let name="fragOrdersToManage">
			<value>
				<call method="sword.military.queries.miscellaneous.getFragOrders"/>
			</value>
		</let>
		<skills>
			<skill name="france.military.platoon.combat.support.log.skills.AutoDeploy" main="true" priority="0.01"/>
			<skill name="sword.military.platoon.skills.miscellaneous.ManageFragOrder">
				<parameter name="fragOrders">
					<value>
						<parameter>fragOrdersToManage</parameter>
					</value>
				</parameter>
			</skill>
			<skill name="sword.military.platoon.skills.ReactToCoordinationLine"/>
			<skill name="sword.military.platoon.skills.miscellaneous.SetPace"/>
		</skills>
	</default-task>
</role>