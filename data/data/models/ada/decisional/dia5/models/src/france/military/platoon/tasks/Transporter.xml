<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="france.military.platoon.tasks.Transporter" source-version="1.0.0" knowledge-class="france.military.platoon.tasks.knowledges.Transporter">
    <parameters>
        <parameter name="units">
            <description>Unites a transporter</description>
            <type>
                <list>
                    <class name="world_concepts.Transportable"/>
                </list>
            </type>
        </parameter>
        <parameter name="loadingPoint">
            <description>Position d'embarquement</description>
            <type>
                <class name="world_concepts.Loading"/>
            </type>
        </parameter>
        <parameter name="destination">
            <description>Position d'arrivee</description>
            <type>
                <class name="world_concepts.Loading"/>
            </type>
        </parameter>
        <parameter name="meetingPoint">
            <description>Poin ou aller une fois toutes les unites transportees</description>
            <type>
                <class name="world_concepts.Reachable"/>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="Transport des unités">
            <description>Transporte les uites au fur et a mesure qu'elle sont pretes a etre transportees</description>
            <skills>
                <skill name="france.military.platoon.skills.Transporter" main="true">
                    <parameter name="units">
                        <value>
                            <parameter>units</parameter>
                        </value>
                    </parameter>
                    <parameter name="loadingPoint">
                        <value>
                            <parameter>loadingPoint</parameter>
                        </value>
                    </parameter>
                    <parameter name="destination">
                        <value>
                            <parameter>destination</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
        <stage label="Déplacement vers le point de regroupement" disable-when-done="true">
            <description>se deplace vers le point de rendez vous donne en parametre</description>
            <skills>
                <skill name="france.military.platoon.skills.MoveAlong" main="true">
                    <parameter name="entities">
                        <value>
                            <list>
                                <parameter>meetingPoint</parameter>
                            </list>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>