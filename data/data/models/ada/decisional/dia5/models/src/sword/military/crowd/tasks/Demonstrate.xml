<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="sword.military.crowd.tasks.Demonstrate" source-version="1.0.0">
    <description>Rejoindre l'objectif en manifestant. La manifestation a pour effet de prendre à partie les agents au contact. La virulence de la prise à partie dépend de l'attitude de la foule.</description>
    <parameters>
        <parameter name="objectives">
            <description>Objectif de la manifestation</description>
            <type>
                <list>
                    <class name="sword.military.crowd.world.interfaces.Reachable"/>
                </list>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="Manifester" permanent="true">
            <description>Rejoindre l'objectif en manifestant.</description>
            <skills>
                <skill name="sword.military.crowd.skills.Demonstrate">
                    <parameter name="entities">
                        <value>
                            <parameter>objectives</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>