<?xml version="1.0" encoding="UTF-8"?>
<skill xmlns="http://www.masagroup.net/directia/schemas/bm" name="sword.military.platoon.skills.primitives.Build" source-version="1.0.0">
    <description>Build objects</description>
    <parameters>
        <parameter name="entities">
            <description>element to build</description>
            <type>
                <list>
                    <class name="sword.military.knowledge.decisional.Buildable"/>
                </list>
            </type>
        </parameter>
        <parameter name="positions" nullable="true">
            <type>
                <list>
                    <class name="sword.military.knowledge.decisional.Building"/>
                </list>
            </type>
            <default>
                <nil/>
            </default>
        </parameter>
    </parameters>
    <goal>
        <description>The skill's goal is to build the tactical object</description>
    </goal>
    <links>
        <link name="moveAndTakePosition" skill="sword.military.platoon.skills.actions.MoveAndTakePosition"/>
        <link name="observe" skill="sword.military.platoon.skills.actions.Observe"/>
        <link name="dismount" skill="sword.military.platoon.skills.actions.Dismount"/>
    </links>
    <resources>
        <resource name="sword.military.platoon.resources.BuildCapacity" variable="buildCapacity"/>
    </resources>
    <feedbacks>
        <feedback name="elementCancelled">
            <description>Les travaux sur l'element element one ete annules sur ordre.</description>
            <argument name="element">
                <type>
                    <class name="sword.military.knowledge.decisional.Buildable"/>
                </type>
            </argument>
        </feedback>
        <feedback name="elementBuilt">
            <argument name="element">
                <type>
                    <class name="sword.military.knowledge.decisional.Buildable"/>
                </type>
            </argument>
        </feedback>
        <feedback name="elementFailed">
            <description>L'element element n'a pas pu etre consruit.</description>
            <argument name="element">
                <type>
                    <class name="sword.military.knowledge.decisional.Buildable"/>
                </type>
            </argument>
            <argument name="reason">
                <description>Raison pour lquelle on n'a pas pu construire.</description>
                <type>
                    <simple name="numeric"/>
                </type>
            </argument>
        </feedback>
        <feedback name="elementNotActivated">
            <description>L'obstacle de manoeuvre n'est pas activ√©</description>
            <argument name="element">
                <type>
                    <class name="sword.military.knowledge.decisional.Activable"/>
                </type>
            </argument>
        </feedback>
    </feedbacks>
</skill>