      </type>
    </parameter>
  </parameters>
  <stages>
    <stage label="build">
      <skills>
        <skill name="sword.military.platoon.skills.primitives.Build" main="true">
          <parameter name="entities">
            <value>
              <parameter>entities</parameter>
