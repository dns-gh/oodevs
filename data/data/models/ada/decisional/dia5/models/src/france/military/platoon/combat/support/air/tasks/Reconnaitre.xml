<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="france.military.platoon.combat.support.air.tasks.Reconnaitre" source-version="1.0.0">
	<parameters>
		<parameter name="objectives">
			<type>
				<list>
					<class name="sword.military.knowledge.decisional.Reachable"/>
				</list>
			</type>
		</parameter>
	</parameters>
	<stages>
		<stage label="Decoller" permanent="false">
			<skills>
				<skill name="france.military.platoon.combat.support.air.skills.Decoller" main="true">
					<parameter name="HauteurDeVol">
						<value>
							<number>1000.0</number>
						</value>
					</parameter>
				</skill>
			</skills>
		</stage>
		<stage label="En reconnaissance" permanent="false">
			<skills>
				<skill name="france.military.platoon.combat.support.air.skills.MoveAlong" main="true">
					<parameter name="objectives">
						<value>
							<parameter>objectives</parameter>
						</value>
					</parameter>
					<parameter name="infiltrationMode">
						<value>
							<boolean>true</boolean>
						</value>
					</parameter>
					<parameter name="avoidObstacles">
						<value>
							<boolean>false</boolean>
						</value>
					</parameter>
				</skill>
			</skills>
		</stage>
		<stage label="Aterrissage" disable-when-done="true">
			<skills>
				<skill name="france.military.platoon.combat.support.air.skills.Atterrir" main="true"/>
			</skills>
		</stage>
	</stages>
</task>