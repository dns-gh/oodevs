<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="sword.military.company.tasks.Deploy" source-version="1.0.0" knowledge-class="sword.military.company.tasks.knowledges.DeployEffect">
    <parameters>
        <parameter name="objective" nullable="true">
            <description>Objective that will be used to deploy the company</description>
            <type>
                <class name="sword.military.knowledge.decisional.Positionable"/>
            </type>
            <default>
                <nil/>
            </default>
        </parameter>
        <parameter name="companyTask">
            <type>
                <simple name="string"/>
            </type>
        </parameter>
        <parameter name="mainTasks">
            <type>
                <simple name="string"/>
            </type>
        </parameter>
        <parameter name="supportTasks">
            <type>
                <simple name="string"/>
            </type>
        </parameter>
        <parameter name="defaultTask">
            <description>La mission que l'on donne par défaut aux pions.</description>
            <type>
                <simple name="string"/>
            </type>
        </parameter>
        <parameter name="taskForSupporting">
            <description>La mission que l'on donne aux pions de SE pour aider un pion de PE en difficulté.</description>
            <type>
                <simple name="string"/>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="Mouvement vers position de deploiement" disable-when-done="false">
            <skills>
                <skill name="sword.military.company.skills.Lead" main="true">
                    <parameter name="noCoordination">
                        <value>
                            <boolean>true</boolean>
                        </value>
                    </parameter>
                    <parameter name="companyTask">
                        <value>
                            <parameter>companyTask</parameter>
                        </value>
                    </parameter>
                    <parameter name="mainTasks">
                        <value>
                            <parameter>mainTasks</parameter>
                        </value>
                    </parameter>
                    <parameter name="supportTasks">
                        <value>
                            <parameter>supportTasks</parameter>
                        </value>
                    </parameter>
                    <parameter name="defaultTask">
                        <value>
                            <parameter>defaultTask</parameter>
                        </value>
                    </parameter>
                    <parameter name="taskForSupporting">
                        <value>
                            <parameter>taskForSupporting</parameter>
                        </value>
                    </parameter>
                    <parameter name="manageAddedAndDeletedUnits">
                        <value>
                            <boolean>false</boolean>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>