<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="france.military.platoon.combat.tasks.Couvrir" source-version="1.0.0" knowledge-class="agent.tasks.knowledges.Cover">
  <description>Couvrir des unités à partir des positions fâce à des objectifs.</description>
  <parameters>
    <parameter name="entities">
      <description>les unités à couvrir</description>
      <type>
        <list>
          <class name="world_concepts.Reachable"/>
        </list>
      </type>
    </parameter>
    <parameter name="directionPoints" nullable="true">
      <description>Objectif face auquel il faut couvrir.</description>
      <type>
        <list>
          <class name="world_concepts.Observable"/>
        </list>
      </type>
      <default>
        <nil/>
      </default>
    </parameter>
    <parameter name="positions">
      <description>Positions à partir desquelles il faut couvrir.</description>
      <type>
        <list>
          <class name="world_concepts.Neutralizing"/>
          <class name="world_concepts.Observing"/>
          <class name="world_concepts.Destroying"/>
        </list>
      </type>
    </parameter>
  </parameters>
  <goal>
    <description>Détruire les objectifs.</description>
  </goal>
  <next-task name="agent.tasks.Cover">
    <parameter name="entities">
      <value>
        <parameter>entities</parameter>
      </value>
    </parameter>
    <parameter name="directionPoints">
      <value>
        <parameter>directionPoints</parameter>
      </value>
    </parameter>
    <parameter name="positions">
      <value>
        <parameter>positions</parameter>
      </value>
    </parameter>
  </next-task>
</task>