<?xml version="1.0" encoding="UTF-8"?>
<query xmlns="http://www.masagroup.net/directia/schemas/bm" name="sword.military.queries.miscellaneous.getFriends" source-version="1.0.0">
    <description>Retourne toutes les entités amies appartenant au groupement tactique de l'unité.</description>
    <parameters>
        <parameter name="dynamic">
            <type>
                <simple name="boolean"/>
            </type>
        </parameter>
    </parameters>
    <target name="friends">
        <type>
            <class name="sword.military.world.PlatoonAlly"/>
        </type>
    </target>
</query>