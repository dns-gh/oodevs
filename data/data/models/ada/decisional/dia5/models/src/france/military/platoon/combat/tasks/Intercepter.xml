<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="france.military.platoon.combat.tasks.Intercepter" source-version="1.0.0" knowledge-class="france.military.platoon.combat.tasks.knowledges.Harass">
    <parameters>
        <parameter name="objective">
            <description>La zone d'engagement des ennemis.</description>
            <type>
                <class name="properties.Positionable"/>
            </type>
        </parameter>
        <parameter name="destroyingPositions" nullable="true">
            <description>Positions d'observation où l'unité peut observer les unités ennemis avant l'engagement.</description>
            <type>
                <list>
                    <class name="properties.Neutralizing"/>
                </list>
            </type>
            <default>
                <nil/>
            </default>
        </parameter>
        <parameter name="obstacles" nullable="true">
            <type>
                <list>
                    <class name="world.Object"/>
                </list>
            </type>
            <default>
                <nil/>
            </default>
        </parameter>
        <parameter name="entities" nullable="true">
            <description>Les ennemis à engager.</description>
            <type>
                <list>
                    <class name="properties.Destroyable"/>
                </list>
            </type>
            <default>
                <nil/>
            </default>
        </parameter>
        <parameter name="withImprovement">
            <description>Si la valeur est vraie, on continue la construction en valorisant l'objectif.</description>
            <type>
                <simple name="boolean"/>
            </type>
            <default>
                <boolean>false</boolean>
            </default>
        </parameter>
    </parameters>
    <stages>
        <stage label="Preparation du terrain">
            <description>Mise en place du plan d'obstacle.</description>
            <goal>
                <description>Construire le plan d'obstacle.</description>
            </goal>
            <skills>
                <skill name="agent.skills.BuildWithReinforcement" main="true">
                    <parameter name="withImprovement">
                        <value>
                            <parameter>withImprovement</parameter>
                        </value>
                    </parameter>
                    <parameter name="entities">
                        <value>
                            <parameter>obstacles</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
        <stage label="Observe et détruire les ennemis sur les positions" permanent="true">
            <description>Observer dans la zone et engager les ennemis.</description>
            <goal>
                <description>Engagement des objectifs.</description>
            </goal>
            <skills>
                <skill name="agent.skills.Engage" priority="0.9">
                    <parameter name="positions">
                        <value>
                            <parameter>destroyingPositions</parameter>
                        </value>
                    </parameter>
                    <parameter name="entities">
                        <value>
                            <call method="france.military.queries.getEntitiesToIntercept">
                                <parameter name="objective">
                                    <value>
                                        <parameter>objective</parameter>
                                    </value>
                                </parameter>
                            </call>
                        </value>
                    </parameter>
                </skill>
                <skill name="france.military.platoon.skills.Intercept" priority="0.1">
                    <parameter name="destroyingPositions">
                        <value>
                            <parameter>destroyingPositions</parameter>
                        </value>
                    </parameter>
                    <parameter name="interceptionObjective">
                        <value>
                            <parameter>objective</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>