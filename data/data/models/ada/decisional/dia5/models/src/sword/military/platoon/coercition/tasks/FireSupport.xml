<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="sword.military.platoon.coercition.tasks.FireSupport" source-version="1.0.0" knowledge-class="sword.military.platoon.coercition.tasks.knowledges.FireSupport">
    <description>Appuyer par le feu à partir d'une position.</description>
    <parameters>
        <parameter name="objectives">
            <description>Zone de provenance de la menace.</description>
            <type>
                <list>
                    <class name="sword.military.knowledge.decisional.Observable"/>
                </list>
            </type>
        </parameter>
        <parameter name="positions">
            <description>Les positions d'appui.</description>
            <type>
                <list>
                    <class name="sword.military.knowledge.decisional.Observing"/>
                    <class name="sword.military.knowledge.decisional.Destroying"/>
                    <class name="sword.military.knowledge.decisional.Neutralizing"/>
                </list>
            </type>
        </parameter>
        <parameter name="entities">
            <description>Les unités à appuyer.</description>
            <type>
                <list>
                    <class name="sword.military.knowledge.decisional.Supportable"/>
                </list>
            </type>
        </parameter>
    </parameters>
    <goal>
        <description>Occuper les positions d'appui et engager les objectifs.</description>
    </goal>
    <let name="enemisApproaching">
        <value>
            <call method="sword.military.queries.enemies.getEnemiesInRange">
                <parameter name="probabilityToHit">
                    <value>
                        <number>0.5</number>
                    </value>
                </parameter>
            </call>
        </value>
    </let>
    <stages>
        <stage label="Mouvement">
            <description>Déplacement tactique vers les positions d'appui avec agressivité.</description>
            <goal>
                <description>Atteindre les positions d'appui.</description>
            </goal>
            <skills>
                <skill name="sword.military.platoon.skills.MoveToward" main="true" priority="1.0">
                    <parameter name="entities">
                        <value>
                            <parameter>positions</parameter>
                        </value>
                    </parameter>
                </skill>
                <skill name="sword.military.platoon.skills.actions.SharePerceptions">
                    <parameter name="unitsToSupport">
                        <value>
                            <parameter>entities</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
        <stage label="Protection" permanent="true">
            <description>Occupation des positions d'appui.</description>
            <goal>
                <description>Occuper les positions pour détruire les ennemis arrivants.</description>
            </goal>
            <skills>
                <skill name="sword.military.platoon.coercition.skills.Engage" priority="0.1">
                    <parameter name="entities">
                        <value>
                            <parameter>enemisApproaching</parameter>
                        </value>
                    </parameter>
                    <parameter name="positions">
                        <value>
                            <parameter>positions</parameter>
                        </value>
                    </parameter>
                </skill>
                <skill name="sword.military.platoon.skills.primitives.ObserveToward" priority="0.6">
                    <parameter name="entities">
                        <value>
                            <parameter>objectives</parameter>
                        </value>
                    </parameter>
                    <parameter name="positions">
                        <value>
                            <parameter>positions</parameter>
                        </value>
                    </parameter>
                </skill>
                <skill name="sword.military.platoon.skills.actions.ApplyMortarFires" priority="0.3">
                    <parameter name="alliedUnits">
                        <value>
                            <parameter>entities</parameter>
                        </value>
                    </parameter>
                </skill>
                <skill name="sword.military.platoon.skills.actions.SharePerceptions">
                    <parameter name="unitsToSupport">
                        <value>
                            <parameter>entities</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>