<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="france.military.platoon.combat.support.air.tasks.EffectuerRaid" source-version="1.0.0">
	<parameters>
		<parameter name="objectives">
			<type>
				<list>
					<class name="sword.military.knowledge.decisional.Reachable"/>
				</list>
			</type>
		</parameter>
		<parameter name="area">
			<type>
				<class name="sword.military.world.Area"/>
			</type>
		</parameter>
		<parameter name="munitions">
			<type>
				<simple name="numeric"/>
			</type>
		</parameter>
	</parameters>
	<stages>
		<stage label="Decoller" permanent="false">
			<skills>
				<skill name="france.military.platoon.combat.support.air.skills.Decoller" main="true">
					<parameter name="HauteurDeVol">
						<value>
							<number>1000.0</number>
						</value>
					</parameter>
				</skill>
			</skills>
		</stage>
		<stage label="Infiltration" permanent="false">
			<skills>
				<skill name="france.military.platoon.combat.support.air.skills.MoveAlong" main="true">
					<parameter name="objectives">
						<value>
							<parameter>objectives</parameter>
						</value>
					</parameter>
					<parameter name="infiltrationMode">
						<value>
							<boolean>true</boolean>
						</value>
					</parameter>
					<parameter name="avoidObstacles">
						<value>
							<boolean>true</boolean>
						</value>
					</parameter>
				</skill>
				<skill name="sword.military.platoon.skills.ApplyIndirectFire">
					<parameter name="interventionType">
						<value>
							<number>1.0</number>
						</value>
					</parameter>
					<parameter name="munition">
						<value>
							<parameter>munitions</parameter>
						</value>
					</parameter>
					<parameter name="entities">
						<value>
							<call method="sword.military.queries.enemies.getEnemiesInArea">
								<parameter name="areas">
									<value>
										<list>
											<parameter>area</parameter>
										</list>
									</value>
								</parameter>
							</call>
						</value>
					</parameter>
				</skill>
			</skills>
		</stage>
		<stage label="Aterrissage" disable-when-done="true">
			<skills>
				<skill name="france.military.platoon.combat.support.air.skills.Atterrir" main="true"/>
			</skills>
		</stage>
	</stages>
</task>