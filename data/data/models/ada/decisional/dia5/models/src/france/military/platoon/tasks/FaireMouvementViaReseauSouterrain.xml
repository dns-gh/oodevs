<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="france.military.platoon.tasks.FaireMouvementViaReseauSouterrain" source-version="1.0.0" knowledge-class="france.military.platoon.tasks.knowledges.DetruireReseau">
    <parameters>
        <parameter name="enter">
            <type>
                <class name="sword.military.knowledge.UndergroundNetwork"/>
            </type>
        </parameter>
        <parameter name="exit">
            <type>
                <class name="sword.military.knowledge.UndergroundNetwork"/>
            </type>
        </parameter>
        <parameter name="objective">
            <type>
                <class name="sword.military.knowledge.decisional.Reachable"/>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="Entrer dans le réseau souterrain">
            <skills>
                <skill name="france.military.platoon.skills.EntrerDansReseauSouterrain" main="true">
                    <parameter name="undergroundNetwork">
                        <value>
                            <parameter>enter</parameter>
                        </value>
                    </parameter>
                    <parameter name="exitUndergroundNetwork">
                        <value>
                            <parameter>exit</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
        <stage label="Se déplacer dans le réseau">
            <skills>
                <skill name="france.military.platoon.skills.FaireMouvementDansReseauSouterrain" main="true">
                    <parameter name="undergroundNetwork">
                        <value>
                            <parameter>exit</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
        <stage label="Sortir du réseau souterrain" disable-when-done="true">
            <skills>
                <skill name="france.military.platoon.skills.SortirDuReseauSouterrain" main="true">
                    <parameter name="objective">
                        <value>
                            <parameter>objective</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>