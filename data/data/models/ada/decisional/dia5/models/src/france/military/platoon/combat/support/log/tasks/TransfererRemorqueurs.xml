<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="france.military.platoon.combat.support.log.tasks.TransfererRemorqueurs" source-version="1.0.0">
    <parameters>
        <parameter name="pionRenforce">
            <description>Unité qui va donner des remorqueurs</description>
            <type>
                <class name="world.PlatoonAlly"/>
            </type>
        </parameter>
        <parameter name="pionARenforcer">
            <description>Unité alliée à renforcer</description>
            <type>
                <class name="world.PlatoonAlly"/>
            </type>
        </parameter>
        <parameter name="nbrRemorqueurs">
            <description>Nombre de remorqueurs à transférer</description>
            <type>
                <simple name="numeric"/>
            </type>
        </parameter>
    </parameters>
    <goal>
        <description>Ordre de conduite LOG transférer remorqueurs</description>
    </goal>
    <stages>
        <stage label="Transférer remorqueurs" disable-when-done="true">
            <skills>
                <skill name="france.military.platoon.combat.support.log.skills.RecupererRemorqueurs" main="true">
                    <parameter name="pionRenforce">
                        <value>
                            <parameter>pionRenforce</parameter>
                        </value>
                    </parameter>
                    <parameter name="nbrRemorqueurs">
                        <value>
                            <parameter>nbrRemorqueurs</parameter>
                        </value>
                    </parameter>
                </skill>
                <skill name="france.military.platoon.combat.support.log.skills.PreterRemorqueurs">
                    <parameter name="pionRenforce">
                        <value>
                            <parameter>pionRenforce</parameter>
                        </value>
                    </parameter>
                    <parameter name="pionARenforcer">
                        <value>
                            <parameter>pionARenforcer</parameter>
                        </value>
                    </parameter>
                    <parameter name="nbrRemorqueurs">
                        <value>
                            <parameter>nbrRemorqueurs</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>