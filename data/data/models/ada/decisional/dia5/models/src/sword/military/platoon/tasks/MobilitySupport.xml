<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="sword.military.platoon.tasks.MobilitySupport" source-version="1.0.0" knowledge-class="sword.military.platoon.tasks.knowledges.MobilitySupport">
    <description>
        Supprime les obstacles sur les itinéraires alliés
    </description>
    <parameters>
        <parameter name="entities">
            <description>Les éléments à suivre.</description>
            <type>
                <list>
                    <class name="sword.military.knowledge.decisional.Reachable"/>
                </list>
            </type>
        </parameter>
    </parameters>
    <goal>
        <description>Appui à la mobilité : Dégager ou contourner les obstacles rencontrés par les alliés.</description>
    </goal>
    <stages>
        <stage label="Appui mobilite" permanent="true" disable-when-done="false">
            <description>Appui à la mobilité : dégager ou contourner les obstacles rencontrés.</description>
            <goal>
                <description>Appui à la mobilité : dégager ou contourner les obstacles rencontrés.</description>
            </goal>
            <skills>
                <skill name="sword.military.platoon.skills.MobilitySupport">
                    <parameter name="entities">
                        <value>
                            <parameter>entities</parameter>
                        </value>
                    </parameter>
                </skill>
                <skill name="sword.military.platoon.skills.actions.SharePerceptions">
                    <parameter name="unitsToSupport">
                        <value>
                            <parameter>entities</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>