<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="sword.military.platoon.coercition.tasks.FlankGuard" source-version="1.0.0" knowledge-class="sword.military.platoon.tasks.knowledges.MoveToward">
    <description>Flanc-garder une entité amie, face à des objectifs, à partir de positions telles que s'il faut rester proche des entités soutenues.</description>
    <parameters>
        <parameter name="entities">
            <description>les unités à flanc-garder</description>
            <type>
                <list>
                    <class name="sword.military.knowledge.decisional.Reachable"/>
                </list>
            </type>
        </parameter>
        <parameter name="positions">
            <description>Positions à partir desquelles il faut flanc-garder.</description>
            <type>
                <list>
                    <class name="sword.military.knowledge.decisional.Neutralizing"/>
                    <class name="sword.military.knowledge.decisional.Observing"/>
                    <class name="sword.military.knowledge.decisional.Reaching"/>
                </list>
            </type>
        </parameter>
    </parameters>
    <goal>
        <description>Surveiller les objectifs à partir des positions (engagement des éléments ennemis).</description>
    </goal>
    <stages>
        <stage label="Occupation des positions" permanent="true">
            <description>Appliquer des feux et observer l'objectif à partir de la position de couverture suivant l'unité à flanc-garder.</description>
            <goal>
                <description>Occuper les positions.</description>
            </goal>
            <let name="enemies">
                <value>
                    <call method="sword.military.queries.enemies.getEnemiesInRange">
                        <parameter name="probabilityToHit">
                            <value>
                                <number>0.5</number>
                            </value>
                        </parameter>
                    </call>
                </value>
            </let>
            <skills>
                <skill name="sword.military.platoon.coercition.skills.Engage" priority="0.2">
                    <parameter name="entities">
                        <value>
                            <parameter>enemies</parameter>
                        </value>
                    </parameter>
                    <parameter name="positions">
                        <value>
                            <parameter>positions</parameter>
                        </value>
                    </parameter>
                </skill>
                <skill name="sword.military.platoon.skills.primitives.StayClose" priority="0.8">
                    <parameter name="entities">
                        <value>
                            <parameter>entities</parameter>
                        </value>
                    </parameter>
                    <parameter name="positions">
                        <value>
                            <parameter>positions</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>