<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="sword.military.platoon.tasks.Cross" source-version="1.0.0" knowledge-class="sword.military.platoon.tasks.knowledges.Cross">
	<description>Mission de franchissment d'une coupure. Mouvement jusqu'au site de franchissement, puis jusqu'à la destination finale.</description>
	<parameters>
		<parameter name="crossingSite">
			<description>Les sites de franchissement</description>
			<type>
				<class name="sword.military.world.Object"/>
			</type>
		</parameter>
		<parameter name="meetingPoint">
			<description>Le point de rendez-vous de l'autre côté de la coupure.</description>
			<type>
				<class name="sword.military.knowledge.decisional.Reaching"/>
			</type>
		</parameter>
	</parameters>
	<stages>
		<stage label="Deplacement vers le point de rendez vous" disable-when-done="true">
			<skills>
				<skill name="sword.military.platoon.skills.GetThrough" main="true">
					<parameter name="crossingSite">
						<value>
							<parameter>crossingSite</parameter>
						</value>
					</parameter>
					<parameter name="meetingPoint">
						<value>
							<parameter>meetingPoint</parameter>
						</value>
					</parameter>
				</skill>
			</skills>
		</stage>
	</stages>
</task>