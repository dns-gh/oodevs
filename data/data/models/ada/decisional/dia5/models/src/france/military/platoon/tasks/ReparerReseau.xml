<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="france.military.platoon.tasks.ReparerReseau" source-version="1.0.0" knowledge-class="france.military.platoon.tasks.knowledges.DetruireReseau">
    <parameters>
        <parameter name="objective">
            <type>
                <class name="world.ResourceNetwork"/>
            </type>
        </parameter>
        <parameter name="meetingPoint">
            <type>
                <class name="properties.Reachable"/>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="Réparation du réseau">
            <skills>
                <skill name="agent.skills.ActivateNetwork" main="true">
                    <parameter name="resourceNetwork">
                        <value>
                            <parameter>objective</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
        <stage label="Déplacement vers la position de regroupement" disable-when-done="true">
            <skills>
                <skill name="agent.skills.MoveToward" main="true">
                    <parameter name="entities">
                        <value>
                            <list>
                                <parameter>meetingPoint</parameter>
                            </list>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>