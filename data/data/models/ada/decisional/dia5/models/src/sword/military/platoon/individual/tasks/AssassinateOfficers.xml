<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="sword.military.platoon.individual.tasks.AssassinateOfficers" source-version="1.0.0" knowledge-class="sword.military.platoon.individual.tasks.knowledges.AssassinateOfficers">
  <parameters>
    <parameter name="unit">
      <description>L'objectif de la mission. L'agent va assassiner les officiers présents dans l'unité passée en paramètre.</description>
      <type>
        <class name="sword.military.world.Platoon"/>
      </type>
    </parameter>
    <parameter name="meetingPoint">
      <type>
        <class name="sword.military.knowledge.decisional.Positionable"/>
      </type>
    </parameter>
  </parameters>
  <stages>
    <stage label="Assassinat">
      <description>Déplacement vers la cible 	et éxécution des officiers.</description>
      <skills>
        <skill name="sword.military.platoon.individual.skills.Assassinate" main="true">
          <parameter name="unit">
            <value>
              <parameter>unit</parameter>
            </value>
          </parameter>
        </skill>
      </skills>
    </stage>
    <stage label="Mouvement vers la position de repli" disable-when-done="true">
      <description>Mouvement vers la position de repli</description>
      <skills>
        <skill name="sword.military.platoon.skills.MoveToward" main="true">
          <parameter name="entities">
            <value>
              <list>
                <parameter>meetingPoint</parameter>
              </list>
            </value>
          </parameter>
        </skill>
      </skills>
    </stage>
  </stages>
</task>