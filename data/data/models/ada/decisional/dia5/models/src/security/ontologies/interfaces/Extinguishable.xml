<?xml version="1.0" encoding="UTF-8"?>
<interface xmlns="http://www.masagroup.net/directia/schemas/bm" name="security.ontologies.interfaces.Extinguishable" source-version="1.0.0" extends="sword.military.knowledge.decisional.Reachable">
  <description>Cette interface représente la notion d'extinction, par un moyen quelconque, d'un élément assujetti aux flammes. Suivant la nature de cet élément, il peut s'agir d'un incendie ou un simple feu.</description>
  <methods>
    <method name="canExtinguishIt">
      <description>Renvoie 'vrai' si l'agent peut agir sur l'élément pour l'éteindre.</description>
      <return>
        <type>
          <simple name="boolean"/>
        </type>
      </return>
    </method>
    <method name="extinguishIt">
      <return>
        <type>
          <simple name="boolean"/>
        </type>
      </return>
    </method>
    <method name="burningLevel">
      <description>Returns 0-100 value. 0 means extinguished.</description>
      <return>
        <type>
          <simple name="numeric"/>
        </type>
      </return>
    </method>
    <method name="areFlamesNearby">
      <return>
        <type>
          <simple name="boolean"/>
        </type>
      </return>
    </method>
  </methods>
  <predicates>
    <predicate name="isExtinguished"/>
  </predicates>
</interface>