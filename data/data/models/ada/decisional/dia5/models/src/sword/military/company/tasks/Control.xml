<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="sword.military.company.tasks.Control" source-version="1.0.0" knowledge-class="sword.military.company.tasks.knowledges.ControlEffect">
    <parameters>
        <parameter name="objectives">
            <type>
                <class name="sword.military.knowledge.Controlable"/>
            </type>
        </parameter>
        <parameter name="obstacles" nullable="true">
            <type>
                <list>
                    <class name="sword.military.knowledge.decisional.Buildable"/>
                </list>
            </type>
            <default>
                <nil/>
            </default>
        </parameter>
        <parameter name="companyTask">
            <type>
                <simple name="string"/>
            </type>
        </parameter>
        <parameter name="mainTasks">
            <type>
                <simple name="string"/>
            </type>
        </parameter>
        <parameter name="supportTasks">
            <type>
                <simple name="string"/>
            </type>
        </parameter>
        <parameter name="peiTasks">
            <type>
                <simple name="string"/>
            </type>
        </parameter>
        <parameter name="engineerTask" nullable="true">
            <description>La mission que l'on donne spécifiquement aux pions GEN.</description>
            <type>
                <simple name="string"/>
            </type>
            <default>
                <nil/>
            </default>
        </parameter>
        <parameter name="defaultTask">
            <description>La mission que l'on donne par défaut aux pions.</description>
            <type>
                <simple name="string"/>
            </type>
        </parameter>
        <parameter name="taskForSupporting">
            <description>La mission que l'on donne aux pions de SE pour aider un pion de PE en difficulté.</description>
            <type>
                <simple name="string"/>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="Contrôle">
            <skills>
                <skill name="sword.military.company.skills.Lead" main="true">
                    <parameter name="noCoordination">
                        <value>
                            <boolean>true</boolean>
                        </value>
                    </parameter>
                    <parameter name="companyTask">
                        <value>
                            <parameter>companyTask</parameter>
                        </value>
                    </parameter>
                    <parameter name="mainTasks">
                        <value>
                            <parameter>mainTasks</parameter>
                        </value>
                    </parameter>
                    <parameter name="supportTasks">
                        <value>
                            <parameter>supportTasks</parameter>
                        </value>
                    </parameter>
                    <parameter name="peiTasks">
                        <value>
                            <parameter>peiTasks</parameter>
                        </value>
                    </parameter>
                    <parameter name="taskForSupporting">
                        <value>
                            <parameter>taskForSupporting</parameter>
                        </value>
                    </parameter>
                    <parameter name="defaultTask">
                        <value>
                            <parameter>defaultTask</parameter>
                        </value>
                    </parameter>
                    <parameter name="engineerTask">
                        <value>
                            <parameter>engineerTask</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>