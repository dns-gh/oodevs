<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="france.military.platoon.tasks.Barrer" source-version="1.0.0" knowledge-class="agent.tasks.knowledges.Block">
    <description>Barrage de points (plus tard de directions dangereuses) à partir de positions.</description>
    <parameters>
        <parameter name="objectives">
            <description>Les objectifs à barrer</description>
            <type>
                <list>
                    <class name="world_concepts.Observable"/>
                </list>
            </type>
        </parameter>
        <parameter name="positions">
            <description>Positions à partir desquelles interdire</description>
            <type>
                <list>
                    <class name="world_concepts.Destroying"/>
                    <class name="world_concepts.Observing"/>
                </list>
            </type>
        </parameter>
        <parameter name="obstacles" nullable="true">
            <type>
                <list>
                    <class name="world_elements.Object"/>
                </list>
            </type>
            <default>
                <nil/>
            </default>
        </parameter>
        <parameter name="withImprovement">
            <description>Si la valeur est vraie, on continue la construction en valorisant l'objectif.</description>
            <type>
                <simple name="boolean"/>
            </type>
            <default>
                <boolean>false</boolean>
            </default>
        </parameter>
    </parameters>
    <goal>
        <description>Occupation de position intéressante pour barrer les objectifs</description>
    </goal>
    <next-task name="agent.tasks.Block">
        <parameter name="objectives">
            <value>
                <parameter>objectives</parameter>
            </value>
        </parameter>
        <parameter name="positions">
            <value>
                <parameter>positions</parameter>
            </value>
        </parameter>
        <parameter name="obstacles">
            <value>
                <parameter>obstacles</parameter>
            </value>
        </parameter>
        <parameter name="withImprovement">
            <value>
                <parameter>withImprovement</parameter>
            </value>
        </parameter>
    </next-task>
</task>