<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="france.military.platoon.tasks.DetruireReseauSouterrain" source-version="1.0.0" knowledge-class="france.military.platoon.tasks.knowledges.DetruireReseau">
    <parameters>
        <parameter name="network">
            <type>
                <class name="world_concepts.UndergroundNetwork"/>
            </type>
        </parameter>
        <parameter name="meetingPoint">
            <type>
                <class name="world_concepts.Reachable"/>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="Désactivation du réseau">
            <skills>
                <skill name="france.military.platoon.skills.DesactiverReseauSouterrain" main="true">
                    <parameter name="undergroundNetwork">
                        <value>
                            <parameter>network</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
        <stage label="Déplacement vers la position de regroupement" disable-when-done="true">
            <skills>
                <skill name="agent.skills.MoveToward" main="true">
                    <parameter name="entities">
                        <value>
                            <list>
                                <parameter>meetingPoint</parameter>
                            </list>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>