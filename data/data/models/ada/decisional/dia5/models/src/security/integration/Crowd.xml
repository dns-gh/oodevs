<?xml version="1.0" encoding="UTF-8"?>
<class xmlns="http://www.masagroup.net/directia/schemas/bm" name="security.integration.Crowd" source-version="1.0.0" extends="security.crowd.body.Crowd">
  <realizes>common.PhysicalBody</realizes>
  <realizes>sword.military.knowledge.Mountable</realizes>
  <methods>
    <method name="RC" abstract="false">
      <description>Action de rendre compte.</description>
      <argument>
        <type>
          <simple name="numeric"/>
        </type>
      </argument>
      <argument>
        <type>
          <class name="directia.core.Object"/>
        </type>
      </argument>
      <argument>
        <type>
          <class name="directia.core.Object"/>
        </type>
      </argument>
    </method>
    <method name="computeMovementCapability" abstract="false">
      <description>Méthode d'intégration qui retourne la valeur des capacités de mouvement de l'agent vers une position.</description>
      <argument name="position">
        <description>La position que l'agent souhaite rejoindre.</description>
        <type>
          <class name="sword.military.knowledge.decisional.Positionable"/>
        </type>
      </argument>
      <return>
        <description>Retourne la capacité de l'agent à utiliser et occuper la position, entre 0 et 100. La capacité vaut 0 si l'agent ne peut pas utiliser&#xD;
cette position pour le déplacement et l'occupation, renvoie 100 s'il peut parfaitement l'utiliser.&#xD;
&#xD;
L'implémentation par défaut proposer pour cette méthode utilise le module d'analyse terrain.&#xD;
D'une point de vue générale, toutes positions du terrain est une position utilisable par une Unité.&#xD;
 </description>
        <type>
          <simple name="numeric"/>
        </type>
      </return>
    </method>
    <method name="destroyMoveToItIntegration" abstract="false">
      <description>INTEGRATION de la destruction de l'action de mouvement spécifique à un platoon</description>
      <argument name="entity">
        <description>L'entité à rejoindre</description>
        <type>
          <class name="sword.military.knowledge.decisional.Reachable"/>
        </type>
      </argument>
      <return>
        <type>
          <simple name="boolean"/>
        </type>
      </return>
    </method>
    <method name="getPosition" abstract="false">
      <description>Fonction d'intégration</description>
    </method>
    <method name="getTasks" abstract="false">
      <return>
        <type>
          <list>
            <class name="common.Task"/>
          </list>
        </type>
      </return>
    </method>
    <method name="moveToItIntegration" abstract="false">
      <description>Action de mouvement</description>
      <argument name="entity">
        <description>L'entité à rejoindre</description>
        <type>
          <class name="sword.military.knowledge.decisional.Reachable"/>
        </type>
      </argument>
      <argument name="pathType">
        <description>Le paramètrage du calcul de l'itinéraire</description>
        <type>
          <simple name="numeric"/>
        </type>
      </argument>
    </method>
    <method name="orientateSensor" abstract="false">
      <description>INTEGRATION de l'action d'observation spécifique à un platoon</description>
      <argument name="entity">
        <description>L'entité à observer</description>
        <type>
          <class name="sword.military.knowledge.decisional.Observable"/>
        </type>
      </argument>
    </method>
    <method name="canDismount" abstract="false">
      <description>Renvoie vrai si l'élement peut débarquer.</description>
      <return>
        <type>
          <simple name="boolean"/>
        </type>
      </return>
    </method>
    <method name="canMount" abstract="false">
      <description>Renvoie vrai si l'élément peut embarquer.</description>
      <return>
        <type>
          <simple name="boolean"/>
        </type>
      </return>
    </method>
    <method name="dismount" abstract="false">
      <description>Action de débarquement de l'élément.</description>
      <return>
        <type>
          <simple name="boolean"/>
        </type>
      </return>
    </method>
    <method name="mount" abstract="false">
      <description>Action d'embarquement de l'élément.</description>
      <return>
        <type>
          <simple name="boolean"/>
        </type>
      </return>
    </method>
    <method name="getNearestReachingElementFor" abstract="false">
      <argument>
        <type>
          <class name="sword.military.knowledge.decisional.Reachable"/>
        </type>
      </argument>
    </method>
  </methods>
  <predicates>
    <predicate name="isDismounted" abstract="false">
      <description>Renvoie vrai si l'élément est débarqué.</description>
    </predicate>
    <predicate name="isMounted" abstract="false">
      <description>Renvoie vrai si l'élément est embarqué.</description>
    </predicate>
  </predicates>
  <attributes>
    <attribute name="tasks">
      <type>
        <list>
          <class name="common.Task"/>
        </list>
      </type>
    </attribute>
  </attributes>
</class>