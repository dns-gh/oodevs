<?xml version="1.0" encoding="UTF-8"?>
<skill xmlns="http://www.masagroup.net/directia/schemas/bm" name="france.military.platoon.skills.Harass" source-version="1.0.0">
    <parameters>
        <parameter name="destroyingPositions" nullable="true">
            <description>Position d'observation de la poition ou harceler.</description>
            <type>
                <list>
                    <class name="properties.Neutralizing"/>
                </list>
            </type>
            <default>
                <nil/>
            </default>
        </parameter>
        <parameter name="entities" nullable="true">
            <description>Entitées à harceler</description>
            <type>
                <list>
                    <class name="properties.Neutralizable"/>
                </list>
            </type>
            <default>
                <nil/>
            </default>
        </parameter>
        <parameter name="harassObjective">
            <description>Position (point, zone, BU) ou l'on veut harceler les enemis. Tout ennemi qui passe près de cette élement sera, si possible, engagé.&#xD;
L'agent va donc observer cette position en mesure d'engager les éléments ennemis identifiés.&#xD;
</description>
            <type>
                <class name="properties.Positionable"/>
            </type>
        </parameter>
    </parameters>
    <links>
        <link name="moveToward" skill="agent.skills.MoveToward"/>
    </links>
    <resources>
        <resource name="agent.resources.EngageCapacity" variable="engage"/>
    </resources>
</skill>