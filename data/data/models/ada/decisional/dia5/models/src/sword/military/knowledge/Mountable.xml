<?xml version="1.0" encoding="UTF-8"?>
<interface xmlns="http://www.masagroup.net/directia/schemas/bm" name="sword.military.knowledge.Mountable" source-version="1.0.0">
  <description>Représente tout élément de combat capable de débarquer/embarquer.</description>
  <methods>
    <method name="mount">
      <description>Action d'embarquement de l'élément.</description>
      <return>
        <type>
          <simple name="boolean"/>
        </type>
      </return>
    </method>
    <method name="dismount">
      <description>Action de débarquement de l'élément.</description>
      <return>
        <type>
          <simple name="boolean"/>
        </type>
      </return>
    </method>
    <method name="canMount">
      <description>Renvoie vrai si l'élément peut embarquer.</description>
      <return>
        <type>
          <simple name="boolean"/>
        </type>
      </return>
    </method>
    <method name="canDismount">
      <description>Renvoie vrai si l'élement peut débarquer.</description>
      <return>
        <type>
          <simple name="boolean"/>
        </type>
      </return>
    </method>
    <method name="getNearestReachingElementFor">
      <argument>
        <type>
          <class name="sword.military.knowledge.decisional.Reachable"/>
        </type>
      </argument>
    </method>
  </methods>
  <predicates>
    <predicate name="isMounted">
      <description>Renvoie vrai si l'élément est embarqué.</description>
    </predicate>
    <predicate name="isDismounted">
      <description>Renvoie vrai si l'élément est débarqué.</description>
    </predicate>
  </predicates>
</interface>