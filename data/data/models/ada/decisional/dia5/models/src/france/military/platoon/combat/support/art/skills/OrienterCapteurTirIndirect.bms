rootnode {

    connections = { skill.links.activateRadar, skill.links.observe, skill.nodes.AcquireIntelligence },

    activate = function (self )
        local Activate = Activate
        Activate( skill.links.observe, 1, { entity = self.params.zone } )
        Activate( skill.links.activateRadar, 1, { area = self.params.zone } )
    end,
}

node "AcquireIntelligence"
{
    select = function( self )
        self.params.area:getIntelligence()
    end,
}