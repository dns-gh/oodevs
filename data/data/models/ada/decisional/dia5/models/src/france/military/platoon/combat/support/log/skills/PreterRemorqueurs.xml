            <description>Unité qui prête ses remorqueurs</description>
            <type>
                <class name="world_elements.PlatoonAlly"/>
            </type>
            <default>
                <nil/>
            </default>
        </parameter>
        <parameter name="pionARenforcer">
            <description>Unité renforcée en remorqueurs</description>
            <type>
                <class name="world_elements.PlatoonAlly"/>
            </type>
        </parameter>
        <parameter name="nbrRemorqueurs">
            <description>Nombre de remorqueurs à prêter</description>
            <type>
                <simple name="numeric"/>
            </type>
        </parameter>
    </parameters>
    <goal>
        <description>Prêter des remorqueurs à une autre unité</description>
    </goal>
    <body-type>
        <class name="world_concepts.HumanFactors"/>
