<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="france.military.platoon.tasks.TransporterFoule" source-version="1.0.0" knowledge-class="france.military.platoon.tasks.knowledges.TransporterFoule">
    <parameters>
        <parameter name="crowd">
            <description>Foule à transporter</description>
            <type>
                <class name="properties.Transportable"/>
            </type>
        </parameter>
        <parameter name="loadingPoint">
            <description>Position d'embarquement</description>
            <type>
                <class name="properties.Loading"/>
            </type>
        </parameter>
        <parameter name="destination">
            <description>Position d'arrivee</description>
            <type>
                <class name="properties.Loading"/>
            </type>
        </parameter>
        <parameter name="meetingPoint">
            <description>Poin ou aller une fois toutes les unites transportees</description>
            <type>
                <class name="properties.Reachable"/>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="Transport de foule">
            <description>Transporte la concentration de la foule qui est proches du point d'embarquemenet  successivement suivant les capacité du pion.</description>
            <skills>
                <skill name="france.military.platoon.skills.TransporterFoule" main="true">
                    <parameter name="crowd">
                        <value>
                            <parameter>crowd</parameter>
                        </value>
                    </parameter>
                    <parameter name="loadingPoint">
                        <value>
                            <parameter>loadingPoint</parameter>
                        </value>
                    </parameter>
                    <parameter name="destination">
                        <value>
                            <parameter>destination</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
        <stage label="Déplacement vers le point de regroupement" disable-when-done="true">
            <description>se deplace vers le point de rendez vous donne en parametre</description>
            <skills>
                <skill name="agent.skills.MoveAlong" main="true">
                    <parameter name="entities">
                        <value>
                            <list>
                                <parameter>meetingPoint</parameter>
                            </list>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>