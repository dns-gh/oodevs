<?xml version="1.0" encoding="UTF-8"?>
<interface xmlns="http://www.masagroup.net/directia/schemas/bm" name="sword.military.knowledge.decisional.Building" source-version="1.0.0" extends="sword.military.knowledge.decisional.Positionable">
  <description></description>
  <methods>
    <method name="buildEfficiency">
      <argument name="objective">
        <type>
          <class name="sword.military.knowledge.decisional.Buildable"/>
        </type>
      </argument>
      <return>
        <description>Valeur comprise entre 0 et 1 qui détermine l'efficacité d'une position pour construire un element.</description>
        <type>
          <simple name="numeric"/>
        </type>
      </return>
    </method>
  </methods>
  <predicates>
    <predicate name="isBuildingFor">
      <description>Renvoie vrai si l'élément est une position permettant de construire l'objectif.</description>
      <argument>
        <type>
          <class name="sword.military.knowledge.decisional.Buildable"/>
        </type>
      </argument>
    </predicate>
  </predicates>
</interface>