<?xml version="1.0" encoding="UTF-8"?>
<role xmlns="http://www.masagroup.net/directia/schemas/bm" name="sword.military.crowd.roles.Crowd" source-version="1.0.0">
	<description>Un agent &quot;Foule&quot;, acteur d'animation pour stimuler les agents militaires.</description>
	<body-type>
		<class name="sword.military.crowd.world.classes.CrowdBody"/>
	</body-type>
	<skills>
		<skill name="sword.military.crowd.skills.Attack"/>
		<skill name="sword.military.crowd.skills.GetDecon"/>
		<skill name="sword.military.crowd.skills.Damage"/>
		<skill name="sword.military.crowd.skills.actions.MoveTo"/>
		<skill name="sword.military.crowd.skills.MoveAlong"/>
		<skill name="sword.military.platoon.skills.miscellaneous.ManageFragOrder"/>
		<skill name="sword.military.crowd.skills.miscellaneous.ManageDomination">
			<modifier name="nonLethalWeaponsAuthorized">
				<value>2</value>
			</modifier>
			<modifier name="lethalWeaponsAuthorized">
				<value>4</value>
			</modifier>
		</skill>
		<skill name="sword.military.crowd.skills.Demonstrate"/>
	</skills>
	<resources>
		<resource name="sword.military.crowd.ressources.Move"/>
	</resources>
	<default-task label="Prise en compte des ordres de conduite" permanent="true">
		<description>Gestion par d√©faut des ordres de conduite</description>
		<skills>
			<skill name="sword.military.platoon.skills.miscellaneous.ManageFragOrder">
				<parameter name="fragOrders">
					<value>
						<call method="sword.military.queries.miscellaneous.getFragOrders"/>
					</value>
				</parameter>
			</skill>
			<skill name="sword.military.crowd.skills.miscellaneous.ManageDomination"/>
		</skills>
	</default-task>
</role>