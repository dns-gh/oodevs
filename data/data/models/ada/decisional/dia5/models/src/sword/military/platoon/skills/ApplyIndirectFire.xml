<?xml version="1.0" encoding="UTF-8"?>
<skill xmlns="http://www.masagroup.net/directia/schemas/bm" name="sword.military.platoon.skills.ApplyIndirectFire" source-version="1.0.0">
	<description>Executer des ordres de tir à partir de la position courante</description>
	<parameters>
		<parameter name="entities">
			<description>Les éléments à détruire.</description>
			<type>
				<list>
					<class name="sword.military.knowledge.IndirectFireable"/>
				</list>
			</type>
		</parameter>
		<parameter name="interventionType">
			<type>
				<simple name="numeric"/>
			</type>
		</parameter>
		<parameter name="munition">
			<type>
				<simple name="numeric"/>
			</type>
		</parameter>
		<parameter name="canReceiveUnexpectedOrder">
			<type>
				<simple name="boolean"/>
			</type>
		</parameter>
	</parameters>
	<goal>
		<description>Executer les ordres de tirs.</description>
	</goal>
	<resources>
		<resource name="sword.military.platoon.resources.IndirectFireCapacity" variable="indirectFire">
			<description>Capacité physiques d'engagement à distance</description>
		</resource>
	</resources>
</skill>