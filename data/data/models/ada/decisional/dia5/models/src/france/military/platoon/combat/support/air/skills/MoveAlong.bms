rootnode 
{
    connections = { skill.links.MoveAndTakePosition },
    
    create = function( self )
        self.itinerary = integration.creerItineraireAPartirListePoint( self.params.objectives )
        
        if not self.params.avoidObstacles then
            self.pathType = eTypeItiDeminage
        elseif self.params.infiltrationMode then
            self.pathType = eTypeItiInfiltration 
        elseif self.params.criminalMoving then
            self.pathType = eTypeItiCriminal
        elseif self.params.nbcMove then
            self.pathType = eTypeItiNBC
        else
            self.pathType = eTypeItiMouvement
        end
    end,
    
    activate = function( self )
        Activate( skill.links.MoveAndTakePosition, 1, { entity = self.itinerary, pathType = self.pathType } )
    end,
}