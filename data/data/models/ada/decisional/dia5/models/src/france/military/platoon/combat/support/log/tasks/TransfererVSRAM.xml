<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="france.military.platoon.combat.support.log.tasks.TransfererVSRAM" source-version="1.0.0">
    <parameters>
        <parameter name="pionRenforce">
            <description>Unité alliée qui donne des ambulances&#xD;
</description>
            <type>
                <class name="world.PlatoonAlly"/>
            </type>
        </parameter>
        <parameter name="pionARenforcer">
            <description>Unité alliée qui est renforcée par des ambulances</description>
            <type>
                <class name="world.PlatoonAlly"/>
            </type>
        </parameter>
        <parameter name="nbrAmbulances">
            <description>Nombre d'ambulances à transférer</description>
            <type>
                <simple name="numeric"/>
            </type>
        </parameter>
    </parameters>
    <goal>
        <description>Ordre de conduite LOG transférer remorqueurs</description>
    </goal>
    <stages>
        <stage label="Transférer remorqueurs" disable-when-done="true">
            <skills>
                <skill name="france.military.platoon.combat.support.log.skills.RecupererVSRAM" main="true">
                    <parameter name="pionRenforce">
                        <value>
                            <parameter>pionRenforce</parameter>
                        </value>
                    </parameter>
                    <parameter name="nbrAmbulances">
                        <value>
                            <parameter>nbrAmbulances</parameter>
                        </value>
                    </parameter>
                </skill>
                <skill name="france.military.platoon.combat.support.log.skills.PreterVSRAM">
                    <parameter name="pionRenforce">
                        <value>
                            <parameter>pionRenforce</parameter>
                        </value>
                    </parameter>
                    <parameter name="pionARenforcer">
                        <value>
                            <parameter>pionARenforcer</parameter>
                        </value>
                    </parameter>
                    <parameter name="nbrAmbulances">
                        <value>
                            <parameter>nbrAmbulances</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>