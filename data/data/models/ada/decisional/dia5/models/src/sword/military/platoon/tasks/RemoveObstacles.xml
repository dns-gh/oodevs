<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="sword.military.platoon.tasks.RemoveObstacles" source-version="1.0.0" knowledge-class="france.military.platoon.combat.support.engineer.tasks.knowledges.DegagerObstacles">
    <parameters>
        <parameter name="obstacles">
            <description>Les éléments à dégager.</description>
            <type>
                <list>
                    <class name="sword.military.knowledge.decisional.Removable"/>
                </list>
            </type>
        </parameter>
        <parameter name="meetingPoint" nullable="true">
            <description>Point de regroupement vers lequel se déplacera l'unité en fin de mission.</description>
            <type>
                <class name="sword.military.knowledge.decisional.Reachable"/>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="Dégager obstacles" permanent="false">
            <skills>
                <skill name="sword.military.platoon.skills.RemoveWithReinforcement" main="true">
                    <parameter name="avoidObstacles">
                        <value>
                            <boolean>true</boolean>
                        </value>
                    </parameter>
                    <parameter name="entities">
                        <value>
                            <parameter>obstacles</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
        <stage label="Déplacement vers le point de regroupement" disable-when-done="true">
            <description>Se déplace vers le position de regroupement afin de s'éloigner de l'obstacle.</description>
            <skills>
                <skill name="sword.military.platoon.skills.MoveToward" main="true">
                    <parameter name="entities">
                        <value>
                            <list>
                                <parameter>meetingPoint</parameter>
                            </list>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>