<?xml version="1.0" encoding="UTF-8"?>
<role xmlns="http://www.masagroup.net/directia/schemas/bm" name="sword.military.company.roles.Company" source-version="1.0.0">
	<description>Une entité décisionnelle quelconque dans un contexte militaire.</description>
	<body-type>
		<class name="sword.military.world.Company"/>
	</body-type>
	<skills>
		<skill name="sword.military.company.skills.Lead"/>
		<skill name="sword.military.company.skills.Ressuply"/>
		<skill name="sword.military.company.skills.SequentialLead"/>
		<skill name="sword.military.company.skills.SupportManager"/>
		<skill name="sword.military.company.skills.RelieveManager"/>
		<skill name="sword.military.company.skills.IssueTask"/>
		<skill name="sword.military.company.skills.IssueTaskGeneral"/>
		<skill name="sword.military.company.skills.CoordinationManager"/>
		<skill name="sword.military.company.skills.ManageFragOrder"/>
		<skill name="sword.military.company.skills.LeadDelay"/>
		<skill name="sword.military.company.skills.Relieve"/>
		<skill name="sword.military.company.skills.ReactToNBC"/>
		<skill name="sword.military.company.skills.SynchronizeRC"/>
		<skill name="sword.military.company.skills.AssignSETask"/>
		<skill name="sword.military.company.skills.LeadGEN"/>
		<skill name="sword.military.company.skills.SupportManagerForGen"/>
		<skill name="sword.military.company.skills.LeadWithOrder"/>
		<skill name="sword.military.company.skills.LeadDrone"/>
		<skill name="sword.military.company.skills.CoordinationManagerBetweenEchelon"/>
	</skills>
	<default-task label="Prise en compte des ordres de conduite et de la sauvegarde." permanent="true">
		<description>Gestion par défaut des ordres de conduite</description>
		<goal>
			<description>Gestion et affectation des ordres de conduite</description>
		</goal>
		<skills>
			<skill name="sword.military.company.skills.ManageFragOrder">
				<parameter name="fragOrders">
					<value>
						<call method="sword.military.queries.miscellaneous.getFragOrders"/>
					</value>
				</parameter>
				<parameter name="entities">
					<value>
						<call method="sword.military.company.queries.getCommanding">
							<parameter name="role">
								<value>
									<string>none</string>
								</value>
							</parameter>
							<parameter name="withPC">
								<value>
									<boolean>true</boolean>
								</value>
							</parameter>
						</call>
					</value>
				</parameter>
			</skill>
			<skill name="sword.military.company.skills.ReactToNBC"/>
		</skills>
	</default-task>
</role>