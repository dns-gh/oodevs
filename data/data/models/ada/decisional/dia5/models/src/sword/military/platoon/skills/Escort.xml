<?xml version="1.0" encoding="UTF-8"?>
<skill xmlns="http://www.masagroup.net/directia/schemas/bm" name="sword.military.platoon.skills.Escort" source-version="1.0.0">
    <parameters>
        <parameter name="friendUnit">
            <description>L'unité amie que l'on veut escorter.</description>
            <type>
                <class name="sword.military.world.PlatoonAlly"/>
            </type>
        </parameter>
        <parameter name="objective">
            <description>L'endroit ou l'on veut escorter l'unité.</description>
            <type>
                <class name="sword.military.knowledge.decisional.Reachable"/>
            </type>
        </parameter>
        <parameter name="escortedUnitMissionName">
            <description>La mission a assigner à l'unité amie que l'on escorte. Cette mission doit être une mission de mouvement vers un objectif. Seul le nom qualificatif peut changer.</description>
            <type>
                <simple name="string"/>
            </type>
            <default>
                <string>sword.military.platoon.tasks.Follow</string>
            </default>
        </parameter>
    </parameters>
    <body-type>
        <class name="sword.military.world.PlatoonAlly"/>
    </body-type>
    <links>
        <link name="moveToward" skill="sword.military.platoon.skills.MoveToward"/>
    </links>
</skill>