<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="france.military.platoon.tasks.Escorter" source-version="1.0.0" knowledge-class="sword.military.platoon.tasks.knowledges.Escort">
    <parameters>
        <parameter name="objective">
            <description>L'élément à escorter.</description>
            <type>
                <class name="sword.military.knowledge.decisional.Reachable"/>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="Escorter une unité" permanent="true">
            <skills>
                <skill name="france.military.platoon.skills.Escort" priority="0.1">
                    <parameter name="objective">
                        <value>
                            <parameter>objective</parameter>
                        </value>
                    </parameter>
                </skill>
                <skill name="sword.military.platoon.coercition.skills.Engage" priority="10000.0">
                    <parameter name="entities">
                        <value>
                            <call method="sword.military.queries.enemies.getEnemiesInRange">
                                <parameter name="probabilityToHit">
                                    <value>
                                        <number>0.0010</number>
                                    </value>
                                </parameter>
                            </call>
                        </value>
                    </parameter>
                </skill>
                <skill name="sword.military.platoon.skills.actions.SharePerceptions">
                    <parameter name="unitsToSupport">
                        <value>
                            <list>
                                <parameter>objective</parameter>
                            </list>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>