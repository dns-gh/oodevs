<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="france.military.platoon.terrorism.tasks.CommettreAttentat" source-version="1.0.0" knowledge-class="agent.tasks.knowledges.Attack">
    <parameters>
        <parameter name="objective">
            <description>Cible contre laquelle l'attentat est commis.</description>
            <type>
                <class name="world_concepts.Attackable"/>
            </type>
        </parameter>
        <parameter name="dotation">
            <description>Munition  a utiliser pour commettre l'attentat.</description>
            <type>
                <simple name="numeric"/>
            </type>
        </parameter>
        <parameter name="position">
            <description>Position vers laquelle on se replie apres avoir commis l'attentat.</description>
            <type>
                <class name="world_concepts.Reachable"/>
            </type>
        </parameter>
    </parameters>
    <goal>
        <description>Commettre un attentat contre la cible, puis se replier vers une position de repli.</description>
    </goal>
    <next-task name="agent.tasks.AsyAttack">
        <parameter name="objective">
            <value>
                <parameter>objective</parameter>
            </value>
        </parameter>
        <parameter name="position">
            <value>
                <parameter>position</parameter>
            </value>
        </parameter>
        <parameter name="dotation">
            <value>
                <parameter>dotation</parameter>
            </value>
        </parameter>
    </next-task>
</task>