<?xml version="1.0" encoding="UTF-8"?>
<skill xmlns="http://www.masagroup.net/directia/schemas/bm" name="france.military.platoon.combat.support.engineer.skills.Reparer" source-version="1.0.0">
    <description>Repair objetcs</description>
    <parameters>
        <parameter name="entities">
            <description>element to repair</description>
            <type>
                <class name="world_concepts.Buildable"/>
            </type>
        </parameter>
        <parameter name="positions" nullable="true">
            <type>
                <list>
                    <class name="world_concepts.Building"/>
                </list>
            </type>
            <default>
                <nil/>
            </default>
        </parameter>
    </parameters>
    <goal>
        <description>The skill's goal is to repair the tactical object</description>
    </goal>
    <body-type>
        <class name="world_elements.PlatoonAlly"/>
    </body-type>
    <links>
        <link name="moveAndTakePosition" skill="agent.skills.actions.MoveAndTakePosition"/>
        <link name="observe" skill="agent.skills.actions.Observe"/>
        <link name="dismount" skill="agent.skills.actions.Dismount"/>
    </links>
    <resources>
        <resource name="agent.resources.BuildCapacity" variable="buildCapacity"/>
    </resources>
    <feedbacks>
        <feedback name="elementRepaired">
            <argument name="element">
                <type>
                    <class name="world_concepts.Buildable"/>
                </type>
            </argument>
        </feedback>
        <feedback name="elementFailed">
            <description>L'element element n'a pas pu etre réparé.</description>
            <argument name="element">
                <type>
                    <class name="world_concepts.Buildable"/>
                </type>
            </argument>
            <argument name="reason">
                <description>Raison pour lquelle on n'a pas pu réparé.</description>
                <type>
                    <simple name="numeric"/>
                </type>
            </argument>
        </feedback>
    </feedbacks>
</skill>