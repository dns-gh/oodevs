<?xml version="1.0" encoding="UTF-8"?>
<class xmlns="http://www.masagroup.net/directia/schemas/bm" name="common.Task" source-version="1.0.0" abstract="true" extends="directia.core.model.Task">
    <realizes>world_concepts.Commandable</realizes>
    <methods>
        <method name="ponderateEffectsForCommandEfficiency">
            <description>Pondère l'efficacité de la connaissance pour mener à bien une mission
            à l'aide d'une de ses tâches.
            </description>
            <argument name="role">
                <description>Rôle de l'agent.</description>
                <type>
                    <class name="world_concepts.Commanding"/>
                </type>
            </argument>
            <argument name="individualTask">
                <description>La tâche de l'agent.</description>
                <type>
                    <class name="world_concepts.Commandable"/>
                </type>
            </argument>
            <argument name="threat">
                <description>La menace a prendre en compte pour calculer l'efficacité d'un agent à effectuer la tâche.</description>
                <type>
                    <list>
                        <class name="world_concepts.Safeguardable"/>
                    </list>
                </type>
            </argument>
            <argument name="params">
                <description>Les paramètres de la tâche.</description>
                <type>
                    <list>
                        <class name="directia.core.Object"/>
                    </list>
                </type>
            </argument>
            <argument name="effects">
                <description>Table des effets.</description>
                <type>
                    <simple name="numeric"/>
                </type>
            </argument>
        </method>
        <method name="sendItTo">
            <description>Action d'envoi de la connaissance à une entité.

            Envoie un ordre de conduite à l'entité.
            </description>
            <argument name="entities">
                <description>L'entité qui doit recevoir la connaissance.</description>
                <type>
                    <class name="world_concepts.Commanding"/>
                </type>
            </argument>
            <argument name="objectives">
                <description>Les objectifs de la connaissance.</description>
                <type>
                    <list>
                        <class name="directia.core.Object"/>
                    </list>
                </type>
            </argument>
            <argument name="threat">
                <description>La menace à transférer.</description>
                <type>
                    <list>
                        <class name="world_concepts.Safeguardable"/>
                    </list>
                </type>
            </argument>
        </method>
        <method name="computeEffectsLevels" abstract="true">
            <return>
                <type>
                    <class name="common.TaskEffects"/>
                </type>
            </return>
        </method>
    </methods>
</class>