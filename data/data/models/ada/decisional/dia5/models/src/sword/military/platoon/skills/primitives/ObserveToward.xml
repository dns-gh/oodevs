<?xml version="1.0" encoding="UTF-8"?>
<skill xmlns="http://www.masagroup.net/directia/schemas/bm" name="sword.military.platoon.skills.primitives.ObserveToward" source-version="1.0.0">
    <description>Déplacement simple vers une position permettant d'observer (percevoir) les éléments passés en paramètre.</description>
    <parameters>
        <parameter name="entities">
            <description>Les éléments que l'on veut percevoir.</description>
            <type>
                <list>
                    <class name="sword.military.knowledge.decisional.Observable"/>
                </list>
            </type>
        </parameter>
        <parameter name="positions" nullable="true">
            <description>Positions vers lesquelles l'entité peut se déplacer pour observer les élements passés en paramètre.</description>
            <type>
                <list>
                    <class name="sword.military.knowledge.decisional.Observing"/>
                </list>
            </type>
            <default>
                <nil/>
            </default>
        </parameter>
    </parameters>
    <modifiers/>
    <links>
        <link name="moveAndTakePosition" skill="sword.military.platoon.skills.actions.MoveAndTakePosition">
            <description>Lien vers le skill moveAndTakePosition</description>
        </link>
        <link name="observe" skill="sword.military.platoon.skills.actions.Observe">
            <description>Lien vers le skill observe</description>
        </link>
        <link name="indirectFire" skill="sword.military.platoon.skills.ApplyIndirectFire"/>
        <link name="dismount" skill="sword.military.platoon.skills.actions.Dismount"/>
    </links>
</skill>