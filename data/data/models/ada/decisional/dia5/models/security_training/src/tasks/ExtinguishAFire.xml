<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="tasks.ExtinguishAFire" source-version="1.0.0">
    <description></description>
    <parameters>
        <parameter name="fire">
            <description></description>
            <type>
                <class name="agent.ontology.interfaces.Fire"/>
            </type>
        </parameter>
        <parameter name="garagePosition">
            <description></description>
            <type>
                <class name="agent.ontology.interfaces.Destination"/>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="Moving toward fire">
            <description></description>
            <skills>
                <skill name="behaviors.skills.primitives.Extinguish" main="true">
                    <parameter name="fires">
                        <value>
                            <list>
                                <parameter>fire</parameter>
                            </list>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
        <stage label="Moving toward garage position" disable-when-done="true">
            <skills>
                <skill name="behaviors.skills.primitives.Reach" main="true">
                    <parameter name="destination">
                        <value>
                            <parameter>garagePosition</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>