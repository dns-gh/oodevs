<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="tasks.DeactivateResourceNodes" source-version="1.0.0">
    <parameters>
        <parameter name="resourceNodes">
            <description>starting to deactivate resource nodes</description>
            <type>
                <list>
                    <class name="ontology.classes.concretes.ResourceNode"/>
                </list>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="Moving to disabled resource node" disable-when-done="true">
            <skills>
                <skill name="behaviors.skills.primitives.Disable" main="true">
                    <parameter name="systems">
                        <value>
                            <parameter>resourceNodes</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>