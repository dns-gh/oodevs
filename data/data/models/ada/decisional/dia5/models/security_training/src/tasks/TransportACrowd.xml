<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="tasks.TransportACrowd" source-version="1.0.0">
    <description>To transport a entire 'Crowd' toward a given destination. &#xD;
Depending on its crowd transport capacity, agent will make as many round trips as necessary between 'loadingPosition' and the 'targetDestination'.</description>
    <parameters>
        <parameter name="crowd">
            <description>The crowd to transport.</description>
            <type>
                <class name="ontology.classes.Crowd"/>
            </type>
        </parameter>
        <parameter name="loadingPosition">
            <description>The crowd's concentration position where to load the elements of the crowd.</description>
            <type>
                <class name="agent.world.Destination"/>
            </type>
        </parameter>
        <parameter name="targetDestination">
            <description>The position where to transport the crowd.</description>
            <type>
                <class name="agent.world.Destination"/>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="Crowd transport started" disable-when-done="true">
            <description>To transport the given Crowd on the target destination.</description>
            <skills>
                <skill name="behaviors.skills.TransportACrowd" main="true">
                    <parameter name="crowd">
                        <value>
                            <parameter>crowd</parameter>
                        </value>
                    </parameter>
                    <parameter name="finalDestination">
                        <value>
                            <parameter>targetDestination</parameter>
                        </value>
                    </parameter>
                    <parameter name="loadingPosition">
                        <value>
                            <parameter>loadingPosition</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>