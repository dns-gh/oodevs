<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="tasks.UndoConfineUrbanBlocksWithinArea" source-version="1.0.0">
    <description>To lift the confinement of population located into a set of urban blocks in a given area.&#xD;
&#xD;
If no urban block exists in the area, the mission failed.</description>
    <parameters>
        <parameter name="area">
            <description>The area in which urban blocks are retreived to lift the confinement of population.</description>
            <type>
                <class name="ontology.classes.concretes.Area"/>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="Undo Confinement" disable-when-done="true">
            <skills>
                <skill name="behaviors.skills.primitives.UndoConfine" main="true">
                    <parameter name="populatedAreas">
                        <value>
                            <call method="ontology.queries.GetUrbanBlocksWithinArea">
                                <parameter name="area">
                                    <value>
                                        <parameter>area</parameter>
                                    </value>
                                </parameter>
                            </call>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>