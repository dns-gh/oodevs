<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="tasks.BuildAnObjectFromAPosition" source-version="1.0.0">
    <parameters>
        <parameter name="plannedWork">
            <description>The object to create.</description>
            <type>
                <class name="ontology.classes.PlannedWork"/>
            </type>
        </parameter>
        <parameter name="position">
            <description>The position to reach before create the object.</description>
            <type>
                <class name="agent.world.Destination"/>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="Move to planned object">
            <description>To move and prepare the attack.</description>
            <skills>
                <skill name="behaviors.skills.primitives.Reach" main="true">
                    <parameter name="destination">
                        <value>
                            <parameter>plannedWork</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
        <stage label="move to meeting point">
            <description>Move to position.</description>
            <skills>
                <skill name="behaviors.skills.primitives.Reach" main="true">
                    <parameter name="destination">
                        <value>
                            <parameter>position</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
        <stage label="object creation" disable-when-done="true">
            <skills>
                <skill name="skills.CreateAWork" main="true">
                    <parameter name="work">
                        <value>
                            <parameter>plannedWork</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>