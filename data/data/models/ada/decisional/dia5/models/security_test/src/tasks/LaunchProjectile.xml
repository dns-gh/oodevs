<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="tasks.LaunchProjectile" source-version="1.0.0">
    <parameters>
        <parameter name="target">
            <description>The target to launch projectile on.</description>
            <type>
                <class name="agent.world.Target"/>
            </type>
        </parameter>
        <parameter name="launchPosition" nullable="true">
            <description>The position from which agent unit launch the projectile.</description>
            <type>
                <class name="agent.world.Destination"/>
            </type>
            <default>
                <nil/>
            </default>
        </parameter>
        <parameter name="quantity">
            <description>The quantity of resourse to use per time unit.</description>
            <type>
                <simple name="numeric"/>
            </type>
            <default>
                <number>2.0</number>
            </default>
        </parameter>
        <parameter name="dotationType">
            <description>The type of projectile (resource dotation type) to launch to hit the target.</description>
            <type>
                <any/>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="LaunchProjectile" disable-when-done="true">
            <skills>
                <skill name="behaviors.skills.primitives.LaunchProjectile" main="true">
                    <parameter name="target">
                        <value>
                            <parameter>target</parameter>
                        </value>
                    </parameter>
                    <parameter name="launchPosition">
                        <value>
                            <parameter>launchPosition</parameter>
                        </value>
                    </parameter>
                    <parameter name="quantity">
                        <value>
                            <parameter>quantity</parameter>
                        </value>
                    </parameter>
                    <parameter name="dotationType">
                        <value>
                            <parameter>dotationType</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>