<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="tasks.DecontaminateArea" source-version="1.0.0">
    <parameters>
        <parameter name="areas">
            <description>A list of areas. </description>
            <type>
                <list>
                    <class name="agent.world.ContaminationArea"/>
                </list>
            </type>
        </parameter>
        <parameter name="selfDecontamination">
            <type>
                <simple name="boolean"/>
            </type>
            <default>
                <boolean>false</boolean>
            </default>
        </parameter>
        <parameter name="equipNRBCProtection">
            <type>
                <simple name="boolean"/>
            </type>
            <default>
                <boolean>true</boolean>
            </default>
        </parameter>
    </parameters>
    <stages>
        <stage label="DecontaminateArea" disable-when-done="true">
            <skills>
                <skill name="agent.behaviors.skills.primitives.DecontaminateAreas" main="true">
                    <parameter name="equipNRBCProtection">
                        <value>
                            <parameter>equipNRBCProtection</parameter>
                        </value>
                    </parameter>
                    <parameter name="areas">
                        <value>
                            <parameter>areas</parameter>
                        </value>
                    </parameter>
                    <parameter name="selfDecontaminate">
                        <value>
                            <parameter>selfDecontamination</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>