<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="tasks.LaunchProjectileOnTargets" source-version="1.0.0">
    <parameters>
        <parameter name="targets">
            <description>The target to launch projectile on.</description>
            <type>
                <list>
                    <class name="agent.world.Target"/>
                </list>
            </type>
        </parameter>
        <parameter name="quantity">
            <description>The quantity of resourse to use per time unit.</description>
            <type>
                <simple name="numeric"/>
            </type>
            <default>
                <number>10.0</number>
            </default>
        </parameter>
        <parameter name="dotationType">
            <description>The type of projectile (resource dotation type) to launch to hit the target.</description>
            <type>
                <any/>
            </type>
        </parameter>
        <parameter name="position" nullable="true">
            <type>
                <class name="agent.world.Destination"/>
            </type>
            <default>
                <nil/>
            </default>
        </parameter>
    </parameters>
    <stages>
        <stage label="LaunchProjectileOnTargets" disable-when-done="true">
            <skills>
                <skill name="agent.behaviors.skills.LaunchProjectileOnTargets" main="true">
                    <parameter name="targets">
                        <value>
                            <parameter>targets</parameter>
                        </value>
                    </parameter>
                    <parameter name="quantity">
                        <value>
                            <parameter>quantity</parameter>
                        </value>
                    </parameter>
                    <parameter name="dotationType">
                        <value>
                            <parameter>dotationType</parameter>
                        </value>
                    </parameter>
                    <parameter name="position">
                        <value>
                            <parameter>position</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>