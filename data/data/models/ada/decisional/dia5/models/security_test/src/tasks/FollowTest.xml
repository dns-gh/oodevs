<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="tasks.FollowTest" source-version="1.0.0">
    <parameters>
        <parameter name="agents">
            <type>
                <list>
                    <class name="agent.ontology.classes.Agent"/>
                </list>
            </type>
        </parameter>
        <parameter name="positions" nullable="true">
            <type>
                <list>
                    <class name="agent.world.Destination"/>
                </list>
            </type>
        </parameter>
        <parameter name="minDistance">
            <type>
                <simple name="numeric"/>
            </type>
            <default>
                <number>0.0</number>
            </default>
        </parameter>
    </parameters>
    <stages>
        <stage label="following agents" permanent="true">
            <skills>
                <skill name="agent.behaviors.skills.Follow">
                    <parameter name="elementsToFollow">
                        <value>
                            <parameter>agents</parameter>
                        </value>
                    </parameter>
                    <parameter name="positions">
                        <value>
                            <parameter>positions</parameter>
                        </value>
                    </parameter>
                    <parameter name="minDistance">
                        <value>
                            <parameter>minDistance</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>