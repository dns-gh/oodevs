<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="tasks.OrderToFollow" source-version="1.0.0">
    <parameters>
        <parameter name="agents">
            <type>
                <list>
                    <class name="agent.ontology.classes.Teammate"/>
                </list>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="starting to make agents follow" disable-when-done="true">
            <skills>
                <skill name="agent.behaviors.skills.primitives.OrderToFollow" main="true">
                    <parameter name="followers">
                        <value>
                            <parameter>agents</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>