<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="tasks.CreateThenOperate" source-version="1.0.0">
    <parameters>
        <parameter name="plannedWork">
            <description>The plannified work to create and operate.</description>
            <type>
                <class name="ontology.classes.PlannedWork"/>
            </type>
        </parameter>
        <parameter name="removeWork">
            <description>Define if planned work that is beeing operated needs to be destroyed at the end of the skill.</description>
            <type>
                <simple name="boolean"/>
            </type>
            <default>
                <boolean>false</boolean>
            </default>
        </parameter>
        <parameter name="instantaneously">
            <description>If this parameter is set to 'true', the agent will decide to create and build the given element instantaneously, without any physical capability considerations.</description>
            <type>
                <simple name="boolean"/>
            </type>
            <default>
                <boolean>false</boolean>
            </default>
        </parameter>
    </parameters>
    <stages>
        <stage label="CreateThenOperate" permanent="true">
            <skills>
                <skill name="behaviors.skills.CreateThenOperate">
                    <parameter name="plannedWork">
                        <value>
                            <parameter>plannedWork</parameter>
                        </value>
                    </parameter>
                    <parameter name="removeWork">
                        <value>
                            <parameter>removeWork</parameter>
                        </value>
                    </parameter>
                    <parameter name="instantaneously">
                        <value>
                            <parameter>instantaneously</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>