<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="tasks.Heal" source-version="1.0.0">
    <parameters>
        <parameter name="wounded">
            <description>The set of 'wounded' objects to heal.</description>
            <type>
                <list>
                    <class name="agent.world.Wounded"/>
                </list>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="Heal" disable-when-done="true">
            <skills>
                <skill name="agent.behaviors.skills.primitives.Heal" main="true">
                    <parameter name="woundedUnits">
                        <value>
                            <parameter>wounded</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>