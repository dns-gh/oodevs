<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="company.tasks.Transporter" source-version="1.0.0" knowledge-class="company.tasks.knowledges.TransportEffect">
    <parameters>
        <parameter name="units">
            <description>Unites a transporter</description>
            <type>
                <list>
                    <class name="properties.Loadable"/>
                </list>
            </type>
        </parameter>
        <parameter name="loadingPoint">
            <description>Position d'embarquement</description>
            <type>
                <class name="properties.Loading"/>
            </type>
        </parameter>
        <parameter name="destination">
            <description>Position d'arrivee</description>
            <type>
                <class name="properties.Loading"/>
            </type>
        </parameter>
        <parameter name="meetingPoint">
            <description>Poin ou aller une fois toutes les unites transportees</description>
            <type>
                <class name="properties.Reachable"/>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="Transport">
            <skills>
                <skill name="commander.skills.Lead" main="true">
                    <parameter name="noCoordination">
                        <value>
                            <boolean>true</boolean>
                        </value>
                    </parameter>
                    <parameter name="companyTask">
                        <value>
                            <string>company.tasks.Transporter</string>
                        </value>
                    </parameter>
                    <parameter name="mainTasks">
                        <value>
                            <string>platoon.tasks.Transporter</string>
                        </value>
                    </parameter>
                    <parameter name="supportTasks">
                        <value>
                            <string>platoon.tasks.FaireMouvement</string>
                        </value>
                    </parameter>
                    <parameter name="defaultTask">
                        <value>
                            <string>platoon.tasks.FaireMouvement</string>
                        </value>
                    </parameter>
                    <parameter name="taskForSupporting">
                        <value>
                            <string>platoon.tasks.FaireMouvement</string>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>