<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="platoon.combat.support.engineer.tasks.ConstruireCamps" source-version="1.0.0" knowledge-class="platoon.combat.support.engineer.tasks.knowledges.ConstruireCamps">
    <description>Construire un object tactique</description>
    <parameters>
        <parameter name="entities">
            <description>Les objets Ã  construire</description>
            <type>
                <list>
                    <class name="world.Object"/>
                </list>
            </type>
        </parameter>
        <parameter name="meetingPoint">
            <type>
                <class name="properties.Reachable"/>
            </type>
        </parameter>
    </parameters>
    <goal>
        <description>Construire les objets.</description>
    </goal>
    <stages>
        <stage label="deplacement le lieu de contruction">
            <skills>
                <skill name="agent.skills.BuildWithReinforcement" main="true">
                    <parameter name="entities">
                        <value>
                            <parameter>entities</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
        <stage label="deplacement vers la position de repli" disable-when-done="true">
            <skills>
                <skill name="agent.skills.MoveToward" main="true">
                    <parameter name="entities">
                        <value>
                            <list>
                                <parameter>meetingPoint</parameter>
                            </list>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>