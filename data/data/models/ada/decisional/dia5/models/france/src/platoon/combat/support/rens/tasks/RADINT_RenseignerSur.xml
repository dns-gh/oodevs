<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="platoon.combat.support.rens.tasks.RADINT_RenseignerSur" source-version="1.0.0" knowledge-class="platoon.combat.support.rens.tasks.knowledges.ROEM_RenseignerSur">
    <description>Activation de radar sur une zone</description>
    <parameters>
        <parameter name="area">
            <description>Zone de recherche.</description>
            <type>
                <class name="world.Area"/>
            </type>
        </parameter>
    </parameters>
    <goal>
        <description>Renseignement dans la zone de recherche en hauteur de vol (enregistrement de données).</description>
    </goal>
    <stages>
        <stage label="Décoller" permanent="false">
            <skills>
                <skill name="platoon.combat.support.air.skills.Decoller" main="true" priority="1.0">
                    <parameter name="HauteurDeVol">
                        <value>
                            <number>100.0</number>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
        <stage label="Renseignement dans la zone de recherche" permanent="false">
            <skills>
                <skill name="platoon.combat.support.rens.skills.RADINT_RenseignerSur" main="true">
                    <parameter name="area">
                        <value>
                            <parameter>area</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
        <stage label="Attérissage" disable-when-done="true">
            <skills>
                <skill name="platoon.combat.support.air.skills.Atterrir" main="true" priority="1.0"/>
            </skills>
        </stage>
    </stages>
</task>