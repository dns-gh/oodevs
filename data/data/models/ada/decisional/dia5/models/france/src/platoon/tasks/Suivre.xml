<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="platoon.tasks.Suivre" source-version="1.0.0" knowledge-class="agent.tasks.knowledges.Follow">
    <description>Suivre les agents passés en paramètre.</description>
    <parameters>
        <parameter name="objectives">
            <description>Les unités à suivre.</description>
            <type>
                <list>
                    <class name="properties.Motile"/>
                </list>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="suivre" permanent="true">
            <skills>
                <skill name="agent.skills.Follow">
                    <parameter name="entities">
                        <value>
                            <parameter>objectives</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>