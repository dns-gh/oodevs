<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="platoon.combat.support.nrbc.tasks.DecontaminerZone" source-version="1.0.0" knowledge-class="platoon.combat.support.nrbc.tasks.knoweldges.DecontaminerZone">
    <description>Décontaminer une zone</description>
    <parameters>
        <parameter name="area">
            <description>Zone à décontaminer</description>
            <type>
                <class name="world.Area"/>
            </type>
        </parameter>
    </parameters>
    <goal>
        <description>Décontaminer une zone</description>
    </goal>
    <stages>
        <stage label="Se déplacer vers la zone">
            <description>Se déplacer vers la zone à décontaminer</description>
            <goal>
                <description>Se déplacer vers la zone à décontaminer</description>
            </goal>
            <skills>
                <skill name="agent.skills.MoveAlong" main="true" priority="0.5">
                    <parameter name="entities">
                        <value>
                            <list>
                                <parameter>area</parameter>
                            </list>
                        </value>
                    </parameter>
                    <parameter name="NBCMove">
                        <value>
                            <boolean>true</boolean>
                        </value>
                    </parameter>
                </skill>
                <skill name="agent.skills.actions.EquipNBCOutfit" priority="0.5"/>
            </skills>
        </stage>
        <stage label="Décontamination" disable-when-done="true">
            <description>Décontaminer une zone</description>
            <goal>
                <description>Décontaminer une zone</description>
            </goal>
            <skills>
                <skill name="platoon.combat.support.nrbc.skills.DecontaminerZone" main="true" priority="0.5">
                    <parameter name="area">
                        <value>
                            <parameter>area</parameter>
                        </value>
                    </parameter>
                </skill>
                <skill name="agent.skills.actions.EquipNBCOutfit" priority="0.5"/>
            </skills>
        </stage>
    </stages>
</task>