<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="platoon.combat.support.air.tasks.Suivre" source-version="1.0.0" knowledge-class="agent.tasks.knowledges.Follow">
    <parameters>
        <parameter name="objective">
            <description>Les éléments à suivre.</description>
            <type>
                <class name="properties.Reachable"/>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="Decoller" permanent="false">
            <skills>
                <skill name="agent.skills.actions.TakeOff" main="true">
                    <parameter name="height">
                        <value>
                            <number>6500.0</number>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
        <stage label="Suivre.">
            <skills>
                <skill name="agent.skills.primitives.StayClose" main="true">
                    <parameter name="entities">
                        <value>
                            <list>
                                <parameter>objective</parameter>
                            </list>
                        </value>
                    </parameter>
                    <parameter name="positions">
                        <value>
                            <call method="queries.getPositionsToFollow">
                                <parameter name="elementsToFollow">
                                    <value>
                                        <list>
                                            <parameter>objective</parameter>
                                        </list>
                                    </value>
                                </parameter>
                                <parameter name="dynamic">
                                    <value>
                                        <boolean>true</boolean>
                                    </value>
                                </parameter>
                                <parameter name="distanceMin">
                                    <value>
                                        <number>50.0</number>
                                    </value>
                                </parameter>
                            </call>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
        <stage label="Aterrissage" disable-when-done="true">
            <skills>
                <skill name="agent.skills.actions.Land" main="true"/>
            </skills>
        </stage>
    </stages>
</task>