<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="platoon.combat.support.rens.tasks.ROIM_RenseignerSur" source-version="1.0.0" knowledge-class="platoon.combat.support.rens.tasks.knowledges.ROIM_RenseignerSur">
	<description>Activation de radar sur une zone</description>
	<parameters>
		<parameter name="ficelleDeVol">
			<description>Itinéraire de vol.</description>
			<type>
				<list>
					<class name="world.Point"/>
				</list>
			</type>
		</parameter>
	</parameters>
	<goal>
		<description>Renseigner  tout le long de l'itineraire après la mise en oeuvre du drône.</description>
	</goal>
	<stages>
		<stage label="Décoller" permanent="false">
			<skills>
				<skill name="platoon.combat.support.air.skills.Decoller" main="true">
					<parameter name="HauteurDeVol">
						<value>
							<number>1000.0</number>
						</value>
					</parameter>
				</skill>
			</skills>
		</stage>
		<stage label="Renseignement sur l'itinéraire de vol">
			<skills>
				<skill name="platoon.combat.support.rens.skills.ROIM_RenseignerSur" main="true">
					<parameter name="ficelleDeVol">
						<value>
							<parameter>ficelleDeVol</parameter>
						</value>
					</parameter>
				</skill>
			</skills>
		</stage>
		<stage label="Aterrissage" permanent="false">
			<skills>
				<skill name="platoon.combat.support.air.skills.Atterrir" main="true"/>
			</skills>
		</stage>
	</stages>
</task>