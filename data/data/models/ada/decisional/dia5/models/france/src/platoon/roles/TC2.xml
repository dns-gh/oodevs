<?xml version="1.0" encoding="UTF-8"?>
<role xmlns="http://www.masagroup.net/directia/schemas/bm" name="platoon.roles.TC2" source-version="1.0.0" extends="platoon.roles.Pion">
    <skills>
        <skill name="platoon.combat.support.log.skills.AutoDeploy"/>
    </skills>
    <resources/>
    <default-task label="Deploiement automatique">
        <let name="fragOrdersToManage">
            <value>
                <call method="queries.getFragOrders"/>
            </value>
        </let>
        <skills>
            <skill name="platoon.combat.support.log.skills.AutoDeploy" main="true" priority="0.01"/>
            <skill name="agent.skills.ManageFragOrder">
                <parameter name="fragOrders">
                    <value>
                        <parameter>fragOrdersToManage</parameter>
                    </value>
                </parameter>
            </skill>
        </skills>
    </default-task>
</role>