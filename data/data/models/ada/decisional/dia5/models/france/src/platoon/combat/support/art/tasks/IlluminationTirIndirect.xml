<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="platoon.combat.support.art.tasks.IlluminationTirIndirect" source-version="1.0.0" knowledge-class="platoon.combat.support.art.tasks.knowledges.CoordinateIllumination">
    <parameters>
        <parameter name="objective">
            <description>L'élément à illuminer et à tirer.</description>
            <type>
                <class name="properties.Illuminatable"/>
                <class name="properties.IndirectFireable"/>
            </type>
        </parameter>
        <parameter name="allie" nullable="true">
            <description>L'illuminateur chargé d'illulminer la cible.</description>
            <type>
                <list>
                    <class name="world.PlatoonAlly"/>
                </list>
            </type>
            <default>
                <call method="queries.getEntitiesInMyKnowledgeGroupCanIlluminate"/>
            </default>
        </parameter>
        <parameter name="position">
            <description>Position de déploiement de la batterie de tir.</description>
            <type>
                <class name="properties.Reachable"/>
            </type>
        </parameter>
        <parameter name="munition">
            <type>
                <simple name="numeric"/>
            </type>
        </parameter>
        <parameter name="interventionType">
            <type>
                <simple name="numeric"/>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="Coordinate illumination, deploy and indirect fire" disable-when-done="true">
            <skills>
                <skill name="platoon.skills.CoordinateIlluminationAndIndirectFire" main="true">
                    <parameter name="entities">
                        <value>
                            <list>
                                <parameter>objective</parameter>
                            </list>
                        </value>
                    </parameter>
                    <parameter name="illuminateally">
                        <value>
                            <parameter>allie</parameter>
                        </value>
                    </parameter>
                    <parameter name="firepositions">
                        <value>
                            <list>
                                <parameter>position</parameter>
                            </list>
                        </value>
                    </parameter>
                    <parameter name="munition">
                        <value>
                            <parameter>munition</parameter>
                        </value>
                    </parameter>
                    <parameter name="interventionType">
                        <value>
                            <parameter>interventionType</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>