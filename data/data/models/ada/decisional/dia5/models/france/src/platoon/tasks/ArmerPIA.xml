<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="platoon.tasks.ArmerPIA" source-version="1.0.0" knowledge-class="platoon.tasks.knowledges.ArmerPIA">
    <description>Surveiller une direction</description>
    <parameters>
        <parameter name="objective">
            <type>
                <class name="properties.Observable"/>
            </type>
        </parameter>
        <parameter name="positions">
            <type>
                <list>
                    <class name="properties.Observing"/>
                </list>
            </type>
        </parameter>
    </parameters>
    <goal>
        <description>Obtenir du renseignement</description>
    </goal>
      <stages>
        <stage label="observation" permanent="true">
            <skills>
                <skill name="agent.skills.primitives.ObserveToward">
                    <parameter name="entities">
                        <value>
                            <list>
                                <parameter>objective</parameter>
                            </list>
                        </value>
                    </parameter>
                    <parameter name="positions">
                        <value>
                            <parameter>positions</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>