rootnode
{
    connections = { skill.links.observeToward,  skill.links.activateRadar },
  
    done = function( self ) 
       self.arrived = true
    end,
    
    activate = function( self )
        if meKnowledge:isPosted() then
             Activate( skill.links.activateRadar, 1, { area = self.params.area, typeRadar = eRadarType_Radar} )
        end
        Activate( skill.links.observeToward, 1, { entities = { self.params.area } } )
    end,
}