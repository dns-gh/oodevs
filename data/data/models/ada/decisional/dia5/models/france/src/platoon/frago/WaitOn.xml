<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="platoon.frago.WaitOn" source-version="1.0.0" knowledge-class="agent.tasks.knowledges.WaitOn">
	<description>Ordre de conduite de poste sur les objectifs.</description>
	<parameters>
		<parameter name="objectives">
			<description>Les objectifs sur lesquels se poster.</description>
			<type>
				<list>
					<class name="properties.Reachable"/>
				</list>
			</type>
		</parameter>
	</parameters>
	<goal>
		<description>S'arreter.</description>
	</goal>
	<stages>
		<stage label="Arret" permanent="true">
			<description>Se déplacer vers les objectifs.</description>
			<goal>
				<description>Occuper les objectifs à tout prix.</description>
			</goal>
			<skills>
				<skill name="agent.skills.MoveToward" priority="1000.0">
					<parameter name="entities">
						<value>
							<parameter>objectives</parameter>
						</value>
					</parameter>
				</skill>
			</skills>
		</stage>
	</stages>
</task>