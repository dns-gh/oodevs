<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="platoon.tasks.Interdire" source-version="1.0.0" knowledge-class="agent.tasks.knowledges.Deny">
    <description>Interdiction de points à partir de positions.</description>
    <parameters>
        <parameter name="objectives">
            <description>Les objectifs à interdire</description>
            <type>
                <list>
                    <class name="properties.Observable"/>
                </list>
            </type>
        </parameter>
        <parameter name="positions">
            <description>Positions à partir desquelles interdire</description>
            <type>
                <list>
                    <class name="properties.Destroying"/>
                    <class name="properties.Observing"/>
                </list>
            </type>
        </parameter>
        <parameter name="obstacles" nullable="true">
            <type>
                <list>
                    <class name="world.Object"/>
                </list>
            </type>
            <default>
                <nil/>
            </default>
        </parameter>
        <parameter name="threats">
            <description>Des élements fâce aux quels interdire, pouvant faire objet d'une menace</description>
            <type>
                <list>
                    <class name="properties.Observable"/>
                </list>
            </type>
        </parameter>
        <parameter name="withImprovement">
            <description>Si la valeur est vraie, on continue la construction en valorisant l'objectif.</description>
            <type>
                <simple name="boolean"/>
            </type>
            <default>
                <boolean>false</boolean>
            </default>
        </parameter>
    </parameters>
    <goal>
        <description>Occupation de position intéressante pour observer les objectifs</description>
    </goal>
    <next-task name="agent.tasks.Deny">
        <parameter name="objectives">
            <value>
                <parameter>threats</parameter>
            </value>
        </parameter>
        <parameter name="positions">
            <value>
                <parameter>positions</parameter>
            </value>
        </parameter>
        <parameter name="obstacles">
            <value>
                <parameter>obstacles</parameter>
            </value>
        </parameter>
        <parameter name="withImprovement">
            <value>
                <parameter>withImprovement</parameter>
            </value>
        </parameter>
    </next-task>
</task>