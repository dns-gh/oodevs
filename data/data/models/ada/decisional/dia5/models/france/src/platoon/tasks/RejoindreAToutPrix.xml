<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="platoon.tasks.RejoindreAToutPrix" source-version="1.0.0" knowledge-class="agent.tasks.knowledges.GoTo">
    <parameters>
        <parameter name="objectif">
            <type>
                <class name="properties.Reachable"/>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="Ordre de mouvement vers les objectifs" permanent="false" disable-when-done="true">
            <description>Déplacement direct vers l'un des objectifs passés en paramètre.</description>
            <skills>
                <skill name="agent.skills.MoveToward" main="true" priority="1000.0">
                    <parameter name="entities">
                        <value>
                            <list>
                                <parameter>objectif</parameter>
                            </list>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>