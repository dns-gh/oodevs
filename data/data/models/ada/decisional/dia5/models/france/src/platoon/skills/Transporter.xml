<?xml version="1.0" encoding="UTF-8"?>
<skill xmlns="http://www.masagroup.net/directia/schemas/bm" name="platoon.skills.Transporter" source-version="1.0.0">
    <parameters>
        <parameter name="units">
            <description>Unies a transporter.</description>
            <type>
                <list>
                    <class name="properties.Transportable"/>
                </list>
            </type>
        </parameter>
        <parameter name="loadingPoint">
            <description>Position d'embarquement.</description>
            <type>
                <class name="properties.Loading"/>
            </type>
        </parameter>
        <parameter name="destination">
            <description>Position ou transporter les unites</description>
            <type>
                <class name="properties.Loading"/>
            </type>
        </parameter>
        <parameter name="onlyLoadable" nullable="true">
            <type>
                <simple name="boolean"/>
            </type>
            <default>
                <boolean>false</boolean>
            </default>
        </parameter>
    </parameters>
    <body-type>
        <class name="world.PlatoonAlly"/>
    </body-type>
    <links>
        <link name="moveToward" skill="platoon.skills.MoveAlong"/>
    </links>
    <resources>
        <resource name="platoon.resources.CapaciteEmbarquement" variable="loadcapacity"/>
    </resources>
</skill>