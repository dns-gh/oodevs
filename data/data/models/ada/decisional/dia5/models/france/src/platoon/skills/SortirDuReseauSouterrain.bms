-- **************************************************************************** 
-- Activate network
-- ****************************************************************************
rootnode 
{
    connections = { skill.links.moveToward },
    
   -- -------------------------------------------------------------------------------- 
    -- Feedbacks
    -- --------------------------------------------------------------------------------
    done = function( self ) -- done from moveToward
        Feedback( self.feedbacks.done )
    end,

    -- -------------------------------------------------------------------------------- 
    -- Init
    -- --------------------------------------------------------------------------------
    create = function( self )
        self.exitDone = false
        myself.alreadySend = false
    end,

    -- -------------------------------------------------------------------------------- 
    -- Move outside the netWork .
    -- --------------------------------------------------------------------------------
    activate = function( self )
        if not self.exitDone then
          self.exitDone = integration.ExitFromUndergroundNetwork()
        end
        local Activate = Activate
        Activate( skill.links.moveToward, 1, { entities = { self.params.objective } } )
    end
}