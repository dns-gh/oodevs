<?xml version="1.0" encoding="UTF-8"?>
<skill xmlns="http://www.masagroup.net/directia/schemas/bm" name="platoon.skills.CoordinateIlluminationAndIndirectFire" source-version="1.0.0">
	<description>Coordonne l'illumination entre le tireur et l'illuminateur d'une cible en vue d'un tir indirect permettant au tireur de se déployer</description>
	<parameters>
		<parameter name="entities">
			<description>Les éléments à illuminer et à tirer.</description>
			<type>
				<list>
					<class name="properties.Illuminatable"/>
					<class name="properties.IndirectFireable"/>
				</list>
			</type>
		</parameter>
		<parameter name="illuminateally" nullable="true">
			<description>L'illuminateur chargé d'illuminer la cible.</description>
			<type>
				<list>
					<class name="world.PlatoonAlly"/>
				</list>
			</type>
		</parameter>
		<parameter name="firepositions">
			<description>Positions de déploiement de la batterie de tir.</description>
			<type>
				<list>
					<class name="properties.Reachable"/>
				</list>
			</type>
		</parameter>
		<parameter name="munition">
			<type>
				<simple name="numeric"/>
			</type>
		</parameter>
		<parameter name="interventionType">
			<type>
				<simple name="numeric"/>
			</type>
		</parameter>
	</parameters>
	<modifiers/>
	<links>
		<link name="EnsureIndirectFire" skill="agent.skills.EnsureIndirectFire">
			<description>Lien vers le skill EnsureIndirectFire</description>
		</link>
		<link name="GiveOrderIlluminate" skill="platoon.skills.GiveOrderIlluminate">
			<description>Lien vers le skill GiveOrderIlluminate</description>
		</link>
	</links>
	<resources/>
</skill>
