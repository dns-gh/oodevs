<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="platoon.combat.support.air.tasks.EffectuerRaid" source-version="1.0.0">
    <parameters>
        <parameter name="objectives">
            <type>
                <list>
                    <class name="properties.Reachable"/>
                </list>
            </type>
        </parameter>
        <parameter name="area">
            <type>
                <class name="world.Area"/>
            </type>
        </parameter>
        <parameter name="munitions">
            <type>
                <simple name="numeric"/>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="Decoller" permanent="false">
            <skills>
                <skill name="agent.skills.actions.TakeOff" main="true">
                    <parameter name="height">
                        <value>
                            <number>1000.0</number>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
        <stage label="Infiltration" permanent="false">
            <skills>
                <skill name="agent.skills.MoveAlong" main="true">
                    <parameter name="entities">
                        <value>
                            <parameter>objectives</parameter>
                        </value>
                    </parameter>
                    <parameter name="infiltrationMode">
                        <value>
                            <boolean>true</boolean>
                        </value>
                    </parameter>
                    <parameter name="avoidObstacles">
                        <value>
                            <boolean>true</boolean>
                        </value>
                    </parameter>
                </skill>
                <skill name="agent.skills.ApplyIndirectFire">
                    <parameter name="quantity">
                        <value>
                            <number>1.0</number>
                        </value>
                    </parameter>
                    <parameter name="dotationType">
                        <value>
                            <parameter>munitions</parameter>
                        </value>
                    </parameter>
                    <parameter name="entities">
                        <value>
                            <call method="queries.getEnemiesInArea">
                                <parameter name="areas">
                                    <value>
                                        <list>
                                            <parameter>area</parameter>
                                        </list>
                                    </value>
                                </parameter>
                            </call>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
        <stage label="Aterrissage" disable-when-done="true">
            <skills>
                <skill name="agent.skills.actions.Land" main="true"/>
            </skills>
        </stage>
    </stages>
</task>