<?xml version="1.0" encoding="UTF-8"?>
<skill xmlns="http://www.masagroup.net/directia/schemas/bm" name="platoon.combat.support.air.skills.MoveAlong" source-version="1.0.0">
	<parameters>
		<parameter name="objectives">
			<type>
				<list>
					<class name="properties.Reachable"/>
				</list>
			</type>
		</parameter>
		<parameter name="infiltrationMode">
			<description>Définit le mode de déplacement, infiltration ou normal (valeur par défaut).</description>
			<type>
				<simple name="boolean"/>
			</type>
			<default>
				<boolean>false</boolean>
			</default>
		</parameter>
		<parameter name="avoidObstacles" nullable="true">
			<description>Définit le mode de déplacement, en évitant les obstacles ou normal (valeur par défaut).</description>
			<type>
				<simple name="boolean"/>
			</type>
			<default>
				<boolean>true</boolean>
			</default>
		</parameter>
	</parameters>
	<links>
		<link name="MoveAndTakePosition" skill="agent.skills.actions.MoveAndTakePosition"/>
	</links>
</skill>