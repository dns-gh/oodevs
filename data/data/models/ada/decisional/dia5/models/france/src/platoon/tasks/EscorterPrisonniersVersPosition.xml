<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="platoon.tasks.EscorterPrisonniersVersPosition" source-version="1.0.0" knowledge-class="platoon.tasks.knowledges.EscorterPrisonniersVersPosition">
    <parameters>
        <parameter name="position">
            <type>
                <class name="properties.Loading"/>
            </type>
        </parameter>
        <parameter name="entities">
            <type>
                <list>
                    <class name="world.Platoon"/>
                </list>
            </type>
        </parameter>
    </parameters>
    <goal>
        <description>Escorter des prisonniers vers une position</description>
    </goal>
    <stages>
        <stage label="Déplacement vers les réfugiés.">
            <skills>
                <skill name="agent.skills.TransportPrisoners" main="true">
                    <parameter name="platoons">
                        <value>
                            <parameter>entities</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
        <stage label="Déplacement vers la position" disable-when-done="true">
            <skills>
                <skill name="agent.skills.primitives.Unload" main="true">
                    <parameter name="entities">
                        <value>
                            <parameter>entities</parameter>
                        </value>
                    </parameter>
                    <parameter name="positions">
                        <value>
                            <list>
                                <parameter>position</parameter>
                            </list>
                        </value>
                    </parameter>
                </skill>
                <skill name="agent.skills.UnloadTransportedUnits">
                    <parameter name="entities">
                        <value>
                            <parameter>entities</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>