<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.tasks_engineer.OpenRoute" source-version="1.0.0" knowledge-class="agent.tasks_knowledge.OpenRoute">
    <description>
        Ouvrir un itinéraire.
    </description>
    <parameters>
        <parameter name="objectives">
            <description>L'itinéraire est défini par une liste de point de passage obligé.</description>
            <type>
                <list>
                    <class name="world_concepts.Positionable"/>
                </list>
            </type>
        </parameter>
    </parameters>
    <goal>
        <description>Ouvrir un itinéraire : dégager ou contourner les obstacles rencontrés.</description>
    </goal>
    <stages>
        <stage label="Ouverture d'itinéraire" disable-when-done="true">
            <description>Ouvrir un itinéraire : dégager ou contourner les obstacles rencontrés.</description>
            <goal>
                <description>Ouvrir un itinéraire : dégager ou contourner les obstacles rencontrés.</description>
            </goal>
            <skills>
                <skill name="agent.skills.MoveAlong" main="true" priority="0.1">
                    <parameter name="entities">
                        <value>
                            <parameter>objectives</parameter>
                        </value>
                    </parameter>
                    <parameter name="avoidObstacles">
                        <value>
                            <boolean>false</boolean>
                        </value>
                    </parameter>
                </skill>
                <skill name="agent.skills.Bypass" priority="0.9">
                    <parameter name="avoidObstacles">
                        <value>
                            <boolean>false</boolean>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>