<?xml version="1.0" encoding="UTF-8"?>
<skill xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.skills.primitives.Improve" source-version="1.0.0">
    <description>Valoriser des objets
</description>
    <parameters>
        <parameter name="entities">
            <description>Les éléments à valoriser</description>
            <type>
                <list>
                    <class name="properties.Improvable"/>
                </list>
            </type>
        </parameter>
    </parameters>
    <goal>
        <description>Valoriser des objets tactiques</description>
    </goal>
    <links>
        <link name="moveAndTakePosition" skill="agent.skills.actions.MoveAndTakePosition"/>
        <link name="observe" skill="agent.skills.actions.Observe"/>
        <link name="dismount" skill="agent.skills.actions.Dismount"/>
    </links>
    <resources>
        <resource name="agent.resources.BuildCapacity" variable="buildCapacity"/>
    </resources>
    <feedbacks>
        <feedback name="elementFailed">
            <description>L'element element n'a pas pue etre valorise.</description>
            <argument name="element">
                <type>
                    <class name="properties.Improvable"/>
                </type>
            </argument>
            <argument name="reason">
                <description>Le compte rendu indiquant pourquoi on n'a pas pu valoriser.</description>
                <type>
                    <simple name="numeric"/>
                </type>
            </argument>
        </feedback>
        <feedback name="elementImproved">
            <description>L'element element a ete valorise.</description>
            <argument name="element">
                <type>
                    <class name="properties.Improvable"/>
                </type>
            </argument>
        </feedback>
        <feedback name="elementCancelled">
            <description>L'elemennt element n'a pas ete fini a cause d'une annulation.</description>
            <argument name="element">
                <type>
                    <class name="properties.Improvable"/>
                </type>
            </argument>
        </feedback>
        <feedback name="elementNotImprovable">
            <description>L'element n'est pas valorisable</description>
            <argument name="element">
                <type>
                    <class name="properties.Buildable"/>
                </type>
            </argument>
        </feedback>
        <feedback name="elementNotActivated">
            <description>L'élément n'est pas activé.</description>
            <argument name="element">
                <type>
                    <class name="properties.Activable"/>
                </type>
            </argument>
        </feedback>
    </feedbacks>
</skill>