<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.tasks.Neutralize" source-version="1.0.0" knowledge-class="agent.tasks.knowledges.Destroy">
	<description>Mission de neutralisation PAR LE FEU. L'effet principal est la mise hors serice des entités passées en paramètre. Pour un agent, il s'agit donc de le rendre non opérationnel (destruction tactique).</description>
	<parameters>
		<parameter name="entities">
			<type>
				<list>
					<class name="properties.Neutralizable"/>
				</list>
			</type>
		</parameter>
	</parameters>
	<stages>
		<stage label="Neutralisation" permanent="false" disable-when-done="true">
			<description>Mise en oeuvre du skill &quot;neutralize&quot; pour atteindre des position de neutralisation et neutraliser les objectifs.</description>
			<goal>
				<description>Neutraliser les objectifs.</description>
			</goal>
			<skills>
				<skill name="agent.skills.primitives.Neutralize" main="true">
					<parameter name="entities">
						<value>
							<parameter>entities</parameter>
						</value>
					</parameter>
					<parameter name="positions">
						<value>
							<call method="queries.getPositionsToNeutralize">
								<parameter name="elementsToNeutralize">
									<value>
										<parameter>entities</parameter>
									</value>
								</parameter>
							</call>
						</value>
					</parameter>
				</skill>
			</skills>
		</stage>
	</stages>
</task>