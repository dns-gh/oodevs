<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.tasks.Scout" source-version="1.0.0">
    <description>Mission de reconnaissance des entité de combat. Cette mission n'a explicitement pas de caractère offensif. Dans cette mission, l'agent ne décidera jamais d'engager un ennemi.</description>
    <parameters>
        <parameter name="objectives">
            <description>Les objectifs à reconnaitre.</description>
            <type>
                <list>
                    <class name="properties.Reconnoitrable"/>
                    <class name="properties.Reconnoitring"/>
                </list>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="Eclairage" disable-when-done="true">
            <skills>
                <skill name="agent.skills.Scout" main="true" priority="1.0">
                    <parameter name="entities">
                        <value>
                            <parameter>objectives</parameter>
                        </value>
                    </parameter>
                    <parameter name="positions">
                        <value>
                            <parameter>objectives</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>