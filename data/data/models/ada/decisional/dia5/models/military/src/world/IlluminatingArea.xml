<?xml version="1.0" encoding="UTF-8"?>
<class xmlns="http://www.masagroup.net/directia/schemas/bm" name="world.IlluminatingArea" source-version="1.0.0" extends="world.ReachingArea">
  <description>A proxy area for illuminating</description>
  <realizes>properties.Illuminating</realizes>
  <methods>
    <method name="canTakePosition">
      <description>Return true if the unit has reached the position.</description>
      <return>
        <type>
          <simple name="boolean"/>
        </type>
      </return>
    </method>
    <method name="illuminationEfficiency">
      <description>The efficiency level for illuminating the objective.</description>
      <argument name="objective">
        <description>The objective to illuminate.</description>
        <type>
          <class name="properties.Illuminatable"/>
        </type>
      </argument>
      <return>
        <type>
          <simple name="numeric"/>
        </type>
      </return>
    </method>
  </methods>
  <predicates>
    <predicate name="isIlluminatingFor">
      <description>Return true if the element allows the unit to illuminate the objective.</description>
      <argument name="objective">
        <description>L'objectif que l'agent veut illuminer</description>
        <type>
          <list>
            <class name="properties.Illuminatable"/>
          </list>
        </type>
      </argument>
    </predicate>
  </predicates>
</class>