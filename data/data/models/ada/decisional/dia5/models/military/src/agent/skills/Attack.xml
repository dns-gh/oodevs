<?xml version="1.0" encoding="UTF-8"?>
<skill xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.skills.Attack" source-version="1.0.0">
    <description>Mission d'un individu comettant une action isolé, une attaque sur un objectif désigné. Cette tâche modèlise l'attaque terroriste.</description>
    <parameters>
        <parameter name="objective">
            <description>Cible de l'attentat</description>
            <type>
                <class name="world_concepts.Attackable"/>
            </type>
        </parameter>
        <parameter name="dotation">
            <description>Munition utilisee pour commettre l'attentat.</description>
            <type>
                <simple name="numeric"/>
            </type>
        </parameter>
        <parameter name="suicide">
            <description>Si l'attentat entraine le suicide de celui qui le commet</description>
            <type>
                <simple name="boolean"/>
            </type>
        </parameter>
    </parameters>
    <links>
        <link name="moveToward" skill="agent.skills.MoveToward"/>
    </links>
</skill>