<?xml version="1.0" encoding="UTF-8"?>
<role xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.roles.Terrorist" source-version="1.0.0" extends="agent.roles.Individual">
  <description>Modèle décisionnel d'un terroriste.</description>
  <skills>
    <skill name="agent.skills.Attack"/>
    <skill name="agent.skills.Assassinate"/>
    <skill name="agent.skills.Snipe"/>
    <skill name="agent.skills.CommitTerrorist"/>
    <skill name="agent.skills.UnloadTransportedUnits"/>
    <skill name="agent.skills.primitives.Load"/>
    <skill name="agent.skills.DischargeIn"/>
    <skill name="agent.skills.primitives.Unload"/>
    <skill name="agent.skills.DropUnit"/>
    <skill name="agent.skills.SwitchToSafety"/>
    <skill name="agent.skills.SwitchToSpeed"/>
  </skills>
  <default-task label="Prise en compte des ordres de conduite et autres actions par defaut." permanent="true">
    <description>Gestion par défaut des ordres de conduite</description>
    <goal>
      <description>Gestion et affectation des ordres de conduite</description>
    </goal>
    <let name="fragOrdersToManage">
      <value>
        <call method="queries.getFragOrders"/>
      </value>
    </let>
    <skills>
      <skill name="agent.skills.Default"/>
      <skill name="agent.skills.ReactToObstacles"/>
      <skill name="agent.skills.SetPace"/>
      <skill name="agent.skills.ManageFragOrder">
        <parameter name="fragOrders">
          <value>
            <parameter>fragOrdersToManage</parameter>
          </value>
        </parameter>
      </skill>
      <skill name="agent.skills.GoUndetected"/>
    </skills>
  </default-task>
</role>