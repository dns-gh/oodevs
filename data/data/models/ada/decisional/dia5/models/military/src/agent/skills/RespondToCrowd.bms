-- **************************************************************************** 
-- Respond toward the element with adapted weapon system(s).
-- ****************************************************************************
rootnode 
{
    done = function( self ) end,

    create = function( self )
        self.respond = true
        self.rTempsDebut = DEC_TempsSim() -- pas de fonction DEC dans les skills
        meKnowledge:RC( eRC_RiposteContrePopulation, self.params.crowd.source ) -- body type dans xml au pire, sinon à mettre dans l'action de response'
    end,

    activate = function( self )
        self.delai = 2*60 -- $$$ MIA à sortir (ADN, ou pire dans l'intégration).
        -- Manage respond if under fire
        if self.respond then
            self.params.crowd:respondToIt()
            self.rTempsDebut = DEC_TempsSim() -- pas de fonction DEC dans les skills
            self.respond = false
        end
        if self.delai <=  DEC_TempsSim() - self.rTempsDebut then -- pas de fonction DEC dans les skills
           self.respond = true
        end
     end
}