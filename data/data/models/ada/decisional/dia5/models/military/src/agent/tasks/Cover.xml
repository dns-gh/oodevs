<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.tasks.Cover" source-version="1.0.0" knowledge-class="agent.tasks.knowledges.Cover">
    <description>Couvrir une entité amie, face à des objectifs, à partir de positions.</description>
    <parameters>
        <parameter name="entities">
            <description>les unités à couvrir</description>
            <type>
                <list>
                    <class name="properties.Reachable"/>
                </list>
            </type>
        </parameter>
        <parameter name="directionPoints" nullable="true">
            <description>Objectifs face auxquels il faut couvrir.</description>
            <type>
                <list>
                    <class name="properties.Observable"/>
                </list>
            </type>
        </parameter>
        <parameter name="positions">
            <description>Positions à partir desquelles il faut couvrir.</description>
            <type>
                <list>
                    <class name="properties.Neutralizing"/>
                    <class name="properties.Observing"/>
                    <class name="properties.Destroying"/>
                </list>
            </type>
        </parameter>
    </parameters>
    <goal>
        <description>Couvrir les objectifs à partir des positions (engagement des éléments ennemis).</description>
    </goal>
    <stages>
        <stage label="Occupation des positions" permanent="true">
            <description>Appliquer des feux et observer l'objectif à partir de la position de couverture.</description>
            <goal>
                <description>Occuper les positions.</description>
            </goal>
            <let name="enemies">
                <value>
                    <call method="queries.getEnemiesInRange">
                        <parameter name="probabilityToHit">
                            <value>
                                <number>0.5</number>
                            </value>
                        </parameter>
                    </call>
                </value>
            </let>
            <let name="dangerDirection">
                <value>
                    <call method="queries.getPointTowardMissionDirection"/>
                </value>
            </let>
            <skills>
                <skill name="agent.skills.Engage" priority="0.1">
                    <parameter name="entities">
                        <value>
                            <parameter>enemies</parameter>
                        </value>
                    </parameter>
                    <parameter name="positions">
                        <value>
                            <parameter>positions</parameter>
                        </value>
                    </parameter>
                </skill>
                <skill name="agent.skills.primitives.ObserveToward" priority="0.9">
                    <parameter name="entities">
                        <value>
                            <parameter>dangerDirection</parameter>
                        </value>
                    </parameter>
                    <parameter name="positions">
                        <value>
                            <parameter>positions</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>