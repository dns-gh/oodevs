<?xml version="1.0" encoding="UTF-8"?>
<class xmlns="http://www.masagroup.net/directia/schemas/bm" name="world_elements.SupportingArea" source-version="1.0.0" extends="world_elements.ReachingArea">
  <description>Une zone de soutien de la connaissance en proxy</description>
  <realizes>world_concepts.Supporting</realizes>
  <methods>
    <method name="supportEfficiency">
      <description>Renvoie la valeur de l'éfficacité de l'élément pour apuyer l'objectif.</description>
      <return>
        <type>
          <simple name="numeric"/>
        </type>
      </return>
    </method>
    <method name="canTakePosition">
      <description>Renvoie vrai si l'élément est atteind par l'agent.

        Les conditions d'atteinte de l'élément peuvent être plus complexe qu'un simple calcul de distance.
        </description>
      <return>
        <type>
          <simple name="boolean"/>
        </type>
      </return>
    </method>
    <method name="computeSupportCapabilityFor">
            <argument name="entity">
                <type>
                    <class name="world_elements.PlatoonAlly"/>
                </type>
            </argument>
            <argument name="position">
                <type>
                    <class name="world_concepts.Positionable"/>
                </type>
            </argument>
            <return>
                <type>
                    <simple name="numeric"/>
                </type>
            </return>
        </method>
    </methods>
  <predicates>
    <predicate name="isSupportingFor">
      <description>Retourne vrai si la connaissance de Keypoint est une bonne position pour soutenir l'objectif.</description>
      <argument name="objective">
        <description>L'objectif à soutenir.</description>
        <type>
          <class name="world_concepts.Supportable"/>
        </type>
      </argument>
    </predicate>
  </predicates>
</class>