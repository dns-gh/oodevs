<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.tasks.TakeHostage" source-version="1.0.0" knowledge-class="agent.tasks.knowledges.TakeHostage">
    <parameters>
        <parameter name="unit">
            <description>unite a prendre en otage</description>
            <type>
                <class name="world_elements.Platoon"/>
            </type>
        </parameter>
        <parameter name="position">
            <description>position ou deposer l'otage</description>
            <type>
                <class name="world_elements.KeyPoint"/>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="Deplacement et Capture">
            <skills>
                <skill name="agent.skills.TakeHostage" main="true">
                    <parameter name="unit">
                        <value>
                            <parameter>unit</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
        <stage label="Debarquement" permanent="true">
            <skills>
                <skill name="agent.skills.primitives.Unload">
                    <parameter name="entities">
                        <value>
                            <list>
                                <parameter>unit</parameter>
                            </list>
                        </value>
                    </parameter>
                    <parameter name="positions">
                        <value>
                            <list>
                                <parameter>position</parameter>
                            </list>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>