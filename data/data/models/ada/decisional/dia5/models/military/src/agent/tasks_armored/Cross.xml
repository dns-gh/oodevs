<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.tasks_armored.Cross" source-version="1.0.0" knowledge-class="agent.tasks_knowledge.Cross">
    <description>Mission de franchissment d'une coupure. Mouvement jusqu'au site de franchissement, puis jusqu'à la destination finale.</description>
    <parameters>
        <parameter name="crossingSite">
            <description>Les sites de franchissement</description>
            <type>
                <class name="world_elements.Object"/>
            </type>
        </parameter>
        <parameter name="meetingPoint">
            <description>Le point de rendez-vous de l'autre côté de la coupure.</description>
            <type>
                <class name="world_concepts.Reaching"/>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="Deplacement vers le site de franchissement">
            <skills>
                <skill name="agent.skills.MoveToward" main="true">
                    <parameter name="entities">
                        <value>
                            <list>
                                <parameter>crossingSite</parameter>
                            </list>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
        <stage label="Deplacement vers le point de rendez vous" disable-when-done="true">
            <skills>
                <skill name="agent.skills.MoveToward" main="true">
                    <parameter name="entities">
                        <value>
                            <list>
                                <parameter>meetingPoint</parameter>
                            </list>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>