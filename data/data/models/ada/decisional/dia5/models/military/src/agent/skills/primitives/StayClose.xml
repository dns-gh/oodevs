<?xml version="1.0" encoding="UTF-8"?>
<skill xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.skills.primitives.StayClose" source-version="1.0.0">
    <description>Déplacement simple vers une position permettant de rester proche des éléments passés en paramètre.</description>
    <parameters>
        <parameter name="entities">
            <description>Elements au près desquels il faut aller.</description>
            <type>
                <list>
                    <class name="properties.Reachable"/>
                </list>
            </type>
        </parameter>
        <parameter name="positions" nullable="true">
            <description>Positions vers lesquelles l'entité peut se déplacer pour rester proche des élements passés en paramètre.</description>
            <type>
                <list>
                    <class name="properties.Reaching"/>
                </list>
            </type>
            <default>
                <nil/>
            </default>
        </parameter>
        <parameter name="distanceMin">
            <type>
                <simple name="numeric"/>
            </type>
            <default>
                <number>100.0</number>
            </default>
        </parameter>
    </parameters>
    <links>
        <link name="observe" skill="agent.skills.actions.Observe">
            <description>Lien vers le skill Observe</description>
        </link>
        <link name="moveAndTakePosition" skill="agent.skills.actions.MoveAndTakePosition">
            <description>Lien vers le skill moveAndTakePosition</description>
        </link>
    </links>
</skill>