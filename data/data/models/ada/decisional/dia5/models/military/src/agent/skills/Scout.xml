<?xml version="1.0" encoding="UTF-8"?>
<skill xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.skills.Scout" source-version="1.0.0">
    <description>Eclairage des entités. Reconnaissance à 50%</description>
    <parameters>
        <parameter name="entities">
            <description>L'élément à éclairer.</description>
            <type>
                <list>
                    <class name="world_concepts.Reconnoitrable"/>
                </list>
            </type>
        </parameter>
        <parameter name="positions" nullable="true">
            <description>Zone dans laquelle l'entité peut se déplacer pour reconnaître l'élement.</description>
            <type>
                <list>
                    <class name="world_concepts.Reconnoitring"/>
                </list>
            </type>
            <default>
                <nil/>
            </default>
        </parameter>
        <parameter name="NBCmove">
            <type>
                <simple name="boolean"/>
            </type>
            <default>
                <boolean>false</boolean>
            </default>
        </parameter>
    </parameters>
    <goal>
        <description>Eclairer les entités.</description>
    </goal>
    <modifiers/>
    <links>
        <link name="moveToward" skill="agent.skills.MoveToward">
            <description>Lien vers le skill moveToward</description>
        </link>
        <link name="observe" skill="agent.skills.actions.Observe">
            <description>Lien vers le skill Observe</description>
        </link>
    </links>
</skill>