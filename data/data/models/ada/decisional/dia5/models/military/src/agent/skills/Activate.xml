<?xml version="1.0" encoding="UTF-8"?>
<skill xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.skills.Activate" source-version="1.0.0">
    <description>To activate a set of issued entities. This skill accepts an  NIL 'entities' parameter. It returns a 'done' feedback if:&#xD;
- all the entities has been activated,&#xD;
OR&#xD;
- 'entities' to activate is NIL.</description>
    <parameters>
        <parameter name="entities" nullable="true">
            <description>The obstacles to activate.</description>
            <type>
                <list>
                    <class name="properties.Activable"/>
                </list>
            </type>
            <default>
                <nil/>
            </default>
        </parameter>
        <parameter name="positions" nullable="true">
            <description>The positions allowing the agent to actvate the entities.</description>
            <type>
                <list>
                    <class name="properties.Activating"/>
                </list>
            </type>
            <default>
                <nil/>
            </default>
        </parameter>
    </parameters>
    <links>
        <link name="Activate" skill="agent.skills.primitives.Activate"/>
    </links>
</skill>