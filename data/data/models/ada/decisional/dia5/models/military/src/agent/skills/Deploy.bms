-- **************************************************************************** 
-- Move toward and deploy on objective
-- self.params.objective: the goal element
-- ****************************************************************************
rootnode
{
    connections = { skill.links.moveToward, skill.links.dismount, skill.nodes.Deploy },

    -- -------------------------------------------------------------------------------- 
    -- Feedbacks
    -- 'deployed' function is called if "meKnowledge" has been deployed
    -- --------------------------------------------------------------------------------
    deployed = function( self )
        Feedback( self.feedbacks.done )
    end,

    -- -------------------------------------------------------------------------------- 
    -- Feedbacks
    -- 'done' function is called if objective is reached
    -- --------------------------------------------------------------------------------
    done = function( self ) -- from MoveToward
        self.isArrived = true
    end,

    create = function( self )
        self.isArrived = false
        if self.params.objective == NIL then
            self.objective = meKnowledge:getMyPosition()
        else
            self.objective = self.params.objective
        end
    end,

    -- -------------------------------------------------------------------------------- 
    -- MoveToward element and start deploying on it when arrived
    -- --------------------------------------------------------------------------------
    activate = function( self )
        local Activate = Activate
        if self.isArrived then
            Activate( skill.links.dismount, 1 )
            Activate( skill.nodes.Deploy, 1 )
        end
        Activate( skill.links.moveToward, 1, { entities = { self.objective } } )
        self.isArrived = false
    end,
}

-- **************************************************************************** 
-- Simple action that activate deploy on objective
-- ****************************************************************************
node "Deploy"
{
    feedbacks = { "deployed" },

    select = function( self )
        meKnowledge:deploy()
        if meKnowledge:isDeployed() then
            meKnowledge:activateFunctions()
            Feedback( self.feedbacks.deployed )
        end
    end,
}