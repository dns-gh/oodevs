<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.tasks_asy.SuicideAttack" source-version="1.0.0" knowledge-class="agent.tasks_knowledge.AsyAttack">
    <parameters>
        <parameter name="objective">
            <description>Cible contre laquelle l'attentat est commis</description>
            <type>
                <class name="world_concepts.Attackable"/>
            </type>
        </parameter>
        <parameter name="dotation">
            <description>Munition utilisee pour commettre l'attentat.</description>
            <type>
                <simple name="numeric"/>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="Attentat" disable-when-done="true">
            <description>Commettre l'attentat</description>
            <skills>
                <skill name="agent.skills.Attack" main="true">
                    <parameter name="objective">
                        <value>
                            <parameter>objective</parameter>
                        </value>
                    </parameter>
                    <parameter name="dotation">
                        <value>
                            <parameter>dotation</parameter>
                        </value>
                    </parameter>
                    <parameter name="suicide">
                        <value>
                            <boolean>true</boolean>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>