<?xml version="1.0" encoding="UTF-8"?>
<skill xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.skills.primitives.TakeCover" source-version="1.0.0">
	<description>Rejoindre des positions permettant de se mettre à couvert par rapport aux objectifs.</description>
	<parameters>
		<parameter name="entities">
			<description>Les entités représentant un danger potentiel.</description>
			<type>
				<list>
					<class name="world_concepts.Safeguardable"/>
				</list>
			</type>
		</parameter>
		<parameter name="positions" nullable="true">
			<description>Les positions de sauvegarde.</description>
			<type>
				<list>
					<class name="world_concepts.Safeguarding"/>
				</list>
			</type>
			<default>
				<nil/>
			</default>
		</parameter>
	</parameters>
	<goal>
		<description>Se mettre à couvert.</description>
	</goal>
	<links>
		<link name="moveAndTakePosition" skill="agent.skills.actions.MoveAndTakePosition">
			<description>Lien vers le skill MoveAndTakePosition</description>
		</link>
		<link name="observe" skill="agent.skills.actions.Observe">
			<description>Lien vers le skill Observe</description>
		</link>
	</links>
	<feedbacks>
		<feedback name="movementDone">
			<argument name="position">
				<type>
					<class name="world_concepts.Positionable"/>
				</type>
			</argument>
		</feedback>
	</feedbacks>
</skill>