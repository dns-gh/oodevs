<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.tasks_armored.Defend" source-version="1.0.0" knowledge-class="agent.tasks_knowledge.Defend">
    <description>
        Defend
    </description>
    <parameters>
        <parameter name="objectives">
            <description>The objective to defend.</description>
            <type>
                <list>
                    <class name="world_concepts.Destroying"/>
                </list>
            </type>
        </parameter>
        <parameter name="obstacles" nullable="true">
            <type>
                <list>
                    <class name="world_elements.Object"/>
                </list>
            </type>
            <default>
                <nil/>
            </default>
        </parameter>
        <parameter name="withImprovement">
            <description>Si la valeur est vraie, on continue la construction en valorisant l'objectif.</description>
            <type>
                <simple name="boolean"/>
            </type>
        </parameter>
    </parameters>
    <goal>
        <description>Reach the positions and engage enemies around the objective.</description>
    </goal>
    <let name="enemiesAround">
        <value>
            <call method="queries_enemies.getEnemiesInRange">
                <parameter name="probabilityToHit">
                    <value>
                        <number>0.5</number>
                    </value>
                </parameter>
            </call>
        </value>
    </let>
    <stages>
        <stage label="Preparation du terrain">
            <description>Building obstacles.</description>
            <goal>
                <description></description>
            </goal>
            <skills>
                <skill name="agent.skills.BuildWithoutReinforcement" main="true">
                    <parameter name="entities">
                        <value>
                            <parameter>obstacles</parameter>
                        </value>
                    </parameter>
                    <parameter name="withImprovement">
                        <value>
                            <parameter>withImprovement</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
        <stage label="Defense" permanent="true" disable-when-done="false">
            <description>Defense of the objectives.</description>
            <goal>
                <description>Engaging enemies approaching the objectives.</description>
            </goal>
            <skills>
                <skill name="agent.skills.MoveToward" priority="0.9">
                    <parameter name="entities">
                        <value>
                            <parameter>objectives</parameter>
                        </value>
                    </parameter>
                </skill>
                <skill name="agent.skills.Engage" priority="0.1">
                    <parameter name="entities">
                        <value>
                            <parameter>enemiesAround</parameter>
                        </value>
                    </parameter>
                    <parameter name="positions">
                        <value>
                            <parameter>objectives</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>