<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="commander.tasks.Fix" source-version="1.0.0" knowledge-class="commander.tasks.knowledges.FixEffect">
  <parameters>
    <parameter name="entities">
      <description>L'objectif : l'ennemi à fixer.</description>
      <type>
        <list>
          <class name="world_concepts.Destroyable"/>
        </list>
      </type>
    </parameter>
    <parameter name="positions">
      <description>Les positions permettant de fixer l'ennemi.</description>
      <type>
        <list>
          <class name="world_concepts.Destroying"/>
        </list>
      </type>
    </parameter>
    <parameter name="companyTask">
      <type>
        <simple name="string"/>
      </type>
    </parameter>
    <parameter name="mainTasks">
      <type>
        <simple name="string"/>
      </type>
    </parameter>
    <parameter name="supportTasks">
      <type>
        <simple name="string"/>
      </type>
    </parameter>
    <parameter name="defaultTask">
      <description>La mission que l'on donne par défaut aux pions.</description>
      <type>
        <simple name="string"/>
      </type>
    </parameter>
    <parameter name="taskForSupporting">
      <description>La mission que l'on donne aux pions de SE pour aider un pion de PE en difficulté.</description>
      <type>
        <simple name="string"/>
      </type>
    </parameter>
  </parameters>
  <stages>
    <stage label="Fixer des objectifs">
      <skills>
        <skill name="commander.skills.Lead" main="true">
          <parameter name="companyTask">
            <value>
              <parameter>companyTask</parameter>
            </value>
          </parameter>
          <parameter name="mainTasks">
            <value>
              <parameter>mainTasks</parameter>
            </value>
          </parameter>
          <parameter name="supportTasks">
            <value>
              <parameter>supportTasks</parameter>
            </value>
          </parameter>
          <parameter name="taskForSupporting">
            <value>
              <parameter>taskForSupporting</parameter>
            </value>
          </parameter>
          <parameter name="defaultTask">
            <value>
              <parameter>defaultTask</parameter>
            </value>
          </parameter>
        </skill>
      </skills>
    </stage>
  </stages>
</task>