<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.tasks_frago.GoTo" source-version="1.0.0" knowledge-class="agent.tasks_knowledge.GoTo">
  <description>Fragmentary order that force an agent to go toward a specific reachable objective.</description>
  <parameters>
    <parameter name="objectives">
      <description>The objective to reach.</description>
      <type>
        <list>
          <class name="world_concepts.Reachable"/>
        </list>
      </type>
    </parameter>
  </parameters>
  <stages>
    <stage label="Ordre de mouvement vers les objectifs" permanent="false" disable-when-done="true">
      <description>Déplacement direct vers l'un des objectifs passés en paramètre.</description>
      <skills>
        <skill name="agent.skills.MoveToward" main="true" priority="1000.0">
          <parameter name="entities">
            <value>
              <parameter>objectives</parameter>
            </value>
          </parameter>
        </skill>
      </skills>
    </stage>
  </stages>
</task>