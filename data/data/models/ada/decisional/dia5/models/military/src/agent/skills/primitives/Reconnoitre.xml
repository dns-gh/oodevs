<skill xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.skills.primitives.Reconnoitre" source-version="1.0.0">
    <description>Reconnaître toutes les entités.</description>
    <parameters>
        <parameter name="entities">
            <description>L'élément à reconnaître.</description>
            <type>
                <list>
                    <class name="world_concepts.Reconnoitrable"/>
                </list>
            </type>
        </parameter>
        <parameter name="positions" nullable="true">
            <description>Zone dans laquelle l'entité peut se déplacer pour reconnaître l'élement.</description>
            <type>
                <list>
                    <class name="world_concepts.Reconnoitring"/>
                </list>
            </type>
            <default>
                <nil/>
            </default>
        </parameter>
    </parameters>
    <goal>
        <description>Reconnaître les entités.</description>
    </goal>
    <modifiers/>
