<?xml version="1.0" encoding="UTF-8"?>
<role xmlns="http://www.masagroup.net/directia/schemas/bm" name="commander.roles.Company" source-version="1.0.0">
    <description>Une entité décisionnelle quelconque dans un contexte militaire.</description>
    <body-type>
        <class name="world.Company"/>
    </body-type>
    <skills>
        <skill name="commander.skills.Lead"/>
        <skill name="commander.skills.Ressuply"/>
        <skill name="commander.skills.SequentialLead"/>
        <skill name="commander.skills.SupportManager"/>
        <skill name="commander.skills.RelieveManager"/>
        <skill name="commander.skills.IssueTask"/>
        <skill name="commander.skills.IssueTaskGeneral"/>
        <skill name="commander.skills.CoordinationManager"/>
        <skill name="commander.skills.ManageFragOrder"/>
        <skill name="commander.skills.LeadDelay"/>
        <skill name="commander.skills.Relieve"/>
        <skill name="commander.skills.ReactToNBC"/>
        <skill name="commander.skills.SynchronizeRC"/>
        <skill name="commander.skills.AssignSETask"/>
        <skill name="commander.skills.LeadGEN"/>
        <skill name="commander.skills.SupportManagerForGen"/>
        <skill name="commander.skills.LeadWithOrder"/>
    </skills>
    <default-task label="Prise en compte des ordres de conduite et de la sauvegarde." permanent="true">
        <description>Gestion par défaut des ordres de conduite</description>
        <goal>
            <description>Gestion et affectation des ordres de conduite</description>
        </goal>
        <skills>
            <skill name="commander.skills.ManageFragOrder">
                <parameter name="fragOrders">
                    <value>
                        <call method="queries.getFragOrders"/>
                    </value>
                </parameter>
                <parameter name="entities">
                    <value>
                        <call method="commander.queries.getCommanding">
                            <parameter name="role">
                                <value>
                                    <string>none</string>
                                </value>
                            </parameter>
                            <parameter name="withPC">
                                <value>
                                    <boolean>true</boolean>
                                </value>
                            </parameter>
                        </call>
                    </value>
                </parameter>
            </skill>
            <skill name="commander.skills.ReactToNBC"/>
        </skills>
    </default-task>
</role>