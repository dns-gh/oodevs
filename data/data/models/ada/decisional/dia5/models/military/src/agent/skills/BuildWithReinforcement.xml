<?xml version="1.0" encoding="UTF-8"?>
<skill xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.skills.BuildWithReinforcement" source-version="1.0.0">
	<description>Dégager un ensemble d'objets tactique en attendant les renforcements en cas d'absence de capacité</description>
	<parameters>
		<parameter name="entities" nullable="true">
			<description>les elements a construire</description>
			<type>
				<list>
					<class name="properties.Buildable"/>
				</list>
			</type>
			<default>
				<nil/>
			</default>
		</parameter>
		<parameter name="withImprovement" nullable="true">
			<description>Si la valeur est vraie, on continue la construction en valorisant l'objectif.</description>
			<type>
				<simple name="boolean"/>
			</type>
			<default>
				<boolean>false</boolean>
			</default>
		</parameter>
	</parameters>
	<goal>
		<description>Construire les éléments.</description>
	</goal>
	<modifiers/>
	<links>
		<link name="build" skill="agent.skills.primitives.Build"/>
		<link name="improve" skill="agent.skills.primitives.Improve"/>
	</links>
</skill>