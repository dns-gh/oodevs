<?xml version="1.0" encoding="UTF-8"?>
<query xmlns="http://www.masagroup.net/directia/schemas/bm" name="queries.getPositionsToFollow" source-version="1.0.0">
    <description>Returns a set of positions allowing the agent to stay close to the the given elements.</description>
    <parameters>
        <parameter name="elementsToFollow">
            <type>
                <list>
                    <class name="properties.Motile"/>
                </list>
            </type>
        </parameter>
        <parameter name="dynamic">
            <type>
                <simple name="boolean"/>
            </type>
        </parameter>
        <parameter name="distanceMin">
            <type>
                <simple name="numeric"/>
            </type>
        </parameter>
    </parameters>
    <target name="trackingPosition">
        <type>
            <class name="world.ReachingArea"/>
        </type>
    </target>
</query>