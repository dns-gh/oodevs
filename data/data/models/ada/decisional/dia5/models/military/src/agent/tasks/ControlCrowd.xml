<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.tasks.ControlCrowd" source-version="1.0.0" knowledge-class="agent.tasks.knowledges.ControlCrowd">
    <parameters>
        <parameter name="area">
            <type>
                <class name="world.Area"/>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="Deplacement vers la zone a controler">
            <skills>
                <skill name="agent.skills.MoveToward" main="true">
                    <parameter name="entities">
                        <value>
                            <list>
                                <parameter>area</parameter>
                            </list>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
        <stage label="Controle des foules presentes dans la zone" permanent="true">
            <skills>
                <skill name="agent.skills.ControlCrowds">
                    <parameter name="crowds">
                        <value>
                            <call method="queries.getCrowdsInArea">
                                <parameter name="area">
                                    <value>
                                        <parameter>area</parameter>
                                    </value>
                                </parameter>
                            </call>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>