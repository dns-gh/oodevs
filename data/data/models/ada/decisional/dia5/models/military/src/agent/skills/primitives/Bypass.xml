<?xml version="1.0" encoding="UTF-8"?>
<skill xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.skills.primitives.Bypass" source-version="1.0.0">
    <description>To breach or bypass an obstacle. </description>
    <parameters>
        <parameter name="entities">
            <description>The elements to bypass.</description>
            <type>
                <list>
                    <class name="properties.Bypassable"/>
                </list>
            </type>
        </parameter>
        <parameter name="positions">
            <description>The possible positions to occupy to apply the bypass effect.</description>
            <type>
                <list>
                    <class name="properties.Bypassing"/>
                </list>
            </type>
        </parameter>
        <parameter name="avoidObstacles">
            <description>Define if the agent uses a path allowing to avoid encountered obstacles.</description>
            <type>
                <simple name="boolean"/>
            </type>
            <default>
                <boolean>true</boolean>
            </default>
        </parameter>
    </parameters>
    <links>
        <link name="moveAndTakePosition" skill="agent.skills.actions.MoveAndTakePosition">
            <description>Lien vers le skill MoveAndTakePosition</description>
        </link>
        <link name="observe" skill="agent.skills.actions.Observe">
            <description>Lien vers le skill Observe</description>
        </link>
        <link name="dismount" skill="agent.skills.actions.Dismount">
            <description>Lien vers le skill Dismount</description>
        </link>
    </links>
    <resources>
        <resource name="agent.resources.BuildCapacity" variable="buildCapacity">
            <description>Capacit√© physiques de contournement d'un object tactique</description>
        </resource>
    </resources>
    <feedbacks>
        <feedback name="elementBypassed">
            <argument name="element">
                <type>
                    <class name="properties.Bypassable"/>
                </type>
            </argument>
        </feedback>
        <feedback name="elementFailed">
            <description>L'element element n'a pas pu etre degage.</description>
            <argument name="element">
                <type>
                    <class name="properties.Bypassable"/>
                </type>
            </argument>
        </feedback>
        <feedback name="elementCancelled">
            <description>Les travaux sur l'element element one ete annules sur ordre.</description>
            <argument name="element">
                <type>
                    <class name="properties.Bypassable"/>
                </type>
            </argument>
        </feedback>
        <feedback name="elementNotBypassable">
            <description>Les travaux sur l'element element one ete annules sur ordre.</description>
            <argument name="element">
                <type>
                    <class name="properties.Bypassable"/>
                </type>
            </argument>
        </feedback>
    </feedbacks>
</skill>