<?xml version="1.0" encoding="UTF-8"?>
<skill xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.skills.primitives.Identify" source-version="1.0.0">
    <description>Rejoindre une position permettant d'identifier les entités passées en paramètre.</description>
    <parameters>
        <parameter name="entities">
            <description>Les éléments à identifier.</description>
            <type>
                <list>
                    <class name="properties.Identifiable"/>
                </list>
            </type>
        </parameter>
        <parameter name="positions" nullable="true">
            <description>Positions possibles d'indentification.</description>
            <type>
                <list>
                    <class name="properties.Identifying"/>
                </list>
            </type>
            <default>
                <nil/>
            </default>
        </parameter>
    </parameters>
    <goal>
        <description>Identifier les entités.</description>
    </goal>
    <modifiers/>
    <links>
        <link name="moveAndTakePosition" skill="agent.skills.actions.MoveAndTakePosition">
            <description>Lien vers le skill MoveAndTakePosition</description>
        </link>
        <link name="observe" skill="agent.skills.actions.Observe">
            <description>Lien vers le skill Observe</description>
        </link>
    </links>
</skill>