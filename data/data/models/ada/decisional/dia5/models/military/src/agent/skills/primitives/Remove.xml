<?xml version="1.0" encoding="UTF-8"?>
<skill xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.skills.primitives.Remove" source-version="1.0.0">
    <description>Dégager un ensemble d'objets tactique</description>
    <parameters>
        <parameter name="entities">
            <description>Les éléments à dégager.</description>
            <type>
                <list>
                    <class name="properties.Removable"/>
                </list>
            </type>
        </parameter>
        <parameter name="positions">
            <description>Positions permettant de dégager les éléments.</description>
            <type>
                <list>
                    <class name="properties.Removing"/>
                </list>
            </type>
        </parameter>
        <parameter name="avoidObstacles">
            <type>
                <simple name="boolean"/>
            </type>
            <default>
                <boolean>true</boolean>
            </default>
        </parameter>
    </parameters>
    <goal>
        <description>Dégager les éléments.</description>
    </goal>
    <links>
        <link name="moveAndTakePosition" skill="agent.skills.actions.MoveAndTakePosition">
            <description>Lien vers le skill MoveAndTakePosition</description>
        </link>
        <link name="observe" skill="agent.skills.actions.Observe">
            <description>Lien vers le skill Observe</description>
        </link>
		<link name="dismount" skill="agent.skills.actions.Dismount"/>
    </links>
    <resources>
        <resource name="agent.resources.BuildCapacity" variable="buildCapacity">
            <description>Capacité physiques de dégagement d'un object tactique</description>
        </resource>
    </resources>
    <feedbacks>
        <feedback name="elementRemoved">
            <argument name="element">
                <type>
                    <class name="properties.Removable"/>
                </type>
            </argument>
        </feedback>
        <feedback name="elementFailed">
            <description>L'element element n'a pas pu etre degage.</description>
            <argument name="element">
                <type>
                    <class name="properties.Removable"/>
                </type>
            </argument>
        </feedback>
        <feedback name="elementCancelled">
            <description>Les travaux sur l'element element one ete annules sur ordre.</description>
            <argument name="element">
                <type>
                    <class name="properties.Removable"/>
                </type>
            </argument>
        </feedback>
    </feedbacks>
</skill>