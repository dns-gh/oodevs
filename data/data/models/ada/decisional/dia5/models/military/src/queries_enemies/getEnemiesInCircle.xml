<?xml version="1.0" encoding="UTF-8"?>
<query xmlns="http://www.masagroup.net/directia/schemas/bm" name="queries_enemies.getEnemiesInCircle" source-version="1.0.0">
    <parameters>
        <parameter name="distance">
            <description>Distance, en mètre, qui définit le rayon du cercle au sein duquel on récupère les ennemis.</description>
            <type>
                <simple name="numeric"/>
            </type>
        </parameter>
    </parameters>
    <target name="enemy">
        <type>
            <class name="world_elements.Platoon"/>
        </type>
    </target>
</query>