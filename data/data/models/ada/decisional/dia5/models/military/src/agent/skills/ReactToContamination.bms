-- **************************************************************************** 
-- React to nbc contamination: equip with nbc protection suit
-- ****************************************************************************
rootnode
{
    connections = { skill.links.equipWithNBCProtection },

    -- --------------------------------------------------------------------------------
    -- Move and create current work
    -- --------------------------------------------------------------------------------
    activate = function( self )
        if meKnowledge:isContaminated() or meKnowledge:isPoisoned() then
            Activate( skill.links.equipWithNBCProtection, 1 )
        end
    end
}