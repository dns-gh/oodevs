<?xml version="1.0" encoding="UTF-8"?>
<skill xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.skills.Engage" source-version="1.0.0">
  <description>Engager par le feu les entités, en vu de les neutraliser ou les détruire.</description>
  <parameters>
    <parameter name="entities">
      <description>Les entités à engager.</description>
      <type>
        <list>
          <class name="world_concepts.Neutralizable"/>
          <class name="world_concepts.Destroyable"/>
        </list>
      </type>
    </parameter>
    <parameter name="positions" nullable="true">
      <description>Les positions d'engagement.</description>
      <type>
        <list>
          <class name="world_concepts.Positionable"/>
        </list>
      </type>
      <default>
        <nil/>
      </default>
    </parameter>
  </parameters>
  <goal>
    <description>Détruire ou neutraliser les entités.</description>
  </goal>
  <modifiers>
    <modifier name="effect">
      <label>Effet voulu pour l'engagement.</label>
      <description>Définit l'effet à obtenir, destruction ou neutralisation.</description>
      <type>
        <enumeration>
          <item value="destroy"/>
          <item value="neutralize"/>
        </enumeration>
      </type>
      <value>neutralize</value>
    </modifier>
  </modifiers>
  <links>
    <link name="neutralize" skill="agent.skills.primitives.Neutralize">
      <description>Lien vers le skill Neutralize</description>
    </link>
    <link name="destroy" skill="agent.skills.primitives.Destroy">
      <description>Lien vers le skill Destroy</description>
    </link>
  </links>
  <resources/>
</skill>