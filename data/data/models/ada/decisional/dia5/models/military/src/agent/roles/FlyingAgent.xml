<?xml version="1.0" encoding="UTF-8"?>
<role xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.roles.FlyingAgent" source-version="1.0.0" extends="agent.roles.Platoon">
    <description>The role of a flying agent in Sword. This role should be used for 'fixed wings' agents such as drones, plans and agents such as helicopters.</description>
    <skills>
        <skill name="agent.skills.actions.TakeOff"/>
        <skill name="agent.skills.actions.Land"/>
        <skill name="agent.skills.actions.ChangeAltitude"/>
    </skills>
    <default-task permanent="true">
        <description>For the flying agent, to manage received FRAGO such as &quot;change altitude&quot;.</description>
        <let name="fragOrdersToManage">
            <value>
                <call method="queries.getFragOrders"/>
            </value>
        </let>
        <skills>
            <skill name="agent.skills.ManageFragOrder">
                <parameter name="fragOrders">
                    <value>
                        <parameter>fragOrdersToManage</parameter>
                    </value>
                </parameter>
            </skill>
        </skills>
    </default-task>
</role>