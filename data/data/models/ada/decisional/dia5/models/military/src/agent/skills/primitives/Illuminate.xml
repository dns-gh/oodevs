<?xml version="1.0" encoding="UTF-8"?>
<skill xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.skills.primitives.Illuminate" source-version="1.0.0">
	<description>Illuminer une cible en vue d'un tir indirect</description>
	<parameters>
		<parameter name="entities">
			<description>Les éléments à illuminer.</description>
			<type>
				<list>
					<class name="properties.Illuminatable"/>
				</list>
			</type>
		</parameter>
		<parameter name="allies">
			<description>Les batteries alliées chargée des tirs.</description>
			<type>
				<list>
					<class name="world.PlatoonAlly"/>
				</list>
			</type>
		</parameter>
	</parameters>
	<goal>
		<description>Illuminer les éléments.</description>
	</goal>
	<modifiers/>
	<links>
		<link name="moveAndTakePosition" skill="agent.skills.actions.MoveAndTakePosition">
			<description>Lien vers le skill MoveAndTakePosition</description>
		</link>
		<link name="observe" skill="agent.skills.actions.Observe">
			<description>Lien vers le skill Observe</description>
		</link>
	</links>
	<resources>
		<resource name="agent.resources.IlluminationCapacity" variable="illuminatingCapacity">
			<description>Capacité physiques d'animations d'un object tactique</description>
		</resource>
	</resources>
</skill>
