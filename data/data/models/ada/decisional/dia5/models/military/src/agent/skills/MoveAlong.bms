-- **************************************************************************** 
-- MoveAlong
-- Uses the primitive skill "moveToward" on each objectives. 
-- ****************************************************************************
rootnode
{
    connections = { skill.links.moveToward },

    -- -------------------------------------------------------------------------------- 
    -- Once first element is reached, get the next one by incrementing iterator.
    -- --------------------------------------------------------------------------------
    done = function( self, params, additionalParams ) -- the element has been reached
        self.nextTargetIndex = self.nextTargetIndex + 1
        if self.nextTargetIndex > #self.params.entities then
            Feedback( self.feedbacks.done, additionalParams )
        end
    end,

    -- -------------------------------------------------------------------------------- 
    -- Init
    -- --------------------------------------------------------------------------------
    create = function( self )
        self.nextTargetIndex = 1
    end,

    -- -------------------------------------------------------------------------------- 
    -- Move toward the current element.
    -- --------------------------------------------------------------------------------
    activate = function( self )
        local Activate = Activate
        Activate( skill.links.moveToward, 1, { entities  = { self.params.entities[ self.nextTargetIndex ] }, 
                                               infiltrationMode = self.params.infiltrationMode,
                                               avoidObstacles = self.params.avoidObstacles,
                                               nbcMove = self.params.NBCMove,
                                               criminalMoving = self.params.criminalMoving } )
    end
}