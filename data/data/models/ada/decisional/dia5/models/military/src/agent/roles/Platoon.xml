        <skill name="agent.skills.ReactToCrowds"/>
        <skill name="agent.skills.RespondToCrowd"/>
        <skill name="agent.skills.ProduceResource"/>
        <skill name="agent.skills.DeactivateNetwork"/>
        <skill name="agent.skills.ActivateNetwork"/>
