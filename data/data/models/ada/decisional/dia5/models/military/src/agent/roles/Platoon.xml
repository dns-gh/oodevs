<?xml version="1.0" encoding="UTF-8"?>
<role xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.roles.Platoon" source-version="1.0.0">
    <description>The role of a 'military platoon' agent.</description>
    <body-type>
        <class name="world.PlatoonAlly"/>
    </body-type>
    <skills>
        <skill name="agent.skills.Engage"/>
        <skill name="agent.skills.primitives.Support"/>
        <skill name="agent.skills.primitives.TakeCover"/>
        <skill name="agent.skills.primitives.Reconnoitre"/>
        <skill name="agent.skills.primitives.Destroy"/>
        <skill name="agent.skills.primitives.Neutralize"/>
        <skill name="agent.skills.primitives.Identify"/>
        <skill name="agent.skills.primitives.MoveToward"/>
        <skill name="agent.skills.actions.MoveAndTakePosition">
            <modifier name="selfProtectFromContamination">
                <value>true</value>
            </modifier>
        </skill>
        <skill name="agent.skills.actions.Observe"/>
        <skill name="agent.skills.primitives.ObserveToward"/>
