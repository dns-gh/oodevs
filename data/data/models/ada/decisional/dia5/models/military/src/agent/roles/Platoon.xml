        <skill name="agent.skills.primitives.Load"/>
        <skill name="agent.skills.primitives.Unload"/>
        <skill name="agent.skills.DischargeIn"/>
        <skill name="agent.skills.Interrogate"/>
        <skill name="agent.skills.TakePrisoner"/>
        <skill name="agent.skills.TakeHostage"/>
        <skill name="agent.skills.TakeRefugee"/>
