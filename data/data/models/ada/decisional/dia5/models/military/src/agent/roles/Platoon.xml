        <skill name="agent.skills.SetPace"/>
        <skill name="agent.skills.actions.EquipNBCOutfit"/>
        <skill name="agent.skills.actions.UnequipNBCOutfit"/>
        <skill name="agent.skills.primitives.Illuminate"/>
        <skill name="agent.skills.ApplyIndirectFire"/>
        <skill name="agent.skills.actions.ObserveRadarSilence"/>
        <skill name="agent.skills.actions.ActivateRadar"/>
        <skill name="agent.skills.actions.ActivateRadio"/>
        <skill name="agent.skills.actions.ObservePartialRadioSilence"/>
        <skill name="agent.skills.actions.ObserveRadioSilence"/>
        <skill name="agent.skills.primitives.Reinforce"/>
        <skill name="agent.skills.primitives.Search"/>
        <skill name="agent.skills.ReactToCoordinationLine"/>
        <skill name="agent.skills.ReactToObstacles"/>
        <skill name="agent.skills.ReconnoiterRoute"/>
        <skill name="agent.skills.Relieve"/>
        <skill name="agent.skills.MoveToward"/>
        <skill name="agent.skills.primitives.StayClose"/>
        <skill name="agent.skills.SelfProtect">
            <modifier name="importance">
                <value>10</value>
            </modifier>
        </skill>
        <skill name="agent.skills.SwitchToSafety"/>
        <skill name="agent.skills.SwitchToSpeed"/>
        <skill name="agent.skills.actions.Dismount"/>
        <skill name="agent.skills.actions.Mount"/>
