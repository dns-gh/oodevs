        <skill name="agent.skills.MobilitySupport"/>
        <skill name="agent.skills.ReactToContamination"/>
        <skill name="agent.skills.ReactToFireArea"/>
        <skill name="agent.skills.GoGetDecontaminated"/>
        <skill name="agent.skills.actions.ApplyMortarFires"/>
        <skill name="agent.skills.UnloadTransportedUnits"/>
        <skill name="agent.skills.Settle"/>
        <skill name="agent.skills.GetTransported"/>
        <skill name="agent.skills.Transport"/>
        <skill name="agent.skills.Bridge"/>
        <skill name="agent.skills.Reconnoiter"/>
