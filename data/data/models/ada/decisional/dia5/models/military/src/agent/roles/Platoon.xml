    <resources>
        <resource name="agent.resources.EngageCapacity"/>
        <resource name="agent.resources.MoveCapacity"/>
        <resource name="agent.resources.ObserveCapacity"/>
        <resource name="agent.resources.MountCapacity"/>
        <resource name="agent.resources.AnimationCapacity"/>
        <resource name="agent.resources.IlluminationCapacity"/>
        <resource name="agent.resources.IndirectFireCapacity"/>
        <resource name="agent.resources.NBCProtectionCapacity"/>
        <resource name="agent.resources.RadioCapacity"/>
        <resource name="agent.resources.RadarCapacity"/>
        <resource name="agent.resources.BuildCapacity"/>
        <resource name="agent.resources.ActivationCapacity"/>
        <resource name="agent.resources.TransportationCapacity"/>
    </resources>
    <default-task permanent="true">
        <goal>
            <description>Gestion et affectation des ordres de conduite et de la sauvegarde</description>
        </goal>
        <let name="fragOrdersToManage">
            <value>
                <call method="queries.getFragOrders"/>
            </value>
        </let>
        <let name="attackingCrowds">
            <value>
                <call method="queries.getAttackingCrowds"/>
            </value>
        </let>
        <skills>
            <skill name="agent.skills.Default"/>
            <skill name="agent.skills.ReactToObstacles"/>
            <skill name="agent.skills.SetPace"/>
            <skill name="agent.skills.ManageFragOrder">
                <parameter name="fragOrders">
                    <value>
                        <parameter>fragOrdersToManage</parameter>
                    </value>
                </parameter>
            </skill>
            <skill name="agent.skills.ReactToCoordinationLine">
                <parameter name="limas">
                    <value>
                        <call method="queries.getLimaOnPath"/>
                    </value>
                </parameter>
            </skill>
            <skill name="agent.skills.SelfProtect"/>
            <skill name="agent.skills.ReactToCrowds">
                <parameter name="crowds">
                    <value>
                        <parameter>attackingCrowds</parameter>
                    </value>
                </parameter>
            </skill>
            <skill name="agent.skills.ReactToContamination"/>
            <skill name="agent.skills.ReactToFireArea"/>
        </skills>
    </default-task>
</role>