<?xml version="1.0" encoding="UTF-8"?>
<skill xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.skills.primitives.Neutralize" source-version="1.0.0">
    <description>Neutraliser (détruire tactiquement) les entités passées en paramètre.</description>
    <parameters>
        <parameter name="entities">
            <description>L'élément à engager.</description>
            <type>
                <list>
                    <class name="world_concepts.Neutralizable"/>
                </list>
            </type>
        </parameter>
        <parameter name="positions" nullable="true">
            <description>Zone dans laquelle l'entité peut se déplacer pour engager l'élément.</description>
            <type>
                <list>
                    <class name="world_concepts.Neutralizing"/>
                </list>
            </type>
            <default>
                <nil/>
            </default>
        </parameter>
    </parameters>
    <goal>
        <description>Neutraliser  les entités passées.</description>
    </goal>
    <modifiers/>
    <links>
        <link name="moveAndTakePosition" skill="agent.skills.actions.MoveAndTakePosition">
            <description>Lien vers le skill MoveAndTakePosition</description>
        </link>
        <link name="observe" skill="agent.skills.actions.Observe">
            <description>Lien vers le skill Observe</description>
        </link>
    </links>
    <resources>
        <resource name="agent.resources.EngageCapacity" variable="engage">
            <description>Le tir utilise les capacités physiques d'engagement.</description>
        </resource>
    </resources>
</skill>