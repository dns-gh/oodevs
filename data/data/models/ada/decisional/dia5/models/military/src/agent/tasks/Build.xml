<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.tasks.Build" source-version="1.0.0" knowledge-class="agent.tasks.knowledges.Build">
    <description>Construire un object tactique</description>
    <parameters>
        <parameter name="entities">
            <description>Les objets à construire</description>
            <type>
                <list>
                    <class name="properties.Buildable"/>
                </list>
            </type>
        </parameter>
        <parameter name="meetingPoint" nullable="true">
            <type>
                <class name="properties.Reachable"/>
            </type>
        </parameter>
        <parameter name="withImprovement" nullable="true">
            <description>Si la valeur est vraie, on continue la construction en valorisant l'objectif.</description>
            <type>
                <simple name="boolean"/>
            </type>
            <default>
                <boolean>false</boolean>
            </default>
        </parameter>
    </parameters>
    <goal>
        <description>Construire les objets.</description>
    </goal>
    <stages>
        <stage label="Construction">
            <description>Construction des objets</description>
            <goal>
                <description>Construire les objets</description>
            </goal>
            <skills>
                <skill name="agent.skills.BuildWithReinforcement" main="true">
                    <parameter name="entities">
                        <value>
                            <parameter>entities</parameter>
                        </value>
                    </parameter>
                    <parameter name="withImprovement">
                        <value>
                            <parameter>withImprovement</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
        <stage label="Déplacement vers le point de regroupement" disable-when-done="true">
            <description>Se déplace vers le position de regroupement afin de s'éloigner de l'obstacle.</description>
            <skills>
                <skill name="agent.skills.MoveToward" main="true">
                    <parameter name="entities">
                        <value>
                            <list>
                                <parameter>meetingPoint</parameter>
                            </list>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>