<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.tasks.TakeRefugee" source-version="1.0.0">
    <description>Prend en compte une unité comme étant réfugié. La mission consiste en un déplacement vers l'unité à prendre en compte, à l'embarquer et à la considérer comme réfugié. Une fois l'unité faire embarquée, l'agent se déplace vers le camp passé en paramètre pour l'y déposer.</description>
    <parameters>
        <parameter name="unit">
            <description>L'unité à prendre en compte comme réfugié.</description>
            <type>
                <class name="world_elements.Platoon"/>
            </type>
        </parameter>
        <parameter name="camp">
            <description>Le camp dans lequel déposer le réfugié.</description>
            <type>
                <class name="world_concepts.Camp"/>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="Déplacement vers l'unité considérée comme réfugié.">
            <skills>
                <skill name="agent.skills.TakeRefugee" main="true">
                    <parameter name="unit">
                        <value>
                            <parameter>unit</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
        <stage label="Déplacement vers le camp" disable-when-done="true">
            <skills>
                <skill name="agent.skills.DischargeIn" main="true">
                    <parameter name="camp">
                        <value>
                            <parameter>camp</parameter>
                        </value>
                    </parameter>
                    <parameter name="elements">
                        <value>
                            <list>
                                <parameter>unit</parameter>
                            </list>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>