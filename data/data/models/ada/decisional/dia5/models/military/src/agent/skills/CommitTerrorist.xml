<?xml version="1.0" encoding="UTF-8"?>
<skill xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.skills.CommitTerrorist" source-version="1.0.0">
    <description>Mission d'un individu comettant une action isolé, une attaque sur un objectif désigné. Cette tâche modèlise l'attaque terroriste.</description>
    <parameters>
        <parameter name="position">
            <description>Position de repli</description>
            <type>
                <class name="properties.Reachable"/>
            </type>
        </parameter>
        <parameter name="suicide">
            <description>Si l'attentat entraine le suicide de celui qui le commet</description>
            <type>
                <simple name="boolean"/>
            </type>
        </parameter>
        <parameter name="objective">
            <description>Cible de l'attentat</description>
            <type>
                <class name="properties.Attackable"/>
            </type>
        </parameter>
        <parameter name="manual" nullable="true">
            <description>Mise à feu manuelle (sur ordre de conduite) ou automatique (une fois arrivée sur position de repli)</description>
            <type>
                <simple name="boolean"/>
            </type>
            <default>
                <boolean>false</boolean>
            </default>
        </parameter>
    </parameters>
    <links>
        <link name="moveToward" skill="agent.skills.MoveToward"/>
    </links>
</skill>