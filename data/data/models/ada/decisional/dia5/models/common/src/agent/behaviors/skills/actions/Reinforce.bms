-- ****************************************************************************
-- To reinforce an entity
-- @params: self.params.entity, a masalife 'reinforceable' object
-- @returns: reinforcementActionRunning once action is running
-- ****************************************************************************
rootnode
{
    feedbacks = { "reinforcementActionRunning" },
    select = function( self )
        if meKnowledge:reinforce( self.params.entity ) then
            Feedback( self.feedbacks.reinforcementActionRunning )
        end
    end
}