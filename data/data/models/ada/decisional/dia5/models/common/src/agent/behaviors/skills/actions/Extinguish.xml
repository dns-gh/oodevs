<?xml version="1.0" encoding="UTF-8"?>
<skill xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.behaviors.skills.actions.Extinguish" source-version="1.0.0">
    <description>To extinguish a given fire.</description>
    <parameters>
        <parameter name="fire">
            <description>A fire that can be extinguished.</description>
            <type>
                <class name="agent.ontology.interfaces.Fire"/>
            </type>
        </parameter>
    </parameters>
    <body-type>
        <class name="agent.ontology.interfaces.Body"/>
    </body-type>
    <resources>
        <resource name="agent.behaviors.resources.Extinguisher" variable="extinguisher"/>
    </resources>
    <feedbacks>
        <feedback name="extinguishActionCompleted">
            <description>Sent upon simulation action completion.</description>
        </feedback>
    </feedbacks>
</skill>