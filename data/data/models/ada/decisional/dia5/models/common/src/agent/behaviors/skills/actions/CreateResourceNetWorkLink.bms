-- ****************************************************************************
-- To create and build a work (existing work or planned work).
-- @params self.params.work, a ML Life work object.
-- @return linkCreationActionCompleted once action is completed
-- ****************************************************************************
rootnode
{
    feedbacks = { "linkCreationActionCompleted" },

    select = function( self )
        if meKnowledge:createResourceLink( self.params.resourceNode, self.params.resourceReceiver ) then
            Feedback( self.feedbacks.linkCreationActionCompleted )
        end
    end
}