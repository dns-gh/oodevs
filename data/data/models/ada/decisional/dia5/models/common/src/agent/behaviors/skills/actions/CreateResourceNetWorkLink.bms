-- ****************************************************************************
-- To create and build a work (existing work or planned work).
-- @params self.params.resourceProducer, a ML Life resourceProducer object.
-- @params self.params.resourceNode, a ML Life resourceNode object (the receiver)
-- @return linkCreationActionCompleted once action is completed
-- ****************************************************************************
rootnode
{
    feedbacks = { "linkCreationActionCompleted" },

    select = function( self )
        if meKnowledge:createResourceLink( self.params.resourceProducer, self.params.resourceNode ) then
            Feedback( self.feedbacks.linkCreationActionCompleted )
        end
    end
}