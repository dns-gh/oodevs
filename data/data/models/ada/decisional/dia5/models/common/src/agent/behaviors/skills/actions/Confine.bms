-- ****************************************************************************
-- To confine a specified PopulatedArea.
-- @params self.params.populatedArea, a populatedArea
-- @return confineActionCompleted once action is completed
-- ****************************************************************************
rootnode
{
    feedbacks = { "confineActionCompleted" },

    select = function( self )
        if meKnowledge:confine( self.params.populatedArea ) then
            Feedback( self.feedbacks.confineActionCompleted )
        end
    end
}