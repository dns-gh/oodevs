-- ****************************************************************************
-- To alert a specified PopulatedArea
-- @params: self.params.populatedArea, a masalife PopulatedArea objects
-- @returns: alertActionCompleted once action is complete
-- ****************************************************************************
rootnode
{
    feedbacks = { "alertActionCompleted" },
    select = function( self )
        if meKnowledge:alert( self.params.populatedArea ) then
            Feedback( self.feedbacks.alertActionCompleted )
        end
    end
}