-- ****************************************************************************
-- To take off (verticaly) from the ground
-- @params: self.params.height, the height to reach
-- @returns: takeOffActionCompleted once action is running
-- ****************************************************************************
rootnode
{
    feedbacks = { "takeOffActionCompleted" },
    acquire   = { [ skill.resources.motion ] = 1 },

    select = function( self )
        if meKnowledge:takeOff( self.params.height ) then
            Feedback( self.feedbacks.done ) -- if directly used within a task
            Feedback( self.feedbacks.takeOffActionCompleted )
        end
    end
}