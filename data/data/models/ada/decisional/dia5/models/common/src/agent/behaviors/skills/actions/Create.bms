-- ****************************************************************************
-- To create and build a work (existing work or planned work).
-- @params self.params.work, a ML Life work object.
-- @return creationActionCompleted once action is completed
-- ****************************************************************************
rootnode
{
    feedbacks = { "creationActionCompleted", "createActionRunning" },

    select = function( self )
        if not self.params.work:isBuilt() then
            self.createdWork = meKnowledge:create( self.params.work )
            Feedback( self.feedbacks.createActionRunning, { work = self.createdWork } )
        else
            Feedback( self.feedbacks.creationActionCompleted, { work = self.createdWork } )
        end
    end
}