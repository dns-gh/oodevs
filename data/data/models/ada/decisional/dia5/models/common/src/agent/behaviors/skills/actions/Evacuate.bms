-- ****************************************************************************
-- To evacuate a ppoulation located into a given populated area
-- @params self.params.populatedArea, a populated area.
-- @return evacuateActionCompleted once action is completed
-- ****************************************************************************
rootnode
{
    feedbacks = { "evacuateActionCompleted" },

    select = function( self )
        if meKnowledge:evacuate( self.params.populatedArea ) then
            Feedback( self.feedbacks.evacuateActionCompleted )
        end
    end
}