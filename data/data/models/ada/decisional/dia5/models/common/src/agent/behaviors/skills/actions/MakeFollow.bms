-- **************************************************************************** 
-- To make follow an agent
-- @params: self.params.follower, a masalife follower (teammate or non-teammate units)
-- @returns: makeFollowActionDone when unit has been told to follow.
-- ****************************************************************************
rootnode
{
    feedbacks = { "makeFollowActionCompleted" },
    select = function( self )
        if meKnowledge:makeFollow( self.params.follower ) then
            Feedback( self.feedbacks.makeFollowActionCompleted )
        end
    end
}