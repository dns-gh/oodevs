-- ****************************************************************************
-- To lift the confinement of a population location into a specified populated area.
-- @params: self.params.populatedArea, a PopulatedArea
-- @returns: undoconfineActionCompleted once action is complete
-- ****************************************************************************
rootnode
{
    feedbacks = { "undoConfineActionCompleted" },

    select = function( self )
        if meKnowledge:undoConfine( self.params.populatedArea ) then
            Feedback( self.feedbacks.undoConfineActionCompleted )
        end
    end
}