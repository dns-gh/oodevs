-- ****************************************************************************
-- To decontaminate a specified ContaminatedArea
-- @params: self.params.area, a masalife ContaminatedArea object
-- @returns: alertActionCompleted once action is complete
-- ****************************************************************************
rootnode
{
    feedbacks = { "decontaminateActionCompleted" },
    select = function( self )
        if meKnowledge:decontaminate( self.params.area ) then
            Feedback( self.feedbacks.decontaminateActionCompleted )
        end
    end
}