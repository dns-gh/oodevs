-- ****************************************************************************
-- To be decontaminated within a decontamination plot.
-- @params self.params.decontaminationPlot, a 'decontaminationPlot' ML object
-- @return getDecontaminatedActionCompleted once action is completed
-- ****************************************************************************
rootnode
{
    feedbacks = { "getDecontaminatedActionCompleted" },

    select = function( self )
        if meKnowledge:getDecontaminated( self.params.decontaminationPlot ) then
            Feedback( self.feedbacks.getDecontaminatedActionCompleted )
        end
    end
}