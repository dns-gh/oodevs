<?xml version="1.0" encoding="UTF-8"?>
<skill xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.behaviors.skills.actions.Heal" source-version="1.0.0">
    <description>To heal wounded victims within a given simulated entity.</description>
    <parameters>
        <parameter name="wounded">
            <description>The element to heal.</description>
            <type>
                <class name="agent.world.Wounded"/>
            </type>
        </parameter>
    </parameters>
    <body-type>
        <class name="agent.world.UnitBody"/>
    </body-type>
    <feedbacks>
        <feedback name="healActionCompleted">
            <description>Sent upon completion of the simulation action.</description>
        </feedback>
    </feedbacks>
</skill>