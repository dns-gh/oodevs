-- ****************************************************************************
-- To land on the ground (verticaly)
-- @returns: landActionCompleted once action is completed
-- ****************************************************************************
rootnode
{
    feedbacks = { "landActionCompleted" },
    acquire   = { [ skill.resources.motion ] = 1 },

    select = function( self )
        if meKnowledge:land() then
            Feedback( self.feedbacks.done ) -- if directly used within a task
            Feedback( self.feedbacks.landActionCompleted )
        end
    end
}