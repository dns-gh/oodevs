-- ****************************************************************************
-- To load an entity in order to transport it
-- @params: self.params.entity, a masalife 'Transportable' object
-- @returns: loaded once action of loading the entity is done
-- ****************************************************************************
rootnode
{
    feedbacks = { "loadActionCompleted" },

    select = function( self )
        if meKnowledge:load( self.params.transportableEntity ) then
            Feedback( self.feedbacks.loadActionCompleted )
        end
    end
}