<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="behaviors.tasks.ExtinguishAFire" source-version="1.0.0">
    <description>To extinguish a given fire. Once the given fire is extinguished, agent Unit move toward a issued garage position.</description>
    <parameters>
        <parameter name="fire">
            <description>The fire to act on.</description>
            <type>
                <class name="agent.world.Fire"/>
            </type>
        </parameter>
        <parameter name="garagePosition">
            <description>The destination to reach once the fire is extinguished.</description>
            <type>
                <class name="agent.world.Destination"/>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="Moving toward fire">
            <description>To reach the fire and try to extinguish it.</description>
            <skills>
                <skill name="behaviors.skills.primitives.Extinguish" main="true">
                    <parameter name="fires">
                        <value>
                            <list>
                                <parameter>fire</parameter>
                            </list>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
        <stage label="Moving toward garage position" disable-when-done="true">
            <description>Move to the given garage position.</description>
            <skills>
                <skill name="agent.behaviors.skills.actions.MoveTo" main="true">
                    <parameter name="destination">
                        <value>
                            <parameter>garagePosition</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>