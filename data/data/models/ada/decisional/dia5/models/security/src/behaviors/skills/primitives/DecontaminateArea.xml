<?xml version="1.0" encoding="UTF-8"?>
<skill xmlns="http://www.masagroup.net/directia/schemas/bm" name="behaviors.skills.primitives.DecontaminateArea" source-version="1.0.0">
    <description>For an agent to know how to decontaminate a set of areas.&#xD;
Areas are visited in the order of the list. </description>
    <parameters>
        <parameter name="areas">
            <description>A list of areas. </description>
            <type>
                <list>
                    <class name="agent.ontology.interfaces.ContaminationArea"/>
                </list>
            </type>
        </parameter>
    </parameters>
    <body-type>
        <class name="agent.ontology.interfaces.Body"/>
    </body-type>
    <links>
        <link name="reach" skill="behaviors.skills.primitives.Reach">
            <description>To go to a populated area. </description>
        </link>
        <link name="decontaminate" skill="agent.behaviors.skills.actions.DecontaminateArea">
            <description>To enact the decision to &quot;decontaminate&quot; an area. </description>
        </link>
    </links>
    <feedbacks>
        <feedback name="decontaminated">
            <description>Sent upon completion of the simulation action.</description>
            <argument name="area">
                <type>
                    <class name="agent.ontology.interfaces.ContaminationArea"/>
                </type>
            </argument>
        </feedback>
    </feedbacks>
</skill>