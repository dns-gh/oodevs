<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.behaviors.tasks.ExtinguishFiresWithinArea" source-version="1.0.0">
    <description>To extinguish fires located into a a given area.&#xD;
&#xD;
If no fires exists in the area, the mission failed and terminates.</description>
    <parameters>
        <parameter name="area">
            <description>The area in which fires are retreived to be extinguished.</description>
            <type>
                <class name="agent.ontology.classes.Area"/>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="Moving toward fires" disable-when-done="true">
            <description>Visit all fires within the area and extinguish them.</description>
            <skills>
                <skill name="agent.behaviors.skills.primitives.Extinguish" main="true">
                    <parameter name="fires">
                        <value>
                            <call method="agent.ontology.queries.GetFiresWithinArea">
                                <parameter name="area">
                                    <value>
                                        <parameter>area</parameter>
                                    </value>
                                </parameter>
                            </call>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>