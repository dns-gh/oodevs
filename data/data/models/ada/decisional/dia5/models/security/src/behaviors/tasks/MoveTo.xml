<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="behaviors.tasks.MoveTo" source-version="1.0.0">
    <parameters>
        <parameter name="urgency">
            <type>
                <simple name="boolean"/>
            </type>
            <default>
                <boolean>false</boolean>
            </default>
        </parameter>
        <parameter name="waypoints">
            <type>
                <list>
                    <class name="agent.world.Destination"/>
                </list>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="Moving along waypoints toward destination" disable-when-done="true">
            <skills>
                <skill name="behaviors.skills.MoveAlong" main="true">
                    <parameter name="entities">
                        <value>
                            <parameter>waypoints</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>