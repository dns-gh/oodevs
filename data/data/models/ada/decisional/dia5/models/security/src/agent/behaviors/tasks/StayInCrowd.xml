<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.behaviors.tasks.StayInCrowd" source-version="1.0.0">
    <description></description>
    <parameters>
        <parameter name="crowd">
            <description>The crowd to stay within.</description>
            <type>
                <class name="agent.ontology.classes.Crowd"/>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="Move to head of the crowd" permanent="true">
            <skills>
                <skill name="agent.behaviors.skills.Follow">
                    <parameter name="elementsToFollow">
                        <value>
                            <list>
                                <parameter>crowd</parameter>
                            </list>
                        </value>
                    </parameter>
                    <parameter name="positions">
                        <value>
                            <call method="agent.ontology.queries.GetHeadPositionForCrowd">
                                <parameter name="crowd">
                                    <value>
                                        <parameter>crowd</parameter>
                                    </value>
                                </parameter>
                            </call>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>