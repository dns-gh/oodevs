<?xml version="1.0" encoding="UTF-8"?>
<skill xmlns="http://www.masagroup.net/directia/schemas/bm" name="behaviors.skills.primitives.Alert" source-version="1.0.0">
    <description>For an agent to know how to alert a set of populated areas.&#xD;
Populated areas are visited in the order of the list. </description>
    <parameters>
        <parameter name="populatedAreas">
            <description>A list of populated areas. </description>
            <type>
                <list>
                    <class name="agent.ontology.interfaces.PopulatedArea"/>
                </list>
            </type>
        </parameter>
    </parameters>
    <body-type>
        <class name="agent.ontology.interfaces.Body"/>
    </body-type>
    <links>
        <link name="reach" skill="behaviors.skills.primitives.Reach">
            <description>To go to a populated area. </description>
        </link>
        <link name="alert" skill="agent.behaviors.skills.actions.Alert">
            <description>To enact the decision to &quot;alert&quot; a populated area. </description>
        </link>
    </links>
    <feedbacks>
        <feedback name="alerted">
            <description>Sent upon completion of the simulation action.</description>
            <argument name="populatedArea">
                <type>
                    <class name="agent.ontology.interfaces.PopulatedArea"/>
                </type>
            </argument>
        </feedback>
    </feedbacks>
</skill>