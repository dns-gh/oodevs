-- **************************************************************************** 
-- MoveAlong
-- ****************************************************************************
rootnode
{
    connections = { skill.links.reach },

    -- -------------------------------------------------------------------------------- 
    -- Once first element is reached, get the next one by incrementing iterator.
    -- --------------------------------------------------------------------------------
    done = function( self ) -- call by move to action once movement toward current entity is over.
        if not self.params.goToNextTargetAfterInstallation then
            self.nextTargetIndex = self.nextTargetIndex + 1
        elseif meKnowledge:isInstalled() then
            self.nextTargetIndex = self.nextTargetIndex + 1
        end
    end,

    -- -------------------------------------------------------------------------------- 
    -- Init
    -- --------------------------------------------------------------------------------
    create = function( self )
        self.nextTargetIndex = 1
    end,

    -- -------------------------------------------------------------------------------- 
    -- Move toward the current element.
    -- --------------------------------------------------------------------------------
    activate = function( self )
        local Activate = Activate
        if self.nextTargetIndex > #self.params.entities then
            Feedback( self.feedbacks.done )
        else
            Activate( skill.links.reach, 1, { destination  = self.params.entities[ self.nextTargetIndex ] } )
        end
    end
}