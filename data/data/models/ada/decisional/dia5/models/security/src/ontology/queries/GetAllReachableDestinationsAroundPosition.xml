<?xml version="1.0" encoding="UTF-8"?>
<query xmlns="http://www.masagroup.net/directia/schemas/bm" name="ontology.queries.GetAllReachableDestinationsAroundPosition" source-version="1.0.0">
    <description>Return key points in aera defined by radius issued. In urban terrain, key points are urban blocks ans crossroads.</description>
    <parameters>
        <parameter name="radius">
            <type>
                <simple name="numeric"/>
            </type>
        </parameter>
        <parameter name="position">
            <type>
                <class name="agent.world.Destination"/>
            </type>
        </parameter>
    </parameters>
    <target name="TerrainElement">
        <type>
            <class name="agent.world.Destination"/>
        </type>
    </target>
</query>