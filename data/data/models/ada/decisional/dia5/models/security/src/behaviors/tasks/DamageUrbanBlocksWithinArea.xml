<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="behaviors.tasks.DamageUrbanBlocksWithinArea" source-version="1.0.0">
    <description>To damage urban blocks located into a given area.&#xD;
&#xD;
If no urban block exists in the area, the mission failed and terminates.</description>
    <parameters>
        <parameter name="area">
            <description>The area with urban blocks to damage.</description>
            <type>
                <class name="ontology.classes.Area"/>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="damage urban blocks" disable-when-done="true">
            <description>Move along urban blocks in the area and make them damaged.</description>
            <skills>
                <skill name="behaviors.skills.Damage" main="true">
                    <parameter name="works">
                        <value>
                            <call method="ontology.queries.GetUrbanBlocksWithinArea">
                                <parameter name="area">
                                    <value>
                                        <parameter>area</parameter>
                                    </value>
                                </parameter>
                            </call>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>