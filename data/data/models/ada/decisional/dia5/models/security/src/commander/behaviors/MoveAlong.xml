<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="commander.behaviors.MoveAlong" source-version="1.0.0">
    <description>For a commander, to move along waypoints, by issuing a &quot;moveTo&quot; order to subordinate units.</description>
    <parameters>
        <parameter name="waypoints">
            <description>The waypoints to move along.</description>
            <type>
                <list>
                    <class name="commander.ontology.Position"/>
                </list>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="issue move to order" permanent="true">
            <skills>
                <skill name="commander.behaviors.MoveTo">
                    <parameter name="subordinates">
                        <value>
                            <call method="commander.ontology.GetSubordinates"/>
                        </value>
                    </parameter>
                    <parameter name="waypoints">
                        <value>
                            <parameter>waypoints</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>