<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="behaviors.tasks.Follow" source-version="1.0.0">
    <parameters>
        <parameter name="entities">
            <type>
                <list>
                    <class name="ontology.classes.Human"/>
                </list>
            </type>
        </parameter>
        <parameter name="positions" nullable="true">
            <type>
                <list>
                    <class name="agent.world.Destination"/>
                </list>
            </type>
            <default>
                <nil/>
            </default>
        </parameter>
        <parameter name="minDistance">
            <type>
                <simple name="numeric"/>
            </type>
            <default>
                <number>0.0</number>
            </default>
        </parameter>
    </parameters>
    <stages>
        <stage label="Follow" permanent="true">
            <skills>
                <skill name="behaviors.skills.Follow">
                    <parameter name="elementsToFollow">
                        <value>
                            <parameter>entities</parameter>
                        </value>
                    </parameter>
                    <parameter name="positions">
                        <value>
                            <parameter>positions</parameter>
                        </value>
                    </parameter>
                    <parameter name="minDistance">
                        <value>
                            <parameter>minDistance</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>