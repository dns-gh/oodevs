<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.behaviors.tasks.UndoEvacuateUrbanBlocksWithinArea" source-version="1.0.0">
    <parameters>
        <parameter name="area">
            <type>
                <class name="agent.ontology.classes.Area"/>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="Lift urban blocks evacuation" disable-when-done="true">
            <skills>
                <skill name="agent.behaviors.skills.primitives.UndoEvacuate" main="true">
                    <parameter name="populatedAreas">
                        <value>
                            <call method="agent.ontology.queries.GetUrbanBlocksWithinArea">
                                <parameter name="area">
                                    <value>
                                        <parameter>area</parameter>
                                    </value>
                                </parameter>
                            </call>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>