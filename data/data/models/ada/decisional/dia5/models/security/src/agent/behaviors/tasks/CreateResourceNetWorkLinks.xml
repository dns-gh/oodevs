<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.behaviors.tasks.CreateResourceNetWorkLinks" source-version="1.0.0">
    <description>For an gent to know how to create new resource links between a resource producer (a urban block or an object)  and a list of resource nodes (the 'resourceReceivers' list). &#xD;
&#xD;
When several links should be created, the agent acts on each target nodes by following the order of the elements into the 'resourceReceivers' list. </description>
    <parameters>
        <parameter name="resourceProducer">
            <description>The resource producer.</description>
            <type>
                <class name="agent.world.ResourceProducer"/>
            </type>
        </parameter>
        <parameter name="resourceReceivers">
            <description>The list of resource receivers.</description>
            <type>
                <list>
                    <class name="agent.world.ResourceNode"/>
                </list>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="Link creation between nodes" disable-when-done="true">
            <skills>
                <skill name="agent.behaviors.skills.primitives.CreateResourceNetWorkLinks" main="true">
                    <parameter name="resourceProducer">
                        <value>
                            <parameter>resourceProducer</parameter>
                        </value>
                    </parameter>
                    <parameter name="resourceNodes">
                        <value>
                            <parameter>resourceReceivers</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>