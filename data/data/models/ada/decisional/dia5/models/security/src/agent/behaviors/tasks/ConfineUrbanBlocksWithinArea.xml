<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.behaviors.tasks.ConfineUrbanBlocksWithinArea" source-version="1.0.0">
    <description>To confine population located into a set of urban blocks in a given area.&#xD;
&#xD;
If no urban block exists in the area, the mission failed and terminates.</description>
    <parameters>
        <parameter name="area">
            <description>The area in which urban blocks are retreived to confine population.</description>
            <type>
                <class name="agent.ontology.classes.Area"/>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="Confinement of urban blocks" disable-when-done="true">
            <description>Visit all urban blocks within the area and confine population.</description>
            <skills>
                <skill name="agent.behaviors.skills.primitives.Confine" main="true">
                    <parameter name="populatedAreas">
                        <value>
                            <call method="agent.ontology.queries.GetUrbanBlocksWithinArea">
                                <parameter name="area">
                                    <value>
                                        <parameter>area</parameter>
                                    </value>
                                </parameter>
                            </call>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>