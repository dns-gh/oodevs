<?xml version="1.0" encoding="UTF-8"?>
<query xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.ontology.queries.GetObjectsAroundPosition" source-version="1.0.0">
    <parameters>
        <parameter name="position">
            <description>The position to find objects around.</description>
            <type>
                <class name="agent.ontology.classes.Position"/>
            </type>
        </parameter>
        <parameter name="distance">
            <description>The distance (in METERS) where to find objects from the issued position.</description>
            <type>
                <simple name="numeric"/>
            </type>
        </parameter>
    </parameters>
    <target name="Object">
        <type>
            <class name="agent.ontology.classes.Object"/>
        </type>
    </target>
</query>