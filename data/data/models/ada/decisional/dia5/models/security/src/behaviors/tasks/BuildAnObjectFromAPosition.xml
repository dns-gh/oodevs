<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="behaviors.tasks.BuildAnObjectFromAPosition" source-version="1.0.0">
    <description>This mission allows the agent to create an object from a specified position. The agent moves toward the work's position, then reaches the issued position and create/build instantaneously the object.</description>
    <parameters>
        <parameter name="plannedWork">
            <description>The object to create.</description>
            <type>
                <class name="ontology.classes.PlannedWork"/>
            </type>
        </parameter>
        <parameter name="position">
            <description>The position from which the agent create the object.</description>
            <type>
                <class name="agent.world.Destination"/>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="Move to location">
            <description>To move and prepare the attack.</description>
            <skills>
                <skill name="agent.behaviors.skills.actions.MoveTo" main="true">
                    <parameter name="destination">
                        <value>
                            <parameter>plannedWork</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
        <stage label="move to meeting point">
            <description>Move to position.</description>
            <skills>
                <skill name="agent.behaviors.skills.actions.MoveTo" main="true">
                    <parameter name="destination">
                        <value>
                            <parameter>position</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
        <stage label="object creation" disable-when-done="true">
            <skills>
                <skill name="behaviors.skills.CreateAWork" main="true">
                    <parameter name="instantaneoulsy">
                        <value>
                            <boolean>true</boolean>
                        </value>
                    </parameter>
                    <parameter name="work">
                        <value>
                            <parameter>plannedWork</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>