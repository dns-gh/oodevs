<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.behaviors.tasks.Decontaminate" source-version="1.0.0">
    <description>For an agent to know how to decontaminate a set of areas.&#xD;
Areas are visited in the order of the list. </description>
    <parameters>
        <parameter name="contaminatedElements">
            <description>The elements to decontaminate (areas or urban blocks).</description>
            <type>
                <list>
                    <class name="agent.world.ContaminationArea"/>
                </list>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="Decontamination" disable-when-done="true">
            <description>Decontaminate each of issued areas.</description>
            <skills>
                <skill name="agent.behaviors.skills.primitives.DecontaminateAreas" main="true">
                    <parameter name="areas">
                        <value>
                            <parameter>contaminatedElements</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>