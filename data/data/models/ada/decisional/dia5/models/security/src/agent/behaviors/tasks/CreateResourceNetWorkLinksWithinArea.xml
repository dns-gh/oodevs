<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="agent.behaviors.tasks.CreateResourceNetWorkLinksWithinArea" source-version="1.0.0">
    <description>For an gent to know how to create new resource links between a resource producer (a urban block or an object)  and a list of resource nodes, contained inside the issued area.&#xD;
&#xD;
When several links should be created, the agent acts on each target nodes by following the order of the elements into the 'resourceReceivers' list. </description>
    <parameters>
        <parameter name="resourceProducer">
            <description>The resource producer.</description>
            <type>
                <class name="agent.world.ResourceProducer"/>
            </type>
        </parameter>
        <parameter name="area">
            <description>The area inside which the agent find the resource node (the resource receivers) to connect the producer with.</description>
            <type>
                <class name="agent.ontology.classes.Area"/>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="Link creation between nodes" disable-when-done="true">
            <skills>
                <skill name="agent.behaviors.skills.primitives.CreateResourceNetWorkLinks" main="true">
                    <parameter name="resourceProducer">
                        <value>
                            <parameter>resourceProducer</parameter>
                        </value>
                    </parameter>
                    <parameter name="resourceNodes">
                        <value>
                            <call method="agent.ontology.queries.GetResourceNodesWithinArea">
                                <parameter name="area">
                                    <value>
                                        <parameter>area</parameter>
                                    </value>
                                </parameter>
                            </call>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>