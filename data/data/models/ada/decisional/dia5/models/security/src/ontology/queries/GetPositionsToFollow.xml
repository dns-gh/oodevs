<?xml version="1.0" encoding="UTF-8"?>
<query xmlns="http://www.masagroup.net/directia/schemas/bm" name="ontology.queries.GetPositionsToFollow" source-version="1.0.0">
    <description>Returns positions that allow to follow a set of agents or crowds.</description>
    <parameters>
        <parameter name="agents">
            <type>
                <list>
                    <class name="ontology.classes.Agent"/>
                </list>
            </type>
        </parameter>
        <parameter name="distanceMin">
            <type>
                <simple name="numeric"/>
            </type>
        </parameter>
    </parameters>
    <target name="positions">
        <type>
            <class name="agent.ontology.interfaces.Destination"/>
        </type>
    </target>
</query>