<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="behaviors.tasks.HealVictimsWithinCrowds" source-version="1.0.0">
    <description>To heal all the victims within issued crowds.</description>
    <parameters>
        <parameter name="crowds">
            <description>The set of crowds to heal the victims within.</description>
            <type>
                <list>
                    <class name="ontology.classes.Crowd"/>
                </list>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="moving to heal victims" disable-when-done="true">
            <skills>
                <skill name="behaviors.skills.primitives.Heal" main="true">
                    <parameter name="woundedUnits">
                        <value>
                            <parameter>crowds</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>