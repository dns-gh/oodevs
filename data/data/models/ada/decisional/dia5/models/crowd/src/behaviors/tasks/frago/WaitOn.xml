<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="behaviors.tasks.frago.WaitOn" source-version="1.0.0">
    <description>Ordre de conduite d'arret sur position.</description>
    <parameters>
        <parameter name="objective">
            <description>L'objectif sur lequel s'arreter.</description>
            <type>
                <class name="agent.world.Destination"/>
            </type>
        </parameter>
    </parameters>
    <goal>
        <description>S'arreter sur l'objectif.</description>
    </goal>
    <stages>
        <stage label="Déplacement et arret sur la position" permanent="true">
            <description>Se déplacer vers la position et s'y arreter.</description>
            <skills>
                <skill name="agent.behaviors.skills.actions.MoveTo" priority="1000.0">
                    <parameter name="destination">
                        <value>
                            <parameter>objective</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>