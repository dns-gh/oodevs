<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="behaviors.tasks.Damage" source-version="1.0.0">
    <description>For the crowd agent, to damage a given 'intallation' object (urban block or any object).&#xD;
The agent moves toward the target element and damage it.</description>
    <parameters>
        <parameter name="installation">
            <description>The element to damage (urban block or any object).</description>
            <type>
                <class name="world.interfaces.Installation"/>
            </type>
        </parameter>
        <parameter name="quantityOfDamage">
            <description>The quantity of damage to use to damage the installation (%).</description>
            <type>
                <simple name="numeric"/>
            </type>
            <default>
                <number>10.0</number>
            </default>
        </parameter>
    </parameters>
    <stages>
        <stage label="moving to objective" disable-when-done="true">
            <skills>
                <skill name="behaviors.skills.Damage" main="true">
                    <parameter name="quantityOfDamage">
                        <value>
                            <parameter>quantityOfDamage</parameter>
                        </value>
                    </parameter>
                    <parameter name="installation">
                        <value>
                            <parameter>installation</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>