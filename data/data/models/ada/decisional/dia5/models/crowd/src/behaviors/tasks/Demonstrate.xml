<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="behaviors.tasks.Demonstrate" source-version="1.0.0">
    <description>To move toward a final destination, while demonstrating.</description>
    <parameters>
        <parameter name="destination">
            <description>The destination to move to.</description>
            <type>
                <class name="agent.world.Destination"/>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="demonstrate" permanent="true">
            <skills>
                <skill name="behaviors.skills.Demonstrate">
                    <parameter name="destination">
                        <value>
                            <parameter>destination</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>