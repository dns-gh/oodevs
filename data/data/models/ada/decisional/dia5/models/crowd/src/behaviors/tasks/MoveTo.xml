<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="behaviors.tasks.MoveTo" source-version="1.0.0">
    <description>For the crowd agent, to reach a given destination.</description>
    <parameters>
        <parameter name="destination">
            <description>The destination to reach.</description>
            <type>
                <class name="agent.world.Destination"/>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="moving to destination" disable-when-done="true">
            <skills>
                <skill name="behaviors.skills.MoveAlong" main="true">
                    <parameter name="wayPoints">
                        <value>
                            <list>
                                <parameter>destination</parameter>
                            </list>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>