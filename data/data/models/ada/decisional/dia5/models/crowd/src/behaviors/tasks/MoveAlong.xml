<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="behaviors.tasks.MoveAlong" source-version="1.0.0">
    <description>To follow a path defined as an ordered set of way-points by the user.</description>
    <parameters>
        <parameter name="wayPoints">
            <type>
                <list>
                    <class name="agent.world.Destination"/>
                </list>
            </type>
        </parameter>
    </parameters>
    <stages>
        <stage label="moving along the route" disable-when-done="true">
            <skills>
                <skill name="behaviors.skills.MoveAlong" main="true">
                    <parameter name="wayPoints">
                        <value>
                            <parameter>wayPoints</parameter>
                        </value>
                    </parameter>
                </skill>
            </skills>
        </stage>
    </stages>
</task>