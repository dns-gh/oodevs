<?xml version="1.0" encoding="UTF-8"?>
<skill xmlns="http://www.masagroup.net/directia/schemas/bm" name="behaviors.skills.actions.Damage" source-version="1.0.0">
    <description>For the crowd agent, to act for damaging a given 'intallation' object (urban block or any object).</description>
    <parameters>
        <parameter name="installation">
            <description>The element to damage.</description>
            <type>
                <class name="world.interfaces.Installation"/>
            </type>
        </parameter>
        <parameter name="quantityOfDamage">
            <description>The quantity of damage to use to damage the installation.</description>
            <type>
                <simple name="numeric"/>
            </type>
            <default>
                <number>10.0</number>
            </default>
        </parameter>
    </parameters>
    <body-type>
        <class name="world.classes.CrowdBody"/>
    </body-type>
    <feedbacks>
        <feedback name="damageActionCompleted">
            <description>Sent upon action completion.</description>
        </feedback>
    </feedbacks>
</skill>