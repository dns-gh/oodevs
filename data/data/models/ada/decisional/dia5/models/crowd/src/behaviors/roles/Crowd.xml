<?xml version="1.0" encoding="UTF-8"?>
<role xmlns="http://www.masagroup.net/directia/schemas/bm" name="behaviors.roles.Crowd" source-version="1.0.0">
    <description>The role of a generic 'Crowd' agent. </description>
    <body-type>
        <class name="world.classes.CrowdBody"/>
    </body-type>
    <skills>
        <skill name="behaviors.skills.Attack"/>
        <skill name="behaviors.skills.GetDecontaminated"/>
        <skill name="behaviors.skills.Damage"/>
        <skill name="agent.behaviors.skills.actions.MoveTo"/>
        <skill name="behaviors.skills.MoveAlong"/>
        <skill name="behaviors.skills.Demonstrate"/>
        <skill name="behaviors.skills.actions.Attack"/>
        <skill name="behaviors.skills.actions.Damage"/>
        <skill name="behaviors.skills.actions.Demonstrate"/>
        <skill name="agent.behaviors.skills.actions.GetDecontaminated"/>
        <skill name="behaviors.skills.ManageFragOrder"/>
        <skill name="behaviors.skills.actions.Wait"/>
    </skills>
    <resources>
        <resource name="agent.behaviors.resources.Motion"/>
    </resources>
    <default-task permanent="true">
        <skills>
            <skill name="behaviors.skills.ManageFragOrder">
                <parameter name="fragOrders">
                    <value>
                        <call method="queries.getFragOrders"/>
                    </value>
                </parameter>
            </skill>
        </skills>
    </default-task>
</role>