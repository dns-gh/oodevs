<?xml version="1.0" encoding="UTF-8"?>
<skill xmlns="http://www.masagroup.net/directia/schemas/bm" name="behaviors.skills.actions.Attack" source-version="1.0.0">
    <description>For the crowd agent, to act for attacking a given unit.</description>
    <parameters>
        <parameter name="unit">
            <description>The unit to attack.</description>
            <type>
                <class name="world.classes.Unit"/>
            </type>
        </parameter>
    </parameters>
    <body-type>
        <class name="world.classes.CrowdBody"/>
    </body-type>
    <feedbacks>
        <feedback name="attackActionCompleted">
            <description>Sent upon action completion.</description>
        </feedback>
    </feedbacks>
</skill>