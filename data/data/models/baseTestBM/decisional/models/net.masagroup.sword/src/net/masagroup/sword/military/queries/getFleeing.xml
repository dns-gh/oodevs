	</description>
    <parameters>
        <parameter name="objectives" >
            <type>
                <list>
                  <class name="net.masagroup.military.generic.knowledge.Fleeable"></class>
                </list>
             </type>     
        </parameter>
        <parameter name="dynamic">
          <type>
            <simple name="boolean"/>
          </type>
        </parameter>
    </parameters>
    <target>
        <type>
            <class name="net.masagroup.military.generic.knowledge.Fleeing" />
        </type>
    </target>
</query>