      <type>
        <list>
          <class name="net.masagroup.military.generic.knowledge.Destroyable"/>
        </list>
      </type>
    </parameter>
  </parameters>
  <stages>
    <stage label="Destroy enemies">
      <skills>
        <skill name="net.masagroup.military.generic.combatant.skills.primitives.Destroy" main="true" priority="1.0">
          <parameter name="entities">
            <value>
              <parameter>entities</parameter>
            </value>
          </parameter>
          <parameter name="positions">
            <value>
              <call method="net.masagroup.sword.military.queries.getDestroying">
                <parameter name="entities">
                  <value>
                    <parameter>entities</parameter>
                  </value>
                </parameter>
              </call>
            </value>
          </parameter>
        </skill>
      </skills>
    </stage>
  </stages>
</task>