<?xml version="1.0" encoding="UTF-8"?>
<role xmlns="http://www.masagroup.net/directia/schemas/bm" name="net.masagroup.sword.military.roles.Section" knowledge-class="net.masagroup.sword.military.world.Section">
  <description>Une entité décisionnelle quelconque dans un contexte militaire.</description>
  <skills>
    <skill name="net.masagroup.military.generic.skills.primitives.MoveToward"/>
    <skill name="net.masagroup.military.generic.skills.primitives.MoveAndTakePosition"/>
    <skill name="net.masagroup.military.generic.skills.primitives.Observe"/>
    <skill name="net.masagroup.military.generic.skills.primitives.ObserveToward"/>
    <skill name="net.masagroup.military.generic.combatant.skills.primitives.Destroy"/>
    <skill name="net.masagroup.military.generic.combatant.skills.primitives.Identify"/>
    <skill name="net.masagroup.military.generic.combatant.skills.primitives.Neutralize"/>
    <skill name="net.masagroup.military.generic.combatant.skills.primitives.Reconnoitre"/>
    <skill name="net.masagroup.military.generic.combatant.skills.Engage">
        <modifier name="effect">
            <value>destroy</value>
        </modifier>
    </skill>
    <skill name="net.masagroup.sword.military.skills.primitives.MoveToward"/>
    <skill name="net.masagroup.sword.military.skills.primitives.Illuminate"/>
    <skill name="net.masagroup.sword.military.skills.ManageFragOrder"/>
    <skill name="net.masagroup.sword.military.skills.ObserveAndReconnoiter"/>
  </skills>
   <resources>
    <resource name="net.masagroup.military.generic.resources.Move"/>
    <resource name="net.masagroup.military.generic.resources.Observe"/>
    <resource name="net.masagroup.military.generic.resources.Engage"/>
    <resource name="net.masagroup.sword.military.resources.Animator"/>
    <resource name="net.masagroup.sword.military.resources.IlluminatingCapacity"/>
  </resources>
   <default-task label="Prise en compte des ordres de conduite." permanent="true">
        <description>Gestion par défaut des ordres de conduite.</description>
        <goal>
            <description>Gestion et affectation des ordres de conduite.</description>
        </goal>
        <let name="fragOrdersToManage">
            <value>
                <call method="net.masagroup.sword.military.queries.getFragOrder"/>
            </value>
        </let>
        <skills>
            <skill name="net.masagroup.sword.military.skills.ManageFragOrder" priority="1.0">
                <parameter name="fragOrders">
                    <value>
                        <parameter>fragOrdersToManage</parameter>
                    </value>
                </parameter>
            </skill>
        </skills>
    </default-task>
</role>