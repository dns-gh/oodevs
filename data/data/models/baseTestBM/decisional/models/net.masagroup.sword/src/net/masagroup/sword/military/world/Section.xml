         <method name="getIdentificationState">
            <description>__INTEGRATION</description>
            <return>
                <description>Retourne la valeur du niveau d'identification courant de l'unité entre 0 et 100.</description>
                <type>
                    <simple name="numeric"/>
                </type>
            </return>
        </method>
