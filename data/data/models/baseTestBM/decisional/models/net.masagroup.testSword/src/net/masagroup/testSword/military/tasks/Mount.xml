<?xml version="1.0" encoding="UTF-8"?>
<task name="net.masagroup.testSword.military.tasks.Mount" xmlns="http://www.masagroup.net/directia/schemas/bm">
  <parameters>
		<parameter name="objectives">
      <description>Les éléments dans lesquels il est possible d'embarquer</description>
			<type>
				<list>
          <class name="net.masagroup.military.generic.knowledge.Mountable"/>
        </list>
			</type>
		</parameter>
	</parameters>
  <goal>
    <description>Embarquer dans un élément.</description>
  </goal>
	<stages>
		<stage label="Embarquement">
      <description>Embarquer dans un élément.</description>
			<goal>
        <description>Embarquer/charger des éléments</description>
			</goal>
			<skills>
        <skill name="net.masagroup.military.generic.skills.primitives.Mount" priority="1.0" main="true">
					<parameter name="entities">
						<value>
							<parameter>objectives</parameter>
						</value>
					</parameter>
					<parameter name="positions">
						<value>
							<call method="net.masagroup.military.generic.queries.getDefaultMountPositions">
								<parameter name="objectives">
									<value>
										<parameter>objectives</parameter>
									</value>
								</parameter>
							</call>
						</value>
					</parameter>
        </skill>
      </skills>
		</stage>
	</stages>
</task>