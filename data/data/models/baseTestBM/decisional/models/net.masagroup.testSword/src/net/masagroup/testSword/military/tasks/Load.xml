						<value>
							<parameter>objectives</parameter>
						</value>
					</parameter>
					<parameter name="positions">
						<value>
							<call method="net.masagroup.military.generic.queries.getDefaultLoadPositions">
								<parameter name="objectives">
									<value>
										<parameter>objectives</parameter>
									</value>
								</parameter>
							</call>
						</value>
					</parameter>
        </skill>
      </skills>
		</stage>
