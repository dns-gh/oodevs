      <type>
        <list>
          <class name="net.masagroup.military.generic.knowledge.Safeguardable"/>
        </list>
      </type>
    </parameter>
  </parameters>
  <stages>
    <stage permanent="true">
      <skills>
        <skill name="net.masagroup.sword.military.skills.primitives.Safeguard">
          <parameter name="entities">
            <value>
              <parameter>entities</parameter>
            </value>
          </parameter>
          <parameter name="positions">
            <value>
              <call method="net.masagroup.sword.military.queries.getSafeguarding">
                <parameter name="objectives">
                  <value>
                    <parameter>entities</parameter>
                  </value>
                </parameter>
              </call>
            </value>
          </parameter>
        </skill>
      </skills>
    </stage>
  </stages>
</task>