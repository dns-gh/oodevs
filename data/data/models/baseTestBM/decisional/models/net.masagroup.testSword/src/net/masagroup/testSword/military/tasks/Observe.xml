<?xml version="1.0" encoding="UTF-8"?>
<task xmlns="http://www.masagroup.net/directia/schemas/bm" name="net.masagroup.testSword.military.tasks.Observe">
	<parameters>
		<parameter name="objectives">
			<description>Les objectifs à observer</description>
			<type>
				<list>
					<class name="net.masagroup.military.generic.knowledge.Observable"/>
				</list>
			</type>
		</parameter>
	</parameters>
	<goal>
		<description>Observer les élements.</description>
	</goal>
	<stages>
		<stage label="Observation" permanent="true">
			<description>Observation des objectifs</description>
			<goal>
				<description>Observation des objectifs.</description>
			</goal>
			<skills>
				<skill name="net.masagroup.military.generic.skills.primitives.ObserveToward" priority="1.0">
					<parameter name="entities">
						<value>
							<parameter>objectives</parameter>
						</value>
					</parameter>
					<parameter name="positions">
						<value>
							<call method="net.masagroup.sword.military.queries.getObserving">
								<parameter name="objectives">
									<value>
										<parameter>objectives</parameter>
									</value>
								</parameter>
							</call>
						</value>
					</parameter>
				</skill>
			</skills>
		</stage>
	</stages>
</task>