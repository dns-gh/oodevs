<?xml version="1.0" encoding="UTF-8"?>
<pathfind xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <configuration distance-threshold="15000" max-calculation-time="1"/>
  <unit-rules>
    <rule type="base" flying="false" autonomous="false">
      <optimisation shortest="false"/>
      <preferred-altitude value="0"/>
      <preferred-terrains/>
      <avoided-terrains strength="7"/>
      <zone>
        <outter-tolerance with-automat="10000" without-automat="1000" cost-per-meter="1"/>
        <inner-comfort cost-per-meter="0.002" distance="500"/>
      </zone>
      <automat-zone>
        <outter-tolerance cost-per-meter="1" distance="0"/>
      </automat-zone>
      <danger-direction base-cost-beyond="1" cost-per-meter="0.001"/>
      <enemies cost-on-contact="0" cost-at-security-range="0"/>
      <object-costs avoid="true" threshold="10000">
        <object-cost type="anti tank obstacle" value="10000"/>
        <object-cost type="abattis" value="10000"/>
        <object-cost type="barricade" value="10000"/>
        <object-cost type="mines" value="10000"/>
        <object-cost type="mined area (linear)" value="10000"/>
        <object-cost type="mined area (scattered)" value="10000"/>
        <object-cost type="landslide" value="10000"/>
        <object-cost type="road destruction" value="10000"/>
        <object-cost type="bridge destruction" value="10000"/>
        <object-cost type="continuous pontoon bridge" value="0"/>
        <object-cost type="discontinuous pontoon bridge" value="0"/>
        <object-cost type="firing post" value="0"/>
        <object-cost type="safe zone" value="0"/>
        <object-cost type="gun artillery deployment area" value="10"/>
        <object-cost type="cobra deployment area" value="10"/>
        <object-cost type="mrls deployment area" value="10"/>
        <object-cost type="crossing site" value="10"/>
        <object-cost type="nbc cloud" value="10000"/>
        <object-cost type="decontamination site" value="10"/>
        <object-cost type="logistic support area" value="10"/>
        <object-cost type="jamming area" value="10000"/>        
        <object-cost type="rota area" value="10000"/>
        <object-cost type="nbc zone" value="10000"/>
        <object-cost type="landing area" value="10"/>
        <object-cost type="trail" value="-5"/>
        <object-cost type="platform" value="10"/>
        <object-cost type="mobility enhanced area" value="10"/>
        <object-cost type="landing area (helicopter)" value="10"/>
        <object-cost type="logistic area" value="10"/>
        <object-cost type="prisoners camp" value="10"/>
        <object-cost type="refugees camp" value="10"/>
        <object-cost type="logistic route" value="-10"/>
        <object-cost type="checkpoint" value="-5"/>
        <object-cost type="dropping area" value="10"/>
        <object-cost type="fire forbidden area" value="10"/>
        <object-cost type="movement forbidden area" value="10000"/>
        <object-cost type="mortar deployment area" value="10"/>
        <object-cost type="installation" value="0"/>
      </object-costs>
      <population-costs security-range="50" maximum="100" outside-of-population="10">
        <population-cost attitude="calme" contact-cost="5"/>
        <population-cost attitude="agitee" contact-cost="10"/>
        <population-cost attitude="excitee" contact-cost="25"/>
        <population-cost attitude="agressive" contact-cost="50"/>
      </population-costs>
    </rule>
    <rule type="movement" flying="false" autonomous="false" inherits="base">
      <preferred-terrains>
        <preferred-terrain type="chemin"/>
        <preferred-terrain type="departementale"/>
        <preferred-terrain type="nationale"/>
        <preferred-terrain type="autoroute"/>
      </preferred-terrains>
    </rule>
    <rule type="recon" flying="false" autonomous="false" inherits="base">
      <preferred-altitude value="0.001"/>
      <preferred-terrains>
        <preferred-terrain type="lisiere"/>
        <preferred-terrain type="chemin"/>
        <preferred-terrain type="departementale"/>
        <preferred-terrain type="nationale"/>
        <preferred-terrain type="autoroute"/>
      </preferred-terrains>
    </rule>
    <rule type="infiltration" flying="false" autonomous="false" inherits="base">
      <preferred-altitude value="-0.001"/>
      <preferred-terrains>
        <preferred-terrain type="foret"/>
      </preferred-terrains>
      <avoided-terrains>
        <avoided-terrain type="urbain"/>
      </avoided-terrains>
      <enemies cost-on-contact="100" cost-at-security-range="10"/>
    </rule>
    <rule type="assault" flying="false" autonomous="false" inherits="base">
      <avoided-terrains>
        <avoided-terrain type="chemin"/>
        <avoided-terrain type="departementale"/>
        <avoided-terrain type="nationale"/>
        <avoided-terrain type="autoroute"/>
      </avoided-terrains>
    </rule>
    <rule type="retreat" flying="false" autonomous="false" inherits="base">
      <optimisation shortest="true"/>
      <zone>
        <outter-tolerance with-automat="1000000000" without-automat="100000000"/>
      </zone>
      <danger-direction base-cost-beyond="5" cost-per-meter="0.01"/>
      <enemies cost-on-contact="100" cost-at-security-range="10"/>
    </rule>
    <rule type="backup" flying="false" autonomous="false" inherits="base">
      <optimisation shortest="true"/>
      <enemies cost-on-contact="100" cost-at-security-range="10"/>
    </rule>
    <rule type="minesweep" flying="false" autonomous="false" inherits="movement">
      <object-costs avoid="false" threshold="10000"/>
    </rule>
    <rule type="logistic" flying="false" autonomous="false" inherits="movement">
      <automat-zone>
        <outter-tolerance cost-per-meter="0" distance="1000000"/>
      </automat-zone>
    </rule>
    <rule type="base" flying="true" autonomous="false">
      <optimisation shortest="false"/>
      <preferred-altitude value="0"/>
      <preferred-terrains/>
      <avoided-terrains strength="7"/>
      <zone>
        <outter-tolerance with-automat="1000000000" without-automat="100000000" cost-per-meter="1"/>
        <inner-comfort cost-per-meter="0.002" distance="500"/>
      </zone>
      <automat-zone>
        <outter-tolerance cost-per-meter="1" distance="1000000000"/>
      </automat-zone>
      <danger-direction base-cost-beyond="1" cost-per-meter="0.001"/>
      <enemies cost-on-contact="0" cost-at-security-range="0"/>
      <object-costs avoid="true" threshold="0"/>
    </rule>
    <rule type="movement" flying="true" autonomous="false" inherits="base">
      <avoided-terrains>
        <avoided-terrain type="lisiere"/>
        <avoided-terrain type="urbain"/>
        <avoided-terrain type="banlieue"/>
        <avoided-terrain type="chemin"/>
        <avoided-terrain type="departementale"/>
        <avoided-terrain type="nationale"/>
        <avoided-terrain type="autoroute"/>
      </avoided-terrains>
    </rule>
    <rule type="recon" flying="true" autonomous="false" inherits="base">
      <avoided-terrains>
        <avoided-terrain type="urbain"/>
      </avoided-terrains>
    </rule>
    <rule type="infiltration" flying="true" autonomous="false" inherits="movement">
      <preferred-altitude value="-0.001"/>
      <enemies cost-on-contact="100" cost-at-security-range="10"/>
    </rule>
    <rule type="assault" flying="true" autonomous="false" inherits="base"/>
    <rule type="retreat" flying="true" autonomous="false" inherits="base">
      <optimisation shortest="true"/>
      <avoided-terrains/>
      <zone>
        <outter-tolerance with-automat="1000000000" without-automat="100000000"/>
      </zone>
      <danger-direction base-cost-beyond="5" cost-per-meter="0.01"/>
      <enemies cost-on-contact="100" cost-at-security-range="10"/>
    </rule>
    <rule type="backup" flying="true" autonomous="false" inherits="base">
      <optimisation shortest="true"/>
      <avoided-terrains/>
      <enemies cost-on-contact="100" cost-at-security-range="10"/>
    </rule>
    <rule type="minesweep" flying="true" autonomous="false" inherits="movement">
      <object-costs avoid="false" threshold="0"/>
    </rule>
    <rule type="logistic" flying="true" autonomous="false" inherits="movement"/>
    <rule type="base" flying="false" autonomous="true">
      <optimisation shortest="true"/>
      <preferred-terrains/>
      <avoided-terrains strength="7"/>
      <zone>
        <outter-tolerance with-automat="10000000" without-automat="10000000" cost-per-meter="0"/>
        <inner-comfort cost-per-meter="0" distance="0"/>
      </zone>
      <automat-zone>
        <outter-tolerance cost-per-meter="0" distance="1000000000"/>
      </automat-zone>
      <danger-direction base-cost-beyond="0" cost-per-meter="0"/>
      <enemies cost-on-contact="0" cost-at-security-range="0"/>
      <object-costs avoid="false" threshold="10000"/>
    </rule>
    <rule type="base" flying="true" autonomous="true">
      <optimisation shortest="true"/>
      <preferred-terrains/>
      <avoided-terrains strength="7"/>
      <zone>
        <outter-tolerance with-automat="10000000" without-automat="10000000" cost-per-meter="0"/>
        <inner-comfort cost-per-meter="0" distance="0"/>
      </zone>
      <automat-zone>
        <outter-tolerance cost-per-meter="0" distance="1000000000"/>
      </automat-zone>
      <danger-direction base-cost-beyond="0" cost-per-meter="0"/>
      <enemies cost-on-contact="0" cost-at-security-range="0"/>
      <object-costs avoid="false" threshold="0"/>
    </rule>
    <rule type="movement" flying="false" autonomous="true" inherits="base"/>
    <rule type="movement" flying="true" autonomous="true" inherits="base"/>
    <rule type="recon" flying="false" autonomous="true" inherits="base"/>
    <rule type="recon" flying="true" autonomous="true" inherits="base"/>
    <rule type="infiltration" flying="false" autonomous="true" inherits="base"/>
    <rule type="infiltration" flying="true" autonomous="true" inherits="base"/>
    <rule type="assault" flying="false" autonomous="true" inherits="base"/>
    <rule type="assault" flying="true" autonomous="true" inherits="base"/>
    <rule type="retreat" flying="false" autonomous="true" inherits="base"/>
    <rule type="retreat" flying="true" autonomous="true" inherits="base"/>
    <rule type="backup" flying="false" autonomous="true" inherits="base"/>
    <rule type="backup" flying="true" autonomous="true" inherits="base"/>
    <rule type="minesweep" flying="false" autonomous="true" inherits="base"/>
    <rule type="minesweep" flying="true" autonomous="true" inherits="base"/>
    <rule type="logistic" flying="false" autonomous="true" inherits="base"/>
    <rule type="logistic" flying="true" autonomous="true" inherits="base"/>
  </unit-rules>
  <population-rules>
    <rule type="base" cost-out-of-channeling="10" channeling-range="1000"/>
  </population-rules>
</pathfind>
