<?xml version="1.0" encoding="UTF-8"?>
<sensors xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<alat-monitoring-times>
		<alat-monitoring-time terrain="empty" time="10s"/>
		<!-- >=0 -->
		<alat-monitoring-time terrain="forest" time="20s"/>
		<alat-monitoring-time terrain="urban" time="32s"/>
	</alat-monitoring-times>
	<cobra-radar action-range="100000"/>
	<radars>
		<radar type="radar" name="Radar standard" action-range="100000" min-height="20" max-height="150">
			<!-- heights optional -->
			<detectable-activities>
				<detectable-activity type="stop engine on" value="true"/>
				<!-- no trad! -->
				<detectable-activity type="stop engine off" value="true"/>
				<detectable-activity type="movement" value="true"/>
				<detectable-activity type="work" value="true"/>
			</detectable-activities>
			<acquisition-times>
				<acquisition-time level="detection" base-time="300s"/>
				<acquisition-time level="recognition" command-post-time="900s"/>
				<acquisition-time level="identification" base-time="200s" command-post-time="300s"/>
			</acquisition-times>
		</radar>
	</radars>
	<sensors>
		<sensor name="oeil">
			<unit-detection scanning="true" angle="30">
				<!-- angle tjr en degrés -->
				<!--$$$$ A revoir-->
				<base-distances close-range="50">
					<base-distance level="identification" distance="3000"/>
					<base-distance level="recognition" distance="5000"/>
					<base-distance level="detection" distance="8000"/>
				</base-distances>
				<distance-modifiers>
					<population-modifier density="1" modifier="0.5"/>
					<!-- <modifier category="size" type="large" value="1"/> -->
					<size-modifiers>
						<distance-modifier type="Gros" value="1"/>
						<!-- no trad! -->
						<!-- ... -->
					</size-modifiers>
					<precipitation-modifiers>
						<distance-modifier type="PasDePrecipitation" value="1"/>
						<!-- no trad! -->
						<!-- ... -->
					</precipitation-modifiers>
					<!-- traduction à voir!-->
					<visibility-modifiers>
						<distance-modifier type="JourSansNuage" value="1"/>
						<!-- no trad! -->
						<!-- ... -->
					</visibility-modifiers>
					<source-posture-modifiers>
						<distance-modifier type="Mouvement" value="0.9"/>
						<!-- no trad! -->
						<!-- ... -->
					</source-posture-modifiers>
					<target-posture-modifiers>
						<distance-modifier type="Mouvement" value="0.9"/>
						<!-- no trad! -->
						<!-- ... -->
					</target-posture-modifiers>
					<terrain-modifiers>
						<distance-modifier type="Sol" value="1"/>
						<!-- no trad! -->
						<!-- ... -->
					</terrain-modifiers>
				</distance-modifiers>
			</unit-detection>
			<object-detection>
				<object type="bouchon mines" detection-distance="1000">
					<population-modifier density="1" modifier="0.5"/>
					<source-posture-modifiers>
						<source-posture-modifier type="movement" value="1"/>
						<!-- no trad! -->
						<source-posture-modifier type="discreet movement" value="0.25"/>
						<source-posture-modifier type="stopping" value="0.9"/>
						<source-posture-modifier type="post reflex" value="0.8"/>
						<source-posture-modifier type="post" value="0.3"/>
						<source-posture-modifier type="post equipped" value="0.25"/>
						<source-posture-modifier type="post prepare engineer" value="0.2"/>
					</source-posture-modifiers>
				</object>
			</object-detection>
		</sensor>
	</sensors>
</sensors>
