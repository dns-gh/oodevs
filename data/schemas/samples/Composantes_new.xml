<?xml version="1.0" encoding="UTF-8"?>
<elements xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<element comment="" name="Drone" id="1" codeEMAT6="Drone" codeEMAT8="Drone" codeLFRIL="Drone" codeNNO="Drone" protection="Aeronef" size="smal" weight="2.6" max-slope="0.9">
		<speeds max="90">
			<speed terrain="unknow" value="30"/>
			<!-- no trad! -->
			<speed terrain="forest" value="10"/>
			<speed terrain="urban" value="20"/>
			<speed terrain="ice" value="1"/>
			<!-- ...      -->
		</speeds>
		<composition>
			<!-- liste de catégories d'objets -->
			<category name="munition">
				<!-- peut être vide -->
				<dotation normalized-consumption="10" capacity="1000" name="Balle Classique 12,7" logistic-threshold="20"/>
				<dotation normalized-consumption="10" capacity="100" name="Obus fumigene" logistic-threshold="20"/>
				<dotation normalized-consumption="10" capacity="100" name="Obus eclairant" logistic-threshold="20"/>
				<dotation normalized-consumption="10" capacity="20" name="Obus 120 mm" logistic-threshold="20"/>
				<dotation normalized-consumption="10" capacity="50" name="Obus mine" logistic-threshold="20"/>
				<dotation normalized-consumption="10" capacity="5" name="Fusse a ailettes 50mm" logistic-threshold="0"/>
				<dotation normalized-consumption="10" capacity="4" name="Fusse a jupette 53mm" logistic-threshold="0"/>
			</category>
		</composition>
		<weapon-systems>
			<weapon-system launcher="Lance-fussoir" munition="Fusse a jupette 53mm"/>
			<weapon-system launcher="Lance-fussoir" munition="Obus fumigene"/>
			<weapon-system launcher="canon 120" munition="Obus 120 mm"/>
			<weapon-system launcher="Mitrailleuse" munition="Balle Classique 12,7"/>
		</weapon-systems>
		<transports>
			<!-- optionnel -->
			<crew man-boarding-time="3s" man-unloading-time="6s"/>
			<!-- optionnel -->
			<unit capacity="5" ton-loading-time="15s" ton-unloading-time="15s"/>
		</transports>
		<sensors>
			<sensor height="2" type="oeil"/>
			<!-- ... -->
		</sensors>
		<radars>
			<radar type="Radar doppler"/>
			<radar type="Radar HAWK"/>
			<radar type="Ecoute"/>
		</radars>
		<consumptions>
		<consumption status="ArretMoteurEteint" category="ration">
				<dotation name="bouffe" value="1000"/>
				<dotation name="flotte" value="1000"/>
			</consumption>
			<consumption status="ArretMoteurAllume" category="carburant">
				<dotation name="gasoil" value="1000"/>
			</consumption>
		</consumptions>
		<objects>
			<object type="bouchon mines" initial-construction-time="3600s" initial-destruction-time="600s" construction-time-factor="240s" destruction-time-factor="288s" valorization-time="0s" devalorization-time="1800s" bypass-gain-factor="1" bypassed-speed="5" non-bypassed-speed="0"/>
			</objects>
		<logistic-functions>
			<maintenance-functions>
				<towing capacity="5" loading-time="100s" unloading-time="60s"/>
				<!-- unique -->
				<repairing category="NT1" type="M,EA" max-reparation-time="8h"/>
				<repairing category="NT2" type="M"/>
			</maintenance-functions>
			<health-functions>
				<relieving capacity="3" man-loading-time="15s" man-unloading-time="10s" nbc-transport="true" reac-mental-transport="true" wounded-transport="ue,u1,u3"/>
				<!-- reac-mental à voir -->
				<collecting capacity="5" man-loading-time="25s" man-unloading-time="5s"/>
				<!-- autres: optional = false wounded-transport optional?-->
				<caring sorting="true" psychiatry="true" caring="u1,u2,ue"/>
				<!-- optional tous? -->
			</health-functions>
			<supply-functions>
				<carrying mass="33" volume="10" nature="solid"/>
				</supply-functions>
		</logistic-functions>
		<!-- pas obligatoirement présent!-->
		<breakdowns>
			<breakdown origin="random" type="Panne 6" percentage="100"/>
			<breakdown origin="attrition" type="Panne 1" percentage="30"/>
			<breakdown origin="attrition" type="Panne 2" percentage="30"/>
			<breakdown origin="attrition" type="Panne 3" percentage="40"/>
		</breakdowns>
	</element>
</elements>
