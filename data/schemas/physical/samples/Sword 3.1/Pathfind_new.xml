<?xml version="1.0" encoding="UTF-8"?>
<pathfind xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<configuration distance-threshold="15000" max-calculation-time="1s"/><!-- time -->
	<!-- Liste de rules -->
	<unit-rules>
		<rule type="base" flying="false" autonomous="false" inherits="blabla">
			<optimisation shortest="true"/>
			<preferred-altitude value="-0.001"/>
			
			<!-- inherit optionnel ainsi que les donnÃ©es dessous-->
			<preferred-terrains strength="2">
				<terrain type="chemin"/>
				<terrain type="nationale"/>
			</preferred-terrains>
			
			<avoided-terrains>
				<terrain type="chemin"/>
				<terrain type="departementale"/>
			</avoided-terrains>
			
			<zone>
				<outter-tolerance cost-per-meter="1" with-automat="1000" without-automat="10000"/>
				<inner-comfort cost-per-meter="0.002" distance="500"/>
			</zone>
			
			<automat-zone>
				<outter-tolerance cost-per-meter="1" distance="0"/>
			</automat-zone>
			
			<danger-direction base-cost-beyond="1" cost-per-meter="0.001"/>
			
			<enemies cost-on-contact="0" cost-at-security-range="0" maximum-cost="100"/>
			
			<object-costs avoid="true">
				<object-cost type="fosse anti char" value="10000"/>
				<object-cost type="abattis" value="10000"/>
				<!-- ... -->
			</object-costs>
			<population-costs security-range="50" maximum="100" outside-of-population="10">
				<population-cost attitude="calme" contact-cost="5"/>
				<population-cost attitude="agitee" contact-cost="10"/>
				<population-cost attitude="excitee" contact-cost="25"/>
				<population-cost attitude="agressive" contact-cost="50"/>
			</population-costs>
		</rule>
	</unit-rules>
	
	<population-rules>
		<rule type="base" cost-out-of-channeling="10" channeling-range="1000"/>
	</population-rules>
</pathfind>
