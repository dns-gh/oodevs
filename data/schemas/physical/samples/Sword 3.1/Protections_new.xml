<?xml version="1.0" encoding="UTF-8"?>
<protections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<!-- Le fichier était déjà bon, juste la traduction à appliquer-->
	<protection name="CharLourd" type="materiel">
		<neutralization average-time="300s" variance="60s"/>
		<random-breakdown-probability eva="8" neva="0"/>
		<!-- with-evacuation/without-evacuation (à confirmer) -->
		<attrition-effects>
			<!-- optional -->
			<!-- uniformiser injured/wounded, voir trad dans la sim
				percentage /100 ? /1 ?
			 -->
			<attrition-effect equipment-state="ReparableAvecEvacuation" injured-percentage="60" dead-percentage="15"/>
			<attrition-effect equipment-state="ReparableSurPlace" injured-percentage="40" dead-percentage="10"/>
			<attrition-effect equipment-state="Detruit" injured-percentage="75" dead-percentage="15"/>
		</attrition-effects>
	</protection>
</protections>
