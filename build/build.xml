    <import file="//install/masa/common/dev/common/poney/poney.xml"/>

   <!--
    ============================================================================
      version generation
    ============================================================================
    -->
    <exec executable="svn" outputproperty="svn.info" failonerror="true">
        <arg line="info"/>
    </exec>
    <propertyregex property="version.svn" input="${svn.info}" regexp="Last Changed Rev: ([0-9]+)" select="\1" defaultvalue="UNKNOWN"/>
    <property name="version.major" value="1"/>
    <property name="version.minor" value="5"/>
    <property name="version.product" value="C-Sword"/>

    <macrodef name="generation-version-resource">
        <attribute name="file"/>

        <sequential>
            <tstamp>
                <format property="currentyear" pattern="yyyy"/>
            </tstamp>
            <basename property="filename" file="@{file}"/>
            <echo file="version.rc">
1 VERSIONINFO
FILEVERSION     ${version.major},${version.minor},0,${version.svn}
PRODUCTVERSION  ${version.major},${version.minor},0,${version.svn}
FILEOS 0x4
FILETYPE 0x1
{
BLOCK "StringFileInfo"
{
	BLOCK "040C04B0"
	{
	  VALUE "CompanyName", "MASA-SCI"
		VALUE "FileDescription", "${version.product}"
		VALUE "FileVersion", "${version.major}.${version.minor}.0.${version.svn}"
		VALUE "InternalName", "${version.product}"
		VALUE "LegalCopyright", "(c) MASA-SCI ${currentyear}"
		VALUE "OriginalFilename", "${filename}"
		VALUE "ProductName", "${version.product}"
		VALUE "ProductVersion", "${version.major}.${version.minor}.0.${version.svn}"
	}
}

BLOCK "VarFileInfo"
{
	VALUE "Translation", 0x040C 0x04B0
}
}
            </echo>
            <exec executable="rc.exe" failonerror="true">
                <arg value="version.rc"/>
            </exec>
            <exec executable="reshacker.exe">
                <arg line="-addoverwrite @{file}, @{file}, version.res, versioninfo,1,"/>
            </exec>
            <delete file="version.rc"/>
            <delete file="version.res"/>
        </sequential>
    </macrodef>

    <!--
