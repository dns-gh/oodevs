<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <ImportGroup Label="PropertySheets" />
  <PropertyGroup Label="UserMacros">
    <CurrentPlatform>vc$(PlatformToolsetVersion)_$(PlatformName)</CurrentPlatform>
    <RunDir>$(SolutionDir)..\..\run\$(CurrentPlatform)\</RunDir>
    <LibDir>..\..\lib\$(CurrentPlatform)</LibDir>
  </PropertyGroup>
  <PropertyGroup>
    <ExecutablePath>..\..\bin;$(ExecutablePath)</ExecutablePath>
  </PropertyGroup>
  <ItemDefinitionGroup>
    <ClCompile>
      <PreprocessorDefinitions>WIN64;PLATFORM=${CurrentPlatform};_WIN32_WINNT=0x501;WINVER=0x501</PreprocessorDefinitions>
    </ClCompile>
    <Lib>
      <TargetMachine>MachineX64</TargetMachine>
    </Lib>
    <PreBuildEvent>
        <Command>
setlocal enabledelayedexpansion
set LIST=
for %%x in ( "$(SrcDir)\*.ts" ) do set LIST=!LIST! "%%x"
if "!LIST!"=="" goto :eof
lupdate -silent -noobsolete "$(SrcDir)" -ts !LIST!
for %%x in ( !LIST! ) do lrelease %%x -qm "$(RunDir)\%%~nx.qm"
        </Command>
    </PreBuildEvent>
  </ItemDefinitionGroup>
  <ItemGroup>
    <BuildMacro Include="CurrentPlatform">
      <Value>$(CurrentPlatform)</Value>
      <EnvironmentVariable>true</EnvironmentVariable>
    </BuildMacro>
    <BuildMacro Include="RunDir">
      <Value>$(RunDir)</Value>
    </BuildMacro>
    <BuildMacro Include="LibDir">
      <Value>$(LibDir)</Value>
    </BuildMacro>
  </ItemGroup>
</Project>