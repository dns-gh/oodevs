    <div class="navbar-inner">
        <div class="container">
            <a class="brand"> Sword <span class="ufirst">[[ .type ]]</span></a>
            [[ if ne .type "cluster" ]]
            <a class="brand_name brand"> [[ .name ]]</a>
            [[ end ]]
            <ul class="nav pull-right">
                [[ if .user ]]
                <li class="label
                [[ if eq .user.type "administrator" ]]
                label-important
                [[ else ]]
                [[ if eq .user.type "manager" ]]
                label-success
                [[ else ]]
                label-info
                [[ end ]]
                [[ end ]]
                ufirst"> [[ .user.type ]] </li>
                <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"> [[ .user.name ]] <span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li><a class="emu_btn"><b>[[ .user.name ]]</b><br/>[[ .user.username ]]</a></li>
                    <li class="divider"></li>
                    <li><a class="emu_btn sign_out"><i class="i"></i> Sign Out </a></li>
                </ul>
                </li>
                [[ end ]]
            </ul>
        </div>
    </div>
</div>
