//-----------------------------------------------------------------------------
// Name: MOS_Node::IsInside
// Created: FBD 03-04-15
//-----------------------------------------------------------------------------
inline
bool MOS_Node::IsInside( const MT_Vector2D& vPos, MT_Float rWeldValue ) const
{
    if ( vPos_.SquareDistance( vPos ) <= rWeldValue * rWeldValue )
        return true;
    return false;
}

