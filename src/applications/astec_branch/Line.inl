//-----------------------------------------------------------------------------
// Name: Line::GetLine
// Created: FBD 03-04-08
//-----------------------------------------------------------------------------
inline
MT_Line Line::GetLine()
{
    assert( pNode1_ != 0 && pNode2_ != 0 );
    return MT_Line( pNode1_->GetPos(), pNode2_->GetPos() );
}


//-----------------------------------------------------------------------------
// Name: Line::GetPosStart
// Created: FBD 03-04-08
//-----------------------------------------------------------------------------
inline
const Node& Line::GetPosStart() const
{
    assert( pNode1_ != 0 );
    return *pNode1_;
}


//-----------------------------------------------------------------------------
// Name: Line::GetPosEnd
// Created: FBD 03-04-08
//-----------------------------------------------------------------------------
inline
const Node& Line::GetPosEnd() const
{
    assert( pNode2_ != 0 );
    return *pNode2_;
}
