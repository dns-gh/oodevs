<div class="row">
    <div class="span9">
        <dl class="dl-horizontal">
            <dt> Sword Cloud </dt>
            <dd><span class="label label-info"> CLOUD_VERSION </span></dd>
        </dl>
        <div id="license_error"></div>
        <div id="licenses"></div>
        [[ if eq .type "cluster" ]]
            <div class="hide">
                <iframe id="upload_target" name="upload_target"></iframe>
            </div>
            <form id="upload_form" class="form-horizontal" enctype="multipart/form-data" method="post" target="upload_target">
                <div class="control-group" align="right">
                    <div class="controls">
                        <input type="file" name="license"/>
                        <a class="btn upload disabled"><i class="icon-upload"></i>Upload</a>
                    </div>
                </div>
            </form>
        [[ end ]]
        <div class="alert alert-info alert-block">
            <strong>Warning:</strong>
MASA SWORD is a COTS constructive simulation software product created by MASA Group.
This software program must have been purchased directly from MASA Group or one of its authorized
resellers and cannot be reproduced or distributed in an unauthorized manner.
        </div>
    </div>
</div>
<script type="text/template" id="license_error_template">
    <div class="alert alert-error"><b>Error</b> {{content}}</div>
</script>
<script type="text/template" id="license_template">
    <table class="table table-condensed">
    <thead>
        <tr>
            <th>License</th>
            <th>Expiration Date</th>
            <th>Connections</th>
        </tr>
        </thead>
        <tbody>
            {{#each model}}
                <tr class="{{validity}}">
                    <td>{{name}}</td>
                    <td>{{expiration}}</td>
                    <td>{{connections}}</td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</script>
